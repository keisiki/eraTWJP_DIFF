;露店を開く
@COM447
#DIM 候補個数
#DIM 商人パワーM
#DIM 商人パワーT
#DIM 商人パワー
#DIM 来客数
#DIM 売却値
#DIM 合計売却値
#DIM CHARA
#DIM GoodsID, 6
#DIM GoodsQty, 6
#DIM GoodsSold, 6
#DIM Lineup
#DIM LinesToErase

;売却アイテムの種類を増やすときは、★  を検索してください
;管理者がはっきりしている人の敷地での無断での商売はしない
IF STALL_PERMISSION(CFLAG:MASTER:現在位置)
	DRAWLINE
	PRINTFORML ここで無断で商売をするのは問題になりそうだ…顔役と親しくなったほうがいいだろう
	RETURN -1
ENDIF

商人パワー = 0
商人パワーM = 0
商人パワーT = 0
売却値 = 0
合計売却値 = 0
Lineup = 0
VARSET LOCAL
VARSET GoodsID
VARSET GoodsQty
VARSET GoodsSold
DRAWLINE
PRINTL 
;来客数を算出し、にぎわいを可視化
来客数 = STALL_SHOPPER(STALL_SPOT(CFLAG:MASTER:現在位置)) + IN_ROOM_NUMBER(CFLAG:MASTER:現在位置)
;PRINTFORML {来客数}人
IF AT_HOME()
	PRINTFORMS NAME_FROM_PLACE(CFLAG:MASTER:現在位置)
ELSE
	PRINTFORM %DATENAME_SPOT()%
ENDIF
SELECTCASE 来客数
	CASE 0
		PRINTFORML には人っ子一人いない…
	CASE 1 TO 5
		PRINTFORML は閑散としている
	CASE 6 TO 10
		PRINTFORML には少ないながらも往来がある
	CASE 11 TO 20
		PRINTFORML はそこそこのにぎわいを見せている
	CASE 21 TO 30
		PRINTFORML はなかなかにぎわっている
	CASEELSE
		PRINTFORML は立錐の余地もないくらいのにぎわいだ！
ENDSELECT
PRINTL 
PRINTFORML さて、何を売ろうか…
DRAWLINE

;１個目のアイテムからスタート
Lineup = 1
$SELECT_LOOP
;LinesToErase は消去行数の計算に利用
LinesToErase = 1
;所持しているアイテムの売却可能物・個数をリスト化
LOCAL:10 = 999
FOR LOCAL, 351, 710
	SELECTCASE LOCAL
		CASE 399 TO 499, 520 TO 599, 601 TO 610, 612 TO 615, 617 TO 625, 630 TO 642, 646 TO 699
			;★持っていても売れないアイテムを上のCASEへ追加
		CASEELSE
			;アイテム未所持と、永遠亭での薬品販売を弾く
			IF ITEM:(LOCAL) > 0 || (STALL_SPOT(CFLAG:MASTER:現在位置) == 5 && INRANGE(LOCAL, 501, 511))
				LOCALS:0 = [{LOCAL}] %ITEMNAME:(LOCAL), 16, LEFT%×{ITEM:(LOCAL)}    
				LOCAL:10 += STRLENS(LOCALS:0)
				SIF ITEM:(LOCAL) < 10
					LOCAL:10 ++
				IF LOCAL:10 > 90
					IF LOCAL:10 >= 999
					;最初のみ改行しない
					ELSE
						LinesToErase ++
						PRINTL 
					ENDIF
					LOCAL:10 = 0
					PRINT 　　
				ENDIF
				IF GROUPMATCH(LOCAL, GoodsID:1, GoodsID:2, GoodsID:3, GoodsID:4, GoodsID:5)
					SETCOLOR 0x666666
					PRINTPLAINFORM [{LOCAL}] %ITEMNAME:(LOCAL), 16, LEFT%×{ITEM:(LOCAL)}
					RESETCOLOR
				ELSE
					PRINTFORM [{LOCAL}] %ITEMNAME:(LOCAL), 16, LEFT%×{ITEM:(LOCAL)}
				ENDIF
				SIF ITEM:(LOCAL) < 10
					PRINT  
				PRINT 　　
			ENDIF
	ENDSELECT
NEXT
PRINTL 
DRAWLINE
PRINTL 　　[999] 露店を開くのをやめる
LinesToErase += 3
IF Lineup > 1
	PRINTL 　　[1000] この商品で露店を開く
	DRAWLINE
	SIF Lineup > 1
		PRINTFORML 売り物１：%ITEMNAME:(GoodsID:1)%×{GoodsQty:1}
	SIF Lineup > 2
		PRINTFORML 売り物２：%ITEMNAME:(GoodsID:2)%×{GoodsQty:2}
	SIF Lineup > 3
		PRINTFORML 売り物３：%ITEMNAME:(GoodsID:3)%×{GoodsQty:3}
	SIF Lineup > 4
		PRINTFORML 売り物４：%ITEMNAME:(GoodsID:4)%×{GoodsQty:4}
	DRAWLINE
	LinesToErase += 3 + (Lineup - 1)
ENDIF
PRINTL 
PRINTFORML {Lineup}つめの売り物を選んでください
LinesToErase += 2
$INPUT_LOOP01
INPUT
SELECTCASE RESULT
	CASE 999
		RETURN -1
	CASE 1000
		IF Lineup > 1
			CLEARLINE 2
			GOTO SET_SALE
		ELSE
			CLEARLINE 1
			GOTO INPUT_LOOP01
		ENDIF
	;★売れるアイテムを下のCASEに追加
	CASE 351 TO 398, 500 TO 512, 600, 611, 616, 626 TO 629, 643 TO 645, 700 TO 708
		;GoodsIDに売りに出すアイテムの番号を流し込む
		GoodsID:Lineup = RESULT
		;アイテム名が無名の場合、アイテムを所持してない場合、永遠亭での薬品販売はやり直し
		IF ITEMNAME:(GoodsID:Lineup) == "" || ITEM:(GoodsID:Lineup) <= 0  || (STALL_SPOT(CFLAG:MASTER:現在位置) == 5 && INRANGE(LOCAL, 501, 511))
			CLEARLINE 1
			GoodsID:Lineup = 0
			GOTO INPUT_LOOP01
		ENDIF
		;重複選択防止
		IF Lineup > 1
			FOR LOCAL, 1, Lineup
				IF GoodsID:Lineup == GoodsID:LOCAL
					CLEARLINE 1
					GoodsID:Lineup = 0
					GOTO INPUT_LOOP01

				ENDIF
			NEXT
		ENDIF
		候補個数 = ITEM:(GoodsID:Lineup)
		SETCOLOR 0x777777
		PRINTFORML 　%ITEMNAME:(GoodsID:Lineup)%をいくつ売りますか？(1〜{候補個数}の個数を入力、0で戻る)
		RESETCOLOR
		PRINTL   
		PRINTBUTTON "[0] やめる", 0
		PRINT     
		PRINTBUTTON "[1] 1個", 1
		PRINT     
		IF 候補個数 >= 5
			PRINTBUTTON "[5] 5個", 5
			PRINT     
		ENDIF
		IF 候補個数 >= 10
			PRINTBUTTON "[10] 10個", 10
			PRINT    
		ENDIF
		IF 候補個数 >= 20
			PRINTBUTTON "[20] 20個", 20
			PRINT    
		ENDIF
		LinesToErase += 3
		$INPUT_LOOP02
		INPUT
		SELECTCASE RESULT
			CASE 0
				CLEARLINE 3
				LinesToErase -= 3
				GoodsID:Lineup = 0
				RETURN -1
			CASE 1 TO 候補個数
				CLEARLINE (LinesToErase + 1)
				;GoodsQtyに売りに出す個数を流し込む
				GoodsQty:Lineup = RESULT
			CASEELSE
				CLEARLINE 1
				GOTO INPUT_LOOP02
		ENDSELECT
	CASEELSE
		CLEARLINE 1
		GOTO INPUT_LOOP01
ENDSELECT

IF Lineup < 5
	Lineup ++
	GOTO SELECT_LOOP
ELSE
	PRINTFORML 売り物１：%ITEMNAME:(GoodsID:1)%×{GoodsQty:1}
	PRINTFORML 売り物２：%ITEMNAME:(GoodsID:2)%×{GoodsQty:2}
	PRINTFORML 売り物３：%ITEMNAME:(GoodsID:3)%×{GoodsQty:3}
	PRINTFORML 売り物４：%ITEMNAME:(GoodsID:4)%×{GoodsQty:4}
	PRINTFORML 売り物５：%ITEMNAME:(GoodsID:5)%×{GoodsQty:5}
	PRINTL 
	PRINTFORML この商品で露店を開きますか？
	CALL ASK_YN
	IF !RESULT
		CLEARLINE 1
	ELSE
		RETURN -1
	ENDIF
ENDIF

;商品選択を終え、能力算定へ移る
$SET_SALE

;参加者判定
IF FLAG:デート相手
	CHARA = FLAG:デート相手
ELSEIF TARGET && ABL:TARGET:親密 >= 10
	CHARA = TARGET
ELSE
	CHARA = 0
ENDIF

;商人パワー設定
商人パワーM = ABL:MASTER:話術技能 * 25 + ABL:MASTER:教養 * 10 + TFLAG:幸運補正 * 3

SIF CHARA
	商人パワーT = ABL:CHARA:話術技能 * 25 + ABL:CHARA:教養 * 10
;参加者で最もパワーが高いものを基準に、1/2したもう１人のパワーを足す
IF 商人パワーM >= 商人パワーT
	商人パワー = 商人パワーM + (商人パワーT / 2)
ELSE
	商人パワー = 商人パワーT + (商人パワーM / 2)
ENDIF

DRAWLINE
PRINTFORML 開店！
PRINTL 

FOR COUNT, 0, 来客数

	SELECTCASE RAND:6
		CASE 0
			REUSELASTLINE \@ CHARA ? %CALLNAME:CHARA%と一緒に #  \@商い中.....
		CASE 1
			REUSELASTLINE らっしゃっせー
		CASE 2
			REUSELASTLINE よってらっしゃい見てらっしゃーい
		CASE 3
			REUSELASTLINE 【値札つけません　値切り交渉受けつけます】
		CASE 4
			REUSELASTLINE お客さん、なかなかお目が高いですね
		CASEELSE
			REUSELASTLINE そこのお嬢さん、お安くしときますよー
	ENDSELECT
	TWAIT 750, 1

	$SARCH_START

	IF GoodsID:5
		LOCAL = RAND:6
	ELSEIF GoodsID:4
		LOCAL = RAND:5
	ELSEIF GoodsID:3
		LOCAL = RAND:4
	ELSEIF GoodsID:2
		LOCAL = RAND:3
	ELSE
		LOCAL = RAND:2
	ENDIF

	IF LOCAL == 0
		SETCOLOR C_L_GRAY
		PRINTDATAL
			DATAFORM 　「もっとまけてもらえない？」　……そう仰られましてもねえ
			DATAFORM 　小さな子が指をくわえて商品を見ていたが、親御さんに手を引かれていってしまった…
			DATAFORM 　客はチラチラと横目で商品を見ていたが、声をかけると驚いた様子で逃げて行ってしまった…
			DATAFORM 　おしゃべりな客が、世間話だけして帰って行った…
			DATAFORM 　一通り商品を吟味して、悩むそぶりは見せながらも、客は去って行った…
			DATAFORM 　値切り交渉が決裂した…
			DATAFORM 　素通りされた…
			DATAFORM 　商品を一瞥すると、客は立ち去ってしまった…
		ENDDATA
		RESETCOLOR
		GOTO SARCH_END
	;在庫ゼロの場合は、再度選択
	ELSEIF GoodsQty:LOCAL ==  GoodsSold:LOCAL
		GOTO SARCH_START
	ENDIF

	;売る個数を設定
	候補個数 = MAX(RAND:(5 + ABL:MASTER:話術技能), 1)
	;売る個数が商品の在庫より多い場合の処理
	SIF (候補個数 + GoodsSold:LOCAL) > GoodsQty:LOCAL
		候補個数 = GoodsQty:LOCAL - GoodsSold:LOCAL

	SETCOLOR C_YELLOW
	PRINTFORM %ITEMNAME:(GoodsID:LOCAL)%が{候補個数}つ、
	;売却値を設定
	売却値 = STALL_PRICE_SET(商人パワー, GoodsID:LOCAL, 候補個数)
	PRINTFORML \\{売却値}で売れた！
	RESETCOLOR

;	利率判定に応じてテキスト
;	SELECTCASE STALL_PRICE_SET(商人パワー, GoodsID:LOCAL, 候補個数, 1)
;		CASE 0 TO 50
;			PRINTFORML 買い叩かれてしまった…
;		CASE 51 TO 100
;			PRINTFORML 市場価格で売れた…
;		CASE 101 TO 150
;			PRINTFORML ちょっと価格を上げて売った…
;		CASEELSE
;			PRINTFORML 上手く丸め込み、売値をだいぶ釣り上げた…
;	ENDSELECT

	;GoodsSoldに売れた個数を流し込む
	GoodsSold:LOCAL += 候補個数
	合計売却値 += 売却値

	$SARCH_END
	TWAIT 300, 1
	LOCAL:3 ++
	;すべての商品を売りつくしたら抜ける
	IF GoodsSold:1 == GoodsQty:1 && GoodsSold:2 == GoodsQty:2 && GoodsSold:3 == GoodsQty:3 && GoodsSold:4 == GoodsQty:4 && GoodsSold:5 == GoodsQty:5
		PRINTL
		PRINTFORML 完売御礼！
		BREAK
	ENDIF
NEXT

LOCAL:3 = MAX((25 - LOCAL:3), 5)

IF GoodsSold:1 != GoodsQty:1 || GoodsSold:2 != GoodsQty:2 || GoodsSold:3 != GoodsQty:2 || GoodsSold:4 != GoodsQty:4 || GoodsSold:5 != GoodsQty:5
	PRINTL 
	REPEAT LOCAL:3
		REUSELASTLINE  .%"." * COUNT%
		TWAIT 150, 1
	REND
ENDIF
PRINTFORMW そろそろ店じまいにしよう
DRAWLINE
PRINTFORMW 今回の商いの成果…

SETCOLOR 0x00FF00
;売れた個数を列挙、同時にアイテムを減らす
FOR LOCAL, 1, 6
	IF GoodsQty:LOCAL
		PRINTFORM 　%ITEMNAME:(GoodsID:LOCAL)%は
		IF GoodsSold:LOCAL
			PRINTFORM {GoodsSold:LOCAL}
			SELECTCASE GoodsID:LOCAL
				CASE 627, 644
					PRINTFORMW 瓶売れた
				CASE 707, 708
					PRINTFORMW 尾売れた
				CASEELSE
					PRINTFORMW つ売れた
			ENDSELECT
		ELSE
			PRINTFORMW さっぱり売れなかった…
		ENDIF
		ITEM:(GoodsID:LOCAL) -= GoodsSold:LOCAL
	ENDIF
NEXT
RESETCOLOR
PRINTL 
;合計売却値の表記、同時に売上分の金を増やす
IF 合計売却値
	PRINTFORM 合計で
	SETCOLOR 0x00FF00
	PRINTFORM \\{合計売却値}
	RESETCOLOR
	PRINTFORMW の儲けになった！
	MONEY += 合計売却値
	TFLAG:193 = 1
	TFLAG:194 = 合計売却値
ELSE
	PRINTFORMW 全く儲けが出なかった…
	TFLAG:193 = 0
ENDIF

;基本の経験
EXP:MASTER:会話経験 += 来客数
SIF CHARA
	EXP:CHARA:会話経験 += 来客数

SIF ABL:MASTER:教養 <= 3
	EXP:MASTER:学習経験 ++

;能力差で教えてもらう・教えてあげる
IF ABL:MASTER:教養 >=  ABL:CHARA:教養 && CHARA
	EXP:CHARA:学習経験 ++
ELSEIF CHARA
	EXP:MASTER:学習経験 ++
ENDIF

;デート経験
IF CHK_DATENOW(CFLAG:CHARA:デート中) && CHARA > 0
	EXP:MASTER:デート経験 ++
	EXP:CHARA:デート経験 ++
ENDIF

;時間経過
TIME += 120
;体力・気力減少は来客数によって増減
DOWNBASE:MASTER:体力 = MAX(15 * 来客数, 150)
DOWNBASE:MASTER:気力 = MAX(20 * 来客数, 200)

;参加者のソース,同一コマンド制限を受けないので控えめに,売れないと激減
IF CHARA > 0
	;固定で獲得するソース
	SOURCE:CHARA:歓楽 = 300
	SOURCE:CHARA:情愛 = 50
	
	;ABL:従順をみる
	IF ABL:従順 <= 1
		SOURCE:CHARA:歓楽 += (ABL:従順 * 30)
		SOURCE:CHARA:情愛 += (ABL:親密 * 15)
	ELSEIF ABL:従順 <= 3
		SOURCE:CHARA:歓楽 += 200 + (ABL:従順 * 20)
		SOURCE:CHARA:情愛 += 50 + (ABL:親密 * 15)
	ELSEIF ABL:従順 <= 5
		SOURCE:CHARA:歓楽 += 500 + (ABL:従順 * 20)
		SOURCE:CHARA:情愛 += 200 + (ABL:親密 * 15)
	ELSEIF ABL:従順 <= 8
		SOURCE:CHARA:歓楽 += 750 + (ABL:従順 * 30)
		SOURCE:CHARA:情愛 += 300 + (ABL:親密 * 20)
	ELSEIF ABL:従順 <= 11
		SOURCE:CHARA:歓楽 += 1000 + (ABL:従順 * 30)
		SOURCE:CHARA:情愛 += 600 + (ABL:親密 * 20)
	ELSE
		SOURCE:CHARA:歓楽 += 1600 + (ABL:従順 * 15)
		SOURCE:CHARA:情愛 += 1000 + (ABL:親密 * 10)
	ENDIF
	SIF CHARA != FLAG:デート相手 
		SOURCE:CHARA:情愛 = 0
	
	;好感度はみない
	
	SOURCE:CHARA:受動 = 200 + 100 * ABL:従順
	SOURCE:CHARA:征服 = 200 + 100 * ABL:サドっ気
	
	;売却成果をみる、合計売却値に応じてとりあえず設定
	IF 合計売却値
		SELECTCASE 合計売却値
			CASE 1 TO 2000
				TIMES SOURCE:CHARA:歓楽 , 1.00
				TIMES SOURCE:CHARA:受動 , 1.00
				TIMES SOURCE:CHARA:征服 , 1.00
				SOURCE:CHARA:達成 = 80
			CASE 2001 TO 4000
				TIMES SOURCE:CHARA:歓楽 , 1.10
				TIMES SOURCE:CHARA:受動 , 1.10
				TIMES SOURCE:CHARA:征服 , 1.10
				SOURCE:CHARA:達成 = 115
			CASE 4001 TO 7000
				TIMES SOURCE:CHARA:歓楽 , 1.25
				TIMES SOURCE:CHARA:受動 , 1.25
				TIMES SOURCE:CHARA:征服 , 1.15
				SOURCE:CHARA:達成 = 125
			CASE 7001 TO 10000
				TIMES SOURCE:CHARA:歓楽 , 1.50
				TIMES SOURCE:CHARA:受動 , 1.50
				TIMES SOURCE:CHARA:征服 , 1.25
				SOURCE:CHARA:達成 = 150
			CASE 10001 TO 20000
				TIMES SOURCE:CHARA:歓楽 , 1.75
				TIMES SOURCE:CHARA:受動 , 1.75
				TIMES SOURCE:CHARA:征服 , 1.50
				SOURCE:CHARA:達成 = 200
			CASE 20001 TO 40000
				TIMES SOURCE:CHARA:歓楽 , 2.00
				TIMES SOURCE:CHARA:受動 , 2.00
				TIMES SOURCE:CHARA:征服 , 1.75
				SOURCE:CHARA:達成 = 300
			CASEELSE
				TIMES SOURCE:CHARA:歓楽 , 2.25
				TIMES SOURCE:CHARA:受動 , 2.25
				TIMES SOURCE:CHARA:征服 , 2.00
				SOURCE:CHARA:達成 = 350
		ENDSELECT
	;売れなかった
	ELSE
		TIMES SOURCE:CHARA:歓楽 , 0.20
		TIMES SOURCE:CHARA:受動 , 0.20
		TIMES SOURCE:CHARA:征服 , 0.20
	ENDIF
ENDIF

RETURN 1

