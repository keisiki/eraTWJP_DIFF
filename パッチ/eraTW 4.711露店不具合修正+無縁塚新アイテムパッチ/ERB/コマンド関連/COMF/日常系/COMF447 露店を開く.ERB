				CASE 811
					SIF ABL:[[早苗]]:親密 < 5 && ABL:[[神奈子]]:親密 < 5 && ABL:[[諏訪子]]:親密 < 5
						RETURNF 1
				CASE 832
					SIF ABL:[[天子]]:親密 < 5
						RETURNF 1
			ENDSELECT
	ENDSELECT
ENDIF
