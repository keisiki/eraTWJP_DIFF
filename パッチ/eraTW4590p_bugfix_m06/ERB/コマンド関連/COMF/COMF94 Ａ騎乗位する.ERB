@COM_ABLE94
;Ａ騎乗位する実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(94)
	RETURN RESULT
;対象がオトコ、半人半妖、ふたなり、もしくはペニスバンドがないとダメ
SIF !(TALENT:2 & 2) && ITEM:PBAND == 0
	RETURN 0
;対象がオトコ、半人半妖、ふたなりの場合はある程度勃起してないとダメ
SIF (TALENT:2 & 2) && BASE:勃起 < 1000
	RETURN 0
;下半身着衣（調教者）
SIF TEQUIP:PLAYER:0 & 4
	RETURN 0
;調教者に一定のＡ経験が必要
SIF EXP:PLAYER:2 < EXPLV:3
	RETURN 0
;体格差がある場合は主人が禁断の知識持ちじゃないとダメ
SIF ABS(TALENT:体型 - TALENT:PLAYER:体型) > 2 && !TALENT:PLAYER:禁断の知識
	RETURN 0
;オナホール使用中はダメ
SIF TEQUIP:12
	RETURN 0
;お風呂場プレイ中はプレイマットが無いとダメ
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF
RETURN 1

