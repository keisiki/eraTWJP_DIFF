	PRINTFORMW そして、少女の横には「お布施箱」と書かれた箱が置かれている
	PRINTFORML …
	PRINTFORML ……
	PRINTFORMW なんだ、この嫌な予感しかしないほどに嫌な予感は…

	SETBIT FLAG:999, 2
	;最初のくじのセットを作成
	CALL FISHER_YATES_SHAFFLE(300)
	ARRAYCOPY "SHAFFLE_ARRAY", "MORIYA_BOX"
ENDIF

IF FLAG:守矢くじデート相手
	PRINTFORML 「くじなんて引いてる場合じゃないでしょう」
	PRINTFORML 「神様とのデート権ですよ、一分一秒だって無駄にしちゃいけませんよ！」
	RETURN -1
ENDIF

IF MONEY < 3000
	PRINTFORMW 財布を確認したらお金が足りなかった
	PRINTFORMW さぁ、お布施のためにお金を集めてくるのです
	RETURN -1
ENDIF

PRINTL 守矢くじは1回3000円か20カリスマ、もしくは守矢の守札5枚です
PRINTL どうしますか？
CALL ASK_M("危険が危なそうなのでやめておく",1,"\\3000で引いてみる", MONEY >= 3000, "20CMで引いてみる", MONEY:2 >= 20, "守札5枚で引く", ITEM:131>= 5, "\\27000で10連ガチャ", MONEY >= 27000, "180CMで10連ガチャ", MONEY:2 >= 180)
SELECTCASE RESULT
	CASE 0
		RETURN -1
	CASE 1
		MONEY -= 3000
	CASE 2
		MONEY:2 -= 20
	CASE 3
		ITEM:131 -= 5
	CASE 4
		ガチャ回数 = 9
		MONEY -= 27000
	CASE 5
		ガチャ回数 = 9
		MONEY:2 -= 180
ENDSELECT

IF (RESULT == 1 || RESULT == 2) && ITEM:兎符「開運大紋」
	PRINTFORML 兎符「開運大紋」を使う？
	CALL ASK_YN
	IF !RESULT
		ITEM:兎符「開運大紋」 --
		TFLAG:194 = 5
	ENDIF
ENDIF

$RENZOKU

IF GETBIT(FLAG:999, 3)
	IF MORIYA_BOX:0 == -1
		PRINTFORMW 現在のくじ箱を引ききったので新しい箱を用意します
		CALL FISHER_YATES_SHAFFLE(300)
		ARRAYCOPY "SHAFFLE_ARRAY", "MORIYA_BOX"
	ELSE
		PRINTFORML このくじ箱からは既に特賞が出ています
		PRINTFORML このくじ箱を廃棄してもらい新しいくじを引きますか？
		PRINTFORML [1] 次の箱を出してもらう
		PRINTFORML [0] まだこの箱を引き続ける
		$LOOP_INPUT_2
		INPUT
		SELECTCASE RESULT
			CASE 0
				PRINTW では、この箱から引きます
			CASE 1
				PRINTW では交換しますね
				CLEARBIT FLAG:999, 3
				CALL FISHER_YATES_SHAFFLE(300)
				ARRAYCOPY "SHAFFLE_ARRAY", "MORIYA_BOX"
			CASEELSE
				GOTO LOOP_INPUT_2
		ENDSELECT
	ENDIF
ENDIF





PRINTL お金をお布施箱に収め、
PRINTL 箱のなかからくじを１枚引き、
PRINTW 受付の子に手渡した。
PRINTL ……
PRINTL …
CALL FOTUNE_MORIYA
TIME += 2
IF ガチャ回数 > 0
	PRINTFORMW 
	ガチャ回数 --
	GOTO RENZOKU
ENDIF

RETURN 1

