@COM355
FOR LOCAL, 1, GET_TARGETNUM() + 1
	SIF CHK_DATENOW(CFLAG:LOCAL:デート中)
		CONTINUE
	CFLAG:(TARGET:LOCAL):同行 = 0
	SIF EX:(TARGET:LOCAL):処女喪失チェック == 1
		EX:(TARGET:LOCAL):処女喪失チェック = 0
NEXT
SIF !CHK_DATENOW(CFLAG:MASTER:デート中)
	CFLAG:MASTER:同行 = 0
FLAG:70 = 1
SETBGCOLOR 1, 24, 60

RETURN 1

