@COM354
;添い寝する
;これも二人きりでしかできないはず
FOR LOCAL, 1, GET_TARGETNUM() + 1
	CALL SET_TOGETHER(1, TARGET:LOCAL, 1)
	SIF !CFLAG:(TARGET:LOCAL):衰弱 && !CFLAG:(TARGET:LOCAL):お招き
		CALL SET_SLEEP(0, TARGET:LOCAL, 0)
	CALL SET_DERAY(4, TARGET:LOCAL)
NEXT

RETURN 1

