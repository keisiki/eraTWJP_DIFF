	;馴れ合い強度1
	SIF TCVAR:MASTER:馴れ合い < 1 && !CFLAG:添い寝中
		RETURN 0
	;睡眠中
	SIF CFLAG:睡眠 && !CFLAG:添い寝中
		RETURN 0
	;仕事中
	SIF CFLAG:行動 == 5
		RETURN 0
ENDIF
