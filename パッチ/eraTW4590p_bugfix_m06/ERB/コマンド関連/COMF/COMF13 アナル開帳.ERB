@COM_ABLE13
;アナル開帳実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(13)
	RETURN RESULT
;時間停止中は許可
IF FLAG:70 != 1
	;従順が2未満だとダメ
	SIF ABL:従順< 2
		RETURN 0
	;処女の場合、従順3以上または露出癖3以上ないとダメ
	SIF TALENT:処女 && ABL:従順 < 3 && ABL:露出癖 < 3
		RETURN 0
	;縄使用中は不可
	SIF TEQUIP:縄
		RETURN 0
ENDIF

;下半身着衣
SIF TEQUIP:0 & 4 || TEQUIP:0 & 2
	RETURN 0
;アナルバイブ、ビーズ挿入してる時はダメ
SIF TEQUIP:14 || TEQUIP:15
	RETURN 0
;お風呂場プレイ中はプレイマットが無いとダメ
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF

RETURN 1

