;-------------------------------------------------
;乳首責め
;愛撫系コマンド、レベル1
;-------------------------------------------------
@COM7
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;奉仕快楽
TCVAR:PLAYER:108 = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 10
	SOURCE:快Ｂ = 80
	SOURCE:苦痛 = 5
	SOURCE:快Ｂ += ABL:PLAYER:指 * 12

ELSE

	DOWNBASE:体力 += 5
	DOWNBASE:気力 += 30

	SOURCE:快Ｂ = 80
	SOURCE:情愛 = 30
	SOURCE:苦痛 = 10
	SOURCE:露出 = 10
	SOURCE:不潔 = 10
	SOURCE:反感 = 10

	SIF TALENT:PLAYER:器用な指
		SOURCE:快Ｂ += 15
	IF ABL:マゾっ気 > 2
		SOURCE:快Ｂ += ABL:マゾっ気 * 5
		SOURCE:情愛 += ABL:マゾっ気 * 5
	ENDIF
	SOURCE:快Ｂ += ABL:PLAYER:指 * 12

	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;抑圧、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:自己愛 < 0 || TALENT:抵抗
		SOURCE:鬱屈 += 10
ENDIF
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＢ⇔調教者の指の汚れが移動
STAIN:5 |= STAIN:PLAYER:1
STAIN:PLAYER:1 |= STAIN:5
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 5
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 5
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 5
	ENDIF
ENDIF
EXP:PLAYER:手淫経験 ++
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE7
;乳首責め
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(7)
	RETURN RESULT
;レオタード以外上半身着衣無しでも乳首責め出来るようにしたかったけど条件がわかんねー…と思ったけどできたー
;上半身上着着衣していて上半身下着はだけ可とレオタード着ていない
IF (EQUIP:7 || EQUIP:10 || EQUIP:14 || EQUIP:15 || EQUIP:16 || EQUIP:17)
	IF (!EQUIP:8 || !EQUIP:9)
		;上半身着衣判定
		IF (TEQUIP:1 & 2) && TEQUIP:3 == 0
			RETURN 0
		ENDIF
	ELSE
		;上半身着衣判定
		IF (TEQUIP:1 & 2) && TEQUIP:3 == 0
			RETURN 0
		ENDIF
	ENDIF
ENDIF
;ニプルキャップ使用中は不可
SIF TEQUIP:16
	RETURN 0
;搾乳機使用中は不可
SIF TEQUIP:17
	RETURN 0
;乳房電極装着中はダメ
SIF TEQUIP:24
	RETURN 0
RETURN 1

