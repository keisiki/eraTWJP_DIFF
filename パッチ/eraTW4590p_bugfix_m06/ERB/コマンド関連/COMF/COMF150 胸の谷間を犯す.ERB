SIF !(TALENT:PLAYER:2 & 2)
	RETURN 0
;[爆乳]なら技巧LV1以上、[巨乳]でなければ技巧3以上、[貧乳]だと技巧4以上必要
SIF TALENT:バストサイズ + ABL:PLAYER:技巧 < 3
	RETURN 0
;上半身上着着衣していて上半身下着はだけ可とレオタード着ていない
IF (EQUIP:7 || EQUIP:10 || EQUIP:14 || EQUIP:15 || EQUIP:16 || EQUIP:17)
	IF (!EQUIP:8 || !EQUIP:9)
		;上半身着衣判定
		IF (TEQUIP:1 & 2) && TEQUIP:3 == 0
			RETURN 0
		ENDIF
	ELSE
		;上半身着衣判定
		IF (TEQUIP:1 & 2) && TEQUIP:3 == 0
			RETURN 0
		ENDIF
	ENDIF
ENDIF
