@COM_ABLE105
;縄実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(105)
	RETURN RESULT
;解除はいつでも可能
SIF TEQUIP:縄
	RETURN 1
;アイテムを持っているか、アイテムなし設定で無いとダメ
SIF ITEM:16 == 0 && NOITEM == 0
	RETURN 0
;調教者の技巧が1無いとできない
SIF ABL:PLAYER:技巧 < 1
	RETURN 0
;助手は技巧3でないとダメ
IF ASSIPLAY
	SIF ABL:ASSI:技巧 < 3
		RETURN 0
ENDIF
RETURN 1

