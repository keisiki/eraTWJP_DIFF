;SM系コマンド、レベル3
;-------------------------------------------------
@COM105
;着脱の処理
IF TCVAR:TARGET:無理矢理 && (CFLAG:TARGET:好感度 < 500 || CFLAG:TARGET:信頼度 < 200)
	PRINTFORMW 今縄を解くのは不味いだろう…
ELSE
	TEQUIP:縄 = !TEQUIP:縄
ENDIF
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 120
	SOURCE:苦痛 = 150

ELSE

	DOWNBASE:体力 += 30
	DOWNBASE:気力 += 120

	SOURCE:苦痛 = 300
	SOURCE:恐怖 = 900
	SOURCE:露出 = 200
	SOURCE:屈従 = 250
	SOURCE:逸脱 = 300
	SOURCE:反感 = 700

	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;緊縛経験が高いと消費減少
	IF EXP:緊縛経験 < EXPLV:3
		TIMES DOWNBASE:体力 , 1.00
		TIMES DOWNBASE:気力 , 1.00
	ELSEIF EXP:緊縛経験 < EXPLV:4
		TIMES DOWNBASE:体力 , 0.90
		TIMES DOWNBASE:気力 , 0.90
	ELSE
		TIMES DOWNBASE:体力 , 0.70
		TIMES DOWNBASE:気力 , 0.70
	ENDIF
ENDIF
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ELSE
	EXP:緊縛経験 += 5
	;同性愛　レズなら戻り値1ゲイなら戻り値2
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ENDIF
RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM105(ARG)
PRINTL ＜緊縛中＞
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
IF FLAG:70 == 1
	SOURCE:ARG:苦痛 += 80

ELSE

	;消費体力、気力
	DOWNBASE:ARG:体力 += 15

	SOURCE:ARG:苦痛 += 150
	SOURCE:ARG:恐怖 += 450
	SOURCE:ARG:露出 += 100
	SOURCE:ARG:屈従 += 125
	SOURCE:ARG:逸脱 += 150
	SOURCE:ARG:反感 += 350

	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;緊縛経験が高いと消費減少
	LOCAL = 60
	IF EXP:ARG:緊縛経験 < EXPLV:3
		TIMES LOCAL , 1.00
	ELSEIF EXP:ARG:緊縛経験 < EXPLV:4
		TIMES LOCAL , 0.90
	ELSE
		TIMES LOCAL , 0.70
	ENDIF
	DOWNBASE:ARG:気力 += LOCAL


	;-------------------------------------------------
	;経験の処理
	;-------------------------------------------------
	EXP:ARG:緊縛経験 ++
ENDIF
RETURN 1

