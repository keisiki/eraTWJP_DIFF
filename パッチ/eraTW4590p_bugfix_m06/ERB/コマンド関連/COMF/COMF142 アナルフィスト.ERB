;-------------------------------------------------
;アナルフィスト
;系コマンド、レベル
;-------------------------------------------------
@COM142
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 射精箇所フラグ（-1=コンドーム 1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 9=アナル奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
TCVAR:TARGET:2 = 12
;強度
TCVAR:TARGET:4 = 1600

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 300
	SOURCE:快Ａ = 200
	SOURCE:苦痛 = 750

	;フィストなどのAへの大きな苦痛は先に処理しておく
	;EXP:Ａ経験をみる
	IF EXP:Ａ経験 < EXPLV:1
		TIMES SOURCE:苦痛 , 3.00
	ELSEIF EXP:Ａ経験 < EXPLV:2
		TIMES SOURCE:苦痛 , 2.50
	ELSEIF EXP:Ａ経験 < EXPLV:3
		TIMES SOURCE:苦痛 , 2.40
	ELSEIF EXP:Ａ経験 < EXPLV:4
		TIMES SOURCE:苦痛 , 2.00
	ELSEIF EXP:Ａ経験 < EXPLV:5
		TIMES SOURCE:苦痛 , 1.80
	ELSEIF EXP:Ａ経験 >= EXPLV:5
		TIMES SOURCE:苦痛 , 1.60
	ENDIF

	;PALAM:潤滑をみる
	IF PALAM:潤滑 < PALAMLV:1
		TIMES SOURCE:苦痛 , 3.00
	ELSEIF PALAM:潤滑 < PALAMLV:2
		TIMES SOURCE:苦痛 , 2.50
	ELSEIF PALAM:潤滑 < PALAMLV:3
		TIMES SOURCE:苦痛 , 2.00
	ELSEIF PALAM:潤滑 < PALAMLV:4
		TIMES SOURCE:苦痛 , 1.50
	ELSEIF PALAM:潤滑 >= PALAMLV:4
		TIMES SOURCE:苦痛 , 1.00
	ENDIF

ELSE

	DOWNBASE:体力 += 300
	DOWNBASE:気力 += 150

	SOURCE:快Ａ = 200
	SOURCE:苦痛 = 1500
	SOURCE:露出 = 100
	SOURCE:屈従 = 1200
	SOURCE:逸脱 = 1200
	SOURCE:反感 = 1200


	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;フィストなどのAへの大きな苦痛は先に処理しておく
	;EXP:Ａ経験をみる
	IF EXP:Ａ経験 < EXPLV:1
		TIMES SOURCE:苦痛 , 3.00
		TIMES SOURCE:反感 , 4.00
	ELSEIF EXP:Ａ経験 < EXPLV:2
		TIMES SOURCE:苦痛 , 2.50
		TIMES SOURCE:反感 , 3.50
	ELSEIF EXP:Ａ経験 < EXPLV:3
		TIMES SOURCE:苦痛 , 2.40
		TIMES SOURCE:反感 , 3.00
	ELSEIF EXP:Ａ経験 < EXPLV:4
		TIMES SOURCE:苦痛 , 2.00
		TIMES SOURCE:反感 , 2.50
	ELSEIF EXP:Ａ経験 < EXPLV:5
		TIMES SOURCE:苦痛 , 1.80
		TIMES SOURCE:反感 , 2.00
	ELSEIF EXP:Ａ経験 >= EXPLV:5
		TIMES SOURCE:苦痛 , 1.60
		TIMES SOURCE:反感 , 1.50
	ENDIF

	;PALAM:潤滑をみる
	IF PALAM:潤滑 < PALAMLV:1
		TIMES SOURCE:苦痛 , 3.00
		TIMES SOURCE:反感 , 2.00
	ELSEIF PALAM:潤滑 < PALAMLV:2
		TIMES SOURCE:苦痛 , 2.50
		TIMES SOURCE:反感 , 1.50
	ELSEIF PALAM:潤滑 < PALAMLV:3
		TIMES SOURCE:苦痛 , 2.00
		TIMES SOURCE:反感 , 1.20
	ELSEIF PALAM:潤滑 < PALAMLV:4
		TIMES SOURCE:苦痛 , 1.50
	ELSEIF PALAM:潤滑 >= PALAMLV:4
		TIMES SOURCE:苦痛 , 1.00
	ENDIF

ENDIF
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;Ａ経験
EXP:Ａ経験 += 24

;Ａ拡張経験
IF !EXP:Ｖ拡張経験 && !EXP:Ａ拡張経験 && !CFLAG:3 & 異常_拡張
	EXP:異常経験 += 1
	CFLAG:3 |= 異常_拡張
ENDIF

EXP:Ａ拡張経験 += 5
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ENDIF
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE142
;アナルフィスト
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(142)
	RETURN RESULT
;アナルバイブ使用中は不可
SIF TEQUIP:14
	RETURN 0
;浣腸＋アナルプラグ使用中は不可
SIF TEQUIP:21
	RETURN 0
;ASSIの場合、従順3以上かサドじゃないとできない。
IF ASSIPLAY
	SIF ABL:ASSI:従順 < 4 && TALENT:ASSI:サド == 0
	RETURN 0
ENDIF
IF FLAG:70 == 1
ELSE
;一定のＡ経験が必要
SIF EXP:1 < 150
	RETURN 0
;小柄体型なら従順が4以上かつマゾっ気が4以上じゃないと実行できない
IF TALENT:体型 < 0
	SIF ABL:従順 <= 3 || ABL:マゾっ気 <= 3
		RETURN 0
ENDIF
ENDIF
;調教対象が小人体型の場合は主人が禁断の知識持ちじゃないとダメ
SIF ABS(TALENT:体型 - TALENT:PLAYER:体型) > 2 && TALENT:MASTER:禁断の知識 == 0
	RETURN 0

;下半身着衣
SIF TEQUIP:0 > 1
	RETURN 0
;アナルビーズ使用中は不可
SIF TEQUIP:15
	RETURN 0
;バルーン使用中は不可
SIF TEQUIP:22
	RETURN 0
;電極使用中は不可
SIF TEQUIP:23
	RETURN 0
;シャワー中はダメ
SIF TEQUIP:32
	RETURN 0
;お風呂場プレイ中はプレイマットが無いとダメ
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF
;新妻プレイ中はダメ
SIF TEQUIP:33
	RETURN 0
;ベッドルームでないとダメ
SIF !BEDROOM(CFLAG:PLAYER:現在位置)
	RETURN 0
RETURN 1

