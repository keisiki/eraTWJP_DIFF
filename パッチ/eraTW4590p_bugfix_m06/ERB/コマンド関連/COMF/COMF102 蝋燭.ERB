;-------------------------------------------------
;蝋燭
;SM系コマンド、レベル3
;-------------------------------------------------
@COM102
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
ITEM:46 --
;自動補充
IF !ITEM:46 && MONEY >= 2000 && FLAG:1001
	MONEY -= 2000
	ITEM:46 ++
ENDIF
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 40
	SOURCE:苦痛 = 1000

ELSE

	DOWNBASE:体力 += 40
	DOWNBASE:気力 += 30

	SOURCE:苦痛 = 2000
	SOURCE:恐怖 = 3000
	SOURCE:逸脱 = 150
	SOURCE:反感 = 700
ENDIF
;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;苦痛のパラメータによる苦痛のソース増加は先に処理しておく
SOURCE:苦痛 = SOURCE:苦痛 * (10 + 5 * MAX(GETPALAMLV(PALAM:苦痛,5) - 1, 0)) / 10

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 2
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 2
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 2
	ENDIF
ENDIF

EXP:PLAYER:嗜虐快楽経験 += 1

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE102
;蝋燭実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(102)
	RETURN RESULT
;アイテムを持っているか、アイテムなし設定でないとダメ
SIF ITEM:46 == 0 && NOITEM == 0
	RETURN 0
;従順4未満のASSIの場合蝋燭はできない（サドならＯＫ）
IF ASSIPLAY
	SIF ABL:ASSI:従順 < 4 && TALENT:ASSI:サド == 0
		RETURN 0
ENDIF
;全裸でないとダメ（靴下、特殊は除く）
SIF TEQUIP:0 || TEQUIP:1
	RETURN 0
;お風呂場プレイ中はダメ
SIF TEQUIP:31
	RETURN 0
;新妻プレイ中はダメ
SIF TEQUIP:33
	RETURN 0
;ベッドルームでないとダメ
SIF !BEDROOM(CFLAG:PLAYER:現在位置)
	RETURN 0
RETURN 1

