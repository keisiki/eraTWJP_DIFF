;-------------------------------------------------
;浣腸器＋プラグ
;ハードな調教コマンド、レベル4
;-------------------------------------------------
@COM146
;着脱の処理
TEQUIP:浣腸 = !TEQUIP:浣腸
IF !TEQUIP:浣腸
	IF !GETBIT(CFLAG:3,7)
		EXP:異常経験 += 1
		SETBIT CFLAG:3,7
	ENDIF
ENDIF
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 150
	SOURCE:快Ａ = 300
	SOURCE:苦痛 = 250

ELSE

	DOWNBASE:体力 += 60
	DOWNBASE:気力 += 150

	SOURCE:快Ａ = 300
	SOURCE:苦痛 = 500
	SOURCE:露出 = 300
	SOURCE:屈従 = 200
	SOURCE:不潔 = 500
	SOURCE:逸脱 = 500
	SOURCE:反感 = 500

	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;抑圧、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:自己愛 < 0 || TALENT:抵抗
		SOURCE:鬱屈 += 500
ENDIF
;Aへの苦痛は先に処理しておく
CALL PAIN_CHECK_A(TARGET)
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
STAIN:7 |= STAIN:4
STAIN:4 |= STAIN:7
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;Ａ経験
EXP:Ａ経験 += 4
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ENDIF
RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------

@EQUIP_COM146(ARG)
PRINTL ＜浣腸＋アナルプラグ挿入中＞
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 150
	SOURCE:ARG:快Ａ += 150

	;Aへの苦痛は先に処理しておく
	;EXP:Ａ経験をみる
	LOCAL = 250
	LOCAL:1 = 250
	IF EXP:ARG:Ａ経験 < EXPLV:1
		TIMES LOCAL , 3.00
	ELSEIF EXP:ARG:Ａ経験 < EXPLV:2
		TIMES LOCAL , 1.20
	ELSEIF EXP:ARG:Ａ経験 < EXPLV:3
		TIMES LOCAL , 0.80
	ELSEIF EXP:ARG:Ａ経験 < EXPLV:4
		TIMES LOCAL , 0.60
	ELSEIF EXP:ARG:Ａ経験 < EXPLV:5
		TIMES LOCAL , 0.40
	ELSEIF EXP:ARG:Ａ経験 >= EXPLV:5
		TIMES LOCAL , 0.20
	ENDIF

	;PALAM:潤滑をみる
	IF PALAM:ARG:潤滑 < PALAMLV:1
		TIMES LOCAL , 1.20
	ELSEIF PALAM:ARG:潤滑 < PALAMLV:2
		TIMES LOCAL , 1.00
	ELSEIF PALAM:ARG:潤滑 < PALAMLV:3
		TIMES LOCAL , 0.60
	ELSEIF PALAM:ARG:潤滑 < PALAMLV:4
		TIMES LOCAL , 0.30
	ELSEIF PALAM:ARG:潤滑 >= PALAMLV:4
		TIMES LOCAL , 0.20
	ENDIF
	SOURCE:ARG:苦痛 += LOCAL

ELSE

	DOWNBASE:ARG:体力 += 60
	DOWNBASE:ARG:気力 += 150

	SOURCE:ARG:快Ａ += 150
	SOURCE:ARG:屈従 += 100
	SOURCE:ARG:不潔 += 250
	SOURCE:ARG:逸脱 += 250

	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;抑圧、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:ARG:自己愛 < 0 || TALENT:ARG:抵抗
		SOURCE:ARG:鬱屈 += 250

	;Aへの苦痛は先に処理しておく
	;EXP:Ａ経験をみる
	LOCAL = 250
	LOCAL:1 = 250
	IF EXP:ARG:Ａ経験 < EXPLV:1
		TIMES LOCAL , 3.00
		TIMES LOCAL:1 , 3.00
	ELSEIF EXP:ARG:Ａ経験 < EXPLV:2
		TIMES LOCAL , 1.20
		TIMES LOCAL:1 , 2.00
	ELSEIF EXP:ARG:Ａ経験 < EXPLV:3
		TIMES LOCAL , 0.80
		TIMES LOCAL:1 , 1.50
	ELSEIF EXP:ARG:Ａ経験 < EXPLV:4
		TIMES LOCAL , 0.60
		TIMES LOCAL:1 , 1.20
	ELSEIF EXP:ARG:Ａ経験 < EXPLV:5
		TIMES LOCAL , 0.40
	ELSEIF EXP:ARG:Ａ経験 >= EXPLV:5
		TIMES LOCAL , 0.20
	ENDIF

	;PALAM:潤滑をみる
	IF PALAM:ARG:潤滑 < PALAMLV:1
		TIMES LOCAL , 1.20
		TIMES LOCAL:1 , 2.00
	ELSEIF PALAM:ARG:潤滑 < PALAMLV:2
		TIMES LOCAL , 1.00
		TIMES LOCAL:1 , 1.50
	ELSEIF PALAM:ARG:潤滑 < PALAMLV:3
		TIMES LOCAL , 0.60
	ELSEIF PALAM:ARG:潤滑 < PALAMLV:4
		TIMES LOCAL , 0.30
	ELSEIF PALAM:ARG:潤滑 >= PALAMLV:4
		TIMES LOCAL , 0.20
	ENDIF
	SOURCE:ARG:苦痛 += LOCAL
	SOURCE:ARG:反感 += LOCAL:1
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;Ａ経験
EXP:ARG:Ａ経験 += 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
