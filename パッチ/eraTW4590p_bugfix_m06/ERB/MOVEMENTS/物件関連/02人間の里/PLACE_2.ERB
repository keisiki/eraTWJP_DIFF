@MAP_UNIQUEMESSAGE_2
CALL DRAW_INFORMATIONLINE("Info",1)
IF WITH_MOB()
	RETURN 1
ELSE
	SELECTCASE CFLAG:MASTER:現在位置
		CASE 205
			IF INRANGE(TIME, 540, 1020)
				PRINTFORML 見るからにやる気のなさそうな河童が索道の受付をしている
			ELSE
				PRINTFORML 索道駅は閉まっている
			ENDIF
		CASE 213
			PRINTFORML 店内にはたくさんの本棚が並んでいる
		CASE 222
			IF TIME >= 480 && TIME <= 720 || TIME >= 780 && TIME <= 840 && FLAG: 70 != 1
				PRINTDATA
					DATAFORM 寺小屋の子供達は%CALLNAME:TARGET%の授業を受けている…
				ENDDATA
				PRINTL
			ELSEIF TIME >= 720 && TIME <= 780 && FLAG:70 != 1
				PRINTDATA
					DATAFORM 寺子屋の子供達は%CALLNAME:TARGET%と食事している…
				ENDDATA
				PRINTL
			ELSEIF TIME >= 480 && TIME <= 840 && FLAG:70 == 1 && !CFLAG:MASTER:うふふ
				PRINTDATA
					DATAFORM 寺子屋の子供達は停止している…
				ENDDATA
				PRINTL
			ELSEIF TIME >= 480 && TIME <= 840 && FLAG:70 == 1 && CFLAG:MASTER:うふふ
				PRINTDATA
					DATAFORM %CALLNAME:TARGET%は寺子屋の子供達の前で襲われている…
				ENDDATA
				PRINTL
			ENDIF
		CASE 203 TO 206
			SIF !RAND:50 && INRANGE(TIME, 540, 1020)
				PRINTFORML 薬袋を持ったひげ面の男が、通行人に何か熱心に語っている
	ENDSELECT
ENDIF
RETURN 1


