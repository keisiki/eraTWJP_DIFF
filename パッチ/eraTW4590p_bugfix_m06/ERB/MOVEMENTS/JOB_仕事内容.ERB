				LOCAL:1 ++
			ENDIF
		NEXT
		IF YOGORE:参道 >= 1000
			CFLAG:ARG:職場 = 参道
			LOCAL:1 ++
		ENDIF
		SIF !LOCAL:1
			BASE:ARG:仕事量 = 0
	ENDIF
;萃香
ELSEIF ARG == 10
	IF DAY % 7 == 3
		TCVAR:ARG:手伝えない = 0
	ELSE
		TCVAR:ARG:手伝えない = 1
	ENDIF
;魔理沙
ELSEIF ARG == 11
	IF TIME >= 960
		CFLAG:ARG:職場 = 11
		CFLAG:ARG:職種 = 42
	ELSE
		CFLAG:ARG:職場 = 6
		CFLAG:ARG:職種 = 40
	ENDIF
;アリス
ELSEIF ARG == 17
	;公演が終われば後片付けを手伝える
	IF TIME >= 720
		TCVAR:ARG:手伝えない = 0
	;公演日で無いなら手伝える
	ELSEIF DAY % 14 > 0
		TCVAR:ARG:手伝えない = 0
	;公演中は手伝えない
	ELSE
		TCVAR:ARG:手伝えない = 1
	ENDIF
;みすちー
ELSEIF ARG == 28
	;仕込みは手伝える
	IF BASE:ARG:仕事量 > 3000
		TCVAR:ARG:手伝えない = 0
	;屋台を出したら手伝っても時間は変わらない
	ELSE
		TCVAR:ARG:手伝えない = 2
	ENDIF
;文
ELSEIF ARG == 29
	;教養と信頼が必要
	IF CFLAG:ARG:信頼度 < 500 || ABL:MASTER:教養 < 3
		TCVAR:ARG:手伝えない = 1
	ELSE
		TCVAR:ARG:手伝えない = 0
	ENDIF
;華扇
ELSEIF ARG == 43
	IF DAY % 7 == 6
		IF TIME >= 840 
			CFLAG:ARG:職場 = 212
			CFLAG:ARG:職種 = 41
		ELSE
			CFLAG:ARG:職場 = 218
			CFLAG:ARG:職種 = 41
		ENDIF
	ENDIF
;エレン　前回の処理から時間が経過してなければスルー
ELSEIF ARG == 44 && TIME:0 != TCVAR:ARG:357
	;出張
	IF DAY:3 == 15 || DAY:3 == 30
		;客数の増減、計上、基本は－３～＋５
		LOCAL:1 = RAND:8
		LOCAL:1 -= 3
		;霧雨、霧は－１
		SIF TIME:5 == 6 || TIME:5 == 7
		LOCAL:1 -= 1
		;雨、雪は－２
		SIF TIME:5 == 4 || TIME:5 == 8
		LOCAL:1 -= 2
		;大雨、吹雪、みぞれ、あられは－３
		SIF TIME:5 == 5 || TIME:5 == 9 || TIME:5 == 12 || TIME:5 == 13
		LOCAL:1 -= 1
		;虹、ダイヤモンドダストは＋２
		SIF TIME:7 >= 1
		LOCAL:1 += 2
		;客数が少ないならより増やす
		SIF TCVAR:ARG:354 < 5
		LOCAL:1 += 1
		;客数が多いならより減らす
		SIF TCVAR:ARG:354 > 25
		LOCAL:1 -= 3
		TCVAR:ARG:354 += LOCAL:1
		SIF LOCAL:1 > 0
		TCVAR:ARG:355 += LOCAL:1
		;もし客数がマイナスになったら０にする
		SIF TCVAR:ARG:354 < 0
		TCVAR:ARG:354 = 0
		;現在の客数が一定以上だとエレンのサポに回る
		IF TCVAR:ARG:354 > 25
			CFLAG:ARG:職種 = 43
		;そうでなければ呼び込みに
		ELSE
			CFLAG:ARG:職種 = 41
		ENDIF
	;採集　エレンの採集量を計上
	ELSE
		;採集量がおかしくならないように
		SIF TCVAR:ARG:357 < 420 || TCVAR:ARG:357 > 720
		TCVAR:ARG:357 = 420
		;計算式は(現在のTIME-前回計算したTIME)*1～20の乱数
		TCVAR:ARG:354 += (TIME:0 - TCVAR:ARG:357) * (RAND:20 + 1)
		;採集量が最大仕事量を上回ったら終了
		SIF TCVAR:ARG:354 > MAXBASE:ARG:仕事量
		BASE:ARG:仕事量 = 1
	ENDIF
;慧音
ELSEIF ARG == 67
	;授業が終われば後片付けを手伝える
	IF TIME >= 840
		CFLAG:ARG:職種 = 40
		TCVAR:ARG:手伝えない = 0
	;昼休みは当然無理
	ELSEIF TIME >= 720 && TIME <= 780
		TCVAR:ARG:手伝えない = 1
	;教養が3以上かつ信頼度が50以上なら授業を手伝える
	ELSEIF ABL:MASTER:教養 >= 3 && CFLAG:ARG:信頼度 >= 50
		TCVAR:ARG:手伝えない = 2
	;それ以外は手伝えない
	ELSE
		TCVAR:ARG:手伝えない = 1
	ENDIF
ENDIF
IF 前の職場 != CFLAG:ARG:職場
	CFLAG:ARG:職場 = GET_JOBPLACE("仕事",ARG)
ENDIF


