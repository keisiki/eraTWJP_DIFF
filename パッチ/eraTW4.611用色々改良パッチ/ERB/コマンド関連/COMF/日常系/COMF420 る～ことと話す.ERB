	SIF LOCAL == CFLAG:MASTER:311
		LOCALS = %CALLNAME:MASTER%私室
	SIF LOCALS == ""
		GOTO SYOURYAKU
	SIF CFLAG:MASTER:現在位置 == LOCAL
		SETCOLOR 0 , 255, 0
	PRINTBUTTON "["+LOCALS+"]", LOCAL
	RESETCOLOR
	PRINTFORM %" "*(22-STRLENS(LOCALS))%
	LOCALS = %SEIKETU(LOCAL)%
	PRINTFORM %LOCALS,15,RIGHT%     
	RESETCOLOR
	LOCAL:1 ++
	SIF LOCAL:1 % 2 == 0
		PRINTL
	$SYOURYAKU
NEXT
PRINTFORML 
