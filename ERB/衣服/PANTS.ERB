;### 濡れて透けうるパンツを穿いてるか判定用式中関数 ################
;ARG=キャラ番号、返り値１は透けうる、０は透けえない
;る～こと口上からの移植
@PANTIES_TRANSPARENCY(ARG)
#FUNCTION

;パンツを奪ったorもらったor元から穿いてない場合は０
IF CFLAG:ARG:ノーパン || (CFLAG:ARG:205 == 0 && CFLAG:ARG:206 == 0)
	RETURNF 0
;ノーパンではない場合
ELSE
	;いま現在パンツを穿いている場合
	IF EQUIP:ARG:下半身下着１ || EQUIP:ARG:下半身下着２
		IF EQUIP:ARG:下半身下着１
			RETURNF GET_INT(ARG, "下半身下着_ずらし不可", EQUIP:ARG:下半身下着１, "透ける(前)")
		ELSEIF EQUIP:ARG:下半身下着２
			RETURNF GET_INT(ARG, "下半身下着_ずらし可能", EQUIP:ARG:下半身下着２, "透ける(前)")
		ENDIF
	;いま現在穿いてないがあとで穿きなおす場合はそのパンツが透けうるかいなかを返す
	ELSE
		;下半身下着１
		IF CFLAG:ARG:205
			RETURNF GET_INT(ARG, "下半身下着_ずらし不可", CFLAG:ARG:205, "透ける(前)")
		;下半身下着２
		ELSEIF CFLAG:ARG:206
			RETURNF GET_INT(ARG, "下半身下着_ずらし可能", CFLAG:ARG:206, "透ける(前)")
		ENDIF
	ENDIF
ENDIF

;該当なければ透けないことにする
RETURNF 0

@PANTS_ALREADY_COLLECTED(ARG)
#FUNCTION
#DIM 種類
