@PANTS_DESCRIPTION(ARG, CHARA)
#FUNCTIONS
#DIM CHARA
RETURNF GET_STR(CHARA, CLOTHES_PARTS_TO_CATEGORY("下半身下着２"), ARG, "描写")

@PANTS_GET(ARG,ARGS)
#DIM 種類
種類 = EQUIP:ARG:下半身下着２
CALL PANTS_GETTING(ARG, 種類)

CFLAG:ARG:ノーパン = 1
EQUIP:ARG:下半身下着２ = 0
CALL CLOTHES_SETTING_TRAIN(ARG)

SIF CFLAG:ARG:パジャマ == 1
	CFLAG:ARG:パジャマパンツ = 0

SIF ARGS == "もらう"
	CFLAG:ARG:ノーパン = 2

@PANTS_GETTING(ARG, 種類)
#DIM 種類
#DIM スキマ送り成否
スキマ送り成否 = 0
PANTS_TEMP:ARG:種類 += 1
IF ITEM:コレクションのスキマ
	IF FLAG:Cスキマ自動仕様
		CALL PANTS_SUKIMA(ARG, 種類)
		スキマ送り成否 = RESULT
	ELSEIF FLAG:パンツ輸送 == 0
		PRINTFORML コレクションのスキマを使いますか？（残り：{ITEM:コレクションのスキマ}）
		CALL ASK_YN
		IF !RESULT
			CALL PANTS_SUKIMA(ARG, 種類)
			スキマ送り成否 = RESULT
		ENDIF
	ENDIF
ENDIF
SIF !スキマ送り成否
	FLAG:パンツ輸送 = 1
RETURN スキマ送り成否

@PANTS_SUKIMA(ARG, 種類)
#DIM 種類
#DIM スキマ送り成否
スキマ送り成否 = 0
IF PANTS_TEMP:ARG:種類
	CFLAG:ARG:(種類 + パンツ管理) += PANTS_TEMP:ARG:種類 
	PANTS_TEMP:ARG:種類 = 0
	PRINTFORMW %CALLNAME:MASTER%はコレクションのスキマを開き、%CALLNAME:ARG%の%PANTSNAME(種類,ARG)%を放り込んだ
	ITEM:コレクションのスキマ -= 1
	スキマ送り成否 = 1
ENDIF
RETURN スキマ送り成否

