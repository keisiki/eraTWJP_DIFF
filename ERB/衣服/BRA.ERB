@DECIDE_NOBRA(ARG)
#FUNCTION
#DIM DYNAMIC NOBRA_RATE
SIF (TALENT:ARG:ヤリマン || TALENT:ARG:小悪魔 || TALENT:ARG:セフレ || ABL:ARG:露出癖 >= 4) && !RAND:5
	RETURNF 1
SIF TALENT:ARG:母乳体質 && !(TALENT:ARG:セフレ || TALENT:ARG:愛欲 || ABL:ARG:露出癖 >= 4)
	RETURNF 0
;DAY:2 季節（1=春 2=夏 3=秋 4=冬）
SELECTCASE DAY:2
CASE 1
	NOBRA_RATE = 8
CASE 2
	NOBRA_RATE = 15
CASE 3
	NOBRA_RATE = 3
CASE 4
	NOBRA_RATE = 1
ENDSELECT

SIF TALENT:ARG:幼稚 || TALENT:ARG:幼児／幼児退行
	TIMES NOBRA_RATE, 1.20
SIF TALENT:ARG:倒錯的
	TIMES NOBRA_RATE, 1.20
SIF TALENT:ARG:小悪魔
	TIMES NOBRA_RATE, 1.20
SIF TALENT:ARG:マゾ
	TIMES NOBRA_RATE, 1.80
SIF TALENT:ARG:ヤリマン
	TIMES NOBRA_RATE, 2.00

{
	NOBRA_RATE = NOBRA_RATE * 
				(10 + TALENT:ARG:性的興味 + TALENT:ARG:自己愛 + TALENT:ARG:快感応答 
					- TALENT:ARG:Ｂ感度 - TALENT:ARG:貞操 - TALENT:ARG:羞恥心 - TALENT:ARG:バストサイズ ) / 10
}

SIF TALENT:ARG:キス未経験
	TIMES NOBRA_RATE, 0.30
SIF GET_TALENTNAME(GETNUM(TALENT, "度胸"), TALENT:ARG:度胸) == "臆病"
	TIMES NOBRA_RATE, 0.50
SIF GET_TALENTNAME(GETNUM(TALENT, "プライド"), TALENT:ARG:プライド) == "プライド高い"
	TIMES NOBRA_RATE, 0.50

RETURNF RAND:100 <= NOBRA_RATE

