;今日のパンツには普段着用とパジャマ用の二種類があるので、直接P_IDを渡すように改変
@今日のブラジャー(C_ID, P_ID)
#FUNCTION
#LOCALSIZE 2
#LOCALSSIZE 1
#DIM RAND_BRA, MAXBRA
#DIM B_TABLE

#DIM C_ID		;対象キャラ
#DIM P_ID		;コーディネートされたおぱんつ
#DIM B_ID = 0	;ブラの種類

B_ID = GET_INT(C_ID, "下半身下着_ずらし可能", P_ID, "関連下着")

IF B_ID == 0 && !(P_ID == 0 || P_ID == 18)
	VARSET RAND_BRA , 0
	FOR LOCAL:0 , 1 , MAXBRA
		RAND_BRA:(LOCAL:0) = LOCAL:0
	NEXT
	FOR LOCAL:0 , 1 , MAXBRA
		LOCAL:1 = RAND(LOCAL:0 , MAXBRA)
		SWAP RAND_BRA:(LOCAL:0), RAND_BRA:(LOCAL:1)
	NEXT
	
	FOR B_TABLE, 0, MAXBRA
		IF GET_INT(C_ID, "上半身下着_はだけ不可", RAND_BRA:B_TABLE, "つける")
			B_ID = RAND_BRA:B_TABLE
			BREAK
		ELSE
			CONTINUE
		ENDIF
		SIF B_TABLE == MAXBRA - 1
			THROW %CALLNAME:C_ID%のブラ抽選に失敗
	NEXT
ENDIF

SIF DECIDE_NOBRA(C_ID)
	B_ID = 0
RETURNF B_ID

