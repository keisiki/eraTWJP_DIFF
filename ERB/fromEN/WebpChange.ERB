;Checks if the current character image set has a standing image
@HAS_STANDING(CHARA)
#FUNCTION
#DIM CHARA
SIF CFLAG:CHARA:差し替え適用
	RETURNF SPRITECREATED(@"\@CFLAG:CHARA:差し替え適用 >= 2?別立ち{CFLAG:CHARA:差し替え適用}#別立ち\@_服_通常_{CHARA}")
RETURNF SPRITECREATED(@"立ち絵_服_通常_{CHARA}")

;Checks if the current character image set has a portrait image
@HAS_FACE(CHARA)
#FUNCTION
#DIM CHARA
IF CFLAG:CHARA:差し替え適用
	RETURNF SPRITECREATED(@"\@CFLAG:CHARA:差し替え適用 >= 2?別顔{CFLAG:CHARA:差し替え適用}#別顔\@_服_通常_{CHARA}")
ENDIF
RETURNF SPRITECREATED(@"顔絵_服_通常_{CHARA}")