@GET_SUCCESS_RATE
#FUNCTION
VARSET LOCAL
;親密
LOCAL += MIN(ABL:親密, 10) * 5
LOCAL += GETPALAMLV(PALAM:恭順,5) * 3

;反抗的.素直
LOCAL -= TALENT:態度 * 5
;気丈
SIF TALENT:度胸 > 0
	LOCAL -= 5

;プライド高い
SIF TALENT:プライド > 0
	LOCAL -= 15
;プライド低い
SIF TALENT:プライド < 0
	LOCAL += 5
;目立ちたがり
SIF TALENT:目立ちたがり
	LOCAL += 2
;抑圧
SIF TALENT:自己愛 < 0
	LOCAL -= 10
;抵抗
SIF TALENT:抵抗
	LOCAL -= 10
;即落ち
SIF TALENT:即落ち
	LOCAL += 10
;性別嗜好
SIF OTOKOGIRAI(TARGET)
	LOCAL -= 7

LOCAL += TALENT:機嫌 * 15

;調教者の素質
;魅惑
SIF TALENT:PLAYER:魅惑
	LOCAL += 6
;謎の魅力
SIF TALENT:PLAYER:謎の魅力
	LOCAL += 6
SIF TALENT:PLAYER:魅力
	LOCAL += 6

;相性チェック
R = NO:PLAYER
IF RELATION:R > 0 && RELATION:R < 30
	LOCAL -= 10
ELSEIF RELATION:R > 0 && RELATION:R < 70
	LOCAL -= 6
ELSEIF RELATION:R > 0 && RELATION:R < 100
	LOCAL -= 3
ELSEIF RELATION:R >= 100 && RELATION:R < 130
	LOCAL += 3
ELSEIF RELATION:R >= 100 && RELATION:R < 170
	LOCAL += 6
ELSEIF RELATION:R >= 100 && RELATION:R >= 170
	LOCAL += 10
ENDIF

;好感度
LOCAL += MIN(CFLAG:好感度 / 200, 50)
;信頼度
LOCAL += MIN(CFLAG:信頼度 / 20, 50)

;思慕
SIF TALENT:思慕 || TALENT:愛欲
	LOCAL += 20
;恋慕
SIF TALENT:恋慕
	LOCAL += 40
LOCAL += (CFLAG:MASTER:310 - CFLAG:TARGET:310) / 500
LOCAL += TFLAG:幸運補正 * 20
SIF LOCAL < 0
	LOCAL = 0

DEBUGPRINTFORML SUCCESS_RATE{LOCAL}

RETURNF LOCAL
