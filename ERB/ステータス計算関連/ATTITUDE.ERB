;キャラの態度
;CALL		USER
;ARG		VOID
;RETURN		VOID
;COMMENT	
;-----------------------------------------------------------
@CHARA_ATTITUDE
VARSET LOCAL
FOR LOCAL,1,CHARANUM
	SELECTCASE CFLAG:LOCAL:好感度
		CASE IS < 1000
			LOCAL:1 = 0
		CASE 1001 TO 3000
			LOCAL:1 = 50
		CASE 3001 TO 5000
			LOCAL:1 = 75
		CASE 5001 TO 10000
			LOCAL:1 = 100
		CASE 10001 TO 30000
			LOCAL:1 = 150
		CASE 30001 TO 50000
			LOCAL:1 = 200
		CASEELSE
			LOCAL:1 = 300
	ENDSELECT
	SELECTCASE CFLAG:LOCAL:信頼度
		CASE IS < 100
			LOCAL:1 -= 50
		CASE 101 TO 300
			LOCAL:1 -= 20
		CASE 301 TO 500
			LOCAL:1 += 0
		CASE 501 TO 750
			LOCAL:1 += 30
		CASE 751 TO 1000
			LOCAL:1 += 50
		CASEELSE
			LOCAL:1 += 100
	ENDSELECT
	;陥落素質による修正
	LOCAL:1 += TALENT:LOCAL:恋慕 * 100 + TALENT:LOCAL:思慕 * 30 + TALENT:LOCAL:愛欲 * 80 + TALENT:LOCAL:セフレ * 30
	;ABLによる修正
	LOCAL:1 += MIN(ABL:LOCAL:親密, 20) * 10 + MIN(ABL:LOCAL:欲望, 20) * 5
	;PALAMによる修正（共に最大15LV）
	LOCAL:1 += GETPALAMLV(PALAM:LOCAL:欲情,15) * 5 + GETPALAMLV(PALAM:LOCAL:好意,15) * 5
	;ムードと理性のよる修正
	LOCAL:1 += BASE:LOCAL:ムード / 25 + (1000 - BASE:LOCAL:理性) / 25
	;刻印による修正
	LOCAL:1 += MARK:LOCAL:不埒刻印 * 20 + MARK:LOCAL:快楽刻印 * 20
	LOCAL:1 -= MIN(MARK:LOCAL:反発刻印 - MARK:LOCAL:時姦刻印 , 0) * 30
	;お薬
	IF TCVAR:LOCAL:発情
		LOCAL:1 += 50
	ELSEIF TCVAR:LOCAL:惚れ薬 || TCVAR:LOCAL:媚薬
		LOCAL:1 += 30
	ENDIF
	IF IsGardenValid(LOCAL)
		LOCAL:1 += 40
	ELSEIF IsInsenceValid(LOCAL)
		LOCAL:1 += 30
	ENDIF

	;男嫌い
	SIF OTOKOGIRAI(LOCAL)
		LOCAL:1 -= 70
	;同性で両刀でない場合、態度が2以上になりにくい
	;コメントに従った条件に改造、なお、ふたなりは同性扱い
	IF TALENT:LOCAL:性別嗜好 != -1 && HETEROSEX(MASTER, LOCAL)
			IF LOCAL:1 < 150
				LOCAL:1 += 20
			ELSEIF LOCAL:1 > 200
				LOCAL:1 -= 30
			ENDIF
		;ENDIF
	ENDIF
	SIF TALENT:LOCAL:ヤリマン
		LOCAL:1 += 400
	SIF CFLAG:LOCAL:無理矢理膣射
		LOCAL:1 -= 100
	SIF LOCAL:1 >= 100 && FLAG:甲斐性無
		LOCAL:1 += 50
	CFLAG:LOCAL:合意判定 = LOCAL:1
	SELECTCASE CFLAG:LOCAL:合意判定
		CASE IS >= 500
			CFLAG:LOCAL:態度 = 3
		CASE IS >= 300
			CFLAG:LOCAL:態度 = 2
		CASE IS >= 150
			CFLAG:LOCAL:態度 = 1
		CASEELSE
			CFLAG:LOCAL:態度 = 0
	ENDSELECT
	SIF CFLAG:LOCAL:ブチギレ && !FLAG:70
		CFLAG:LOCAL:態度 = 0
	SIF CFLAG:LOCAL:睡眠
		CFLAG:LOCAL:態度 = 0
NEXT

