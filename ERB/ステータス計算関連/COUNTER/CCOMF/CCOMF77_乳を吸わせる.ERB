;*********************************************************************************************
;カウンターコマンド：乳を吸わせる
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF77(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_B,4,ARG)
	TFLAG:MASTERの口使用中 ++
	
	;ソース計算および内部処理系統
	;=============================
	SIF TEQUIP:ARG:1 > 1
		CALL DATUI_TOP_T(ARG,0)
	SOURCE:ARG:誘惑 += 500
	SOURCE:ARG:奉仕 += 200
	SOURCE:ARG:強要 += 100
	SOURCE:ARG:快Ｂ += 200
	SOURCE:ARG:情愛 += 100
	SIF TALENT:ARG:母乳体質
		EXP:ARG:噴乳経験 ++
	TEQUIP:ARG:乳首吸い = 1

	;マスターカウンター制御
	;(ビット立ちで不可 0=尻を撫でる 1=抱き付く 2=キスする 3=胸愛撫 4=アナル愛撫 5=クリ愛撫 6=指挿入れ 7=スカートめくり)
	;=============================
	SIF GROUPMATCH(TEQUIP:MASTER:体位, 1, 3, 4)
		CALL カウンター挿入され継続中処理(ARG)
	SETBIT TCVAR:ARG:26 ,2
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE77(ARG)

	SIF TFLAG:60
		RETURN 0
	SIF TEQUIP:MASTER:50 == ARG || TEQUIP:MASTER:51 == ARG
		RETURN 0
	SIF GROUPMATCH(TEQUIP:ARG:体位,2,5)
		RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER77(コマンド番号, ARG, 基本値)
#DIM コマンド番号
#DIM 基本値
#DIMS カウンタータイプ

	;カウンタータイプ設定
	;=============================
	カウンタータイプ = 脱衣強要

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + ABL:ARG:Ｂ感覚

	;カウンタータイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:コマンド番号, 1)
	LOCAL *= COUNTER_TYPE(カウンタータイプ, ARG)

RETURN LOCAL
