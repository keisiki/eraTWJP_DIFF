;*********************************************************************************************
;カウンターコマンド：フェラチオ強制
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF71(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_P,4,ARG)
	TFLAG:MASTERの口使用中 ++
	
	;ソース計算および内部処理系統
	;=============================
	IF BEDROOM(CFLAG:MASTER:現在位置)
		SIF TEQUIP:ARG:0
			CALL DATUI_BOTTOM_T(ARG,0)
	ELSE
		SIF TEQUIP:ARG:0 & 14
			CALL DATUI_BOTTOM_T(ARG,1)	
	ENDIF
	SIF GETBIT(TALENT:PLAYER:2,0)
		SOURCE:ARG:快Ｃ = 100
	SOURCE:ARG:性行動 += 300
	SOURCE:ARG:征服 += 700
	SOURCE:ARG:液体 += 60
	SOURCE:ARG:挑発 += 100
	SOURCE:ARG:加虐 += 500
	SOURCE:ARG:強要 += 1000
	SOURCE:PLAYER:快Ｍ += 200
	;射精箇所（1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 9=アナル奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
	CALL 射精対象登録(ARG, PLAYER, 4)
	;強度
	TCVAR:ARG:4 += 800
	STAIN:ARG:2 |= STAIN:PLAYER:0
	STAIN:PLAYER:0 |= STAIN:ARG:2
	EXP:PLAYER:口淫経験 ++
	TCVAR:ARG:嗜虐フラグ = 1
	CALL EVENT_COUNTER_POSE_69(ARG,2)

	;マスターカウンター制御
	;(ビット立ちで不可 0=尻を撫でる 1=抱き付く 2=キスする 3=胸愛撫 4=アナル愛撫 5=クリ愛撫 6=指挿入れ 7=スカートめくり)
	;=============================
	;CALL カウンター挿入され継続中処理(ARG)
	SETBIT TCVAR:ARG:26 ,1
	SETBIT TCVAR:ARG:26 ,2
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE71(ARG)

	SIF !(TALENT:ARG:2 & 2)
		RETURN 0
	SIF TFLAG:60
		RETURN 0
	SIF TEQUIP:ARG:50
		RETURN 0
	SIF TEQUIP:MASTER:50 == ARG || TEQUIP:MASTER:51 == ARG
		RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER71(コマンド番号, ARG, 基本値)
#DIM コマンド番号
#DIM 基本値
#DIMS カウンタータイプ

	;カウンタータイプ設定
	;=============================
	カウンタータイプ = 脱衣強要

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + ABL:ARG:Ｃ感覚

	;カウンタータイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:コマンド番号, 1)
	LOCAL *= COUNTER_TYPE(カウンタータイプ, ARG)

RETURN LOCAL
