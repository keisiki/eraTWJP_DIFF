;*********************************************************************************************
;カウンターコマンド：スカートの中を見せる
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF35(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:誘惑 += 500
	SOURCE:ARG:挑発 += 300

	;マスターカウンター制御
	;(ビット立ちで不可 0=尻を撫でる 1=抱き付く 2=キスする 3=胸愛撫 4=アナル愛撫 5=クリ愛撫 6=指挿入れ 7=スカートめくり)
	;=============================
	;CALL カウンター挿入され継続中処理(ARG)

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE35(ARG)

	;服装制限(条件が意味不明なので、再設定（スカートをはいてないかつワンピースをきてないかつ着物をきてないに）
	;SIF !(EQUIP:レオタード || EQUIP:上半身上着２ || EQUIP:ワンピース)
	SIF !EQUIP:スカート && !EQUIP:ワンピース && !EQUIP:着物
		RETURN 0
	SIF TEQUIP:0 > 3
		RETURN 0
	;全裸(MASTERの有無は関係ないよね？
	SIF !EQUIP:0
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER35(コマンド番号, ARG, 基本値)
#DIM コマンド番号
#DIM 基本値
#DIMS カウンタータイプ

	;カウンタータイプ設定
	;=============================
	カウンタータイプ = 着衣

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + CFLAG:ARG:恥じらい + CFLAG:ARG:誘惑

	;カウンタータイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:コマンド番号, 1)
	LOCAL *= COUNTER_TYPE(カウンタータイプ, ARG)

RETURN LOCAL
