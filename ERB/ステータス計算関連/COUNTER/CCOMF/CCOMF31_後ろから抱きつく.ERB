;*********************************************************************************************
;カウンターコマンド：後ろから抱きつく
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF31(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_RESET_T(ARG)
	TCVAR:ARG:位置関係 = 2

	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:誘惑 += 300
	SOURCE:ARG:征服 += 150

	;マスターカウンター制御
	;(ビット立ちで不可 0=尻を撫でる 1=抱き付く 2=キスする 3=胸愛撫 4=アナル愛撫 5=クリ愛撫 6=指挿入れ 7=スカートめくり)
	;=============================
	SIF GROUPMATCH(TEQUIP:MASTER:体位, 2, 5)
		CALL カウンター挿入され継続中処理(ARG)
	SETBIT TCVAR:ARG:26 ,0
	SETBIT TCVAR:ARG:26 ,1
	SETBIT TCVAR:ARG:26 ,3
	SETBIT TCVAR:ARG:26 ,4
	SETBIT TCVAR:ARG:26 ,5
	SETBIT TCVAR:ARG:26 ,6

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE31(ARG)

	SIF FIND_SELECTCCOM(31)
		RETURN 0
	SIF TEQUIP:ARG:体位
		RETURN 0
	SIF GROUPMATCH(TEQUIP:MASTER:体位, 2, 5)
		RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER31(コマンド番号, ARG, 基本値)
#DIM コマンド番号
#DIM 基本値
#DIMS カウンタータイプ

	;カウンタータイプ設定
	;=============================
	カウンタータイプ = 着衣

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + CFLAG:ARG:恥じらい - CFLAG:ARG:積極性

	;カウンタータイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:コマンド番号, 1)
	LOCAL *= COUNTER_TYPE(カウンタータイプ, ARG)

RETURN LOCAL
