;*********************************************************************************************
;カウンターコマンド：後ろから胸もみもみ
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF36(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_YUBI,5,ARG)
	TFLAG:MASTERのＢ使用中 ++

	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:誘惑 += 200
	SOURCE:ARG:挑発 += 200
	SOURCE:ARG:征服 += 200
	SOURCE:ARG:加虐 += 50
	SOURCE:PLAYER:快Ｂ += 200

	;マスターカウンター制御
	;(ビット立ちで不可 0=尻を撫でる 1=抱き付く 2=キスする 3=胸愛撫 4=アナル愛撫 5=クリ愛撫 6=指挿入れ 7=スカートめくり)
	;=============================
	SIF GROUPMATCH(TEQUIP:MASTER:体位, 2, 5)
		CALL カウンター挿入され継続中処理(ARG)

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE36(ARG)

	;男だとダメ
	SIF !(TALENT:MASTER:2 & 1)
		RETURN 0
	SIF TEQUIP:PLAYER:1 < 1
		RETURN 0
	SIF TFLAG:65
		RETURN 0
	SIF TEQUIP:MASTER:体位 == 1
		RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER36(コマンド番号, ARG, 基本値)
#DIM コマンド番号
#DIM 基本値
#DIMS カウンタータイプ

	;カウンタータイプ設定
	;=============================
	カウンタータイプ = 着衣

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + CFLAG:ARG:積極性 + CFLAG:ARG:タチ

	;カウンタータイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:コマンド番号, 1)
	LOCAL *= COUNTER_TYPE(カウンタータイプ, ARG)

RETURN LOCAL
