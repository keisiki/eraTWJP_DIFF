;*********************************************************************************************
;カウンターコマンド：タワシ洗い
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF75(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_C,3,ARG)
	TFLAG:MASTERの手使用中 ++
	
	;ソース計算および内部処理系統
	;=============================
	SIF TEQUIP:ARG:0
		CALL DATUI_BOTTOM_T(ARG,0)
	SOURCE:ARG:快Ｃ += 100
	SOURCE:ARG:性行動 += 150
	SOURCE:ARG:誘惑 += 100
	SOURCE:ARG:挑発 += 150
	SOURCE:ARG:征服 += 100
	SOURCE:ARG:強要 += 200

	;マスターカウンター制御
	;(ビット立ちで不可 0=尻を撫でる 1=抱き付く 2=キスする 3=胸愛撫 4=アナル愛撫 5=クリ愛撫 6=指挿入れ 7=スカートめくり)
	;=============================
	;CALL カウンター挿入され継続中処理(ARG)
	SETBIT TCVAR:ARG:26 ,0
	SETBIT TCVAR:ARG:26 ,1
	SETBIT TCVAR:ARG:26 ,3
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE75(ARG)

	SIF !(TALENT:ARG:2 & 1)
		RETURN 0
	;潤滑
	SIF PALAM:ARG:潤滑 < 1500
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0
	;口が空いてればクンニさせる
	SIF !TFLAG:60
		RETURN 0
	SIF TFLAG:61 > 1
		RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER75(コマンド番号, ARG, 基本値)
#DIM コマンド番号
#DIM 基本値
#DIMS カウンタータイプ

	;カウンタータイプ設定
	;=============================
	カウンタータイプ = 脱衣強要

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + ABL:ARG:Ｃ感覚

	;カウンタータイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:コマンド番号, 1)
	LOCAL *= COUNTER_TYPE(カウンタータイプ, ARG)

RETURN LOCAL
