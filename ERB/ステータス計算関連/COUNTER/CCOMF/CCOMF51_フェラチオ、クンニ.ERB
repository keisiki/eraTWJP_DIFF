;*********************************************************************************************
;カウンターコマンド：フェラチオ、クンニ
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF51(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_M,1,ARG)
	TFLAG:MASTERのＣ使用中 ++

	;ソース計算および内部処理系統
	;=============================
	IF TEQUIP:PLAYER:0 & 12
		CALL DATUI_BOTTOM(ARG,2)
	ELSEIF TEQUIP:PLAYER:0 & 2
		SIF RAND:2
			CALL DATUI_BOTTOM(ARG,1)
	ENDIF
	SOURCE:ARG:性行動 += 300
	SOURCE:ARG:誘惑 += 600
	SOURCE:ARG:挑発 += 150
	SOURCE:ARG:征服 += 250
	SOURCE:ARG:奉仕 += 800
	SOURCE:ARG:快Ｍ += 200
	SIF !(TALENT:PLAYER:2 & 2)
		SOURCE:PLAYER:快Ｃ += 500
	;射精箇所（1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 9=アナル奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
	CALL 射精対象登録(PLAYER, ARG, 4)
	;強度
	TCVAR:PLAYER:4 += 800
	EXP:ARG:口淫経験 ++
	;奉仕フラグ
	TCVAR:ARG:108 = 1
	CALL EVENT_COUNTER_POSE_69(ARG,2)

	;マスターカウンター制御
	;(ビット立ちで不可 0=尻を撫でる 1=抱き付く 2=キスする 3=胸愛撫 4=アナル愛撫 5=クリ愛撫 6=指挿入れ 7=スカートめくり)
	;=============================
	;CALL カウンター挿入され継続中処理(ARG)
	SETBIT TCVAR:ARG:26 ,1
	SETBIT TCVAR:ARG:26 ,2
	SETBIT TCVAR:ARG:26 ,3

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE51(ARG)

	SIF TFLAG:62
		RETURN 0
	SIF ABL:ARG:舌 < 1
		RETURN 0
	SIF TEQUIP:50 >= 0 || TEQUIP:51 >= 0
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER51(コマンド番号, ARG, 基本値)
#DIM コマンド番号
#DIM 基本値
#DIMS カウンタータイプ

	;カウンタータイプ設定
	;=============================
	カウンタータイプ = 脱衣愛撫

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + TALENT:ARG:汚臭耐性 + 2 * TALENT:ARG:舌使い + ABL:ARG:舌 + BASE:MASTER:勃起 / 500

	;カウンタータイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:コマンド番号, 1)
	LOCAL *= COUNTER_TYPE(カウンタータイプ, ARG)

RETURN LOCAL
