@CCOM_ABLE83(ARG)

	SIF !(TALENT:ARG:2 & 2)
		RETURN 0
	SIF !(TALENT:PLAYER:2 & 1)
		RETURN 0
	SIF TALENT:ARG:妊娠 && (CFLAG:ARG:903 <= 30 || CFLAG:ARG:903 >= 71)
		RETURN 0
	SIF CFLAG:ARG:育児人数 >= 1 && CFLAG:ARG:育児人数 <= 30
		RETURN 0
	SIF BASE:ARG:勃起 < 1000
		RETURN 0
	SIF TFLAG:63
		RETURN 0
	SIF TEQUIP:ARG:50 >= 0 || TEQUIP:ARG:51 >= 0
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0
	;貞操帯、触手下着をはいてるとダメ
	SIF EQUIP:ARG:下半身下着２ == 27 || EQUIP:ARG:下半身下着２ == 28
		RETURN 0
	SIF !TALENT:ARG:サド && PALAM:MASTER:潤滑 < PALAMLV:3
		RETURN 0

RETURN 1

