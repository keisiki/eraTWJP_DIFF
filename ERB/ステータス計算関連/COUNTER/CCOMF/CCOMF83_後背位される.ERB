	ENDIF
	SOURCE:ARG:性行動 += 300
	SOURCE:ARG:征服 += 1500
	SOURCE:ARG:誘惑 += 300
	SOURCE:ARG:加虐 += 600
	SOURCE:ARG:強要 += 600
	SOURCE:PLAYER:快Ｖ += 1000
