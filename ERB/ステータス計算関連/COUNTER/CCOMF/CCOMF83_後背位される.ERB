#DIM 基本値
#DIMS カウンタータイプ

	;カウンタータイプ設定
	;=============================
	カウンタータイプ = 性交

	;実行判定値算出式
	;=============================
	LOCAL = (基本値*7/10) + ABL:ARG:Ｃ感覚 + MAX(EXP:ARG:射精経験 / 15, 15) + ABL:ARG:サドっ気 / 2

	;カウンタータイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:コマンド番号, 1)
	LOCAL *= COUNTER_TYPE(カウンタータイプ, ARG)

RETURN LOCAL
