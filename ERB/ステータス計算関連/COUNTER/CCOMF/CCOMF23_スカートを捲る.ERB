;*********************************************************************************************
;カウンターコマンド：体を摺り寄せる
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF23(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース計算および内部処理系統
	;=============================
	CALLF ONCE("スカートめくられ",0,ARG)
	SOURCE:ARG:辱め += 300
	SOURCE:ARG:挑発 += 200

	;マスターカウンター制御
	;=============================
	;なし

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE23(ARG)

	;服装制限
	SIF !(EQUIP:PLAYER:スカート || EQUIP:PLAYER:ワンピース || EQUIP:PLAYER:着物)
	RETURN 0
	SIF TEQUIP:PLAYER:0 > 3
		RETURN 0
	SIF !EQUIP:PLAYER:0
		RETURN 0
	SIF !ONCE("スカートめくられ",1,ARG)
		RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER23(コマンド番号, ARG, 基本値)
#DIM コマンド番号
#DIM 基本値
#DIMS カウンタータイプ

	;カウンタータイプ設定
	;=============================
	カウンタータイプ = ソフト

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + CFLAG:ARG:積極性 + CFLAG:ARG:タチ - CFLAG:ARG:恥じらい

	;カウンタータイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL *= COUNTER_TYPE(カウンタータイプ, ARG)

RETURN LOCAL
