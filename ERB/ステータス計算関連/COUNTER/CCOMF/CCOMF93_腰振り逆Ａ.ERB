;*********************************************************************************************
;カウンターコマンド：腰振り逆Ａ
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF93(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_P,7,ARG)
	TFLAG:MASTERのＡ使用中 ++
	
	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:快Ｃ += 100
	SOURCE:ARG:性行動 += 300
	SOURCE:ARG:征服 += 1000
	SOURCE:PLAYER:液体 += 100
	SOURCE:ARG:加虐 += 600
	SOURCE:ARG:強要 += 600
	SOURCE:PLAYER:快Ａ += 1000
	CALL PAIN_CHECK_A_MASTER(ARG)
	;射精箇所（1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 9=アナル奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
	CALL 射精対象登録(PLAYER, ARG, 12)
	TCVAR:PLAYER:4 += 250
	;射精箇所（1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 9=アナル奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
	CALL 射精対象登録(ARG, PLAYER, 2)
	;強度
	TCVAR:ARG:4 += 1000
	CALL STAIN_アナルＰ挿入
	EXP:PLAYER:Ａ性交経験 ++
	EXP:ARG:挿入経験 ++
	TEQUIP:PLAYER:51 = ARG
	;奉仕フラグ
	TCVAR:ARG:108 = 1
	TCVAR:ARG:嗜虐フラグ = 1

	;マスターカウンター制御
	;(ビット立ちで不可 0=尻を撫でる 1=抱き付く 2=キスする 3=胸愛撫 4=アナル愛撫 5=クリ愛撫 6=指挿入れ 7=スカートめくり)
	;=============================
	;CALL カウンター挿入され継続中処理(ARG)
	IF TEQUIP:MASTER:体位 == 2
		SETBIT TCVAR:ARG:26 ,0
		SETBIT TCVAR:ARG:26 ,1
		SETBIT TCVAR:ARG:26 ,2
		SETBIT TCVAR:ARG:26 ,3
	ENDIF
	SETBIT TCVAR:ARG:26 ,4
	SETBIT TCVAR:ARG:26 ,5
	SETBIT TCVAR:ARG:26 ,6
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE93(ARG)

	SIF !(TALENT:ARG:2 & 2)
		RETURN 0
	SIF TEQUIP:PLAYER:51 != ARG
		RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER93(コマンド番号, ARG, 基本値)
#DIM コマンド番号
#DIM 基本値
#DIMS カウンタータイプ

	;カウンタータイプ設定
	;=============================
	カウンタータイプ = 責め

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + ABL:ARG:Ｃ感覚 + MAX(EXP:ARG:射精経験 / 15, 15)
	
	;カウンタータイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:コマンド番号, 1)
	LOCAL *= COUNTER_TYPE(カウンタータイプ, ARG)

RETURN LOCAL
