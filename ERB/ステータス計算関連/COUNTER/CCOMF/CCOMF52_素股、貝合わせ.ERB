;カウンターコマンド：素股、貝合わせ
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF52(ARG)

	;体勢の変更
	;=============================
	IF !(TALENT:PLAYER:2 & 2)
		SOURCE:PLAYER:快Ｃ += 500
		CALL TOUCH_SET(SET_FROM_C,2,ARG)
	ELSE
		CALL TOUCH_SET(SET_FROM_C,1,ARG)
	ENDIF
	TFLAG:MASTERのＣ使用中 ++
	

	;ソース計算および内部処理系統
	;=============================
	SIF TEQUIP:PLAYER:0
		CALL DATUI_BOTTOM(ARG,0)
	SIF TEQUIP:ARG:0
		CALL DATUI_BOTTOM_T(ARG,0)
	SOURCE:ARG:快Ｃ += 150
	SOURCE:ARG:性行動 += 250
	SOURCE:ARG:誘惑 += 700
	SOURCE:ARG:挑発 += 200
	SOURCE:ARG:奉仕 += 400
	SOURCE:ARG:強要 += 500
	;射精箇所（1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 9=アナル奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
	CALL 射精対象登録(PLAYER, ARG, 6)
	;強度
	TCVAR:PLAYER:4 += 800
	;奉仕フラグ
	TCVAR:ARG:108 = 1
	TCVAR:ARG:嗜虐フラグ = 1

	;マスターカウンター制御
	;(ビット立ちで不可 0=尻を撫でる 1=抱き付く 2=キスする 3=胸愛撫 4=アナル愛撫 5=クリ愛撫 6=指挿入れ 7=スカートめくり)
	;=============================
	;CALL カウンター挿入され継続中処理(ARG)
	;複数人がありうるのでこれは…うーん？ ちょっとよくわからない
	SETBIT TCVAR:ARG:26 ,5
	SETBIT TCVAR:ARG:26 ,6

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
