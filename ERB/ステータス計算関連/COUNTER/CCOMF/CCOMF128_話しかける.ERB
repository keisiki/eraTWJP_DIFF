;*********************************************************************************************
;カウンターコマンド：話しかける
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF128(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_RESET_T(ARG)
	
	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:歓楽 += 120
	SOURCE:ARG:情愛 += 50

	;マスターカウンター制御
	;(ビット立ちで不可 0=尻を撫でる 1=抱き付く 2=キスする 3=胸愛撫 4=アナル愛撫 5=クリ愛撫 6=指挿入れ 7=スカートめくり)
	;=============================
	SETBIT TCVAR:ARG:26 ,2
	SETBIT TCVAR:ARG:26 ,4
	SETBIT TCVAR:ARG:26 ,6
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE128(ARG)



RETURN 0

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER128(コマンド番号, ARG, 基本値)
#DIM コマンド番号
#DIM 基本値
#DIMS カウンタータイプ

	;カウンタータイプ設定
	;=============================
	カウンタータイプ = 抱きつき

	;実行判定値算出式
	;=============================
	LOCAL = (基本値*11/10) - CFLAG:ARG:恥じらい
	
	;カウンタータイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:コマンド番号, 1)
	LOCAL *= COUNTER_TYPE(カウンタータイプ, ARG)

RETURN LOCAL
