;*********************************************************************************************
;カウンターコマンド：腰振りＶ受け
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF84(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_P,6,ARG)
	CALL DATUI_FOR_INSERT(ARG)
	TFLAG:MASTERのＶ使用中 ++
	
	;ソース計算および内部処理系統
	;=============================
	[SKIPSTART]
		SOURCE:ARG:性行動 += 300
		SOURCE:ARG:征服 += 1200
		SOURCE:ARG:誘惑 += 400
		SOURCE:ARG:加虐 += 400
		SOURCE:ARG:強要 += 800
		SOURCE:PLAYER:快Ｖ += 1000
		CALL PAIN_CHECK_V_MASTER(ARG)
		LOCALS = {ARG}/
		CSTR:PLAYER:10 += LOCALS
		TCVAR:PLAYER:2 = 13
		TCVAR:PLAYER:4 += 150
		LOCALS = {PLAYER}/
		CSTR:ARG:10 += LOCALS
		TCVAR:ARG:2 = 1
		TCVAR:ARG:4 += 1000
		STAIN:ARG:2 |= STAIN:PLAYER:6
		STAIN:PLAYER:6 |= STAIN:ARG:2
		EXP:PLAYER:Ｖ性交経験 ++
		EXP:ARG:挿入経験 ++
		CALL LOST_VIRGIN(PLAYER)
		TEQUIP:PLAYER:50 = ARG
		TCVAR:ARG:嗜虐フラグ = 1
	[SKIPEND]
	CALL DATUI_FOR_INSERT(ARG)
	TCVAR:ARG:4 += 1000
	SOURCE:ARG:性行動 += 300
	SOURCE:ARG:征服 += 1200
	SOURCE:ARG:誘惑 += 400
	SOURCE:ARG:加虐 += 400
	SOURCE:ARG:強要 += 800
	SOURCE:PLAYER:快Ｖ += 1000
	;子宮口開発経験で快感追加。「挿入子宮口責め」から流用
	;全ての要求値を50から25に低下。相手の行動ランダムだと狙って上げてもらう事も難しいと思うので…
	;押し倒しからのその他挿入系で子宮口責められ実装できたら戻したい
	SELECTCASE EXP:PLAYER:子宮口開発経験
		CASE IS > 150
			SOURCE:PLAYER:快Ｖ += 200
		CASE IS > 75
			SOURCE:PLAYER:快Ｖ += 100
		CASE IS > 25
		CASEELSE
			SOURCE:PLAYER:快Ｖ /= 2
	ENDSELECT
	CALL PAIN_CHECK_V_MASTER(ARG)
	;射精箇所（1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 9=アナル奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
	CALL 射精対象登録(PLAYER, ARG, 13)
	TCVAR:PLAYER:4 += 150
	;射精箇所（1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 9=アナル奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
	CALL 射精対象登録(ARG, PLAYER, 1)
	;なんとなく射精快感1500に上げる。奥で出したいのがペニスの本能ってことで
	TCVAR:ARG:4 += 1500
	STAIN:ARG:2 |= STAIN:PLAYER:6
	STAIN:PLAYER:6 |= STAIN:ARG:2
	EXP:PLAYER:Ｖ性交経験 ++
	EXP:ARG:挿入経験 ++
	;好感度が高いと射精感度増加。とりあえず恋慕ラインの10000で200増加の打ち止め1000
	SIF CFLAG:ARG:好感度 >= 10000
		TCVAR:ARG:4 += MIN(CFLAG:ARG:好感度 / 50,1000)
	;「挿入子宮口責め」から流用。開発経験で更に射精感度増加
	;こちらも半分の値から発生
	SIF EXP:PLAYER:子宮口開発経験 >= 25
		TCVAR:ARG:4 += MIN(EXP:PLAYER:子宮口開発経験 * 5,1500)
	;同じく流用。開発経験追加と腰使いレベルで更に追加
	EXP:PLAYER:子宮口開発経験 ++
	SIF ABL:ARG:腰 >= 3
		EXP:PLAYER:子宮口開発経験 ++
	CALL LOST_VIRGIN(PLAYER)
	TEQUIP:PLAYER:50 = ARG
	TCVAR:ARG:嗜虐フラグ = 1

	;マスターカウンター制御
	;(ビット立ちで不可 0=尻を撫でる 1=抱き付く 2=キスする 3=胸愛撫 4=アナル愛撫 5=クリ愛撫 6=指挿入れ 7=スカートめくり)
	;=============================
	;CALL カウンター挿入され継続中処理(ARG)
	IF TEQUIP:MASTER:体位 == 2
		SETBIT TCVAR:ARG:26 ,0
		SETBIT TCVAR:ARG:26 ,1
		SETBIT TCVAR:ARG:26 ,2
		SETBIT TCVAR:ARG:26 ,3
	ENDIF
	SETBIT TCVAR:ARG:26 ,4
	SETBIT TCVAR:ARG:26 ,5
	SETBIT TCVAR:ARG:26 ,6
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE84(ARG)

	SIF !(TALENT:ARG:2 & 2)
		RETURN 0
	SIF !(TALENT:PLAYER:2 & 1)
		RETURN 0
	SIF TEQUIP:MASTER:50 != ARG
		RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER84(コマンド番号, ARG, 基本値)
#DIM コマンド番号
#DIM 基本値
#DIMS カウンタータイプ

	;カウンタータイプ設定
	;=============================
	カウンタータイプ = 性交

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + ABL:ARG:Ｃ感覚

	;カウンタータイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:コマンド番号, 1)
	LOCAL *= COUNTER_TYPE(カウンタータイプ, ARG)

RETURN LOCAL
