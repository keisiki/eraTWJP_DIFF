;*********************************************************************************************
;カウンターコマンド：胸愛撫
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF58(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_YUBI,5,ARG)
	TFLAG:MASTERのＢ使用中 ++
	
	;ソース計算および内部処理系統
	;=============================
	IF TEQUIP:PLAYER:1 & 2
		SIF RAND:2
			CALL DATUI_TOP(ARG,0)
	ENDIF
	SIF !(TALENT:PLAYER:2 & 1)
		SOURCE:ARG:加虐 += 100
	SOURCE:ARG:性行動 += 200
	SOURCE:ARG:辱め += 300
	SOURCE:ARG:誘惑 += 200
	SOURCE:ARG:挑発 += 100
	SOURCE:ARG:征服 += 300
	SOURCE:PLAYER:快Ｂ += 300
	EXP:ARG:手淫経験 ++

	;マスターカウンター制御
	;(ビット立ちで不可 0=尻を撫でる 1=抱き付く 2=キスする 3=胸愛撫 4=アナル愛撫 5=クリ愛撫 6=指挿入れ 7=スカートめくり)
	;=============================
	CALL カウンター挿入され継続中処理(ARG)
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE58(ARG)

	SIF TFLAG:65
		RETURN 0
	SIF ABL:ARG:指 < 1
		RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER58(コマンド番号, ARG, 基本値)
#DIM コマンド番号
#DIM 基本値
#DIMS カウンタータイプ

	;カウンタータイプ設定
	;=============================
	カウンタータイプ = 脱衣愛撫

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + 2 * TALENT:ARG:器用な指 + ABL:ARG:指

	;カウンタータイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:コマンド番号, 1)
	LOCAL *= COUNTER_TYPE(カウンタータイプ, ARG)

RETURN LOCAL
