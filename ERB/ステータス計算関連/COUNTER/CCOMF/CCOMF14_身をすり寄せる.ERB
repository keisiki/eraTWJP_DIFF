@CCOMF14(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:誘惑 += 70
	SOURCE:ARG:挑発 += 30

	;マスターカウンター制御
	;=============================
	;なし

RETURN 1

