;カウンター下半身脱衣
;引数0	参照するキャラ番号
;引数1	0=全部脱がす 
;		1=下着だけ脱がす ズボンを履いていた場合は全部脱がす 下着を履いていなかった場合も全部脱がす
;		2=上着だけ脱がす 上着を着ていない場合は全部脱がす
@DATUI_BOTTOM(ARG, ARG:1)

ARG:1 = DATUI_BOTTOM_OPTIMIZE(ARG, ARG:1)

SELECTCASE ARG:1
	;全部脱がす
	CASE 0
		TCVAR:ARG:22 = 1
	;下着だけ脱がす
	CASE 1
		TCVAR:ARG:22 = 2
	;上着だけ脱がす
	CASE 2
		TCVAR:ARG:22 = 3
ENDSELECT

@DATUI_BOTTOM_T(ARG, ARG:1)

ARG:1 = DATUI_BOTTOM_OPTIMIZE(ARG, ARG:1)

IF !TEQUIP:ARG:体位
	SELECTCASE ARG:1
		;全部脱がす
		CASE 0
			TCVAR:ARG:23 = 1
		;下着だけ脱がす
		CASE 1
			TCVAR:ARG:23 = 2
		;上着だけ脱がす
		CASE 2
			TCVAR:ARG:23 = 3
	ENDSELECT
ENDIF

;すでに脱いでいた場合の修正
;メッセージ内の分岐を減らしたい
@DATUI_BOTTOM_OPTIMIZE(ARG, ARG:1)
#FUNCTION
SELECTCASE ARG:1
	;下着だけ脱がす
	CASE 1	
		;ズボンを履いていた場合は全部脱がす
		IF TEQUIP:ARG:0 & 8
			ARG:1 = 0
		;下着を履いていない場合は全部脱がす
		ELSEIF (TEQUIP:ARG:0 & 6) == 0
			ARG:1 = 0
		ENDIF
	;上着だけ脱がす
	CASE 2
		;上着を着ていない場合は全部脱がす
		SIF (TEQUIP:ARG:0 & 9) == 0
			ARG:1 = 0
ENDSELECT
RETURNF ARG:1

