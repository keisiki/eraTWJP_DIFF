	LOCAL = RESULT
	CALL GIFTDATA_ADJECT(RESULT)
	IF RESULTS != ""
		形容詞 = LOCAL
		形容詞名称 = %RESULTS%
		形容詞センス = %RESULTS:1%
		全体価格 = 本体価格 * RESULT:1 / 100
	ENDIF
