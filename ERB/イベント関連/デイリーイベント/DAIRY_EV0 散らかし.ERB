@DAILY_CONDITION_EV0
SIF RAND:8 > 0
	RETURN -1
SIF DAY <= 30
	RETURN -1
SIF AVERAGE_YOGORE() > 800
	RETURN -1

CALL DAILY_EV0
RETURN 1

@DAILY_EV0
PRINTFORML %CALLNAME:MASTER%が寝てる間に%GET_MAPNAME(MAIN_MAP)%に妖精の大群が押し寄せてきた！
IF RAND:10 < ABL:MASTER:戦闘能力 && AT_HOME(MASTER) == 1
	PRINTFORML 妖精たちは%GET_MAPNAME(MAIN_MAP)%中を散らかしていたが
	PRINTFORML 途中で気づいた%CALLNAME:MASTER%が出てくるやいなや、一目散に逃げ出した
	FOR LOCAL,MINROOM(),MAXROOM
		IF RAND:10 <= ABL:MASTER:戦闘能力
			YOGORE:LOCAL = MIN(YOGORE:LOCAL + 1000 + RAND:4000, 6000)
		ENDIF
	NEXT
;ブラックサンダーを10個以上所持
ELSEIF ITEM:120 >= 10 && AT_HOME(MASTER) == 1
	;最大9つ。あなたの分は残しておく
	PRINTFORML %CALLNAME:MASTER%が目を覚ますと妖精たちはブラックサンダーをもぐもぐしていた
	PRINTFORML %CALLNAME:MASTER%は妖精たちの口の周りを拭いてあげると、帰るように諭した
	CALL LOST_ITEM("ブラックサンダー", RAND:9 + 1, 1)
ELSE
	PRINTFORML 妖精たちは%GET_MAPNAME(MAIN_MAP)%中を散らかしていった
	FOR LOCAL,MINROOM(),MAXROOM
		YOGORE:LOCAL = MIN(YOGORE:LOCAL + 1000 + RAND:4000, 6000)
	NEXT
ENDIF
PRINTW 