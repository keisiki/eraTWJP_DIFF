@DAILY_CONDITION_EV10
#DIM YOME
#DIM CHILDNUM
SIF RAND:20 > 0
	RETURN -1
CALL PickRandGrownChild
YOME = RESULT
CHILDNUM = RESULT:1
VARSET RESULT

SIF YOME <= 0
	RETURN -1

CALL DAILY_EV10(YOME, CHILDNUM)
RETURN 1

@DAILY_EV10(ARG, ARG:1)
;PRINTFORMW %CALLNAME:ARG%との子供の%CHILDNAME:ARG:(ARG:1)%から手紙が来た
PRINTFORMW %CHILDNAME:ARG:(ARG:1)%から手紙が来た
LOCAL:1 = 0
FOR LOCAL,1,CHARANUM
	SIF CFLAG:LOCAL:好感度 > CFLAG:ARG:好感度
		LOCAL:1 ++
NEXT

TARGET = ARG
;口上専用の手紙イベント分岐（なければ通常イベント）,存在しないならRESULT = 2
IF !RAND:2
	CALL KOJO_MESSAGE_SEND("CHILD", 0, TARGET, ARG:1, 0, "DAILY_口上手紙")
	SIF RESULT == 2
		GOTO TEGAMI
ELSE
	$TEGAMI
	IF LOCAL:1 >= 3
		CALL KOJO_MESSAGE_SEND("CHILD", 0, TARGET, ARG:1, 0, "DAILY_共通手紙", "すけこまし")
		;存在しないならRESULT = 2（以下同様）
		IF RESULT == 2
			PRINTFORMW もっと%CALLNAME:ARG%を大事にしろと書いてあった……
		ENDIF
	ELSEIF !RAND:5
		CALL KOJO_MESSAGE_SEND("CHILD", 0, TARGET, ARG:1, 0, "DAILY_共通手紙", "金の無心")
		IF RESULT == 2
			PRINTFORMW 金の無心だ……
		ENDIF
		PRINTFORMW %CALLNAME:MASTER%は\@ MONEY > 30000? ￥30000# 有り金全部\@送ることにした
		MONEY = MAX(MONEY - 30000,0)
	ELSE
		CALL KOJO_MESSAGE_SEND("CHILD", 0, TARGET, ARG:1, 0, "DAILY_共通手紙", "仕送り")
		IF RESULT == 2
			PRINTFORMW %CALLNAME:ARG%と%CALLNAME:MASTER%を気遣う言葉と仕送り\\10000が入っていた
		ENDIF
		MONEY += 10000
	ENDIF
ENDIF
TARGET = TARGET:1
RETURN 1