@DAILY_CONDITION_EV24

SIF RAND:15 > 0
	RETURN -1
SIF DAY:3 >= 30
	RETURN -1

CALL DAILY_EV24
RETURN 1

@DAILY_EV24
PRINTFORMW 季節異変だ！
FOR LOCAL,1,CHARANUM
	IF TALENT:LOCAL:妖精
		CALL BUFF_BASE(LOCAL,BASE_体力,300)
		CALL BUFF_BASE(LOCAL,BASE_気力,300)
	ENDIF
NEXT
GatheringSeason = DAY:2 + 2
SIF GatheringSeason > 4
	GatheringSeason -= 4
PRINTFORMW 妖精たちの体力と気力が上がり、さらに%GET_MONTH(GatheringSeason)%の素材が採集できるようになった！