@ボッシュート
;パンツ没収、収集

;SIF !CFLAG:TARGET:パンツ2 && STRLENS(CSTR:MASTER:12)
SIF !CFLAG:TARGET:パンツ2 && FLAG:パンツ輸送
	CALL パンツ没収(TARGET)
;料理持ってたら食われる
IF  DISH_NAME != ""
	SIF DISH_ASSI == TARGET
		RETURN 0
	SIF CFLAG:TARGET:同行
		RETURN 0
	LOCAL:1 = 0
	IF DISH_TYPE == "デザート"
		SIF TIME_PROGRESS(TCVAR:デザート空腹時刻)
			LOCAL:1 = 1
	ELSE
		SIF TIME_PROGRESS(TCVAR:TARGET:空腹時刻)
			LOCAL:1 = 1
	ENDIF
	IF LOCAL:1 && RAND:5 == 0 && SELECTCOM != 413
		PRINTL 
		PRINTFORMW %CALLNAME:TARGET%は%CALLNAME:MASTER%の持っていた＜%EX_DISH_NAME%＞を見つけた
		PRINTFORMW ！
		PRINTFORMW ・・・！！！
		CALL KOJO_MESSAGE_SEND("EVENT",14,TARGET,-1,-1)
		;抑制フラグ入ってたら抜ける
		SIF TCVAR:TARGET:盗み食い抑制
			RETURN
		IF DISH_DRG
			CALL MESSAGE_EAT_DISH_DRG(TARGET)
			WAIT
		ELSE
			PRINTFORMW 作った料理を食べられてしまった
		ENDIF
		CALL 食事(TARGET)
		CALL RESET_DISH
	ENDIF
ENDIF

@パンツ没収(ARG)
;パンツ没収、収集
LOCAL:1 = RAND:2
SIF FLAG:願掛け内容 == 202
	LOCAL:1 = RAND:3
IF  !LOCAL:1 && CFLAG:ARG:ノーパン != 2
	PRINTL  
	PRINTFORMW %CALLNAME:ARG%に見とがめられ身体検査をされた…
	PRINTFORMW 
	PRINTFORMW 
	PRINTFORMW 
	IF TALENT:MASTER:ぱんつ密輸 && RAND:10
		PRINTFORMW しかし%CALLNAME:MASTER%は巧みに%CALLNAME:ARG%の目を欺いた
	ELSE
		PRINTFORMW くすねたパンティを没収された
		SIF !CFLAG:弱み握り
			PRINTFORMW %CALLNAME:ARG%に弱みを握られた
			CFLAG:ARG:弱み握り += 5
		CALL KOJO_MESSAGE_SEND("EVENT",9,ARG,0,1)
		;CSTR:MASTER:12 =
		VARSET PANTS_TEMP
		FLAG:パンツ輸送 = 0
	ENDIF
ENDIF
