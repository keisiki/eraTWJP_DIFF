@READ_MASTER_DIARY
#DIMS 表示内容,100
#DIMS 内容,2
#DIM PAGE

SPLIT SAVESTR:1,"//",表示内容
FOR LOCAL,0,100
	SIF 表示内容:LOCAL != ""
		PAGE ++
NEXT

PRINTFORML ---| %CALLNAME:MASTER%の日記 |-------------------------------------------------------------------------------------
FOR LOCAL,0,100
	IF 表示内容:LOCAL != ""
		SPLIT 表示内容:LOCAL,"_L_",内容
		PRINTL
		PRINTFORML PAGE.{1+LOCAL}
		PRINTL
		HTML_PRINT @"%内容:0%<br><br>%内容:1%<br>"
		PRINTL
		IF PAGE > 1
			PRINTL --------------------------------------------------------------------------------------------------------------------
			CALL ASK_YN("次のページ ","日記を閉じる")
			IF RESULT
				BREAK
			ENDIF
			CLEARLINE 3
		ENDIF
	ENDIF
NEXT
PRINTFORMW 日記はここで終わっている… 


@SHARE_MASTER_DIARY
#DIMS 表示内容,100
#DIMS 内容,2
#DIM PAGE
#DIM READPAGE

SPLIT SAVESTR:1,"//",表示内容
FOR LOCAL,0,100
	SIF 表示内容:LOCAL != ""
		PAGE ++
NEXT

SIF PAGE >= 1
	READPAGE = RAND:PAGE

IF PAGE == 0
	CALL SPTALK,TARGET,,,@"「何も書かれてないじゃない……」//%CALLNAME:TARGET%は日記帳を閉じた。"
	RETURN 0
ENDIF

PRINTFORML %CALLNAME:TARGET%はページを適当にめくって読み始めた…
PRINTL
CALL PRINT_FACE,TARGET

IF 表示内容:READPAGE != ""
	SPLIT 表示内容:READPAGE,"_L_",内容
	PRINTL
	PRINTFORML PAGE.{1+READPAGE}
	PRINTL
	HTML_PRINT @"%内容:0%<br><br>%内容:1%<br>"
	PRINTL
	PRINTW
ENDIF
;===========================================================================
;日記に書き込む処理
;指定されたCHARAのDIARY番号(PAGENUM)を最後の空白ページにセット
;何ページに書いたかを返り値にする
;===========================================================================
@CHARA_DIARY_PAGESETTING(CHARA, PAGENUM)
#DIM CHARA
#DIM PAGENUM
FOR LOCAL, 1, MAX_DIARY_PAGE:CHARA:0 + 1
	IF !PAGESET:CHARA:LOCAL
		PAGESET:CHARA:LOCAL = PAGENUM
		RETURN LOCAL
	ENDIF
NEXT





