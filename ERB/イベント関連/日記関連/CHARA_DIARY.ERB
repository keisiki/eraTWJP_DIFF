@CHARA_DIARY_COM(C_ID)
#DIM DCOUNT
#DIM PAGENUM
#DIM C_ID
#DIM CLOSE
RESULT = 0
PAGENUM = 0
CLOSE = 0
;コマンドで呼び出されたとき
CALL KOJO_MESSAGE_SEND("DIARY", 0, C_ID, 0, 0, "EXIST")
IF !RESULT
	PRINTFORMW まだ何も書かれていないようだ…
	RETURN
ENDIF

FOR DCOUNT, 1, MAX_DIARY_PAGE:C_ID:0 + 1
	SIF GROUPMATCH(DIARY:C_ID:DCOUNT, 1, 3)
		PAGENUM ++
NEXT
IF PAGENUM == 0
	PRINTFORMW まだ何も書かれていないようだ…
	RETURN
ENDIF
FOR DCOUNT, 1, MAX_DIARY_PAGE:C_ID:0 + 1
	SIF !PAGESET:C_ID:DCOUNT
		BREAK
	CALL KOJO_MESSAGE_SEND("DIARY", 0, C_ID, PAGESET:C_ID:DCOUNT, DCOUNT, "TEXT", "コマンド")
	DRAWLINE
	;未読(3)だったら既読(1)にする
	SIF DIARY:C_ID:(PAGESET:C_ID:DCOUNT) == 3
		DIARY:C_ID:(PAGESET:C_ID:DCOUNT) = 1
	IF PAGENUM > 1
		CALL ASK_M("次のページ ", 1, " 5ページ先", DCOUNT + 5 <= PAGENUM, "10ページ先", DCOUNT + 10 <= PAGENUM, "前のページ", DCOUNT > 1, "日記を閉じる", 1)
		IF RESULT == 0
			CONTINUE
		ELSEIF RESULT == 1
			DCOUNT += 4
		ELSEIF RESULT == 2
			DCOUNT += 9
		ELSEIF RESULT == 3
			DCOUNT += -2
		ELSEIF RESULT == 4
			CLOSE = 1
			BREAK
		ENDIF
	ENDIF
NEXT
IF !CLOSE
	PRINTFORMW 日記はここで終わっている… 
ELSE
	PRINTFORMW %CALLNAME:MASTER%は読むのを止めた
ENDIF

@CHARA_DIARY_AFTERTRAIN
#DIM CHARA
#DIM DCOUNT
#DIM PAGECOUNT

;毎日終わるとき
FOR CHARA, 1, CHARANUM 
	CALL KOJO_MESSAGE_SEND("DIARY", 0, CHARA, 0, 0, "EXIST")
	SIF !RESULT
		CONTINUE
	;PRINTFORML %CALLNAME:CHARA%の日記を確認
	TARGET = CHARA
	;日記の書き込み判定
	CALL KOJO_MESSAGE_SEND("DIARY", 0, CHARA, 0, 0, "BEFORE_CHECK")
	FOR DCOUNT, 1, MAX_DIARY_PAGE:CHARA:0 + 1
		;最初にヒットした未読(2)を表示
		IF DIARY:CHARA:DCOUNT == 2
			;ページセットしてから口上色を付けて表示
			CALL CHARA_DIARY_PAGESETTING(CHARA, DCOUNT)
			PAGECOUNT = RESULT
			CALL KOJO_MESSAGE_SEND("DIARY", 0, CHARA, PAGESET:CHARA:PAGECOUNT, PAGECOUNT, "TEXT", "デイリー")
			PRINTL
			;既読フラグをつける
			DIARY:(NO:CHARA):DCOUNT = 1
			DRAWLINE
			BREAK
		;未読でない場合スキップ
		ELSE
			CONTINUE
		ENDIF
	NEXT
	;日記は毎日一回だけ。呼び出されなかった日記IDのフラグをリセットする
	;恋慕とか告白とか大事なイベントは順番を前にしたほうがいいです。
	FOR DCOUNT, 1, MAX_DIARY_PAGE:CHARA:0 + 1
		IF DIARY:CHARA:DCOUNT == 2
			DIARY:CHARA:DCOUNT = 0
		ENDIF
	NEXT
	CALL KOJO_MESSAGE_SEND("DIARY", 0, CHARA, 0, 0, "AFTER_CHECK")
NEXT


@MASTER_DAIRY_INPUT
#DIMS 内容行,40
#DIM 行数
VARSET 内容行

行数 = 0
$INPUT_LOOP_DAIRY

PRINTL
SETCOLOR C_YELLOW
PRINTFORML ・ %GET_MONTH()% {DAY:3,2,RIGHT}日 （%GET_DAY()%） %時刻表示(TIME)%
FOR LOCAL,0,行数
	PRINTFORML 　　%内容行:LOCAL%
NEXT
RESETCOLOR
PRINTL
PRINTBUTTON "[98] - 前の行を削除する", "98"
PRINT 　　
PRINTBUTTON "[99] - 日記を仕上げる", "99"
PRINTL

INPUTS

IF RESULTS == "98"
	IF 行数 > 0
		内容行:行数 = 
		行数 -= 1
		CLEARLINE 1
	ENDIF
	
	CLEARLINE (行数+5)
	GOTO INPUT_LOOP_DAIRY
ELSEIF RESULTS == "99"
	LOCALS = 
	FOR LOCAL,0,行数-1
		LOCALS += @"%内容行:LOCAL%<br>"
	NEXT
	SIF 行数>0
		LOCALS += @"%内容行:(行数-1)%"
	
	RESULTS = %LOCALS%
	RETURN
ELSEIF 行数 == 39
	SETCOLOR C_YELLOW
	PRINTFORMW ライン数はすでに上限に
	RESETCOLOR
	SIF RESULTS != ""
		CLEARLINE 1
	CLEARLINE (行数+5)
	GOTO INPUT_LOOP_DAIRY
ELSE
	内容行:行数 = %RESULTS%
	
	SIF RESULTS != ""
		CLEARLINE 1
	CLEARLINE (行数+4)
	行数 += 1
	GOTO INPUT_LOOP_DAIRY
ENDIF


