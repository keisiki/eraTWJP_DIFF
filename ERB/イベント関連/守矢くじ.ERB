		CALL ASK_M("返金",1,@"%NAME:31%とのデート権",!CFLAG:31:出禁,@"%NAME:32%とのデート権",!CFLAG:32:出禁,@"%NAME:33%とのデート権",!CFLAG:33:出禁,"いらない",1)
