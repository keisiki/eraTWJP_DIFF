	CASE 3
		LOCALS +=  "妖精メイド"
	;人間の里（連れ込み宿以外）（基本人間、希に妖怪
	CASE 2
		IF RAND:5
			LOCALS += "人間"
		ELSE
			LOCALS += "妖怪"
		ENDIF
	;命蓮寺（お地蔵通り、枝垂れ柳の下、命蓮寺境内、命蓮寺本堂）（人間と妖怪
	CASE 1
		IF !RAND:2
			LOCALS += "人間"
		ELSE
			LOCALS += "妖怪"
		ENDIF
ENDSELECT
LOCALS += "の少女"

RETURNF LOCALS


