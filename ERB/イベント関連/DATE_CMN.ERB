	;モブの種類
	;地底（街道、温泉、地霊殿）(街道と温泉では鬼も出てくる
	CASE 9
		IF ARG != 960 && !RAND:3
			LOCALS += "鬼"
		ELSE
			LOCALS += "妖怪"
		ENDIF
	;妖怪の山山頂（守矢神社本殿、境内、九天の滝）（守矢神社境内のみ希に人間
	CASE 8
		IF !RAND:5 && ARG == 840
			LOCALS += "人間"
		ELSE
			LOCALS += "妖怪"
		ENDIF
	;妖怪の山山麓（無し）
	;三途の川～冥界（中有の道）(死神、妖怪、希に人間
	CASE 6
		IF !RAND:5
			LOCALS += "人間"
		ELSEIF !RAND:3
			LOCALS += "妖怪"
		ELSE
			LOCALS += "死神"
		ENDIF
	;魔法の森（無し）
