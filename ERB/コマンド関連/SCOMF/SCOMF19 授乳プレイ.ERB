;-------------------------------------------------
;授乳プレイ
;愛撫系派生コマンド
;-------------------------------------------------
@SCOM19
;-------------------------------------------------
;実行決定
;-------------------------------------------------
STR:0 = 授乳プレイ

;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = TARGET

LOCALS = {TARGET}/
CSTR:PLAYER:10 += LOCALS
;TCVAR:2 射精箇所フラグ（-1=コンドーム 1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 9=アナル奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
TCVAR:PLAYER:2 = 3

;強度
TCVAR:PLAYER:4 = 1000
;奉仕快楽
TCVAR:108 = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	;キャラ主体なので時止め中は実行不可能

ELSE
	;手淫によるマスターへのソース追加
	IF ABL:指 < 4 || FLAG:70
		SOURCE:PLAYER:快Ｃ += 80
	ELSE
		SOURCE:PLAYER:快Ｃ += ABL:指 * 20
	ENDIF
	
	IF TALENT:TARGET:バストサイズ >= 1
		;基本的に乳首吸いと一緒
		DOWNBASE:体力 += 10
		DOWNBASE:気力 += 50
	
		SOURCE:快Ｂ = 20
		SOURCE:情愛 = 100
		SOURCE:露出 = 20
		SOURCE:屈従 = 200
		SOURCE:逸脱 = 100
		SOURCE:反感 = 100
	ELSE
		;胸がちっちゃいと疲れるよ！ 頭しっかり抱き寄せないといけないからね！
		DOWNBASE:体力 += 20
		DOWNBASE:気力 += 80
	
		SOURCE:快Ｂ = 20
		SOURCE:情愛 = 100
		SOURCE:露出 = 20
		SOURCE:屈従 = 200
		SOURCE:逸脱 = 200
		SOURCE:反感 = 100
	ENDIF
		
	;手淫と同じ汚れデータの計算
	SOURCE:不潔 = Y*10 + 60
	
	;乳首吸いよりキャラ依存のため、情愛を増やす
	SOURCE:快Ｂ += ABL:PLAYER:舌 * 20
	SOURCE:情愛 += ABL:PLAYER:舌 * 10

	SIF ABL:親密 >= 7
		SOURCE:情愛 += (ABL:親密 * 20)

	;あなたのTALENT:舌使いをみる
	SIF TALENT:PLAYER:舌使い
		TIMES SOURCE:快Ｂ , 1.50

	;あなたのTALENT:猫舌をみる
	SIF TALENT:PLAYER:猫舌
		TIMES SOURCE:快Ｂ , 0.75
	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;抑圧、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:自己愛 < 0 || TALENT:抵抗
		SOURCE:鬱屈 += 200
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;キャラの指⇔あなたのＰの汚れが移動
STAIN:1 |= STAIN:PLAYER:2
STAIN:PLAYER:2 |= STAIN:1

;奴隷のＢ⇔調教者の口の汚れが移動
STAIN:5 |= STAIN:PLAYER:0
STAIN:PLAYER:0 |= STAIN:5
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;手淫経験
SIF !FLAG:70 && !CFLAG:イタズラ
	EXP:手淫経験 ++

;愛情経験
SIF TALENT:恋慕 && !ASSIPLAY
	EXP:愛情経験 += 1
	
;母性持ちなら愛情経験にボーナス
SIF TALENT:母性 && !ASSIPLAY
	EXP:愛情経験 += 1

;同性愛　レズなら戻り値1ゲイなら戻り値2
IF FLAG:70 == 1
IF HETEROSEX(TARGET,PLAYER)
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 5
ENDIF
ELSE
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 5
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 5
ENDIF
ENDIF

;あなたが猫舌持ちの場合は、あなたに嗜虐快楽経験を追加
SIF TALENT:PLAYER:猫舌
	EXP:PLAYER:嗜虐快楽経験 += 1
EXP:PLAYER:口淫経験 ++
RETURN 1

;-------------------------------------------------
;実行可能判定 難度はパイズリフェラよりちょい低いくらい
;-------------------------------------------------
@CAN_SCOM19(ARG)
SKIPDISP ARG
PRINTL 授乳プレイ
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
IF !FLAG:70

	A = 0
	S = 0

	;すべての命令に共通の要素を考慮
	;(従順が高いと命令に従いやすいなど)
	CALL COM_ORDER

	;ABL:欲望
	IF ABL:欲望
		SIF S
			PRINT  + 
		A += ABL:欲望 * 1
		PRINT 欲望
		PRINTV 'LV,ABL:欲望,'(,ABL:欲望 * 1,')
		S = 1
	ENDIF
	;ABL:奉仕精神
	IF ABL:奉仕精神
		SIF S
			PRINT  + 
		A += ABL:奉仕精神 * 4
		PRINT 奉仕精神
		PRINTV 'LV,ABL:奉仕精神,'(,ABL:奉仕精神 * 4,')
		S = 1
	ENDIF
	;ABL:精液中毒
	IF ABL:精液中毒
		SIF S
			PRINT  + 
		A += ABL:精液中毒 * 3
		PRINT 精液中毒
		PRINTV 'LV,ABL:精液中毒,'(,ABL:精液中毒 * 3,')
		S = 1
	ENDIF

	IF MARK:快楽刻印
		SIF S
			PRINT  + 
		A += MARK:快楽刻印 * 1
		PRINT 快楽刻印
		PRINTV 'LV,MARK:快楽刻印,'(,MARK:快楽刻印 * 1,')
		S = 1
	ENDIF
	;PALAM:欲情
	IF GETPALAMLV(PALAM:欲情,5)
		SIF S
			PRINT  + 
		A += GETPALAMLV(PALAM:欲情,5) * 1
		PRINT 欲情
		PRINTV 'LV,GETPALAMLV(PALAM:欲情,5),'(,GETPALAMLV(PALAM:欲情,5) * 1,')
		S = 1
	ENDIF
	;恥じらい
	IF TALENT:羞恥心 > 0
		PRINT  - 
		A -= 3
		PRINT 恥じらい
		PRINTV '(,3,')
		S = 1
	ENDIF
	;汚臭鈍感
	IF TALENT:汚臭耐性 > 0
		SIF S
			PRINT  + 
		A += 1
		PRINT 汚臭鈍感
		PRINTV '(,1,')
		S = 1
	ENDIF
	;汚臭敏感
	IF TALENT:汚臭耐性 < 0
		PRINT  - 
		A -= 3
		PRINT 汚臭敏感
		PRINTV '(,3,')
		S = 1
	ENDIF
	;献身的
	IF TALENT:献身的
		SIF S
			PRINT  + 
		A += 6
		PRINT 献身的
		PRINTV '(,6,')
		S = 1
	ENDIF
	;快感の否定（淫乱、娼婦で無効）
	IF TALENT:快感応答 < 0 && !TALENT:淫乱
		PRINT  - 
		A -= 3
		PRINT 快感の否定
		PRINTV '(,3,')
		S = 1
	ENDIF
	;男嫌い（恋慕、親愛で無効）
	IF OTOKOGIRAI(TARGET)
		PRINT  - 
		A -= 12
		PRINT 男嫌い
		PRINTV '(,12,')
		S = 1
	ENDIF
	;恋慕
	IF TALENT:恋慕 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 5
		PRINT 恋慕
		PRINTV '(,5,')
		S = 5
	ENDIF
	;親愛
	IF TALENT:恋慕 > 1 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 5
		PRINT 親愛
		PRINTV '(,5,')
		S = 5
	ENDIF

	;調教者がふたなり
	IF (TALENT:PLAYER:2 & 3) == 3
		SIF S
			PRINT  + 
		A += 8
		PRINT ふたなり
		PRINTV '(,8,')
		S = 1
	ENDIF

	Y = 0
	;愛液の汚れ
	SIF STAIN:PLAYER:2 & 1
		Y += 1
	;精液の汚れ
	SIF STAIN:PLAYER:2 & 4
		Y += 3
	;アナルの汚れ
	SIF STAIN:PLAYER:2 & 8
		Y += 7
	SIF STAIN:PLAYER:2 & 16
		Y += 15

	Y = Y * (2 - TALENT:汚臭耐性) / 2

	;汚れあり
	IF Y
		PRINT  - 
		A -= Y
		PRINT 汚れあり
		;汚臭鈍感
		IF TALENT:汚臭耐性 > 0
			PRINT 、汚臭鈍感
		ELSEIF TALENT:汚臭耐性 < 0
			PRINT 、汚臭敏感
		ENDIF
		PRINTV '(,Y,')
		S = 1
	ENDIF

	;合計を表示(30以上で実行)
	PRINT  = 
	PRINTV A

	V = 32
	SIF A < V
		PRINT  < 
	SIF A == V
		PRINT  = 
	SIF A > V
		PRINT  > 
	PRINT 実行値
	PRINTV V

	WAIT
	SKIPDISP 0
	;実行できない
	SIF A < V
		RETURN 0
ENDIF
RETURN 1

