;-------------------------------------------------
;丸太・製材の売却価格を設定する関数
;何回か見る場合もあるので、その日の中では固定値出力
;ARG:0		FLAG:丸太種類
;Type		売却価格  省略時は丸太
;-------------------------------------------------
@WOOD_VALUE(ARG:0, Type)
#FUNCTION
#DIM Species
#DIM 売値ベース
#DIM 口八丁補正
#DIMS Type

Species = ARG % 100

IF Type == "製材"
	売値ベース =WoodValue_Plank:Species
ELSE
	売値ベース = WoodValue_Log:Species
ENDIF

;日替わり変動
売値ベース += FLAG:日替わりイベント * 2

;口八丁補正  日付で乱数を固定
RANDOMIZE DAY:0
口八丁補正 = RAND:(1 + ABL:MASTER:話術技能 * 5 + ABL:MASTER:教養)

SELECTCASE 口八丁補正
	CASE 0 TO 10

	CASE 11 TO 20
		TIMES 売値ベース, 1.05
	CASE 21 TO 30
		TIMES 売値ベース, 1.07
	CASEELSE
		TIMES 売値ベース, 1.10
ENDSELECT

;丸太の時のみ、巨木・大木補正
IF Type != "製材"
	IF ARG > 200
		売値ベース *= 5
	ELSEIF ARG > 100
		売値ベース *= 3
	ENDIF
ENDIF
RETURNF 売値ベース


;-------------------------------------------------
;FLAG:丸太種類から、巨木・大木を無視して木材種番号を取り出す関数
;ARG…FLAG:丸太種類
;-------------------------------------------------
@WOOD_NUM(ARG)
#FUNCTION

RETURNF ARG % 100

;-------------------------------------------------
;製材コスト、製材数を割り出す関数
;複数回選べるので、固定値を出す
;ARG	FLAG:丸太種類
;Type	価格ないし製材数
;-------------------------------------------------
@LUMBERING(ARG, Craft, Type)
#FUNCTION
#DIM 費用ベース
#DIMS Craft
#DIMS Type

IF Type == "QTY"
	RETURNF 1 + (ARG / 100) * 2
ENDIF

費用ベース = WOOD_VALUE(ARG)

SELECTCASE Craft
	CASE "材木商"
		RETURNF 費用ベース / 2
	CASE "製材所"
		RETURNF 費用ベース / 4
ENDSELECT

RETURNF 0

@COM623_SELL(候補個数)
#DIM 候補個数
SETCOLOR 0x777777
PRINTFORML 　何個売りますか？(1～{候補個数}の個数を入力、0で戻る)
RESETCOLOR
PRINTL 
PRINT 　
PRINTBUTTON "[0] やめる", 0
PRINT     
PRINTBUTTON "[1] 1個", 1
PRINT     
IF 候補個数 >= 5
	PRINTBUTTON "[5] 5個", 5
	PRINT     
ENDIF
IF 候補個数 >= 10
	PRINTBUTTON "[10] 10個", 10
	PRINT    
ENDIF
INPUT
SIF RESULT > 候補個数
	RETURN 0
SIF RESULT <= 0
	RETURN 0
RETURN RESULT