@SANSAKU_UNIQUEPLACE(ARG)
#DIM 現在地点
#DIM 移動先地点

現在地点 = (CFLAG:MASTER:現在位置 - (CFLAG:MASTER:デート中 * 100)) / 10
移動先地点 = (ARG - (CFLAG:MASTER:デート中 * 100)) / 10

SELECTCASE ARG
	CASE 50
		IF ABL:MASTER:教養 < 1
			PRINTFORMW 未熟な%CALLNAME:MASTER%には見つけることができない…
			RETURN -1
		ENDIF
	CASE 彼岸, 白玉楼庭, 白玉楼, 天界, 地獄, 畜生界, 霊長園
		IF ABL:MASTER:教養 < 1 && ABL:(FLAG:デート相手):教養 < 1
			PRINTFORMW もう少し教養を付けないと危険だ
			CLEARLINE 2
			RETURN -1
		ENDIF
	CASE 月の都, 綿月亭, 玉兎の街, 桃林～砂浜, 静かの海
		IF ABL:MASTER:教養 < 2 && ABL:(FLAG:デート相手):教養 < 2
			PRINTFORMW もう少し教養を付けないと危険だ
			CLEARLINE 2
			RETURN -1
		ENDIF
	;正邪ハウスの前
	CASE 740
		;本人は入れる;恋慕があれば入れてもらえる;前世で正邪が恋慕or恋人なら場所は分かる
		IF ARG:1 == [[正邪]] || TALENT:[[正邪]]:恋慕 || GETBIT (CFLAG:[[正邪]]:引き継ぎ, 0) || GETBIT (CFLAG:[[正邪]]:引き継ぎ, 1)
		ELSE
			PRINTFORMW どこにあるかわからない…
			RETURN -1
		ENDIF
	;華扇ハウス
	CASE 750
		;華扇が恋慕;本人は入れる
		IF TALENT:[[華扇]]:恋慕 || ARG:1 == [[華扇]]
		;デート相手が天子か自分が天子
		ELSEIF FLAG:デート相手 == [[天子]] || ARG:1 == [[天子]]
		;教養が足りないとたどり着けない
		ELSEIF ABL:(ARG:1):教養 < 3
			PRINTFORMW さっきから屋敷との距離が一向に縮まらない……
			PRINTFORMW 同じところをぐるぐる回っているかのようだ
			RETURN -1
		;それ以外は戦闘力3以上必要
		ELSEIF ABL:(ARG:1):戦闘能力 < 3 && !FLAG:70
			PRINTFORMW 庭にうずくまっていた剣呑な虎が、%CALLNAME:MASTER%の姿を認めて唸り声を上げた
			PRINTFORMW 近づかない方がよさそうだ
			RETURN -1
		ENDIF
	CASE 480
		IF !FLAG:70 && !永遠亭侵入許可()
			PRINTL 奥へ入ろうとしたが、入り口で兎たちに止められた
			IF 現在地点 == 5
				RETURN -1
			ELSE
				RETURN 5
			ENDIF
		ENDIF
		SIF FLAG:70
			PRINTFORMW 無断で入った
	CASE 連れ込み宿,ラブホ
		IF !FLAG:デート相手
			PRINTW 一人で行っても仕方ない
			CLEARLINE 2
			RETURN -1
		ENDIF
		IF MONEY < 3000
			PRINTW お金が足りない
			CLEARLINE 2
			RETURN -1
		ENDIF
		SIF !GETBIT(CFLAG:(FLAG:デート相手):既成事実 , 1)
			CALL 抱き寄せ((FLAG:デート相手))
		IF TCVAR:(FLAG:デート相手):抱き寄せ初回 >= 6 && !TCVAR:(FLAG:デート相手):泥酔 && !CFLAG:(FLAG:デート相手):負け犬
				PRINTFORMW %CALLNAME:(FLAG:デート相手)%に入るのを拒否されてしまった
				IF TCVAR:(FLAG:デート相手):抱き寄せ初回 == 6
					PRINTFORMW しかし%CALLNAME:(FLAG:デート相手)%はまんざらでもなさそうだ
					CLEARLINE 1
				ENDIF
			CLEARLINE 2
			RETURN -1
		ELSE
			PRINTL \3000かかります。宜しいですか？
			CALL ASK_YN
			IF RESULT == 0
				MONEY -= 3000
				IF TCVAR:(FLAG:デート相手):泥酔
					PRINTFORMW %CALLNAME:(FLAG:デート相手)%が朦朧としているのをいいことに、%CALLNAME:MASTER%は彼女を%STR:(6000 + ARG / 10)%へと連れ込んだ
				ELSEIF CFLAG:(FLAG:デート相手):負け犬
					PRINTFORMW %CALLNAME:MASTER%は嫌がる%CALLNAME:(FLAG:デート相手)%を%STR:(6000 + ARG / 10)%に引っ張り込んだ
				ELSE
					PRINTFORMW %CALLNAME:MASTER%は%CALLNAME:(FLAG:デート相手)%と%STR:(6000 + ARG / 10)%に入った
				ENDIF
				RETURN 移動先地点
			ELSE
				CFLAG:(FLAG:デート相手):うふふ = 0
				CFLAG:MASTER:うふふ = 0
				RETURN -1
			ENDIF
			CFLAG:(FLAG:デート相手):うふふ = 0
			CFLAG:MASTER:うふふ = 0
		ENDIF
ENDSELECT

RETURN 移動先地点
