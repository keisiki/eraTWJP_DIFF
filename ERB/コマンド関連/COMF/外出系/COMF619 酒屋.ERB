PRINTL [ 0] - 戻る
$INPUT_LOOP
INPUT

IF RESULT == 1
	CALL 酒購入
	GOTO INPUT_LOOP2
ELSEIF RESULT == 2
	CALL 酒卸売
	GOTO INPUT_LOOP2
ELSEIF RESULT != 0
	GOTO INPUT_LOOP
