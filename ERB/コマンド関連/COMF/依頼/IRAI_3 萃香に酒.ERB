;--------------------------------------------
;基本条件いろいろ(4)
;--------------------------------------------
@IRAI_SETTING_3

IRAI_SETTING_DEADLINE:3 = 5
IRAI_SETTING_TARGET:3 = 10
IRAI_SETTING_CLIENT:3 = 10

IRAI_SETTING_COMMANDNAME:3 = 清酒を渡す


;--------------------------------------------
;依頼発生時のメッセージ
;--------------------------------------------
@IRAI_INITIALMESSAGE_3
PRINTFORML 「清酒が飲みたくなったから持ってきてくれ」
PRINTFORML 依頼内容：清酒を納入する
PRINTFORML 報酬　　：\\5000

;--------------------------------------------
;依頼実行時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_CARRYOUT_3
ITEM:清酒 --

;--------------------------------------------
;依頼失敗時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_FAILED_3
;システムメッセージつき好感度変化
;最後の引数だけ好感度が変化
CALL CHANGE_CFLAG(2,TARGET,-50)

;システムメッセージつき信頼度変化
;最後の引数だけ信頼度が変化
CALL CHANGE_CFLAG(4,TARGET,-20)

;機嫌を悪化させる処理を入れてもいい
TALENT:(TARGET):機嫌 = LIMIT(TALENT:(TARGET):機嫌 -1, -1,1)
;--------------------------------------------
;依頼達成時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_SUCCESS_3
SOURCE:TARGET:歓楽 += 2000
MONEY += 5000
;システムメッセージつき好感度変化
;最後の引数だけ好感度が変化
CALL CHANGE_CFLAG(2,TARGET,30)

;システムメッセージつき信頼度変化
;最後の引数だけ信頼度が変化
CALL CHANGE_CFLAG(4,TARGET,20)

;機嫌をよくする処理を入れてもいい
TALENT:TARGET:機嫌 = LIMIT(TALENT:機嫌 + 1, -1, 1)
;--------------------------------------------
;依頼実行条件
;--------------------------------------------
@IRAI_ACTABLE_3
SIF SHIRAHU(TARGET) != 1
	RETURN 0
SIF !ITEM:清酒
	RETURN 0
RETURN 1
;--------------------------------------------
;依頼発生条件
;--------------------------------------------
@IRAI_HAPPEN_3
SIF !RAND:5
	RETURN 1

;--------------------------------------------
;依頼消滅条件
;--------------------------------------------
@IRAI_VANISH_3
SIF !RAND:3
	RETURN 1
[SKIPEND]
