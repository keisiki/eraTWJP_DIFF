@固有依頼139(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE ARG % 1000
;ID101：精液を分けて
CASE 101
	SELECTCASE O_DATA
	CASE "依頼名"
		CALLF MAKE_STR(V_NAME, "精液を分けて")
	CASE "依頼内容表示"
		CALLF MAKE_STR(V_NAME, "濃厚な精液を提供する")
	CASE "依頼報酬表示"
		CALLF MAKE_STR(V_NAME, @"%金額表示(50000)%")
	CASE "依頼実行コマンド名"
		CALLF MAKE_STR(V_NAME, "精液を採取する")
		
	CASE "依頼内容"
		CALLF MAKE_INT(V_NAME, MAKE_IRAI_DATA(0, "作業"))
	CASE "依頼サブ"
	CASE "依頼期限"
	;発生時ではなく受託時に確定します
		CALLF MAKE_INT(V_NAME, 30)
	CASE "依頼発生率"
	;これは他の固有依頼との相対確率なんで10％ではありません
		IF TCVAR:発情 || CFLAG:TARGET:溜まってる度 >= 750
			CALLF MAKE_INT(V_NAME, 100)
		ELSE
			CALLF MAKE_INT(V_NAME, 20)
		ENDIF
	CASE "依頼発生条件"
	SIF EXP:139:精液経験 > 0 && (TALENT:MASTER:性別 == 2 || TALENT:MASTER:性別 == 3)
		CALLF MAKE_INT(V_NAME, 1)
	CASE "依頼受託可能条件"
	;受託可能は@COM_ABLE366も確認のこと
	;ここを参照するのは依頼人をTARGETにしてる時なので素通しでよし
		CALLF MAKE_INT(V_NAME, 1)
	CASE "依頼実行可能条件"
	;実行可能は@COM_ABLE367も確認のこと
		IF FLAG:70
		ELSE
			;SIF TALENT:MASTER:濃厚精液
			CALLF MAKE_INT(V_NAME, 1)
		ENDIF
	;成功/失敗処理はCARRYOUTで直接書く
	;SOURCEやITEM入手など、内容が複雑なので
	CASE "依頼消滅条件"
	;30％で消失
		SIF RAND:100 < 30
			CALLF MAKE_INT(V_NAME, 1)
	ENDSELECT
ENDSELECT



;固有依頼の設定用
;この関数は実行/成功/失敗時の
;報酬とペナルティと地の文のみを扱います
;各キャラのメッセージは別所にて
@IRAI_固有139(CHARA, IRAI_ID, SCENE)
#DIM  CHARA
#DIM  IRAI_ID
#DIMS SCENE
#DIM  CLIENT_ID
CLIENT_ID = IRAI_ID_TO_CLIENT(IRAI_ID)
SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
	
CASE "精液を分けて"
	SELECTCASE SCENE
	CASE "依頼条件表示"
	;何か専用の表示情報を設けたい時用
	;受託済みの依頼表示で使用されます
	;
	;PRINT系だけでSOURCEとかは入れちゃダメ、WAITも無しで
	;ここ以外の表示項目は
	;PRINTFORML 　　　　　：
	;となっているのでスペースを揃えたほうが見栄えが良いです
	
	CASE "依頼実行時"
	;このCASEに限り、RESULTが意味を持ちます
	;依頼実行時のRESULTにはIRAI_CONST_RESULT()を使用してください
	;可能な引数は"キャンセル", "実行して成功", "実行して失敗", "実行して未解決"です
	;独自処理を仕込みたい時は"実行して未解決"で先延ばしするなりしてください
		DOWNBASE:MASTER:気力 += 50
		DOWNBASE:MASTER:精力 += 250
		IF TALENT:139:処女 == 1
			IF EXP:口淫経験 > 0
				PRINTFORMW %CALLNAME:MASTER%は典に口で抜いてもらったときのことを想いだしながらペニスを扱いた…
			ELSE
				PRINTFORMW %CALLNAME:MASTER%は典の裸を想像しながらペニスを扱いた…
			ENDIF
		ELSE
			PRINTFORMW %CALLNAME:MASTER%は典との性交を思い出しながらペニスを扱いた…
		ENDIF
		TIME += 10
			IF TALENT:MASTER:濃厚精液
				PRINTFORML 典から預かった試験管に、糊のような濃い精液をたっぷりと注ぎ込んだ…
				PRINTFORML 量といい粘度といい文句のつけようがないだろう
				PRINTW 
				RETURN IRAI_CONST_RESULT("実行して成功")
			ELSE
				PRINTFORML 典から預かった試験管に、精液をたっぷりと注ぎ込んだ…
				PRINTFORML しかし、典から依頼された精液は濃厚なものだ
				PRINTFORML これでは納得してくれないだろう
				PRINTL 
				PRINTFORML ※日を改めるなどして[濃厚精液]状態になってから臨みましょう
				PRINTW 
				RETURN IRAI_CONST_RESULT("実行して未解決")
			ENDIF
			SOURCE:MASTER:達成 = 500
	CASE "依頼成功時"
	;成功報告時の報酬など
		CALL KIGEN_CHANGE(TARGET, 100, 1)
		SOURCE:TARGET:歓楽 = 1000
		SOURCE:TARGET:征服 = 500
		SOURCE:TARGET:達成 = 500
		SOURCE:TARGET:欲情 = 3000
		SOURCE:MASTER:欲情 = 1000
		;システムメッセージつき好感度変化
		;最後の引数だけ好感度が変化
		CALL CHANGE_CFLAG(2, TARGET, 40)
		;システムメッセージつき信頼度変化
		;最後の引数だけ信頼度が変化
		CALL CHANGE_CFLAG(4, TARGET, 25)
		CALL GET_MONEY_YEN(50000, 2)
	CASE "依頼失敗時"
	;失敗報告時の処理
		;システムメッセージつき好感度変化
		;最後の引数だけ好感度が変化
		CALL CHANGE_CFLAG(2, TARGET, -20)
		;システムメッセージつき信頼度変化
		;最後の引数だけ信頼度が変化
		CALL CHANGE_CFLAG(4, TARGET, -10)
	ENDSELECT
ENDSELECT
