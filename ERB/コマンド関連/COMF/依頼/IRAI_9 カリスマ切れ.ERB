[SKIPSTART]
;--------------------------------------------
;基本条件いろいろ
;--------------------------------------------
@IRAI_SETTING_9

IRAI_SETTING_DEADLINE:9 = 3
IRAI_SETTING_TARGET:9 = 23
IRAI_SETTING_CLIENT:9 = 23

IRAI_SETTING_COMMANDNAME:9 = カリスマをあげる


;--------------------------------------------
;依頼発生時のメッセージ
;--------------------------------------------
@IRAI_INITIALMESSAGE_9
PRINTFORML 「ちょっとカリスマを切らしてしまって……100カリスマほど融通してもらえませんか？」
PRINTFORML 依頼内容：100カリスマ渡す
PRINTFORML 報酬　　：\\20000
;--------------------------------------------
;依頼実行時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_CARRYOUT_9
SOURCE:歓楽 = 3000
MONEY:2 -= 100

;--------------------------------------------
;依頼失敗時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_FAILED_9
PRINTFORML 「すいません、もういいです」
CALL CHANGE_CFLAG(2,TARGET,-10)
CALL CHANGE_CFLAG(4,TARGET,-10)
;--------------------------------------------
;依頼達成時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_SUCCESS_9
PRINTFORML 「ありがとうございました」
MONEY += 20000

;システムメッセージつき好感度変化
;最後の引数だけ好感度が変化
CALL CHANGE_CFLAG(2,TARGET,20)

;システムメッセージつき信頼度変化
;最後の引数だけ信頼度が変化
CALL CHANGE_CFLAG(4,TARGET,10)
;--------------------------------------------
;依頼実行条件
;--------------------------------------------
@IRAI_ACTABLE_9
SIF SHIRAHU(TARGET) == 1 && MONEY:2 >= 100
	RETURN 1

;--------------------------------------------
;依頼発生条件
;--------------------------------------------
@IRAI_HAPPEN_9
SIF !RAND:15
	RETURN 1

;--------------------------------------------
;依頼消滅条件
;--------------------------------------------
@IRAI_VANISH_9
SIF !RAND:5
	RETURN 1
[SKIPEND]
