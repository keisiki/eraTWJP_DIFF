[SKIPSTART]
;--------------------------------------------
;基本条件いろいろ(6)
;--------------------------------------------
@IRAI_SETTING_5

IRAI_SETTING_DEADLINE:5 = 0
IRAI_SETTING_TARGET:5 = 1
IRAI_SETTING_CLIENT:5 = 1

IRAI_SETTING_COMMANDNAME:5 = お酒を渡す


;--------------------------------------------
;依頼発生時のメッセージ
;--------------------------------------------
@IRAI_INITIALMESSAGE_5
PRINTFORML 「宴会用のお酒の追加を頼めるかしら」
PRINTFORML 依頼内容：酒の納入(10本)
PRINTFORML 報酬　　：宴会規模アップ

;--------------------------------------------
;依頼実行時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_CARRYOUT_5
PRINTL どれを渡そうか？
CALL 酒一覧表示(10)
IF RESULT >= 51 && RESULT <= 53
	PRINTFORMW %CALLNAME:MASTER%は%CALLNAME:TARGET%にお酒を渡した
	ITEM:RESULT -= 10
	FLAG:宴会差し入れ = RESULT
ELSE
	RETURN -1
ENDIF

;--------------------------------------------
;依頼失敗時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_FAILED_5
;システムメッセージつき好感度変化
;最後の引数だけ好感度が変化
CALL CHANGE_CFLAG(2,TARGET,-30)

;システムメッセージつき信頼度変化
;最後の引数だけ信頼度が変化
CALL CHANGE_CFLAG(4,TARGET,-10)
;--------------------------------------------
;依頼達成時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_SUCCESS_5
PRINTFORML 「助かったわ」
;システムメッセージつき好感度変化
;最後の引数だけ好感度が変化
CALL CHANGE_CFLAG(2,TARGET,50)

;システムメッセージつき信頼度変化
;最後の引数だけ信頼度が変化
CALL CHANGE_CFLAG(4,TARGET,20)

;--------------------------------------------
;依頼実行条件
;--------------------------------------------
@IRAI_ACTABLE_5
SIF SHIRAHU(TARGET) == 1 && MAX(ITEM:51,ITEM:52,ITEM:53) > 9
	RETURN 1

;--------------------------------------------
;依頼発生条件
;--------------------------------------------
@IRAI_HAPPEN_5
SIF FLAG:宴会開催フラグ == 1
	RETURN 1

;--------------------------------------------
;依頼消滅条件
;--------------------------------------------
@IRAI_VANISH_5
SIF FLAG:宴会開催フラグ == 1 && !DAY % 7
	RETURN 1
[SKIPEND]
