;-------------------------------------------------
;乳首責め
;自慰系コマンド、レベル1
;-------------------------------------------------
@COM707
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:PLAYER:体力 += 5
DOWNBASE:PLAYER:気力 += 30

SOURCE:PLAYER:快Ｂ = 80
SOURCE:PLAYER:情愛 = 30
SOURCE:PLAYER:苦痛 = 10
SOURCE:PLAYER:露出 = 10
SOURCE:PLAYER:不潔 = 10
SOURCE:PLAYER:反感 = 10

SIF TALENT:PLAYER:器用な指
	SOURCE:PLAYER:快Ｂ += 15
IF ABL:PLAYER:マゾっ気 > 2
	SOURCE:PLAYER:快Ｂ += ABL:PLAYER:マゾっ気 * 5
	SOURCE:PLAYER:情愛 += ABL:PLAYER:マゾっ気 * 5
ENDIF
SOURCE:PLAYER:快Ｂ += ABL:PLAYER:指 * 12
;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:PLAYER:自己愛 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:鬱屈 += 10
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＢ⇔調教者の指の汚れが移動
STAIN:PLAYER:Ｂ |= STAIN:PLAYER:手
STAIN:PLAYER:手 |= STAIN:PLAYER:Ｂ
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
SIF !FLAG:時間停止
	TIME += 5
;自慰経験
CFLAG:PLAYER:オナニーした ++
EXP:PLAYER:手淫経験 ++
RETURN 1

