;-------------------------------------------------
;子供とふれあう
;-------------------------------------------------
@COM337
#DIM CHARA
#DIM CHILDNUM

;自立後
IF TFLAG:描写中の子供 > 1000
	CHARA = TFLAG:描写中の子供 % 1000
	CHILDNUM = TFLAG:描写中の子供 / 1000
;育児中
ELSE
	CHARA = TFLAG:描写中の子供
	CHILDNUM = TALENT:CHARA:育児中
	;同室の場合のみソースを獲得する
	IF TARGET == CHARA
		;ソースの量はかなり適当
		IF CHILD_LOVE:CHARA:CHILDNUM < 0
			SOURCE:反感 = 300
		ELSEIF CHILD_LOVE:CHARA:CHILDNUM < 200
			SOURCE:歓楽 = 200 + (ABL:親密 * 20)
			SOURCE:情愛 = 100 + (ABL:親密 * 10)
		ELSEIF CHILD_LOVE:CHARA:CHILDNUM < 300
			SOURCE:歓楽 = 400 + (ABL:親密 * 30)
			SOURCE:情愛 = 200 + (ABL:親密 * 20)
		ELSEIF CHILD_LOVE:CHARA:CHILDNUM < 400
			SOURCE:歓楽 = 800 + (ABL:親密 * 60)
			SOURCE:情愛 = 500 + (ABL:親密 * 40)
		ELSE
			SOURCE:歓楽 = 1600 + (ABL:親密 * 90)
			SOURCE:情愛 = 1000 + (ABL:親密 * 60)
		ENDIF
	ENDIF
ENDIF
IF CHILD_LOVE:CHARA:CHILDNUM < 0
	TFLAG:193 = -1
ELSEIF CHILD_LOVE:CHARA:CHILDNUM < 200
	TFLAG:193 = 1
ELSEIF CHILD_LOVE:CHARA:CHILDNUM < 300
	TFLAG:193 = 2
ELSEIF CHILD_LOVE:CHARA:CHILDNUM < 400
	TFLAG:193 = 3
ELSE
	TFLAG:193 = 4
ENDIF

;口上用にTARGETを変える,TFLAG:194にはCHILDNUMを入れる
;口上側で行動による分岐をしたい場合はCHILD_ACT:[[キャラ番号]]:(TFLAG:194)に行動内容が文字列で入ってます
;TFLAG:193は愛情度による分岐
TFLAG:現在のTARGET = TARGET
TARGET = CHARA
TFLAG:194 = CHILDNUM

SELECTCASE CHILD_ACT:CHARA:CHILDNUM
CASE "食事"
	;一緒に食事
	IF CFLAG:CHARA:出産経過日 >= CHILD_離乳
		TCVAR:MASTER:空腹時刻 = 1440 * DAY + TIME + 60
		CALL RECOVER(MASTER, 30, "体力", "食事による回復")
		CALL RECOVER(MASTER, 30, "気力", "食事による回復")
	ENDIF
CASE "料理"
	SIF !RAND:2
		EXP:MASTER:料理経験 ++
CASE "読書"
	SIF !RAND:2
		EXP:MASTER:学習経験 ++
CASE "歌唱"
	;演奏できる
	SIF GROUPMATCH(1, MUSIC_ABLE(30), MUSIC_ABLE(31), MUSIC_ABLE(32), MUSIC_ABLE(33), MUSIC_ABLE(34), MUSIC_ABLE(35))
		EXP:MASTER:演奏経験 ++
CASE "掃除"
	EXP:MASTER:清掃経験 ++
CASE "勉強"
	EXP:MASTER:学習経験 ++
ENDSELECT

;子供の愛情度アップ（メッセージでなんちゃって表示する）
SIF TFLAG:描写中の子供 < 1000
	CHILD_LOVE:CHARA:CHILDNUM ++

TIME += 10
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE337
;子供とふれあう実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(337)
	RETURN RESULT
SIF FLAG:時間停止
	RETURN 0
;TARGETではなくMASTER
SIF CFLAG:MASTER:添い寝中
	RETURN 0
SIF !TFLAG:描写中の子供
	RETURN 0
;育児中のキャラと同室の場合はTARGETにしないと実行できない（描写はされる）
IF TFLAG:描写中の子供 < 1000
	IF CFLAG:MASTER:現在位置 == CFLAG:(TFLAG:描写中の子供):現在位置 
		SIF TARGET != TFLAG:描写中の子供
			RETURN 0
	ENDIF
ENDIF
;気力0
SIF BASE:MASTER:気力 <= 0
	RETURN 0
RETURN 1

