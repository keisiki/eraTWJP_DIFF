SIF FLAG:70
	RETURN 0
;妄想中は不可
SIF TFLAG:妄想中 == 1
	RETURN 0
;セフレ契約実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(352)
	RETURN RESULT
;二人きりでないとだめ
;SIF GET_TARGETNUM() > 1
;	RETURN 0
;馴れ合い強度2
SIF TCVAR:MASTER:馴れ合い < 2
	RETURN 0
