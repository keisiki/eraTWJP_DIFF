SIF TALENT:セフレ || TALENT:愛欲 || TALENT:恋慕
	RETURN 0
;恋人の場合はだめ
SIF TALENT:恋人
	RETURN 0
;SIF GETBIT(TFLAG:一日一回, 12)
;	RETURN 0
SIF TALENT:TARGET:行きずり
	RETURN 0
;睡眠中
SIF CFLAG:睡眠
	RETURN 0
;添い寝中
SIF CFLAG:添い寝中
	RETURN 0
