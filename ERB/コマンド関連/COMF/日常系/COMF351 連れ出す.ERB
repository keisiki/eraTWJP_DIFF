@COM351
#DIM NUM_TARGET
NUM_TARGET = GET_TARGETNUM()
;連れ出す
VARSET LOCAL
SIF !NUM_TARGET
	RETURN -1
FOR LOCAL, 1, NUM_TARGET + 1
	IF COM_351_CONDITION(TARGET:LOCAL) >= 2
		LOCAL:97 += 1
	ENDIF
NEXT
IF NUM_TARGET == 1 || LOCAL:97 == 1
	IF COM_351_CONDITION(TARGET) < 1
		RETURN -1
	ELSEIF COM_351_CONDITION(TARGET) < 2
		DRAWLINE
		PRINTFORMW %CALLNAME:(TARGET)%は取り込み中です。
		RETURN -1
	ENDIF
	IF CFLAG:TARGET:同行
		CFLAG:TARGET:同行 = 0
		CFLAG:MASTER:同行 = 0
		PRINTFORMW 同行解除します。
	ELSE
		CFLAG:TARGET:同行 = 60
		;雨＋外＋傘or相手が傘の時は相合い傘
		SIF TIME:5 > 3 && TIME:5 < 14 && OUTROOF(CFLAG:MASTER:現在位置) && (ITEM:36 || EQUIP:TARGET:アクセサリ == 6)
			TEQUIP:TARGET:201 = 1
		PRINTFORMW %CALLNAME:TARGET%を連れ出します
		CFLAG:MASTER:同行 = 60
	ENDIF
	TIME += 1
	SIF CFLAG:TARGET:同行
		CALL KOJO_MESSAGE_SEND("DIRECT",351,TARGET,-1,-1)
	RETURN 1
ENDIF


PRINTL 誰を誘いますか？
FOR LOCAL, 1, NUM_TARGET + 1
	SIF COM_351_CONDITION(TARGET:LOCAL) <= 0
		CONTINUE
	PRINTFORML [{LOCAL}] - %CALLNAME:(TARGET:LOCAL)%
NEXT
PRINTL [98] - まとめて連れ出す
PRINTL [99] - 同行解除
PRINTL [100] - やめる
DO
	INPUT
	SELECTCASE RESULT
	CASE 100
		RETURN -1
	CASE 99
		FOR LOCAL, 1, NUM_TARGET + 1
			SIF CFLAG:(TARGET:LOCAL):同行 
				CFLAG:(TARGET:LOCAL):同行 =  0
			;相合い傘もなくなる
			TEQUIP:(TARGET:LOCAL):201 = 0
		NEXT
		CFLAG:MASTER:同行 = 0
		RETURN 1
	CASE 98
		FOR LOCAL, 1, NUM_TARGET + 1
			IF COM_351_CONDITION(TARGET:LOCAL) >= 3
				CFLAG:(TARGET:LOCAL):同行 = 60
				LOCAL:98 += 1
			ENDIF
		NEXT
		PRINTFORMW {LOCAL:98}人まとめて連れ出します
		CFLAG:MASTER:同行 = 60
		TIME += LOCAL:98
		SIF CFLAG:TARGET:同行
			CALL KOJO_MESSAGE_SEND("DIRECT",351,TARGET,-1,-1)
		RETURN 1
	CASEELSE
		IF !INRANGE(RESULT, 1, NUM_TARGET)
			CLEARLINE 1
			CONTINUE
		ELSEIF COM_351_CONDITION(TARGET:RESULT) < 1
			CLEARLINE 1
			CONTINUE
		ELSEIF COM_351_CONDITION(TARGET:RESULT) < 2
			PRINTFORMW %CALLNAME:(TARGET:RESULT)%は取り込み中です。
			CLEARLINE 2
			CONTINUE
		ENDIF
		BREAK
	ENDSELECT
LOOP 1

CFLAG:(TARGET:RESULT):同行 = 60
;雨＋外＋傘or相手が傘の時は相合い傘
SIF TIME:5 > 3 && TIME:5 < 14 && OUTROOF(CFLAG:MASTER:現在位置) && (ITEM:36 || EQUIP:TARGET:アクセサリ == 6)
	TEQUIP:TARGET:201 = 1
PRINTFORMW %CALLNAME:(TARGET:RESULT)%を連れ出します
CFLAG:MASTER:同行 = 60
TIME += 1
;SOURCEまでを回さないのでここで口上を表示させる
SIF CFLAG:TARGET:同行
	CALL KOJO_MESSAGE_SEND("DIRECT",351,TARGET,-1,-1)

RETURN 1

