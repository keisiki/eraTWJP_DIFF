@COM_ABLE446
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(446)
	RETURN RESULT
;調合できる場所でない
SIF !PHARMACY_SPOT(CFLAG:MASTER:現在位置)
	RETURN 0
;調合用品一式を持っておらず、特殊調合スポットでない
SIF ITEM:(29) == 0 && PHARMACY_SPOT(CFLAG:MASTER:現在位置) == 1
	RETURN 0
;睡眠中
SIF CFLAG:MASTER:睡眠
	RETURN 0
SIF CFLAG:うふふ
	RETURN 0
;気力０
SIF BASE:MASTER:気力 <= 0
	RETURN 0
;時間停止中
SIF FLAG:70
	RETURN 0
