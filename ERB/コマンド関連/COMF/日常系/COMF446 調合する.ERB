;-----------------------------------------------------------
;調合可能スポットかどうかを判定する関数
;ARG		現在位置
;RETURN		0 不可	1 可	2 調合セットなくても可（特殊調合ｽﾎﾟｯﾄ）
;COMMENT	基本は初期位置、それっぽい場所があるときはそちらも。
;			場所を追加した場合、CASEを変更の事
;-----------------------------------------------------------
@PHARMACY_SPOT(ARG)
#FUNCTION

SIF ARG == CFLAG:MASTER:初期位置
	RETURNF 1
;特殊調合スポット、メインマップでの判定
SELECTCASE MAIN_MAP
	CASE 0
		;博霊神社：無限遺跡・研究室
		SIF GROUPMATCH(ARG, 49)
			RETURNF 2
	CASE 1
		;命蓮寺：調薬室
		SIF GROUPMATCH(ARG, 132)
			RETURNF 2
	CASE 4
		;永遠亭：調剤室
		SIF GROUPMATCH(ARG, 405)
			RETURNF 2
	CASE 5
		;魔法の森：魔理沙宅・研究部屋、人形の館・研究室
		SIF GROUPMATCH(ARG, 513, 524)
			RETURNF 2
	CASE 6
		;冥界：袿姫の部屋
		SIF GROUPMATCH(ARG, 644)
			RETURNF 2
	CASE 7
		;妖怪の山山麓：河童のアジト
		SIF GROUPMATCH(ARG, 704)
			RETURNF 2
ENDSELECT

RETURNF 0


@CAN_PHARMA(R_ID, AMT = 1)
#FUNCTION
#DIM R_ID
#DIM AMT
#DIM INGREDIENT

SIF RECIPE_DATA(R_ID) == -1
	RETURNF 0
SIF RECIPE_DATA(R_ID, 7) && !TFLAG:水汲み
	RETURNF 0

;特定キャラの親密依存アイテムを弾く
SELECTCASE R_ID / 10
	CASE 513 
		SIF ABL:[[阿求]]:親密 < 5
			RETURNF 0
	CASE 514, 515
		SIF ABL:[[永琳]]:親密 < 5
			RETURNF 0
	CASE 516, 517
		SIF ABL:[[メディスン]]:親密 < 5
			RETURNF 0
	CASE 850
		SIF ABL:[[魔理沙]]:親密 < 5
			RETURNF 0
	CASE 851
		SIF ABL:[[チルノ]]:親密 < 5
			RETURNF 0
	CASE 852
		SIF ABL:[[布都]]:親密 < 5
			RETURNF 0
	CASE 853
		SIF ABL:[[紫]]:親密 < 5
			RETURNF 0
	CASE 854
		SIF ABL:[[パチュリー]]:親密 < 5
			RETURNF 0
	CASE 855
		SIF ABL:[[成美]]:親密 < 5
			RETURNF 0
ENDSELECT

FOR LOCAL,0,6
	INGREDIENT = RECIPE_DATA(R_ID, LOCAL)
	SIF !INGREDIENT
		BREAK
	SIF ITEM:INGREDIENT < AMT
		RETURNF 0
NEXT
SIF ITEM:RECIPE_DATA(R_ID) < AMT * RECIPE_DATA(R_ID, 8)
	RETURNF 0

RETURNF AMT * RECIPE_DATA(R_ID, 6)


;-----------------------------------------------------------
;調合物選択リストを描画する
;  MASTERの調合知識か教養のレベルに応じてリストが解放される仕組み
;  体質変化薬の類は【禁断の知識】がないと解放されない
;-----------------------------------------------------------
@PHARMACY_LIST
#DIMS アイテム名

PRINTL 何を調合しますか？
PRINTL ■調合Lv1===========================================================================================================
LOCAL:1 = 999
FOR LOCAL:0 ,0, 1000
	SELECTCASE PHARMACY_RANK(LOCAL:0)
		CASE 1
			CALL PHARMACY_LIST_BUTTON(LOCAL:0, LOCAL:1)
			LOCAL:1 = RESULT
	ENDSELECT
NEXT
PRINTL 
PRINTL ■調合Lv2===========================================================================================================
;教養あるいは調合知識、薬学教本でリスト解放
IF TALENT:MASTER:調合Lv >= 1 || ITEM:薬学教本
	LOCAL:1 = 999
	FOR LOCAL:0 ,0, 1000
		SELECTCASE PHARMACY_RANK(LOCAL:0)
			CASE 2
				CALL PHARMACY_LIST_BUTTON(LOCAL:0, LOCAL:1)
				LOCAL:1 = RESULT
		ENDSELECT
	NEXT
ELSE
	SETCOLOR 0x666666
	PRINTFORM 　　？？？？
	RESETCOLOR
ENDIF
PRINTL 
;あとは教養レベルと調合知識レベルを変えて繰り返し、うまく整理したい（薬学教本での解禁はLv3まで）
PRINTL ■調合Lv3===========================================================================================================
IF TALENT:MASTER:調合Lv >= 2 || ITEM:薬学教本
	LOCAL:1 = 999
	FOR LOCAL:0 ,0, 1000
		SELECTCASE PHARMACY_RANK(LOCAL:0)
			CASE 3
				CALL PHARMACY_LIST_BUTTON(LOCAL:0, LOCAL:1)
				LOCAL:1 = RESULT
		ENDSELECT
	NEXT
ELSE
	SETCOLOR 0x666666
	PRINTFORM 　　？？？？
	RESETCOLOR
ENDIF
PRINTL 
PRINTL ■調合Lv4===========================================================================================================
IF TALENT:MASTER:調合Lv >= 3
	LOCAL:1 = 999
	FOR LOCAL:0 ,0, 1000
		SELECTCASE PHARMACY_RANK(LOCAL:0)
			CASE 4
				;体質変化薬は【禁断の知識】がない場合はスキップ
				SIF PHARMA_VOLATILE(LOCAL:0) && !TALENT:MASTER:禁断の知識
					CONTINUE
				CALL PHARMACY_LIST_BUTTON(LOCAL:0, LOCAL:1)
				LOCAL:1 = RESULT
		ENDSELECT
	NEXT
ELSE
	SETCOLOR 0x666666
	PRINTFORM 　　？？？？
	RESETCOLOR
ENDIF
PRINTL 
PRINTL ■調合Lv5===========================================================================================================
IF TALENT:MASTER:調合Lv >= 4
	LOCAL:1 = 999
	FOR LOCAL:0 ,0, 1000
		SELECTCASE PHARMACY_RANK(LOCAL:0)
			CASE 5
				SIF PHARMA_VOLATILE(LOCAL:0) && !TALENT:MASTER:禁断の知識
					CONTINUE
				CALL PHARMACY_LIST_BUTTON(LOCAL:0, LOCAL:1)
				LOCAL:1 = RESULT
		ENDSELECT
	NEXT
ELSE
	SETCOLOR 0x666666
	PRINTFORM 　　？？？？
	RESETCOLOR
ENDIF
PRINTL 
