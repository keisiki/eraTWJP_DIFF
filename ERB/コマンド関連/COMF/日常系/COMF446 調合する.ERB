;調合する
@COM446
#DIM 調合物
#DIM 調合候補
#DIM 選択レシピ
#DIM 調合件数
#DIM 調合パワー
#DIM 調合パワーM
#DIM 調合パワーT
#DIM CHARA
#DIM R_ID
#DIM PRODUCTION
#DIM 体力消費
#DIM 気力消費

調合物 = 0
調合候補 = 0
選択レシピ = 0
調合件数 = 0
調合パワーM = 0
調合パワーT = 0

;参加者判定
IF TARGET && ABL:TARGET:親密 >= 5 && SHIRAHU(TARGET) && CFLAG:TARGET:行動 != 5
	CHARA = TARGET
ELSE
	CHARA = 0
ENDIF

;調合パワー設定 調合知識と教養、薬学教本を持っていると加算
調合パワーM = TALENT:MASTER:調合Lv * 15 + ABL:MASTER:教養 * 5 + TFLAG:幸運補正 * 5 + TALENT:MASTER:調合知識 * 30
SIF ITEM:薬学教本
	調合パワーM += 10
SIF CHARA
	調合パワーT = TALENT:CHARA:調合Lv * 15 + ABL:CHARA:教養 * 5 + TALENT:CHARA:調合知識 * 30
;参加者で最もパワーが高いものを基準に、1/2したもう１人のパワーを足す
IF 調合パワーM >= 調合パワーT
	調合パワー = 調合パワーM + (調合パワーT / 2)
ELSE
	調合パワー = 調合パワーT + (調合パワーM / 2)
ENDIF

;①調合物選択リスト画面描画、調合候補を選択
CALL PHARMACY_LIST

$INPUT_LOOP01
INPUT
SIF RESULT == 1000
	RETURN -1
調合候補 = RESULT

;②調合物選択リスト内の能力によるレシピ解放・調合可能かを判定
SELECTCASE PHARMACY_RANK(調合候補)
	CASE 0
		CLEARLINE 1
		GOTO INPUT_LOOP01
	CASE 1
		;無条件解放
	CASE 2, 3
		IF TALENT:MASTER:調合Lv < (PHARMACY_RANK(調合候補) - 1) && ITEM:109 == 0
			CLEARLINE 1
			GOTO INPUT_LOOP01
		ENDIF
	CASE 4, 5
		IF TALENT:MASTER:調合Lv < (PHARMACY_RANK(調合候補) - 1)
			CLEARLINE 1
			GOTO INPUT_LOOP01
		ENDIF
ENDSELECT
;体質変化薬は【禁断の知識】所有時のみ可
IF PHARMA_VOLATILE(調合候補) && !TALENT:MASTER:禁断の知識
	CLEARLINE 1
	GOTO INPUT_LOOP01
ENDIF

;③調合レシピリストを出力
DRAWLINE
;★ここにアイテムリストを出す？

;アイテム解説.ERBから説明文を表記
SETCOLOR 0x00FF00
PRINTFORML ●%ITEMNAME:調合候補%　（所持数：{ITEM:調合候補}）
PRINTFORML 　%ITEM_EXPLANATION(調合候補)% 
RESETCOLOR
PRINTL 
PRINTL どのレシピで調合しますか？
DRAWLINE
CALL PHARMACY_RECIPELIST(調合候補)

;④レシピ番号を入力、実行可否を判定
$INPUT_LOOP02
INPUT
SIF RESULT == 0
	RESTART
選択レシピ = RESULT
R_ID = 調合候補 * 10 + 選択レシピ
IF !CAN_PHARMA(R_ID)
	CLEARLINE 1
	GOTO INPUT_LOOP02
ENDIF

;⑤調合回数を入力、可否を判定（70番台の体質変化薬の類は１個限定、他は最大10回まで）
IF PHARMA_VOLATILE(調合候補)
	PRINTFORML %ITEMNAME:調合候補%は１個ずつしか調合できません
ELSE
	PRINTFORML このレシピで%ITEMNAME:調合候補%を何回分調合しますか？(1～の個数を入力、0で戻る)
ENDIF
;そのレシピで消費する素材の現在の所持数を表記
PRINT 　消費する素材の所持数：

CALL PHARMACY_CONSUME(R_ID, 0, 1)

PRINTBUTTON "[0] やめる", 0
PRINT     
PRINTBUTTON "[1] 1回", 1
PRINT     
IF !PHARMA_VOLATILE(調合候補)
	IF CAN_PHARMA(R_ID, 5)
		PRINTBUTTON "[5] 5回", 5
		PRINT   
	ENDIF
	IF CAN_PHARMA(R_ID, 10)
		PRINTBUTTON "[10] 10回", 10
		PRINT   
	ENDIF
ENDIF

$INPUT_LOOP03
INPUT
調合件数 = RESULT
SIF RESULT == 0
	RESTART
PRODUCTION = CAN_PHARMA(R_ID, 調合件数)
IF PRODUCTION && 調合件数 <= 10
	CLEARLINE 1
	;体質変化薬は入力回数に関わらず強制的に１回に絞る
	SIF PHARMA_VOLATILE(調合候補)
		調合件数 = 1
	PRINTFORML %ITEMNAME:調合候補%を{選択レシピ}番目のレシピで{PRODUCTION}つ調合する計画を立てた
	;調合時前後での消費アイテムの数を表記
	PRINT 　消費する素材：
	CALL PHARMACY_CONSUME(R_ID, 調合件数, 1)
	;調合成功時アイテム個数が99を超える場合は警告を出す
	IF ITEM:(調合候補) + PRODUCTION > 99
		PRINTFORML 　この計画では%ITEMNAME:調合候補%を保管しきれず、{PRODUCTION - 99}個ほど無駄が出てしまう
	ELSE
		PRINTFORML 　調合成功時の%ITEMNAME:調合候補%の個数：（{ITEM:調合候補}→{ITEM:調合候補 + PRODUCTION}）
	ENDIF
	IF PHARMACY_RANK(調合候補) == 1
		PRINTL まず失敗はしないだろう…
	ELSEIF PHARMACY_RANK(調合候補) >= 2
		SELECTCASE (調合パワー - (PHARMACY_RANK(調合候補) * 20))
			CASE IS <= -100
				PRINTL 計画は立てたものの、未知の要素だらけだ…まず失敗するだろう
			CASE -99 TO -50
				PRINTL この調合を成功させるのは極めて難しいと言わざるを得ない…
			CASE -49 TO -30
				PRINTL この調合が失敗する確率は高いだろう…
			CASE -29 TO -10
				PRINTL この調合には失敗のリスクがある…
			CASE -9 TO -1
				PRINTL この調合はほぼ成功するだろう…
			CASEELSE
				PRINTL まず失敗はしないだろう…
		ENDSELECT
	ENDIF
	PRINT 調合しますか？
	IF PHARMA_VOLATILE(調合候補)
		SETCOLOR 0x666666
		PRINTFORML （このアイテムは対象を選べないと破棄するしかなくなり、素材が無駄になる恐れがあります）
		RESETCOLOR
	ELSE
		PRINTL 
	ENDIF
	CALL ASK_YN
	IF !RESULT
	;先に進む
	ELSE
		調合件数 = 0
		CLEARLINE 8
		RETURN -1
	ENDIF
ELSE
	調合件数 = 0
	CLEARLINE 1
	GOTO INPUT_LOOP03
ENDIF

;ここまでで条件をすべてクリアしている場合は以下に進行
REPEAT 5
	REUSELASTLINE  \@ CHARA ? %CALLNAME:CHARA%と一緒に #  \@調合中.%"." * COUNT%
	TWAIT 150, 1
REND
R_ID = 調合物 * 10 + 選択レシピ
;⑥調合の成功判定
IF PHARMACY_RANK(調合候補) != 1
	IF 調合パワー >= RAND:(PHARMACY_RANK(調合候補) * 20)
		PRINTFORML 調合に成功した！
		調合物 = 調合候補
		;調合後入手個数を流し込む
		TFLAG:194 = PRODUCTION
	ELSE
		PRINTFORML 調合に失敗した…
		調合物 = 0
	ENDIF
;調合LV1レシピは100％成功
ELSE
	PRINTFORML 調合に成功した！
	調合物 = 調合候補
	;調合後入手個数を流し込む
	TFLAG:194 = PRODUCTION
ENDIF

;素材アイテム消費処理をここで
PRINT 　今回消費した素材：
R_ID = (調合候補 * 10 + 選択レシピ)
CALL PHARMACY_CONSUME(R_ID, 調合件数)

;⑦アイテム入手処理 99個以上にならないようにする
;  体質改変薬は入手処理の代わりに使用処理に飛ぶ
IF PHARMA_VOLATILE(調合物)
	CALL PHARMACY_CONSTITUTIONAL(調合物)
ELSEIF 調合物 != 0
	IF ITEM:(調合物) + TFLAG:194 > 99
		ITEM:(調合物) = 99
	ELSE
		ITEM:(調合物) += TFLAG:194
	ENDIF
ENDIF

;⑧経験加算 調合成功時は調合難易度×調合件数の経験
EXP:MASTER:調合経験 += PHARMACY_EXP(調合候補, 調合件数, 調合物)
SIF CHARA
	EXP:CHARA:調合経験 += PHARMACY_EXP(調合候補, 調合件数, 調合物)
;薬学教本持っていると追加
SIF ITEM:109
	EXP:MASTER:調合経験 += MAX(RAND:(調合件数), 1)

;能力差で教えてもらう・教えてあげる
IF 調合パワーM >= 調合パワーT && CHARA
	EXP:CHARA:調合経験 ++
ELSEIF CHARA
	EXP:MASTER:調合経験 ++
ENDIF


;⑨時間経過 調合難易度と調合件数によって補正
TIME += PHARMACY_TIME(調合候補, 調合件数)

;⑩体力・気力減少処理
体力消費 = 30 * SQRT(調合件数)
気力消費 = MAX((((50 * PHARMACY_RANK(調合候補)) - (15 * TALENT:MASTER:調合知識 + 10 * TALENT:MASTER:調合Lv))), 30) * SQRT(調合件数)
;自室かつ机椅子があると体力気力消費低減
IF CFLAG:MASTER:現在位置 == CFLAG:MASTER:初期位置 && ITEM:ケヤキの机椅子
	SELECTCASE ITEM:ケヤキの机椅子
		CASE 1
			TIMES 体力消費, 0.9
			TIMES 気力消費, 0.9
		CASE 2
			TIMES 体力消費, 0.85
			TIMES 気力消費, 0.85
		CASE 3
			TIMES 体力消費, 0.8
			TIMES 気力消費, 0.8
	ENDSELECT
	PRINTFORML 机の上は常に整理整頓、効率よく調合を進めることができた
ENDIF
DOWNBASE:MASTER:体力 = 体力消費
DOWNBASE:MASTER:気力 = 気力消費

;参加者のソース,同一コマンド制限を受けないので控えめに、調合失敗は半減
IF CHARA > 0
	;固定で獲得するソース
	SOURCE:CHARA:歓楽 = 200
	SOURCE:CHARA:情愛 = 50
	
	;ABL:従順をみる
	IF ABL:従順 <= 1
		SOURCE:CHARA:歓楽 += (ABL:従順 * 40)
		SOURCE:CHARA:情愛 += (ABL:親密 * 20)
	ELSEIF ABL:従順 <= 3
		SOURCE:CHARA:歓楽 += 200 + (ABL:従順 * 40)
		SOURCE:CHARA:情愛 += 50 + (ABL:親密 * 30)
	ELSEIF ABL:従順 <= 5
		SOURCE:CHARA:歓楽 += 500 + (ABL:従順 * 40)
		SOURCE:CHARA:情愛 += 200 + (ABL:親密 * 30)
	ELSEIF ABL:従順 <= 8
		SOURCE:CHARA:歓楽 += 750 + (ABL:従順 * 60)
		SOURCE:CHARA:情愛 += 300 + (ABL:親密 * 40)
	ELSEIF ABL:従順 <= 11
		SOURCE:CHARA:歓楽 += 1000 + (ABL:従順 * 60)
		SOURCE:CHARA:情愛 += 600 + (ABL:親密 * 40)
	ELSE
		SOURCE:CHARA:歓楽 += 1600 + (ABL:従順 * 30)
		SOURCE:CHARA:情愛 += 1000 + (ABL:親密 * 20)
	ENDIF
	
	;好感度はみない
	
	SOURCE:CHARA:受動 = 200 + 100 * ABL:従順
	SOURCE:CHARA:征服 = 200 + 100 * ABL:サドっ気
	
	;調合成果をみる、調合難易度で設定
	IF 調合物
		SELECTCASE PHARMACY_RANK(調合物)
			CASE 1
				TIMES SOURCE:CHARA:歓楽 , 1.00
				TIMES SOURCE:CHARA:受動 , 1.00
				TIMES SOURCE:CHARA:征服 , 1.00
				SOURCE:CHARA:達成 = 80
			CASE 2
				TIMES SOURCE:CHARA:歓楽 , 1.25
				TIMES SOURCE:CHARA:受動 , 1.25
				TIMES SOURCE:CHARA:征服 , 1.15
				SOURCE:CHARA:達成 = 125
			CASE 3
				TIMES SOURCE:CHARA:歓楽 , 1.50
				TIMES SOURCE:CHARA:受動 , 1.50
				TIMES SOURCE:CHARA:征服 , 1.25
				SOURCE:CHARA:達成 = 150
			CASE 4
				TIMES SOURCE:CHARA:歓楽 , 1.75
				TIMES SOURCE:CHARA:受動 , 1.75
				TIMES SOURCE:CHARA:征服 , 1.50
				SOURCE:CHARA:達成 = 200
			CASE 5
				TIMES SOURCE:CHARA:歓楽 , 2.00
				TIMES SOURCE:CHARA:受動 , 2.00
				TIMES SOURCE:CHARA:征服 , 1.75
				SOURCE:CHARA:達成 = 300
			CASEELSE
				TIMES SOURCE:CHARA:歓楽 , 2.25
				TIMES SOURCE:CHARA:受動 , 2.25
				TIMES SOURCE:CHARA:征服 , 2.00
				SOURCE:CHARA:達成 = 350
		ENDSELECT
	;調合失敗
	ELSE
		TIMES SOURCE:CHARA:歓楽 , 0.50
		TIMES SOURCE:CHARA:受動 , 0.50
		TIMES SOURCE:CHARA:征服 , 0.50
	ENDIF
ENDIF

;フラグ引き渡し
TFLAG:SELECTCOMの分岐 = 調合物

RETURN 1

