;伐採する
@COM442
#DIM CHARA
#DIM 木材種
#DIM 大きさ
#DIM 伐採パワー
#DIM 減少値
#DIM 伐採時間
#DIM 採集パワー
#DIM 採集物
#DIM 薪割り
#DIM 探索回数

;丸太を抱えてるときは薪割りするか選択　薪割りしたら体力気力消費時間経過させる
IF ITEM:丸太
	;依頼の報酬など、伐採以外で丸太を入手してしまった場合の退避用
	SIF !FLAG:丸太種類
		FLAG:丸太種類 = MAX(RAND:12, 1)
	DRAWLINE
	PRINTFORML 先に持ってる丸太をなんとかしなくては
	CALL WOOD_CHOPPING(FLAG:丸太種類)
	IF ITEM:丸太 == 0
		伐採パワー = TALENT:MASTER:伐採Lv * 20
		減少値 = 350 - 伐採パワー
		伐採時間 = 180 - 伐採パワー
		IF ITEM:チェーンソー
			減少値 /= 2
			伐採時間 /= 2
		ENDIF
		IF FLAG:70
			BASE:MASTER:TSP -= 減少値
		ELSE
			DOWNBASE:MASTER:体力 = 減少値
			IF ITEM:チェーンソー
				DOWNBASE:MASTER:気力 = 減少値 -50
			ELSE
				DOWNBASE:MASTER:気力 = 減少値 -25
			ENDIF
			TIME += 伐採時間
		ENDIF
		RETURN 1
	ELSE
		RETURN -1
	ENDIF
ENDIF
;夕方～夜の伐採はやめる
IF TIME:2 >= 5 && !FLAG:70
	DRAWLINE
	PRINTFORML この時間からでは伐ってるうちに真っ暗になってしまう…
	RETURN -1
ENDIF
;大雨、台風、吹雪のときはやめる
IF GROUPMATCH(天候, 5, 9) || GROUPMATCH(FLAG:異常気象, 9, 10)
	DRAWLINE
	PRINTFORML この天候での伐採は危険だろう
	RETURN -1
ENDIF
;あからさまな人の敷地での盗伐はやめる
SELECTCASE CFLAG:MASTER:現在位置
	CASE 25, 50
		IF ABL:[[霊夢]]:親密 < 5
			DRAWLINE
			PRINTFORML ここで無断で伐採をするのはマズい気がする
			RETURN -1
		ENDIF
	CASE 斜角の竹林, 433
		IF ABL:[[妹紅]]:親密 < 5 && ABL:[[てゐ]]:親密 < 5 && ABL:[[輝夜]]:親密 < 5 && ABL:[[永琳]]:親密 < 5
			DRAWLINE
			PRINTFORML ここで無断で伐採をするのはマズい気がする
			RETURN -1
		ENDIF
	CASE 絶景の丘, 805
		IF ABL:[[文]]:親密 < 5 && ABL:[[はたて]]:親密 < 5
			DRAWLINE
			PRINTFORML ここで無断で伐採をするのはマズい気がする
			RETURN -1
		ENDIF
ENDSELECT

TFLAG:ムード上昇抑制 = 1

;先に伐採パワー算出
伐採パワー = 1 + (TALENT:MASTER:伐採Lv * 2) + TALENT:MASTER:教養
;参加者判定
IF FLAG:デート相手 && !FLAG:70
	CHARA = FLAG:デート相手
ELSEIF TARGET && ABL:TARGET:親密 >= 10 && !FLAG:70
	CHARA = TARGET
ELSE
	CHARA = 0
ENDIF
;参加者がいる場合は伐採パワー追加
SIF CHARA && !FLAG:70
	伐採パワー += (TALENT:TARGET:伐採Lv * 2) + TALENT:TARGET:教養

探索回数 = 0

$LOOP_SELECT

REPEAT 5
	REUSELASTLINE  \@ CHARA ? %CALLNAME:CHARA%と一緒に #  \@伐採するものを捜索中.%"." * COUNT%
	TWAIT 150, 1
REND

;伐採候補の木材種とその大きさを決定
木材種 = WOOD_SPECIES(伐採可能(CFLAG:MASTER:現在位置))
大きさ = 0
IF RAND:5 == 0 && 木材種 <= 600 && 木材種 != 12
	大きさ ++
	SIF RAND:3 == 0
		大きさ ++
ENDIF

;伐採候補をテキスト出力
IF 木材種 == 646
	PRINTFORML 小枝を手折ってみると、匂い芳しい木が生えている…
ELSEIF 木材種 == 12
	PRINTFORML 竹が規則正しく真っ直ぐに伸びている…
ELSE
	PRINTFORML この木はどうだろう…
ENDIF
DRAWLINE
SETCOLOR C_YELLOW
PRINTFORM 見つけた\@ 木材種 == 12 ? もの # 木 \@：%WOOD_NAME(木材種)%
SELECTCASE 大きさ
	CASE 1
		PRINTFORM の大木
	CASE 2
		PRINTFORM の巨木
ENDSELECT
RESETCOLOR

;体力気力の減少値と伐採にかかる時間を算出
減少値 = WOOD_EFFORT(木材種, 大きさ) - (WOOD_EFFORT(木材種, 大きさ) * (伐採パワー / 70))
SIF ITEM:チェーンソー
	減少値 -= SQRT(WOOD_EFFORT(木材種, 大きさ)) * 10
IF CHARA && !FLAG:70
	伐採時間 = 減少値 / (4 + TALENT:MASTER:伐採Lv + SQRT(TALENT:TARGET:伐採Lv))
ELSE
	伐採時間 = 減少値 / (4 + TALENT:MASTER:伐採Lv)
ENDIF

;伐採時間に応じてテキスト出力
SETCOLOR C_L_GRAY
SELECTCASE 伐採時間
	CASE IS <= 60 
		PRINTFORML 　（わりと簡単に伐れそうだ）
	CASE IS <= 120
		PRINTFORML 　（伐るのはそれなりに手間がかかるだろう）
	CASE IS <= 180
		PRINTFORML 　（ちょっと手こずりそうだ…）
	CASE IS <= 240
		PRINTFORML 　（これは苦労しそうだ…）
	CASE IS <= 300
		PRINTFORML 　（腰を据えてじっくりやらないといけないだろう…）
	CASE IS <= 360
		PRINTFORML 　（大がかりな仕事になりそうだ…）
	CASEELSE
		PRINTFORML 　（今の腕前ではかなり厳しい仕事になりそうだ…）
ENDSELECT
RESETCOLOR
PRINTL 
;体力・気力が実施後マイナスになる場合は、木材種選択に戻る
IF (!FLAG:70 && (BASE:MASTER:体力 <= 減少値 || BASE:MASTER:気力 <= 減少値)) || (FLAG:70 && BASE:MASTER:TSP <= (伐採時間 * 10) + (探索回数 * 5))
	PRINTFORMW これを伐るには、ちょっと今は条件が悪い……別のを探そう
	PRINTL 
	探索回数 ++
	;探索回数が10回を超えた場合は無限ループ除けのためにリターンする
	IF 探索回数 >= 10
		PRINTFORMW ……あんまり熱中してると迷いそうなので、今回はこれくらいにしておこう
		IF !FLAG:70
			TIME += 探索回数 * 5
		ELSE
			BASE:MASTER:TSP -= 探索回数 * 5
		ENDIF
		RETURN -1
	ENDIF
	GOTO LOOP_SELECT
ENDIF
PRINTFORML これを伐採しますか？
CALL ASK_YN
IF !RESULT
	CLEARLINE 4
ELSE
	CLEARLINE 8
	探索回数 ++
	GOTO LOOP_SELECT
ENDIF
CALL DQPRINT("あなたは木をきるー", 1)
CALL DQPRINT("ヘイヘイホー", 1)
CALL DQPRINT("ヘイヘイホー", 1)
SIF 伐採時間 >= 540
	CALL DQPRINT("………………………", 1)
SIF 伐採時間 >= 480
	CALL DQPRINT("……………………", 1)
SIF 伐採時間 >= 420
	CALL DQPRINT("…………………", 1)
SIF 伐採時間 >= 360
	CALL DQPRINT("………………", 1)
SIF 伐採時間 >= 300
	CALL DQPRINT("……………", 1)
SIF 伐採時間 >= 240
	CALL DQPRINT("…………", 1)
CALL DQPRINT("………", 1)
CALL DQPRINT("……", 1)

;時間経過と体力消費
IF FLAG:70
	BASE:MASTER:TSP -= (伐採時間 * 10) + (探索回数 * 5)
ELSE
	DOWNBASE:MASTER:体力 = 減少値
	DOWNBASE:MASTER:気力 = 減少値
	TIME += 伐採時間 + (探索回数 * 10)
ENDIF

;経験追加処理
EXP:MASTER:伐採経験 += MAX((伐採時間 / 20), 1)
;試行回数が少ないだろうから確定
SIF ITEM:木こりの心得
	EXP:MASTER:伐採経験 ++
;大きさ補正
SIF 大きさ
	EXP:MASTER:伐採経験 += (大きさ * 4)
;手伝ってくれたキャラの経験
IF CHARA
	EXP:CHARA:伐採経験 += MAX((伐採時間 / 20), 1)
	SIF 大きさ
		EXP:CHARA:伐採経験 += (大きさ * 4)
ENDIF

;デート経験
IF CHK_DATENOW(CFLAG:CHARA:デート中) && CHARA > 0
	EXP:MASTER:デート経験 ++
	EXP:CHARA:デート経験 ++
ENDIF
SETCOLOR 0x00FF00
;アイテム入手処理
SELECTCASE 木材種
	CASE 12, 646
		IF 木材種 == 12
			;竹だけはすぐに製材番号に変換 FLAG:丸太種類には記録しない
			PRINTFORMDL 時間停止能力の応用で、瞬時に乾燥！
			PRINTFORMW 竹の製材を手に入れた
			LOG_SALES:12 ++
		ELSE
			;香木ほかの処理
			PRINTFORMW %WOOD_NAME(木材種)%を手に入れた
			SIF ITEM:木材種 < 99
				ITEM:木材種 ++
		ENDIF
	CASEELSE
		;傷んだ木は即座に木材に変換(未実装　テンポ悪くなりそう)

		;普通の木に関してはまとめて
		ITEM:丸太 ++
		FLAG:丸太種類 = 木材種
		;大きさをFLAGに反映
		FLAG:丸太種類 += 100 * 大きさ
		PRINTFORML 時間停止能力の応用で、瞬時に乾燥！
		PRINTFORMW %WOOD_NAME(FLAG:丸太種類)%の丸太を手に入れた

ENDSELECT
RESETCOLOR
;デバッグ用
;IF FLAG:丸太種類
;	PRINTFORMW 　　確認：%WOOD_NAME(FLAG:丸太種類)%
;ENDIF
PRINTL 

;薪割り確認 薪割り時間・体力消費はサービス
IF FLAG:丸太種類
	CALL WOOD_CHOPPING(FLAG:丸太種類)
ENDIF

;オマケ採集物  採集Lvに依存  あくまでおまけなので控えめに
採集パワー = TALENT:MASTER:採集Lv * 10 + ABL:MASTER:教養 * 5 + TFLAG:幸運補正 * 3
SIF CHARA && !FLAG:70
	採集パワー += (10 + TALENT:CHARA:採集Lv * 10 + ABL:CHARA:教養 * 5) / 2

採集物 = 0
SELECTCASE RAND:(1 + 2 * SQRT(採集パワー))
	CASE 0 TO 6
		;失敗
	CASE 7, 9, 11, 13, 15, 17, 19, 21, 23
		IF 伐採可能(CFLAG:MASTER:現在位置) == 2
			;竹林では何も手に入らない
		ELSEIF DAY:2 == 1 || DAY:2 == 2;春夏
			採集物 = 626;キイチゴ
		ELSEIF DAY:2 == 3;秋
			SELECTCASE RAND:3;キイチゴ、アケビ、ぶどう
				CASE 0
					採集物 = 377
				CASE 1
					採集物 = 626
				CASEELSE
					採集物 = 628
			ENDSELECT
		ENDIF
		SIF 採集物
			PRINTFORMW 木に何かなっている…
	CASEELSE
		IF 伐採可能(CFLAG:MASTER:現在位置) == 2;春の竹林ではタケノコ
			SIF DAY:2 == 1
				採集物 = 629
		ELSEIF DAY:2 == 1 || DAY:2 == 3;春秋
			SELECTCASE RAND:2;普通のキノコか山菜
				CASE 0
					採集物 = 600
				CASEELSE
					採集物 = 611
			ENDSELECT
		ELSEIF DAY:2 == 2;夏
			採集物 = 600;			普通のキノコのみ
		ELSE
			SIF RAND:2 == 0;			冬はさらに50％の確率で氷の鱗
				採集物 = 609
		ENDIF
		SIF 採集物
			PRINTFORMW 地面に何かある…
ENDSELECT
IF 採集物
	SETCOLOR 0x00FF00
	PRINTFORMW %ITEMNAME:採集物%を手に入れた
	RESETCOLOR
	SIF ITEM:採集物 < 99
		ITEM:採集物 ++
	EXP:MASTER:採集経験 ++
	SIF CHARA 
		EXP:CHARA:採集経験 ++
ENDIF

;空腹時刻と参加者の疲労度
TCVAR:MASTER:空腹時刻 -= 25
IF CHARA
	TCVAR:CHARA:空腹時刻 -= 25
	CALL ADD_TIRED(CHARA, POWER((大きさ + 1) + 1, 3) * 100)
ENDIF

RETURN 1

