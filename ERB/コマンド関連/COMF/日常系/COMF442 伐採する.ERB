;-----------------------------------------------------------
;現在位置から伐採スポットを割り出す関数
;-----------------------------------------------------------
@伐採可能(ARG)
#FUNCTION
IF !IN_HOME(ARG)
	SELECTCASE ARG
		CASE 50
			RETURNF 1
		CASE 斜角の竹林
			RETURNF 2
		CASE 森の入り口
			RETURNF 3
		CASE 麓の樹海
			RETURNF 4
		CASE 絶景の丘
			RETURNF 5
	ENDSELECT
ELSE
	SELECTCASE ARG
		CASE 25;鎮守の森
			RETURNF 1
		CASE 433;斜角の竹林
			RETURNF 2
		CASE 507 ;キノコ群生地
			RETURNF 3
		CASE 702;山道・沢へ続く道
			RETURNF 4
		CASE 805;山頂
			RETURNF 5
	ENDSELECT
ENDIF
RETURNF 0

;-----------------------------------------------------------
;伐採スポットから伐れる木材種を割り出す関数
;ARG 伐採可能
;-----------------------------------------------------------
@WOOD_SPECIES(ARG)
#FUNCTION
#DIM 候補

$LOOP

候補 = RAND:12
SELECTCASE ARG
	CASE 1;鎮守の森、妖精の大樹
		SIF GROUPMATCH(候補, 1, 2, 3, 6, 7, 8, 9)
			RETURNF 候補
	CASE 2;斜角の竹林
		;竹材に固定
		RETURNF 12
	CASE 3;魔法の森
		SIF 候補 == 0 && RAND:2 == 0
			RETURNF 646
		SIF GROUPMATCH(候補, 1, 2, 4, 6, 7, 8, 9)
			RETURNF 候補
	CASE 4;麓の樹海
		SIF 候補 == 0 && RAND:2 == 0
			RETURNF 646
		SIF GROUPMATCH(候補, 1, 2, 3, 5, 7, 9, 10)
			RETURNF 候補
	CASE 5;絶景の丘 標高高め
		SIF GROUPMATCH(候補, 3, 5, 7, 9, 10, 11)
			RETURNF 候補
ENDSELECT
GOTO LOOP

;-----------------------------------------------------------
;丸太・竹材の名称を返す関数
;ARG:0 …FLAG:丸太種類　（木材種番号でも通る）
;ARG:1 =1 「の大木・の巨木」を文字列に反映しない
;      省略した場合は =0 (巨木・大木表示あり)
;RETURNF 1～ 普通の木 100～ 〇〇の大木 200～ 〇〇の巨木
;-----------------------------------------------------------
@WOOD_NAME(ARG:0, ARG:1 = 0)
#FUNCTIONS
#DIM 番号補正
#DIMS 仮名

番号補正 = ARG:0 % 100

SELECTCASE 番号補正
	CASE 646
		RETURNF "香木"
	CASEELSE
		仮名 = %WoodName:番号補正%
ENDSELECT

IF ARG:1 == 0
	SELECTCASE ARG:0
		CASE 101 TO 199
			仮名 += "の大木"
		CASE 201 TO 299
			仮名 += "の巨木"
	ENDSELECT
ENDIF
RETURNF 仮名
;-----------------------------------------------------------
;丸太・竹材の伐採にかかる体力・気力を返す関数
;ARG:0 木材種番号	ARG:1 大きさ
;-----------------------------------------------------------
@WOOD_EFFORT(ARG:0, ARG:1)
#FUNCTION
#DIM ベース

SELECTCASE ARG:0
	CASE 646;香木
		ベース = 600
	CASEELSE
		ベース = WoodEffort:(ARG:0)
ENDSELECT

SELECTCASE ARG:1
	CASE 1;大木
		ベース += 700
	CASE 2;巨木
		ベース += 1000
ENDSELECT
RETURNF ベース

;-----------------------------------------------------------
;薪割りをするかどうかを確認して、木材を入手する
;丸太を割る場合は体力・気力消費と時間の経過は別に記述をすること
;ARG 	FLAG:丸太種類　で丸太の薪割を行う
;		省略時は=0  一般薪割・丸太無しでも可能・体力気力消費あり
;-----------------------------------------------------------
@WOOD_CHOPPING(ARG = 0)
#DIM 薪割り
#DIM 伐採パワー
#DIM 減少値
#DIM 伐採時間

IF ARG
	PRINTFORM 丸太をここで割って木材にしますか？
	薪割り = (1 + ARG / 100) * 5
ELSE
	PRINTFORM 薪割りをしますか？
	薪割り = 3
ENDIF

IF (ITEM:木材 + 薪割り) > 99
	CALL COLORMESSAGE(@"　（木材はもう持ちきれないくらいたくさんある…）",C_GRAY,2)
ELSE
	PRINTW 
ENDIF
SIF ARG
	CALL COLORMESSAGE(@"　（注意：木材にしてしまうと、製材へ加工することはできません）",C_RED,1)
CALL ASK_YN
IF !RESULT
	PRINTFORMW 薪割りをして木材を{薪割り}個手に入れた
	IF ARG
		ITEM:丸太 = 0
		FLAG:丸太種類 = 0
	;一般薪割の場合は、体力気力時間消費
	ELSE
		伐採パワー = TALENT:MASTER:伐採Lv * 20
		減少値 = 350 - 伐採パワー
		伐採時間 = 180 - 伐採パワー
		IF ITEM:チェーンソー
			減少値 /= 2
			伐採時間 /= 2
		ENDIF
		IF FLAG:70
			BASE:MASTER:TSP -= 減少値
		ELSE
			DOWNBASE:MASTER:体力 = 減少値
			IF ITEM:チェーンソー
				DOWNBASE:MASTER:気力 = 減少値 - 50
			ELSE
				DOWNBASE:MASTER:気力 = 減少値 - 25
			ENDIF
			TIME += 伐採時間
		ENDIF
	ENDIF
	;木材数の増加処理
	ITEM:木材 = MIN(薪割り + ITEM:木材, 99)
ELSE
	IF ARG
		CLEARLINE 5
		PRINTFORMW 丸太は里の材木商か、山の製材所にこのまま持ち込むことにしよう……
	ENDIF
ENDIF
PRINTL 

