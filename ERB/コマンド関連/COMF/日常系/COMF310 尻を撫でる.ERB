;実行判定
;-------------------------------------------------
@COM_ABLE310
;尻を撫でる実行判定
SIF !TFLAG:100
	RETURN 0
SIF !TARGET
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(310)
	RETURN RESULT
;時間停止中はスキップ
IF !FLAG:70
	SIF CFLAG:睡眠 == 0 && GET_TARGETNUM() == 0
		RETURN 0
	;睡眠中
	SIF CFLAG:睡眠 && !CFLAG:イタズラ
		RETURN 0
	;仕事中
	SIF CFLAG:行動 == 5
		RETURN 0
	;添い寝中
	SIF CFLAG:添い寝中
		RETURN 0
	;デート中
	SIF CHK_DATENOW(CFLAG:デート中) && CFLAG:現在位置 != OMANEKIBEYA()
		RETURN 0
ENDIF
;気力0
SIF BASE:MASTER:気力 <= 0
	RETURN 0
;腕使用中
SIF TFLAG:61
	RETURN 0
SIF GETBIT (TCVAR:26,1)
	RETURN 0
RETURN 1

@KOJO_FORCED_FAILURE(ARG,ARG:1)
SELECTCASE TFLAG:192
	;通常は確率判定
	CASE 0
		IF ARG <= 9
			;大成功
			TFLAG:193 = 3
		ELSEIF ARG >= ARG:1
			;失敗
			TFLAG:193 = 1
		ELSE
			;残りは成功
			TFLAG:193 = 2
		ENDIF
	;強制失敗
	CASEELSE
		TFLAG:193 = TFLAG:192
ENDSELECT