@CANNOT_MOVE_MESSAGE(ARG)
IF !ARG || NAME_FROM_PLACE(ARG) == "" || TFLAG:移動不能メッセージ == 998
	PRINTFORMW 不正な入力です
	CLEARLINE 2
	REUSELASTLINE
ELSEIF TFLAG:移動不能メッセージ == 999
	PRINTFORMW 鍵がかかっている
	CLEARLINE 2
	REUSELASTLINE
ELSE
	TRYCALLFORM MAP_CANNOT_WORD_{MAIN_MAP}(ARG)
ENDIF
