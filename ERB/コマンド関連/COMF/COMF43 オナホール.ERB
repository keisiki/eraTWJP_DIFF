;-------------------------------------------------
;オナホール
;道具使用コマンド、レベル2
;-------------------------------------------------
@COM43
;着脱の処理
TEQUIP:オナホール = !TEQUIP:オナホール

;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;奉仕快楽フラグ
TCVAR:PLAYER:108 = 1

;TARGETがふたなりの場合には射精可能に
CSTR:TARGET:10 += "オナホール/"
;TCVAR:2 射精箇所フラグ（-1=コンドーム 1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 9=アナル奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
TCVAR:TARGET:2 = 10
;強度
TCVAR:TARGET:4 = 1000

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 80
	SOURCE:快Ｃ = 200

ELSE

	DOWNBASE:体力 += 10
	DOWNBASE:気力 += 80

	SOURCE:快Ｃ = 200
	SOURCE:露出 = 20
	SOURCE:逸脱 = 30
	SOURCE:反感 = 30


	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;抑圧、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:自己愛 < 0 || TALENT:抵抗
		SOURCE:鬱屈 += 30
ENDIF
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ENDIF
EXP:PLAYER:道具使用経験 ++

RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM43(ARG)
PRINTL ＜オナホール装備中＞

;TCVAR:0 射精対象フラグ（ビット0=TARGET 1=PLAYER 2=MASTER 3=ASSI 4=触手 5=その他）
;TCVAR:1 予備射精対象フラグ（ビットを使いたくない人用、CFLAG:100に翻訳されます）
;	（1=TARGET 2=PLAYER 3=MASTER 4=ASSI 5=TARGET+ASSI 6=MASTER+ASSI -1=触手 -2=その他）
;TCVAR:2 射精箇所フラグ（-1=コンドーム 1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 ）
;TCVAR:4 射精快感強度

SETBIT TCVAR:TARGET:0, 5
;強度
TCVAR:ARG:4 = 1000
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 20
	SOURCE:快Ｃ += 100

ELSE

	DOWNBASE:体力 += 5
	DOWNBASE:気力 += 20

	SOURCE:快Ｃ += 100
	SOURCE:露出 += 10
	SOURCE:逸脱 += 15
	SOURCE:反感 += 15
	;-------------------------------------------------
	;経験の処理
	;-------------------------------------------------
ENDIF
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE43
;オナホール実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(43)
	RETURN RESULT
;解除はいつでも可能
SIF TEQUIP:12
	RETURN 1
;アイテムを持っているか、アイテムなし設定でないとダメ
SIF ITEM:3 == 0 && NOITEM == 0
	RETURN 0
;オトコやふたなりじゃないとダメ
SIF !(HAS_PENIS(TARGET))
	RETURN 0

;下半身着衣
SIF TEQUIP:0 > 1
	RETURN 0
;ASSIの場合、技巧3以上じゃないと使えない。
IF ASSIPLAY
	SIF ABL:ASSI:技巧 < 3
		RETURN 0
ENDIF
;新妻プレイ中はダメ
SIF TEQUIP:33
	RETURN 0
RETURN 1

