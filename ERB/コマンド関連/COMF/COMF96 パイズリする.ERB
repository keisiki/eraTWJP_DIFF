;-------------------------------------------------
;パイズリする
;奉仕系コマンド、レベル3
;-------------------------------------------------
@COM96
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;奉仕快楽
TCVAR:PLAYER:108 = 1

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 射精箇所フラグ（-1=コンドーム 1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 9=アナル奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
TCVAR:TARGET:2 = 5
;射精快感強度
TCVAR:TARGET:4 = 1200

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
;	BASE:MASTER:TSP -= 50
	BASE:MASTER:TSP -= 60
	SOURCE:PLAYER:快Ｂ = 150
	SOURCE:快Ｃ = 110
ELSE

	DOWNBASE:体力 += 30
	DOWNBASE:気力 += 80
	SOURCE:快Ｃ = 110
	;性技補正
	SOURCE:快Ｃ += MIN(ABL:PLAYER:胸 * 25,100)
	
	SOURCE:PLAYER:快Ｂ = 50
	SOURCE:露出 = 20
	SOURCE:逸脱 = 20
	SOURCE:反感 = 20

	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;抑圧、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:自己愛 < 0 || TALENT:抵抗
		SOURCE:鬱屈 += 30
ENDIF
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;調教者のＢ⇔奴隷のＰの汚れが移動
STAIN:PLAYER:5 |= STAIN:2
STAIN:2 |= STAIN:PLAYER:5
;-------------------------------------------------
;経験の処理
;-------------------------------------------------

;同性愛　レズなら戻り値1ゲイなら戻り値2
IF FLAG:70 == 1 || CFLAG:イタズラ
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 3
	ENDIF
	EXP:PLAYER:パイズリ経験 += 1
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 3
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 3
	ENDIF
	EXP:PLAYER:パイズリ経験 += 2
	;愛情経験
	SIF TALENT:恋慕 == 1 && ASSIPLAY == 0
		EXP:愛情経験 ++
ENDIF
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE96
;パイズリ実行判定
SIF !TFLAG:100
	RETURN 0
SIF GLOBAL_COMABLE(96)
	RETURN RESULT
;オトコかふたなりじゃないとダメ
SIF !(HAS_PENIS(TARGET))
	RETURN 0
;調教者がオンナかふたなりじゃないとダメ
SIF !(TALENT:PLAYER:2 & 2)
	RETURN 0
SIF TEQUIP:継続キス
	RETURN 0
;上半身着衣
SIF TEQUIP:PLAYER:1 > 1 && TEQUIP:PLAYER:3 == 0
	RETURN 0
RETURN 1

