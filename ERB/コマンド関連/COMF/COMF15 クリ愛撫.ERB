;-------------------------------------------------
;クリ愛撫
;愛撫系コマンド　レベル1
;-------------------------------------------------
@COM15
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;奉仕快楽
TCVAR:PLAYER:108 = 1
CSTR:TARGET:10 += @"{PLAYER}/"

;TCVAR:2 射精箇所フラグ（-1=コンドーム 1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 9=アナル奉仕 10=道具）
TCVAR:TARGET:2 = 3
;-------------------------------------------------
;ソース追加処理 ほぼ315の流用
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 20
	SOURCE:快Ｃ = 80
	IF ABL:PLAYER:指 >= 4
		SOURCE:快Ｃ += 50
	ELSE
		SOURCE:快Ｃ += ABL:PLAYER:指 * 10
	ENDIF
	;手を突っ込めない衣装
	IF TEQUIP:0 & 16
		TIMES SOURCE:快Ｃ , 0.80
		TIMES SOURCE:欲情 , 0.80
		TIMES SOURCE:露出 , 0.80
	;スカート以外の何かを履いてる
	ELSEIF TEQUIP > 1
		TIMES SOURCE:快Ｃ , 0.90
		TIMES SOURCE:欲情 , 0.90
		TIMES SOURCE:露出 , 0.90
	ENDIF
	
	;-------------------------------------------------
	;経験の処理
	;-------------------------------------------------
	;同性愛　レズなら戻り値1ゲイなら戻り値2
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 3
	ENDIF
	
	;手淫経験
	EXP:PLAYER:手淫経験 ++
ELSE
	DOWNBASE:体力 += 5
	DOWNBASE:気力 += 50

	SOURCE:歓楽 = 100
	SOURCE:情愛 = 150
	SOURCE:欲情 = 150
	SOURCE:露出 = 100
	SOURCE:反感 = 370
	SOURCE:快Ｃ = 80
	SOURCE:受動 = 145 + 270 * ABL:従順
	IF ABL:PLAYER:指 >= 4
		SOURCE:快Ｃ += 50
	ELSE
		SOURCE:快Ｃ += ABL:PLAYER:指 * 10
	ENDIF
	;手を突っ込めない衣装
	IF TEQUIP:0 & 16
		TIMES SOURCE:快Ｃ , 0.80
		TIMES SOURCE:欲情 , 0.80
		TIMES SOURCE:露出 , 0.80
	;スカート以外の何かを履いてる
	ELSEIF TEQUIP > 1
		TIMES SOURCE:快Ｃ , 0.90
		TIMES SOURCE:欲情 , 0.90
		TIMES SOURCE:露出 , 0.90
	ENDIF

	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;抑圧、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:自己愛 < 0 || TALENT:抵抗
		SOURCE:鬱屈 += 20
		
	;-------------------------------------------------
	;経験の処理
	;-------------------------------------------------
	;同性愛　レズなら戻り値1ゲイなら戻り値2
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 3
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 3
	ENDIF
	
	;手淫経験
	EXP:PLAYER:手淫経験 ++
ENDIF
;調教者の器用な指によって、快感のソース増加
IF TALENT:PLAYER:器用な指
	TIMES SOURCE:快Ｃ , 1.50
	TIMES SOURCE:液体 , 1.50
ENDIF
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＶ⇔調教者の手の汚れが移動
STAIN:3 |= STAIN:PLAYER:1
STAIN:PLAYER:1 |= STAIN:3

RETURN 1

