;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K111_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		IF ALCOHOL_FACE(111) == "酔いどれ" || ALCOHOL_FACE(111) == "ぐでぐで"
			PRINTFORMW 「ほぇ～？ 弾幕ごっこ～？」
		ELSEIF TALENT:111:機嫌 == -1 || CFLAG:111:ブチギレ || MARK:111:反発刻印 >= 3
			PRINTFORMW 「むむむ……ぶっ飛ばしてやる～っ！！」
		ELSE
			SELECTCASE RAND:3
			CASE 1
				PRINTFORMW 「イッツ★ルナティックタ～イム！」
			CASE 2
				PRINTFORMW 「とてつもないパワーでやっつけちゃうぞー！」
			CASEELSE
				PRINTFORMW 「地獄に堕ちるがいい！」
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾"
		;最後
		IF 相手残機 == 0
			IF ALCOHOL_FACE(111) == "酔いどれ" || ALCOHOL_FACE(111) == "ぐでぐで"
				PRINTFORML 「あ、あれ……？」
			ELSEIF TALENT:111:機嫌 == -1 || CFLAG:111:ブチギレ || MARK:111:反発刻印 >= 3
				PRINTFORML 「そ、そんなぁ……」
			ELSE
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「な、なんで……」
				CASE 2
					PRINTFORML 「そ、そんな……」
				CASEELSE
					PRINTFORML 「ま、まだ……」
				ENDSELECT
			ENDIF
		ELSE
			IF ALCOHOL_FACE(111) == "酔いどれ" || ALCOHOL_FACE(111) == "ぐでぐで"
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「ひゃぁ～！」
				CASE 2
					PRINTFORML 「うわぁ～！」
				CASEELSE
					PRINTFORML 「いったぁ～！」
				ENDSELECT
			ELSEIF TALENT:111:機嫌 == -1 || CFLAG:111:ブチギレ || MARK:111:反発刻印 >= 3
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「くっ……！」
				CASE 2
					PRINTFORML 「い、今のなし！」
				CASEELSE
					PRINTFORML 「あっ！ 当たってないよー！」
				ENDSELECT
			ELSE
				SELECTCASE RAND:11
				CASE 1
					PRINTFORML 「いったーい！」
				CASE 2
					PRINTFORML 「いてっ！」
				CASE 3
					PRINTFORML 「いたっ！」
				CASE 4
					PRINTFORML 「あたっ！」
				CASE 5
					PRINTFORML 「きゃっ！」
				CASE 6
					PRINTFORML 「ぎゃぁっ！」
				CASE 7
					PRINTFORML 「うわっ！」
				CASE 8
					PRINTFORML 「ちょっ…！」
				CASE 9
					PRINTFORML 「ぎゃー！」
				CASE 10
					PRINTFORML 「ま、まって！」
				CASEELSE
					PRINTFORML 「ふぇーっ！」
				ENDSELECT
			ENDIF
		ENDIF
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		SELECTCASE RAND:3
		CASE 1
			PRINTFORML 「くらえ！ 獄符『フラッシュアンドストライプ』！！」
		CASE 2
			PRINTFORML 「堕ちろ！ 地獄『ストライプドアビス』！！」
		CASEELSE
			PRINTFORML 「いでよ！ 獄符『ヘルエクリプス』！！」
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		;あなた勝利
		IF 相手残機 == 0
			IF ALCOHOL_FACE(111) == "酔いどれ" || ALCOHOL_FACE(111) == "ぐでぐで"
				PRINTFORMW 「う～ん、あたいは一体……？」
			ELSEIF TALENT:111:機嫌 == -1 || CFLAG:111:ブチギレ || MARK:111:反発刻印 >= 3
				PRINTFORMW 「ず、ずるだー！ %CALLNAME:MASTER%のずるー！！ あっかんべー！」
			ELSE
				PRINTFORML 「はあはあはあ……」
				SELECTCASE RAND:5
				CASE 1
					PRINTFORMW 「も、もう無理～！ %CALLNAME:MASTER%強ーい！」
				CASE 2
					PRINTFORMW 「ま、負けた……あたいが……くーやーしーいー！」
				CASE 3
					PRINTFORMW 「%CALLNAME:MASTER%！ ずるしたでしょ！ べー！」
				CASE 4
					PRINTFORMW 「%CALLNAME:MASTER%、やるじゃん…！ つ、次こそは……」
				CASEELSE
					PRINTFORMW 「て、手加減してあげたんだから！」
				ENDSELECT
			ENDIF
		;クラウンピース勝利
		ELSE
			IF ALCOHOL_FACE(111) == "酔いどれ" || ALCOHOL_FACE(111) == "ぐでぐで"
				PRINTFORMW 「ひゃっひゃっひゃっ！ おもしろーい！」
			ELSEIF TALENT:111:機嫌 == -1 || CFLAG:111:ブチギレ || MARK:111:反発刻印 >= 3
				PRINTFORMW 「へへーん！ 気分爽快！ 地獄で後悔しろ！」
			ELSE
				SELECTCASE RAND:5
				CASE 1
					PRINTFORMW 「はっはっは！ どうだ！ 地獄の妖精、クラウンピース様だぞ！」
				CASE 2
					PRINTFORMW 「あー面白かった！ %CALLNAME:MASTER%もなかなかやるじゃん！」
				CASE 3
					PRINTFORMW 「あー楽しかった！ %CALLNAME:MASTER%、避けるの下手っぴだね！」
				CASE 4
					PRINTFORMW 「やったぁー！ どお？ 狂気の味は？」
				CASEELSE
					PRINTFORMW 「ひゃっふー！ %CALLNAME:MASTER%、まだまだだねぇ～」
				ENDSELECT
				TALENT:111:機嫌 = 1
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

