;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K99_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		SELECTCASE RAND:3
			CASE 0
				PRINTFORMW 「偶には運動しないとね」
			CASE 1
				PRINTFORMW 「これが終わったらおやつにしましょう？」
			CASE 2
				PRINTFORMW 「浅はかなものよ。私と一戦交えるかね」
		ENDSELECT
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		;豊姫の残機で分岐
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 「きゃっ！？」
				PRINTFORMDW 被弾した豊姫の衣服が少し破けた
			CASE 2
				PRINTFORML 「なんてこと……」
				PRINTFORMDW 被弾した豊姫の衣服がもっと破けた
			CASE 1
				PRINTFORML 「まさか、そんな……っ」
				PRINTFORMDW 豊姫の口数が減ってきた。衣服もかなり破けてきた
			CASE 0
				PRINTFORML 「ああっ！」
				PRINTFORMDW 豊姫に直撃した弾が彼女の衣服を盛大に破いた……！
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;あなたが被弾から復帰時にボムをマイナスする効果
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		;豊姫の残機で分岐
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 「地上に住む、生きる、死ぬ」
				PRINTFORMW 「それだけで罪なのです」
			CASE 3
				PRINTFORML 「慢心鼻を弾かる」
				PRINTFORMW 「驕り高ぶっていると大恥をかく羽目になるので気を付けよ。ということ」
			CASE 2
				PRINTFORMW 「こんな時、八意様なら即断で……」
			CASE 1
				PRINTFORMW 「………」
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;豊姫が一定確率でボムを使った時の効果
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		;豊姫の残機で分岐
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 「私も地上の人間を真似てみるとしましょうか」
				PRINTFORMDW 豊姫は懐からスペルカードを取り出すと、%CALLNAME:MASTER%に突き付けた
			CASE 3
				PRINTFORML 「楽しいわね。弾幕ごっこって」
				PRINTFORMDW 豊姫がスペルカードを発動すると、大量の弾幕が展開された……！
			CASE 2
				PRINTFORML 「さて、どうなるかしら！」
				PRINTFORMDW %CALLNAME:MASTER%の弾幕と豊姫の弾幕がぶつかり合う……！
			CASE 1
				PRINTFORML 「………っ」
				PRINTFORMDW 追い詰められた豊姫は躊躇なくスペルカードを発動した
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ダイス差が一定以下の時に被弾を防ぐ効果
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		;豊姫の残機で分岐
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 「この扇子は、弾幕を一瞬で素粒子レベルで浄化する風を起こす」
				PRINTFORMW 「そんな月の最新兵器相手に貴方は何ができる？」
			CASE 3
				PRINTFORML 「はあっ！」
				PRINTFORMDW 豊姫が扇子で扇ぐと、%CALLNAME:MASTER%の弾幕が跡形もなく消滅した
			CASE 2
				PRINTFORMW 「ふぅ……弾幕だけを浄化するのは大変ね」
			CASE 1
				PRINTFORMW 「……さあ、仕切り直しよ」
		ENDSELECT
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		;豊姫の残機で分岐
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 「あら、もう終わりなの？」
				PRINTFORMDW あっという間に勝負がついてしまった。ここまで差があったとは……
			CASE 3
				PRINTFORML 「大丈夫？ 怪我はない？」
				PRINTFORMDL %CALLNAME:MASTER%が強がってみせると、豊姫の表情がふっと和らいだ
				PRINTFORMW 「……ふふっ、強いのね」
			CASE 2
				PRINTFORML 「はぁ……こんなに運動したのは……はぁ……久しぶりよ……」
				PRINTFORMW 「え？ もう一回？ ぅぅ…また今度にしましょう？」
			CASE 1
				PRINTFORML 「……ごめんなさい。少し大人げなかったかしら？」
				PRINTFORMDW 豊姫にボコボコにされてしまった。もっと強くならなくては……
			CASE 0
				PRINTFORML 「こんな姿、依姫には見せられないわ……」
				PRINTFORMDW 豊姫はまろび出てしまった乳房を手で隠している
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

