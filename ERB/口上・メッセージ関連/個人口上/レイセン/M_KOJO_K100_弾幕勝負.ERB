;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K100_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		IF TALENT:妊娠
			PRINTFORML 「ほ、本当にやる\@ TALENT:恋慕 ? の # んですか \@……？」
			PRINTFORMDL %CALLNAME:TARGET%はお腹の子のことが心配なようだ
			PRINTFORMW 「……お手柔らかに\@ TALENT:恋慕 ? ……ね？ # お願いします \@」
		ELSE
			SELECTCASE RAND:3
			CASE 0
				PRINTFORMW 「私だって一応軍人なんだから……やれるよね、きっと！」
			CASE 1
				PRINTFORML 「戦いはあまり得意じゃないけど……っ」
				PRINTFORMDW %CALLNAME:TARGET%の目つきが変わった……！
			CASE 2
				PRINTFORML 「兎も七日なぶれば噛みつくってことわざ…知って\@ TALENT:恋慕 ? る # ますか \@？」
				PRINTFORMDW 嬲られること前提なのだろうか……
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				PRINTFORML 「ぅぅ……強い……」
				PRINTFORMDW %CALLNAME:TARGET%は弱気になっている
			CASE 1
				PRINTFORML 「ッ……やっぱり私じゃダメなのかな……」
				PRINTFORMDW %CALLNAME:TARGET%の心が折れかかっている
			CASE 0
				PRINTFORML 「痛いよぉ……ぐすっ……」
				PRINTFORMDW %CALLNAME:TARGET%の心が折れた
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				PRINTFORML 「\@ TALENT:恋慕 ? ご、ごめんね……ちょっとやりすぎちゃったみたい # 大丈夫ですか？ \@」
				PRINTFORMDW %CALLNAME:TARGET%が傷の手当をしてくれた
			CASE 2
				PRINTFORML 「ふぅ……ちゃんと稽古しててよかった……」
				PRINTFORMDW 軍人には勝てなかったよ……
			CASE 1
				PRINTFORML 「はぁ……よかったぁ……」
				PRINTFORMDW 気が抜けたのか、%CALLNAME:TARGET%は尻もちをつくように座り込んでしまった
				;あなたが男
				SIF TALENT:MASTER:性別 == 2
					PRINTFORMDW %CALLNAME:MASTER%は地に倒れ伏しながら、スカートの中に広がる花園をたっぷりと視姦した
			CASE 0
				PRINTFORML 「はぁ……負けちゃった……」
				PRINTFORMDW 遊びでやってんじゃないんだよ
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

