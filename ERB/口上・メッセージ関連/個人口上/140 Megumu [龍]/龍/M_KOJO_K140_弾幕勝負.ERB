;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K140_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	CALL M_KOJO_COLOR_K140
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW 「私に逆らうとは愚か者め！」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「では私の試練を受けるといい！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「折角の機会だ、実力を見せてもらうよ！」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「では手合わせ願おうか！」
		ELSE
			PRINTFORMW 「さあ！祭りの時間だな！」
		ENDIF
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	CALL M_KOJO_COLOR_K140
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「無礼者め」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「この程度ではまだ本気ではあるまい？」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「全く服が汚れてしまうな」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「私に当てるとは言い腕だな」
				ELSE
					PRINTFORMW 「ふむ、油断したかな？」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……手痛いな」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「全く手ごわいな君は……！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「実力はあるみたいね」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「まだまだこれからよ！」
				ELSE
					PRINTFORMW 「典ぐらいには勝てるかもね」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……っ！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「大天狗をここまで追い詰めるとは君はすごいな！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「祭りは始まったばかりよ！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「流石だね！全く面白い人間だ！」
				ELSE
					PRINTFORMW 「ふふっ負けてしまうかもしれないね」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	CALL M_KOJO_COLOR_K140
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「これに懲りたら反省することね」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「まだまだ鍛錬が足りてないね」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「所詮は人間ということだな」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「おや？調子が悪かったのかな？」
				ELSE
					PRINTFORMW 「うん、肩慣らしにはちょうどいいな」
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「あまり人を怒らせるなよ」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「まあ、こんなものだろう」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「少しは楽しめたかな」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「白狼天狗に訓練してもらうといい、口を聞いとくよ」
				ELSE
					PRINTFORMW 「もっと訓練するといい、そうすればもっと強くなれる」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「これで変態でなければな……」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「痛たたた……流石だね」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「典にも見習わせたい強さだね」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「君の腕前なら山でもやっていけそうだな！」
				ELSE
					PRINTFORMW 「その実力なら烏天狗にでもなってみるかい？」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……」
					PRINTFORMW 龍は苦虫を噛み潰したような顔をしている。
				ELSEIF RAND:4 == 0
					PRINTFORMW 「ふっふっふお見事！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「哨戒天狗か、新聞記者にでもなってみる？君になら何でもできるよ」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「あいたた……楽しかったな！」
				ELSE
					PRINTFORMW 「全く……結構本気だったんだぞ？」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

