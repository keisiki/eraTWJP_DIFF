;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K130_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW 「私に喧嘩を売るとはいい度胸ですね」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「地獄は絶望的に広いのですよ、一丁目に案内して差し上げましょう」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「愚かな……私にどうにかできると思っているのですか？」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「いいでしょう、受けて立ちますよ」
		ELSE
			PRINTFORMW 「黒駒ほど馬鹿では無いようですか、いいでしょう」
		ENDIF
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……っ！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「……やりますね」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……偶然ですよ」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「かすり傷です」
				ELSE
					PRINTFORMW 「この程度では流れは変えられませんよ」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……いい加減にしなさい！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「意外とお強いのですね」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「このままでは負けてしまいますね……」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「人間にも意外と骨のある者がいるのですね」
				ELSE
					PRINTFORMW 「手加減の一つもしてくれないのですか？……冗談ですよ」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……死ね……」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「まずいですね……」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「これでは部下に示しがつきませんね」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「これほどの力があるとは……」
				ELSE
					PRINTFORMW 「流れが悪かったようですね」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……愚かですね」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「私に負けるようではまだまだですね」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「これは鍛え甲斐がありそうですね」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「こちらは無傷ですよ？手加減でもしましたか？」
				ELSE
					PRINTFORMW 「全くくだらない戦いでしたね」
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「大したことはありませんでしたね」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「貴方なら地獄に行っても瞬殺されることはないでしょう」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「結構なお手前で御座いますね」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「やりますね！%CALLNAME:MASTER%さん！」
				ELSE
					PRINTFORMW 「鍛錬が足りてないですよ～」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……手間取らせてくれましたね」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「結構なお点前で」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「まあ、黒駒よりは弱いですね」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「その程度では畜生界では通用しませんよ」
				ELSE
					PRINTFORMW 「……他の人間を探しますか」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……馬鹿」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「降参です……負けだと言ってます」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……さすがに強いですね」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「これなら畜生界の天下も取れるかも……いえ、何でもありませんよ」
				ELSE
					PRINTFORMW 「私を負かすなんて流石ですね」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

