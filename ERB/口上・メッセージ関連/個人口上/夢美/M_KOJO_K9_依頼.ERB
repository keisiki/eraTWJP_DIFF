@M_KOJO_IRAI_K9(ROLE, SCENE, IRAI_ID)
#DIMS ROLE     ;キャラの立場、依頼者かそうでないか
#DIMS SCENE    ;セリフの表示されるタイミング
#DIM  IRAI_ID  ;依頼自体のID
#DIM  CLIENT_ID;依頼者IDだけ抜き出したもの
#DIM  CHK_ID   ;依頼IDだけ抜き出したもの
CHK_ID    = IRAI_ID % 1000
CLIENT_ID = IRAI_ID_TO_CLIENT(IRAI_ID)
SELECTCASE ROLE
CASE "CLIENT"
	;一般依頼
	IF IS_COMMON_IRAI(IRAI_ID)
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
		CASE "一般依頼名"
			SELECTCASE SCENE
			CASE "依頼提示時"
			;依頼を持ちかけられる時
				IF IRAI_ID == 15
					;あなたにシて欲しいとき
					PRINTFORML 「ねぇ……ちょっと、コレは%CALLNAME:MASTER%にしか頼めないんだけど……」
					PRINTFORML 「聞いてくれるかしら……？%UNICODE(0x2764)%」
				ELSE
					PRINTFORML 「ちょっと%CALLNAME:MASTER%にお願いしたい事があるんだけど、良いかしら」
				ENDIF
			CASE "依頼非受託時"
			;内容だけ見て受託しなかった時
				IF IRAI_ID == 15
					PRINTFORML 「あぁん、そんなぁ……私はオナニーでもしてろってことなのかしら……もう\/\/\/」
					PRINTFORML 「まぁそれはともかく、またいつか抱いてくれると嬉しいわ」
				ELSE
					PRINTFORML 「あら、残念ね。また気が向いたときにでも手伝ってくれると嬉しいわ」
				ENDIF
			CASE "依頼受託時"
			;依頼を受託した時
				IF IRAI_ID == 15
					PRINTFORMDW 依頼を受諾した%CALLNAME:MASTER%の耳元で、夢美が囁く。
					PRINTFORML 「ふふ……ほんと？　あ・り・が・と……%UNICODE(0x2764)%」
					PRINTFORML 「それじゃ……早速、シましょ……？」
				ELSE
					PRINTFORML 「引き受けてくれるの？ありがとう、それじゃあよろしく頼んだわよ」
				ENDIF
			CASE "依頼確認時"
			;[366]で依頼内容を依頼人に確認した時
				PRINTFORML 「そういえば詳しい内容を伝えていなかったかしらね」
			CASE "依頼破棄時"
			;受託した依頼を破棄する時
				PRINTFORML 「まぁそういうこともあるわよね、仕方ないわよ」
			CASE "依頼実行直前"
			;[367]で依頼を実行する時、実行処理の前に呼び出される
			CASE "依頼実行直後"
			;[367]で依頼を実行する時、実行処理の後に呼び出される
			CASE "成功報告時"
			;報告時（成功）
				IF IRAI_ID == 15
					PRINTFORML 「はぁ……%UNICODE(0x2764)%はぁ……%UNICODE(0x2764)%　すごく、よかったぁ……%UNICODE(0x2764)%」
					PRINTFORMDW すっかり蕩けた顔になった夢美が、満足げにこちらを見ている。
					PRINTFORML 「ありがと、%CALLNAME:MASTER%……%UNICODE(0x2764)%」
				ELSE
					IF TALENT:3 || TALENT:8
						PRINTFORML 「ありがとう、やっぱり%CALLNAME:MASTER%に頼んで正解だったわね」
					ELSE
						PRINTFORML 「あ、無事終わったのね、ありがとう」
					ENDIF
				ENDIF
			CASE "失敗報告時"
			;報告時（失敗）
				PRINTFORML 「まぁ、上手くいかないこともあるわよ」
			;この他、報告忘れや期限切れで失敗扱いになり後日依頼人に遭遇した際にも表示
			ENDSELECT
		ENDSELECT
		RETURN
	ENDIF
	
	;固有依頼
	SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
	;個々の依頼名で分岐
	;SCENEのWAITに関する仕様
	;WAIT無しでよい　　　　："依頼提示時", "依頼非受託時", "依頼確認時", "依頼破棄時", "成功報告時", "失敗報告時"
	;
	;以下の2つは実際にはCARRYOUTでの地の文処理との比較検討が必要
	;WAITを入れたほうが適切："依頼実行直前", "依頼実行直後"
	CASE "固有依頼名"
		SELECTCASE SCENE
		CASE "依頼提示時"
		;依頼を持ちかけられる時
		CASE "依頼非受託時"
		;内容だけ見て受託しなかった時
		CASE "依頼受託時"
		;依頼を受託した時
		CASE "依頼確認時"
		;[366]で依頼内容を依頼人に確認した時
		CASE "依頼破棄時"
		;受託した依頼を破棄する時
		CASE "依頼実行直前"
		;[367]で依頼を実行する時、実行処理の前に呼び出される
		CASE "依頼実行直後"
		;[367]で依頼を実行する時、実行処理の後に呼び出される
		CASE "成功報告時"
		;報告時（成功）
		CASE "失敗報告時"
		;報告時（失敗）
		;この他、報告忘れや期限切れで失敗扱いになり後日依頼人に遭遇した際にも表示
		ENDSELECT
	ENDSELECT
CASE "TARGET"
	;ここで表示されるSCENEは"依頼実行直前", "依頼実行直後"だけです
	;一般依頼
	IF IS_COMMON_IRAI(IRAI_ID)
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
		;個々の依頼名で分岐してください
		CASE "一般依頼名"
		;人物が鍵になっていた・もしくは場所にたまたま居合わせた
			SELECTCASE SCENE
			;TARGETが呼ばれるのはこのタイミングだけ
			CASE "依頼実行直前"
			CASE "依頼実行直後"
			ENDSELECT
		ENDSELECT
		RETURN
	ENDIF
	SELECTCASE CSVCALLNAME(CLIENT_ID)
	;依頼者のCALLNAMEによる分岐（CSV準拠）
	CASE "依頼者"
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
		CASE "固有依頼名"
			SELECTCASE SCENE
			CASE "依頼実行直前"
			CASE "依頼実行直後"
			ENDSELECT
		ENDSELECT
	ENDSELECT
CASE "NO_REPORT"
	;日数経過時、報告不要依頼を達成していた場合に呼ばれる口上
	;ここで表示されるSCENEは"依頼報告不要"だけです
	;SCENEが一つしか無いので分岐は不要
	;また、必ず依頼主の口上が呼ばれます
	;一般依頼
	IF IS_COMMON_IRAI(IRAI_ID)
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
		;個々の依頼名で分岐してください
		CASE "一般依頼名"
		CASE "お花に水をあげて"
		CASE "誰かの落とし物"
		ENDSELECT
		RETURN
	ENDIF
	SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
	CASE "固有依頼名"
	ENDSELECT
ENDSELECT
