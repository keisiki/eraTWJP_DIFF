;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K9_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		PRINTFORML 「うん？私と弾幕で勝負がしたい、ですって？」
		PRINTFORML 「ふぅん……いいわよ。あ、言っておくけど、手加減とかはしないからね？」
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 「まだまだ、こんなものかしら？」
			CASE 2
				PRINTFORML 「ッ？！、当たった？でもまだ！」
			CASE 1
				SELECTCASE RAND:4
					CASE 0
						PRINTFORML 「いかん！！やられる！？」
					CASE 1
						PRINTFORML 「ああっ、もうダメぇ！！……かも\/\/\/」
					CASE 2
						PRINTFORML 「まだ、まだ終わらないわよ%CALLNAME:MASTER%！！」
					CASEELSE
						PRINTFORML 「うそっ！？まさか？！この私が押されているですって？！」
				ENDSELECT
			CASE 0
				PRINTFORML 「やだぁ？！うそでしょ、私やられちゃったの！？」
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		PRINTFORML 「ちゆりにゲンコツ食らわすときよりも、キツくいくわよ……！」
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		PRINTFORML 「この一撃でキメてやるわ！」
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		PRINTFORML 「ストロベリー・クライシスパワー、メ○ク……アーーップ！」
		PRINTFORMDW おいやめろ馬鹿この変身は早くも終了ですね
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				PRINTFORML 「まだまだ、修行が足りないわねえ……またいらっしゃい」
			CASE 2
				PRINTFORML 「私に一撃当てるって、%CALLNAME:MASTER%も中々やるじゃない、またやりましょ」
			CASE 1
				PRINTFORML 「ふーっ……危なかったわ、あと少しでヤられちゃうところだったわ」
				PRINTFORML 「案外、次は勝てちゃったりするかもよ？」
			CASE 0
				PRINTFORML 「まさか私が負けるとはね……結構自信あったんだけどなぁ……」
				PRINTFORML 「いい勝負だったわ、またやりましょう」
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

