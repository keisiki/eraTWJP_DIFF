;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K26_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW 「美しく残酷にこの大地から住ね！」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「生憎と私の弾幕は蜘蛛の糸より細く、蜘蛛の巣より複雑ですわ」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「私の結界を破れるかしら？」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「少し灸をすえてあげましょう」
		ELSE
			PRINTFORMW 「身の程知らずか、蛮勇は勇敢ではないと知りなさい」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「油断したか…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「私の結界は一つや二つではありませんわ」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「あら？当てられた？」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…何か当たりまして？」
				ELSE
					PRINTFORMW 「やだ、服が破れてしまいますわ」
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「このっ！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「うーん、あまりいい状況ではありませんわね」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「中々手練れのようね、%CALLNAME:MASTER%」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…私の眼からは逃れられない！」
				ELSE
					PRINTFORMW 「弾幕のスキマをいつまで抜けられるのかしら？」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「…このままでは不味いわね」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「藍も橙もどこへ行ったのかしら？」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「追い詰められた狐というやつね、私」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「苦肉の策、思い知らせてあげるわ」
				ELSE
					PRINTFORMW 「ここまで追い詰めたことを褒めてあげるわ」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「そんな道を通るなんて聞いてない…」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「人妖の境界線を越えたかしら」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「あら？負けましたわ」
				ELSE
					PRINTFORMW 「…勝運が上がる色は何色かしら？」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		IF RAND:4 == 0
			PRINTFORMW 「ラストスペル、懐かしいわね」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「油断した？もっと私をよく見て…」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「こういう時に油断をしてはダメよ」
		ELSE
			PRINTFORMW 「カウンターパンチってやつですわ」
		ENDIF
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		IF RAND:4 == 0
			PRINTFORMW 「柔よく剛を制す、かしら」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「生憎ですが効かないわ」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「中らずと雖も遠からず、では『あたらなかった』ことにしましょう」
		ELSE
			PRINTFORMW 「この程度では当たった内に入りませんわ」
		ENDIF
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「天界に昇った猿は、与えられた役職に怒って反逆し、結果、山に閉じ込められるのです」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「ざぁんねん、%CALLNAME:MASTER%の完全敗北ですわ」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「撃つ、斬る、衝く、放つ、殺す…何を取っても私には効きません」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「時を止めても覆水盆に返らず、貴方はお盆に水を入れる？」
				ELSE
					PRINTFORMW 「貴方だけにこっそり教えてあげましょう、私に弱点は…何にも無いのですよ」
				ENDIF
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「八つ裂きがいい？それともマグロ？」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「幻想郷は全てを受け入れるのよ、それはそれは残酷な話ですわ」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「撃つ、斬る、衝く、放つ、殺す…何を取っても私には効きません」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「生憎と私も柔ではなくてね」
				ELSE
					PRINTFORMW 「西洋タンポポより苦戦しなかったわ」
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「これだから、厄介なのよねぇ」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「あたた…結構痛いですわ」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「どう？もう慣れたかしら？」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「互角とは言えまだまだ私の方が上ねぇ」
				ELSE
					PRINTFORMW 「藍になら、勝てるかもしれないわ」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「しつこい男は嫌いよ」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「才能あるわよ、%CALLNAME:MASTER%」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「強敵でした、%CALLNAME:MASTER%」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「どう？異変解決してみない？」
				ELSE
					PRINTFORMW 「紙一重、だけどその隔たりは三途の川より広いですわ」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「…全く、この私をここまで…！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「私を負かすだなんて相当な実力ね」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「これなら霊夢より強いかもしれませんわね」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「藍や橙と一緒に戦った方が良かったかしら？」
				ELSE
					PRINTFORMW 「また、戦ってくださるかしら？」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

