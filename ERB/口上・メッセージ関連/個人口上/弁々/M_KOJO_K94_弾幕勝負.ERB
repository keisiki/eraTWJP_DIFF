;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K94_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW 「潰す…！」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「私の実力、見せてあげるわ！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「私の相手になるのかしら？」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「あんたの相手はこの私だよ！」
		ELSE
			PRINTFORMW 「私の音楽の相手になるのかしら♪」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「この…！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「まだ終わってないわ！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「掠っただけね！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「この程度では！」
				ELSE
					PRINTFORMW 「ふん、まだまだ！」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「小賢しい！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「私が追い詰められている！？」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「意外とやるじゃないの」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「もう後が…」
				ELSE
					PRINTFORMW 「いい加減に沈みなさいよ！」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「…馬鹿…！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…やられたわ」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「負けたのね…」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「そんな…」
				ELSE
					PRINTFORMW 「…強い」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
	
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「人に喧嘩を売るくせに弱いんだぁ」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「これで私の天下に一歩近づいたかしら？」
				ELSEIF RAND:3 == 0
					PRINTFORM 「なんだ、弱っちいのね、
					CALL MASTER_CALLNAME_K94
					PRINTFORMW …」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「ふーん、意外と大したことないんだ」
				ELSE
					PRINTFORMW 「これで終わり？拍子抜けね」
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「てこずらせてくれちゃって…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…ノーミスとはいかなかったわね…」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「うーん、イマイチのれなかったわ」
				ELSEIF RAND:2 == 0
					PRINTFORM 「、
					CALL MASTER_CALLNAME_K94
					PRINTFORMW 、本気出した？」
				ELSE
					PRINTFORMW 「もっと私を楽しませてほしかったな」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「しんどい…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「もう少しで負けるところだったわ…」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K94
					PRINTFORMW …意外とやるわね…」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…痛た…」
				ELSE
					PRINTFORMW 「まだまだ天下には程遠いかな…」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORM 「嫌いよ、
					CALL MASTER_CALLNAME_K94
					PRINTFORMW 、…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「うーん、まいったまいった、降参よー」
				ELSEIF RAND:3 == 0
					PRINTFORM 「流石
					CALL MASTER_CALLNAME_K94
					PRINTFORMW 、只者じゃないわね…」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「私じゃかなわないか…」
				ELSE
					PRINTFORMW 「今度は八橋も連れてこようかしら？」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

