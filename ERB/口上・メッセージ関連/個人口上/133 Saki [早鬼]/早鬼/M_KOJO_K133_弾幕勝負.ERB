;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K133_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW 「お前の……罪は重い！」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「私は死を背負い、お前は生を背負っている、どちらが正しいか今この場で答えを出すか！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「さあ！お前の力、この漆黒の天馬に見せてみせよ！
		ELSEIF RAND:2 == 0
			PRINTFORMW 「強くなければ生きていけないって言うけどどのぐらい強ければいいんだろうな？試してみるとするか！！！」
		ELSE
			PRINTFORMW 「吉弔よりは歯ごたえがあってくれよ？」
		ENDIF
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……一々むかつくなっ！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「中々やるな！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「どうにも具合が悪いようだな……」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「吉弔みたいないけ好かない奴と違って好戦的で気持ちいいぞ！」
				ELSE
					PRINTFORMW 「ふはははは！流石に手強いな！」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……このっ！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「ここまでやるとはな！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「楽しくなってきたな！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「まだまだ楽しませてもらうぞ！」
				ELSE
					PRINTFORMW 「あっはっは！笑うしかないな！！！」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……殺す……！！！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「リスクやマイナスなら起爆剤だな！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「窮鼠猫を噛むと言うが……私には脚があるからな！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「まだまだだ！この瞬間が！私達の！」
				ELSE
					PRINTFORMW 「追い詰められた？いやどうだかな！！！」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「お前に負けるような私ではないよ」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「まだ本気を出していないんだろ！そうだろ！！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「私の筋肉を読め！そうすれば避けられるぞ！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「まだまだ鍛え方が足りないぞ！腹筋100回からだな！」
				ELSE
					PRINTFORMW 「ふむふむ……では私が鍛えてやろう！スパルタだがな！」
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「ふんっ、気に入らないな！わたしに傷をつけるなんて！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「かすり傷とはいえ手傷を負わせるとはやるな！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「吉弔より弱いな！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「まだまだ弱いな！もっと鍛錬してやろう！」
				ELSE
					PRINTFORMW 「何よりもお前には速さが足りない！」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……とんだ馬鹿もいたもんだな」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「ふふふふふ！中々楽しかったぞ！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「追い詰められたときこそ本性が出ると言うが私は楽しいぞ！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「それだけできるならどこまでも駆けていけそうだな！」
				ELSE
					PRINTFORMW 「いたたたた……なんて強さだ！惚れてしまいそうだぞ！」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「ぐぅ……悔しい……」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「お前の背中には追いつけそうもないな……」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……人間にこれほどの力があるとはな……」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「畜生界でもそうそういない強さだ！惚れたぞ！」
				ELSE
					PRINTFORMW 「これならどんな敵にも勝てそうだな！」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

