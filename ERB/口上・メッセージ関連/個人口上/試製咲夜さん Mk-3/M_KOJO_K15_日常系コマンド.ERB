@M_KOJO_MESSAGE_COM_K15_300
;コマンド共通メッセージ(TRAIN_MESSAGE) 
;削除すると「～話をした。」とかが消えます
CALL TRAIN_MESSAGE
;口上メイン呼出
CALL M_KOJO_MESSAGE_COM_K15_300_1
RETURN RESULT

@M_KOJO_MESSAGE_COM_K15_300_1
;-------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	IF TCVAR:302 && !TALENT:恋慕
		RETURN RESULT
	ELSEIF CFLAG:318 == 1
		;ど怒り状態
		PRINTFORML 「………」
		PRINTFORML 無言でこちらを睨んでいる咲夜に、%CALLNAME:PLAYER%は何度も頭を下げて謝った
		RETURN RESULT
	ENDIF
	ELSEIF TFLAG:193 >= 0
		IF RAND:6 == 0
			IF TIME >= 360 && TIME <= 1080
				PRINTFORMW 「少し時間も遅くなってきましたね……」
			ELSE
				PRINTFORMW 「さっきのご飯はどうでしたか？うまく出来ていたらいいのですが」
			ENDIF
		ELSEIF RAND:5 == 0
			PRINTFORMW 「そう言えば、この前美鈴が居眠りしてて……」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「最近、お嬢様の寝つきが良くないんだけど……」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「最近また魔理紗が本を盗んで行くのだけど、何か対策あるかしら」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「パチュリー様が図書館から出て運動したがってるらしいの」
			PRINTFORMW 「そろそろ運動しないとダメとも思うらしいのだけど、持病の喘息もあるし……ままならないわね」
		ELSE
			PRINTFORMW 「最近メイド妖精達が騒がしいの」
			PRINTFORMW 「%CALLNAME:MASTER%が来るたび、私に報告に来るのよ……」		
		ENDIF
	ENDIF
RETURN 1
;==================================================
;301,お茶を淹れる
;==================================================
@M_KOJO_MESSAGE_COM_K15_301
CALL TRAIN_MESSAGE
CALL M_KOJO_MESSAGE_COM_K15_301_1
RETURN RESULT

@M_KOJO_MESSAGE_COM_K15_301_1
;-------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	SIF TALENT:恋慕
		PRINTFORML 「あら、次は私に淹れさせてね？」
	IF TFLAG:193 == 1
		PRINTFORML 「……美味しいわ」
		PRINTFORML 独り言のような褒め言葉は裏表がない正直なものだった
		PRINTFORMW それに満足した%CALLNAME:MASTER%は、静かに咲夜と杯を共にした
	ELSEIF TFLAG:193 == -1
		PRINTFORML 「……ダメですね、とてもお嬢様に出せる味では無いです」
		PRINTFORML 咲夜が真顔で酷評する
		PRINTFORML その言い草にムっと来た%CALLNAME:MASTER%は、コップを返してもらいそれを一気に煽った
		PRINTFORMW そのあまりの不味さに凍りついた%CALLNAME:MASTER%に、苦笑を浮かべる咲夜だった
	ELSE
		PRINTFORML 「ふむ、合格です」
		PRINTFORMW 咲夜はリラックスした様子で紅茶を飲んでいる
	ENDIF
ENDIF
RETURN 1
