;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K97_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW 「私を怒らせたツケってのを払ってもらおうか！」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「さあ！お手柔らかに頼むぜ旦那！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「何もかもが逆しまの世界で逝き場に迷いやがれ！」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「弱者の意地ってのを見せてやるよ！」
		ELSE
			PRINTFORMW 「残念だがてめぇはここで終わりだよ！」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「調子に乗るんじゃねえぞ！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「ほう、やるじゃねえか」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「ああん？なんだそのやる気のない弾は？」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「ふん、いい気になるなよ！」
				ELSE
					PRINTFORMW 「大した事ねえな！」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「クソが！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「はっ！ピンチってやつか！最高だな！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「追い詰められた天邪鬼は凶暴でね！それに慣れっこだよ！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「生憎と一度だって有利な戦いをしたことが無くてね！」
				ELSE
					PRINTFORMW 「残機1、状況は最高、反逆してやるよ！」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「ふざけんなよ…！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…クソッタレが…！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「…やるじゃねえか」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「……」
				ELSE
					PRINTFORMW 「なあに、いつものことだ…」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		IF RAND:4 == 0
			PRINTFORMW 「卑怯上等非理非道ってねぇ！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「油断してるんじゃねえぞ強者様よぉ！」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「落とし物してないか、確かめた方がいいんじゃねえか？」
		ELSE
			PRINTFORMW 「ここらで一つくたばってみるか？」
		ENDIF
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「ふん、これに懲りたら私を怒らせるんじゃねえぞ」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「はっはっはっ、私に負けてるんじゃダメだね」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「なんだ、案外大した事ねえなお前」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「期待外れだったな」
				ELSE
					PRINTFORMW 「なんだ、お前もこっち側か」
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「チッ…てこずらせやがって…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…コメントに困る強さだな」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「意外と弱かったな」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「お前も弱者側に付くか？」
				ELSE
					PRINTFORMW 「面白かったよ、旦那」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「クソッ…私より質が悪いんじゃねえかお前…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…てこずらせやがって、こうでなきゃな！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「いてて…いやあ、つまらなかったな！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「最高に面白くなかったな！」
				ELSE
					PRINTFORMW 「…やってくれるじゃねえか」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「クソが！覚えてやがれ！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…ふん、生きていれば、何度でもやれるさ」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「いやあ、やるじゃねえか旦那！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「くう、なんてこった、時期尚早だったか」
				ELSE
					PRINTFORMW 「…いつか絶対勝ってやるからな、覚えてろよバーカ！」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

