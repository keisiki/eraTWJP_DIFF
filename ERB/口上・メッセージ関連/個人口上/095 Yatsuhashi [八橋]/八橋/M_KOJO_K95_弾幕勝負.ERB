;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K95_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW 「あったま来た！喧嘩売ったこと後悔させてやるんだから！」
		ELSEIF RAND:4 == 0
			PRINTFORM 「わっほーい！勝負よ！
			CALL MASTER_CALLNAME_K95
			PRINTFORMW ！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「私の音楽でのしてあげるんだから！」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「鎮魂ライブの始まり始まりー！」
		ELSE
			PRINTFORMW 「道具だからって甘く見ないでよね！」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「へん！こんなのでやったと思わないでよ！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「痛っ！もう！優しくしてよ！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「この程度！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「まぐれ当たりなんて！」
				ELSE
					PRINTFORMW 「まだまだ！これからよ！」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「うー、このままじゃ…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「どうしよ…このままじゃ負けちゃう！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「私だって…やるときはやるんだから！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「勝負はこれからよ！」
				ELSE
					PRINTFORMW 「諦めないんだから！」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW の馬鹿ー！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「ぐぅ…」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「わーお、こりゃ無理だー」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「あたた…」
				ELSE
					PRINTFORMW 「…ダメか…」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
	
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「どう！ちゃんと謝ってよね！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「やったー！勝てた！」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW 、調子悪かったの？」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「ふふん、どんなもんよ！」
				ELSE
					PRINTFORMW 「もっと歯ごたえが欲しかったわね」
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「へん！負けないんだから！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「あーもう！髪の毛乱れちゃった！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「いてて…擦りむいちゃった…」
				ELSEIF RAND:2 == 0
					PRINTFORM 「、
					CALL MASTER_CALLNAME_K95
					PRINTFORMW もまあまあ強いわね！」
				ELSE
					PRINTFORMW 「いい勝負だったわ！」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「あ…危なかった…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「危なかった…」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW 、強いなー」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「激闘だったわね…疲れた…」
				ELSE
					PRINTFORMW 「辛勝ってやつね…」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW なんて嫌い！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「うーん、まいったまいった、降参よー」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW 、強いのね！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「悔しいな…」
				ELSE
					PRINTFORMW 「姉さんとタッグ組んでリベンジするわ！」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

