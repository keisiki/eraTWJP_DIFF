;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K124_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		PRINTFORML 「へぇ、私に挑む気か。なかなかの蛮勇っぷりじゃないか」
		PRINTFORMW 隠岐奈は背中から四季色のオーラを噴出させた。
		HANDICAP_FIXED = 0
		HANDICAP_RAND = 0
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				PRINTFORML 「ふっ、少しは骨があるようだな？では、これはどうだ？」
				PRINTFORMW 「秘儀『七星の剣』！さあ、できるものなら華麗に避けてみせよ！」
			CASE 1
				PRINTFORML 「ははは！まさかここまで追いつめられるとは思わなかったぞ！」
				PRINTFORML 「だがな……『アナーキーバレットヘル』！！ここでお前は終わりだ！」
				PRINTFORMW 絶望的なまでの弾幕が%CALLNAME:MASTER%を覆い尽くす！
			CASE 0
				PRINTFORML 「なっ、ぐうぅっ！？」
				PRINTFORMW ……ついに、隠岐奈の最終弾幕を打ち破った！
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		SELECTCASE RAND:3
			CASE 0
				PRINTFORML 「この私に、容易く勝てると思うなよ？」
				PRINTFORMW 隠岐奈は四季の魔力を漲らせた…！
			CASE 1
				PRINTFORML 「後戸の秘神を嘗めるでないぞ？さあ、存分に覚悟せよ！」
				PRINTFORMW 隠岐奈は一層強く魔力を漲らせ、鋭い目つきでこちらを見据えた。
			CASE 2
				PRINTFORML 「ふっふっふ…完膚なきまでに叩きのめしてやろう！」
				PRINTFORMW 隠岐奈は不敵な笑みを浮かべると、纏うオーラを一層激しいものにした。
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		SELECTCASE RAND:3
			CASE 0
				PRINTFORML 「おおっと！…ふふふ、惜しかったな？」
				PRINTFORMW 隠岐奈は咄嗟に魔力を解放して被弾を防いだ。
			CASE 1
				PRINTFORML 隠岐奈は咄嗟に魔力を解放して被弾を防いだ。
				PRINTFORMW 「くくっ、やるじゃないか！流石に今のは肝が冷えたぞ？」
			CASE 2
				PRINTFORML 「おっと危ない！開け、背中の扉！」
				PRINTFORMW 隠岐奈は手を掲げると、後戸を使って弾幕をどこかへ飛ばしてしまった…。
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3, 2
				PRINTFORML 「ふふん。まあ当然の勝利だな！」
				PRINTFORML 隠岐奈は盛大なドヤ顔を見せている。
				PRINTFORMW 「それにしても、腰抜けめ……修行が足りんぞ、修行が！」
			CASE 1
				PRINTFORML 「少しはやるようだったが……まあ、私には勝てなくて当然だ、気にするな！」
				PRINTFORMW 隠岐奈は盛大なドヤ顔を見せている。
			CASE 0
				PRINTFORML 「やられたー！合格です！！
				PRINTFORML %CALLNAME:MASTER%、暗黒能楽に興味はなーい？」
				PRINTFORMW 勧誘モードなのか、隠岐奈が急に馴れ馴れしくなった……。
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

