;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K27_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 「本気を出すよ！」
			CASE 2
				PRINTFORML 「なかなかやるね！」
			CASE 1
				PRINTFORML 「ひぇぇ」
			CASE 0
				PRINTFORML 「うわぁぁぁん」
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
				CFLAG:K27C_弾幕敗北回数 += 1
			CASE 3
				PRINTFORML 「私たちの勝利だね！」
				CFLAG:K27C_弾幕敗北回数 += 1
			CASE 2
				PRINTFORML 「五分の魂、見たかー！」
				CFLAG:K27C_弾幕敗北回数 += 1
			CASE 1
				PRINTFORML 「やったー、勝ったー！」
				CFLAG:K27C_弾幕敗北回数 += 1
			CASE 0
				PRINTFORML 「うわぁぁぁん」
				CFLAG:K27C_弾幕勝利回数 += 1
				
				IF (CFLAG:K27C_弾幕勝利回数 >= 30 || CFLAG:142:弾幕勝負勝利 == 1) && CFLAG:1008 == 0
					PRINTFORML 「%CALLNAME:MASTER%って、本当に強いんだね…」
					SIF CFLAG:142:弾幕勝負勝利 == 1
					PRINTFORML 「そういえば、%CALLNAME:MASTER%は大蜈蚣より強いんだった…そりゃ勝てるわけないかあ」
					PRINTFORML 「私、%CALLNAME:MASTER%みたいな強い\@ (TALENT:MASTER:性別 == 2 || TALENT:MASTER:性別 == 3) ? オス # 人 \@は大好きだよ…❤）
					IF TALENT:MASTER:性別 == 2 || TALENT:MASTER:性別 == 3
						PRINTFORML 「%TEXTR(@"%CALLNAME:MASTER%/君")%となら、強い子孫を残せそうかも…❤」
						PRINTW 
						PRINTFORML リグルの雌の本能は、\@ CFLAG:142:弾幕勝負勝利 == 1 ? 大蜈蚣すら打ち負かす # 自身を完膚なきまでに叩きのめした \@%CALLNAME:MASTER%を魅力的に感じているようです
						PRINTFORML リグルは、%CALLNAME:MASTER%の精子で孕みたいと思うようになりました
						PRINTW 
						CFLAG:生解禁 = 2
					ELSE
						PRINTFORML 「ああ～、これで%CALLNAME:MASTER%がオスだったらもっとよかったのになぁ…」
						PRINTW 
						PRINTFORML リグルは、%CALLNAME:MASTER%にちんちんが生えてればなあ…と思っているようです
					ENDIF
					CFLAG:1008 = 1
				ELSEIF CFLAG:K27C_弾幕勝利回数 == 15
					PRINTFORML 「うぅ、%CALLNAME:MASTER%は強いなあ」
					PRINTFORML （ボロボロにされちゃったけど…つがいにするなら%CALLNAME:MASTER%みたいな強い人かなあ）
					PRINTL 
					PRINTFORML リグルは、強者である%CALLNAME:MASTER%を好ましく思っているようです
					PRINTFORML （リグルをもっと打ち負かすか、強大な蟲の妖怪を打ち負かすと…？）
					PRINTW 
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

