;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K83_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;酔ってる
		IF M_KOJO_K83_YOIDORE([[キスメ]])
			CALL M_KOJO_K83_TALKSET("酔いどれ")
		;不機嫌
		ELSEIF M_KOJO_K83_FUKIGEN([[キスメ]])
			PRINTFORMW 「えぇ……わ、判った……」
		;通常
		ELSE
			IF TALENT:[[キスメ]]:恋人
				PRINTFORMW 「ま、負けないよ……！」
			ELSEIF TALENT:[[キスメ]]:恋慕
				PRINTFORMW 「が、がんばる……！」
			ELSEIF TALENT:[[キスメ]]:思慕
				PRINTFORMW 「よ、よろしく……」
			ELSE
				PRINTFORMW 「わ、わたし弱っちいよ……」
			ENDIF
		ENDIF
		RETURN 0
	ENDIF
;	;-------------------------------------------------
;	;ハンデ
;	;記入チェック（=0, 非表示、1, 表示）
;	LOCAL:1 = 0
;	;-------------------------------------------------
;	IF LOCAL:1 && ARGS == "ハンデ"
;		;ハンデつけなかったら表示されないので無記入でよい
;		PRINTFORML 
;		RETURN 0
;	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾"
		;最後
		IF 相手残機 == 0
			;酔ってる
			IF M_KOJO_K83_YOIDORE([[キスメ]])
				PRINTFORML 「んー…？？」
			;不機嫌
			ELSEIF M_KOJO_K83_FUKIGEN([[キスメ]])
				PRINTFORML 「…………」
			;通常
			ELSE
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「や、やられた……」
				CASE 2
					PRINTFORML 「つ、つよい……」
				CASEELSE
					PRINTFORML 「も、もうだめ……」
				ENDSELECT
			ENDIF
		ELSE
			;酔ってる
			IF M_KOJO_K83_YOIDORE([[キスメ]])
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「ふぇっ！？」
				CASE 2
					PRINTFORML 「んんっ！？」
				CASEELSE
					PRINTFORML 「……！？」
				ENDSELECT
			;不機嫌
			ELSEIF M_KOJO_K83_FUKIGEN([[キスメ]])
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「もうやだ……」
				CASE 2
					PRINTFORML 「いたい……」
				CASEELSE
					PRINTFORML 「うぅ……」
				ENDSELECT
			;通常
			ELSE
				PRINTFORML 「%M_KOJO_K83_AUTO("被弾")%」
			ENDIF
		ENDIF
	ENDIF
;	;-------------------------------------------------
;	;戦闘中
;	;TARGETの【残忍酷薄】発動時
;	;ARGはTARGETの残機
;	;記入チェック（=0, 非表示、1, 表示）
;	LOCAL:1 = 0
;	;-------------------------------------------------
;	IF LOCAL:1 && ARGS == "残忍酷薄"
;		
;	ENDIF
;	;-------------------------------------------------
;	;戦闘中
;	;TARGETの【乾坤一擲】発動時
;	;ARGはTARGETの残機
;	;記入チェック（=0, 非表示、1, 表示）
;	LOCAL:1 = 0
;	;-------------------------------------------------
;	IF LOCAL:1 && ARGS == "乾坤一擲"
;		
;	ENDIF
;	;-------------------------------------------------
;	;戦闘中
;	;TARGETの【怪力乱神】発動時
;	;ARGはTARGETの残機
;	;記入チェック（=0, 非表示、1, 表示）
;	LOCAL:1 = 0
;	;-------------------------------------------------
;	IF LOCAL:1 && ARGS == "怪力乱神"
;		
;	ENDIF
;	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		;あなた勝利
		IF 相手残機 == 0
			;酔ってる
			IF M_KOJO_K83_YOIDORE([[キスメ]])
				PRINTFORMW 「あれ……？」
			;不機嫌
			ELSEIF M_KOJO_K83_FUKIGEN([[キスメ]])
				PRINTFORMW 「ひどい…………」
			;通常
			ELSE
				IF TALENT:[[キスメ]]:恋人
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%～、手加減してよぅ……」
					CASE 2
						PRINTFORMW 「楽しかった…♪」
					CASEELSE
						PRINTFORMW 「また遊ぼうね…♪」
					ENDSELECT
				ELSEIF TALENT:[[キスメ]]:恋慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「強い人はいいなぁ……」
					CASE 2
						PRINTFORMW 「相手にならないや……」
					CASEELSE
						PRINTFORMW 「負けたけど、楽しかった……」
					ENDSELECT
				ELSEIF TALENT:[[キスメ]]:思慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%は強いね……」
					CASE 2
						PRINTFORMW 「く、くやしい……」
					CASEELSE
						PRINTFORMW 「負けちゃった……」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「ま、負けた……」
					CASE 2
						PRINTFORMW 「む、無理……」
					CASEELSE
						PRINTFORMW 「%CALLNAME:MASTER%、強い……」
					ENDSELECT
				ENDIF
			ENDIF
		;キスメ勝利
		ELSE
			;酔ってる
			IF M_KOJO_K83_YOIDORE([[キスメ]])
				PRINTFORMW 「あははっ！ おもしろかったー！」
			;不機嫌
			ELSEIF M_KOJO_K83_FUKIGEN([[キスメ]])
				PRINTFORMW 「…………ばか」
			;通常
			ELSE
				IF TALENT:[[キスメ]]:恋人
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%、わたしより弱いなんて……」
					CASE 2
						PRINTFORMW 「い、痛かった…？ ごめんね……」
					CASEELSE
						PRINTFORMW 「今度特訓しようね…♪」
					ENDSELECT
				ELSEIF TALENT:[[キスメ]]:恋慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「う、運が良かった…！」
					CASE 2
						PRINTFORMW 「%CALLNAME:MASTER%も強かった……」
					CASEELSE
						PRINTFORMW 「ふふ、楽しい……」
					ENDSELECT
				ELSEIF TALENT:[[キスメ]]:思慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「あれ……勝っちゃった……」
					CASE 2
						PRINTFORMW 「い、いい勝負だった……」
					CASEELSE
						PRINTFORMW 「ご、ごめん……」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「よわ……」
					CASE 2
						PRINTFORMW 「え……おしまい…？」
					CASEELSE
						PRINTFORMW 「おとなしくしてたほうが……」
					ENDSELECT
				ENDIF
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

