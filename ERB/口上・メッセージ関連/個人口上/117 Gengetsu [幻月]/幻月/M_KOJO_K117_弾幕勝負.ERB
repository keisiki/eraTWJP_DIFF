;==================================================
;弾幕勝負
;==================================================
;
;幻月の特性
;	豪放磊落、残忍酷薄、狷介孤高
;
@M_KOJO_MESSAGE_COM_K117_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318
			PRINTFORMW 「私が悪魔であること、思い出させてあげるわ」
		ELSE
			PRINTFORML 「悪魔の力、見せてあげるわ」
			PRINTFORMW 幻月の体から計り知れないほどの力があふれてくるのを%CALLNAME:MASTER%は感じた。
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;恋慕、愛欲でこんな奴呼ばわりはさすがにひどいかなーと
				IF CFLAG:318
					IF TALENT:恋慕 || TALENT:思慕
						PRINTFORML 「ただの人間のくせに……」
					ELSE
						PRINTFORML 「っつ、こんな奴に……」
					ENDIF
				ELSE
					PRINTFORML 「ただの人間にしてはやるじゃない」
				ENDIF
			CASE 1
				IF CFLAG:318
					PRINTFORML 「っく、このままじゃ……」
				ELSE
					PRINTFORML 「もう後がない……！」
				ENDIF
			CASE 0
				IF CFLAG:318
					PRINTFORML 「そんな……こんな奴に……私が――――」
				ELSE
					PRINTFORML 「え、うそぉ？！」
					PRINTFORML 空を駆ける幻月の体を%CALLNAME:MASTER%の弾幕が捉えた――――
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		SELECTCASE 相手残機
			CASE 3
				PRINTFORML 「あら、この程度なの？」
			CASE 2
				PRINTFORML 「まだまだいくわよ！」
			CASE 1
				PRINTFORML 「まだ終わってないわ！」
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		IF CFLAG:318
			SELECTCASE 相手残機
				CASE 4
					PRINTFORML 
				CASE 1,2,3
					PRINTFORMW 「私の力、思い知ったかしら？」
				CASE 0
					PRINTFORML 「そんな……私が……」
					PRINTFORMW 幻月は信じられないという風に座り込んでいる。
			ENDSELECT
		ELSE
			SELECTCASE 相手残機
				CASE 4
					PRINTFORML 
				CASE 3
					PRINTFORML 「この程度じゃ相手にならないわ」
					PRINTFORML 「鍛えなおしてきなさい」
				CASE 2
					PRINTFORML 「まだまだ、でも筋は悪くなかったわよ」
				CASE 1
					PRINTFORML 「ふぅ、なんとか勝てたわ」
					PRINTFORML 「なかなかやるわね、%CALLNAME:MASTER%」
				CASE 0
					PRINTFORML 「まさか私が負けるなんて……」
					PRINTFORML 「%CALLNAME:MASTER%、ほんとに人間？」
			ENDSELECT
			IF 相手残機 > 0
				PRINTFORMW そう言いながら幻月は倒れる%CALLNAME:MASTER%に手を貸してくれた。
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

