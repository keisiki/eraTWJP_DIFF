;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K110_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW 「『末永く、死ね』！」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「……」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「……試してみるわ、貴方の力を」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「……穢れにまみれた地上人如きに負ける私ではないわ」
		ELSE
			PRINTFORMW 「……『徒花と散るがいい』！」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「……！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……当たった？」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「……この程度では」
				ELSE
					PRINTFORMW 「……偶然ね」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「……馬鹿な……」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……まぐれではない？」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「……意外と強いのね」
				ELSE
					PRINTFORMW 「『このままでは貴方が勝つわね』！」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……この……！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「……負けた……」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……実力はあるようね」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「……っ！」
				ELSE
					PRINTFORMW 「……！！！」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……いつ死ぬの？」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「……大した事、なかったわね」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……所詮地上人か」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「……生きてる？」
				ELSE
					PRINTFORMW 「……」
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「厄介ね、しぶといのは」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「……あんまり強くはなかった」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……まあまあ強いわね」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「……」
				ELSE
					PRINTFORMW 「……」
					PRINTFORMW サグメは少し興味深げにこちらを見ている。
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……てこずらせてくれる」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「……中々強いわね」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……こちらも追い詰められていた……勝てたのは偶然か」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「……危うい所だったわね」
				ELSE
					PRINTFORMW 「……」
					PRINTFORMW サグメは興味深げにこちらを見ている。
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……下衆が」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「……強いのね、%CALLNAME:MASTER%」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……負けたのか……」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「……地上人の力というのも侮れないわね」
				ELSE
					PRINTFORMW 「……」
					PRINTFORMW サグメは興味深げにこちらの顔を覗き込んでいる。
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

