;戦闘能力を上げれば戦えるはず！
;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K70_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
	SIF FLAG:口上色
		TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		IF ALCOHOL_FACE(70) == "酔いどれ" || ALCOHOL_FACE(70) == "ぐでぐで"
			PRINTFORMW 「はぇ～？？ 弾幕ごっこですかぁ～？」
		ELSEIF TALENT:70:機嫌 == -1 || CFLAG:70:ブチギレ || MARK:70:反発刻印 >= 3
			PRINTFORMW 「うぅ……そんな気分じゃないんですが……」
		ELSE
			SELECTCASE RAND:3
			CASE 1
				PRINTFORMW 「特訓の成果を見せましょう！」
			CASE 2
				PRINTFORMW 「私だって戦えるんです！」
			CASEELSE
				PRINTFORMW 「お手柔らかにお願いします！」
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;最後
		IF 相手残機 == 0
			IF ALCOHOL_FACE(70) == "酔いどれ" || ALCOHOL_FACE(70) == "ぐでぐで"
				PRINTFORML 「いった～っ……」
			ELSEIF TALENT:70:機嫌 == -1 || CFLAG:70:ブチギレ || MARK:70:反発刻印 >= 3
				PRINTFORML 「あーあ……」
			ELSE
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「ひぁぁ～…」
				CASE 2
					PRINTFORML 「もうだめ～…」
				CASEELSE
					PRINTFORML 「やられた～…」
				ENDSELECT
			ENDIF
		ELSE
			IF ALCOHOL_FACE(70) == "酔いどれ" || ALCOHOL_FACE(70) == "ぐでぐで"
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「はぇ～！？」
				CASE 2
					PRINTFORML 「ほへぇ～！？」
				CASEELSE
					PRINTFORML 「うう～ん……」
				ENDSELECT
			ELSEIF TALENT:70:機嫌 == -1 || CFLAG:70:ブチギレ || MARK:70:反発刻印 >= 3
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「いたた……」
				CASE 2
					PRINTFORML 「うぅ……」
				CASEELSE
					PRINTFORML 「うーん……」
				ENDSELECT
			ELSE
				SELECTCASE RAND:9
				CASE 1
					PRINTFORML 「ひゃあっ！」
				CASE 2
					PRINTFORML 「いてっ！」
				CASE 3
					PRINTFORML 「いたっ！」
				CASE 4
					PRINTFORML 「うわぁっ！」
				CASE 5
					PRINTFORML 「きゃっ！」
				CASE 6
					PRINTFORML 「きゃぁっ！」
				CASE 7
					PRINTFORML 「ひんっ！」
				CASE 8
					PRINTFORML 「ひえーっ！」
				CASEELSE
					PRINTFORML 「えぇっ！」
				ENDSELECT
			ENDIF
		ENDIF
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		;あなた勝利
		IF 相手残機 == 0
			IF ALCOHOL_FACE(70) == "酔いどれ" || ALCOHOL_FACE(70) == "ぐでぐで"
				PRINTFORMW 「あれぇ～？ なにが起きたんですかぁ～？」
			ELSEIF TALENT:70:機嫌 == -1 || CFLAG:70:ブチギレ || MARK:70:反発刻印 >= 3
				PRINTFORMW 「もう……つまんなーい！」
			ELSE
				IF TALENT:70:恋慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%さんはやっぱり強いですね～！」
					CASE 2
						PRINTFORMW 「弾幕ごっこって楽しいですね♪」
					CASEELSE
						PRINTFORMW 「ぜ、ぜひ鍛えてください！！」
					ENDSELECT
				ELSEIF TALENT:70:思慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「お強いですね……」
					CASE 2
						PRINTFORMW 「私にはまだ早いかも……」
					CASEELSE
						PRINTFORMW 「うー！ 悔しいです…！」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「さ、さすがです……」
					CASE 2
						PRINTFORMW 「負けました……」
					CASEELSE
						PRINTFORMW 「まだまだかぁ……」
					ENDSELECT
				ENDIF
			ENDIF
		;小鈴勝利,普通にやっててありえるのか？？
		ELSE
			IF ALCOHOL_FACE(70) == "酔いどれ" || ALCOHOL_FACE(70) == "ぐでぐで"
				PRINTFORML 「あれぇ～？ %CALLNAME:MASTER%さんどぉしたんですかぁ～？」
			ELSEIF TALENT:70:機嫌 == -1 || CFLAG:70:ブチギレ || MARK:70:反発刻印 >= 3
				PRINTFORML 「やった！ 気分爽快！！」
			ELSE
				IF TALENT:70:恋慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%さん、まだまだですねぇ～♪」
					CASE 2
						PRINTFORMW 「やったぁ！ %CALLNAME:MASTER%さんに勝っちゃった～！」
					CASEELSE
						PRINTFORMW 「私ひょっとしたら才能あるかも～♪」
					ENDSELECT
				ELSEIF TALENT:70:思慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「あれ！？ 私ひょっとして勝っちゃった！？」
					CASE 2
						PRINTFORMW 「ま、まさか勝てるとは…！」
					CASEELSE
						PRINTFORMW 「て、手加減してくれたんですよね…！」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「やった！ 勝ったっ！」
					CASE 2
						PRINTFORMW 「%CALLNAME:MASTER%さん、意外と弱い…？」
					CASEELSE
						PRINTFORMW 「いい勝負でした♪」
					ENDSELECT
				ENDIF
				TALENT:70:機嫌 = 1
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

