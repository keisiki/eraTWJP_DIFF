@K15_KNIFEATTACK_DODAMAGE(ARG)
	SIF BASE:MASTER:体力 <= 0
		RETURN 1
	
	;full damage
	IF ARG == 9999
		BASE:MASTER:体力 = 0
		BASE:MASTER:気力 = 0
	ELSE
		;damage
		BASE:MASTER:体力 -= ARG
		;SETCOLOR C_RED
