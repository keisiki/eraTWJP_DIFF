@M_KOJO_DIARYSETTING_K70(ARG)
;日記発生処理の一括管理関数
;=============================
SIF DIARY:[[小鈴]]:ARG != 0
	RETURN
SELECTCASE ARG
	;6〜7,連作
	CASE 6
		CFLAG:[[小鈴]]:1051 = DAY
		CASE 7
			SIF DAY < CFLAG:[[小鈴]]:1051 + 5
				RETURN
	;8〜11,連作
	CASE 8
		CFLAG:[[小鈴]]:1052 = DAY
		CASE 9
			SIF DAY < CFLAG:[[小鈴]]:1052 + 1
				RETURN
		CASE 10
			SIF DAY < CFLAG:[[小鈴]]:1052 + 7
				RETURN
		CASE 11
			SIF DAY < CFLAG:[[小鈴]]:1052 + 12
				RETURN
	;15〜16,連作
	CASE 15
		CFLAG:[[小鈴]]:1053 = DAY
		CASE 16
			SIF DAY < CFLAG:[[小鈴]]:1053 + MAX(18 - ABL:[[阿求]]:親密, 3)
				RETURN
	;20,21,22,23,排他
	CASE 20, 21, 22, 23
		SIF CFLAG:[[小鈴]]:1054
			RETURN
		CFLAG:[[小鈴]]:1054 = DAY
	;24,25,26,排他
	CASE 24, 25, 26
		SIF CFLAG:[[小鈴]]:1055
			RETURN
		CFLAG:[[小鈴]]:1055 = DAY
	;27〜29,30,31,32,連作＆排他
	CASE 27
		CFLAG:[[小鈴]]:1056 = DAY
		CASE 28
			SIF DAY < CFLAG:[[小鈴]]:1056 + 1
				RETURN
		CASE 29, 30, 31, 32
			SIF DAY < CFLAG:[[小鈴]]:1056 + 2
				RETURN
			SIF CFLAG:[[小鈴]]:1057
				RETURN
			CFLAG:[[小鈴]]:1057 = DAY
	;33,34,35〜36,37,38,連作＆排他,35→37のジャンプ等は可能
	CASE 33, 34, 35
		SIF CFLAG:[[小鈴]]:1058
			RETURN
		CFLAG:[[小鈴]]:1058 = DAY
		CASE 36, 37, 38
			SIF DAY < CFLAG:[[小鈴]]:1058 + 2
				RETURN
			SIF CFLAG:[[小鈴]]:1059
				RETURN
			CFLAG:[[小鈴]]:1059 = DAY
	CASEELSE
