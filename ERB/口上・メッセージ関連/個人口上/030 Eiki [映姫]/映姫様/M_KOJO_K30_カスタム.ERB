	SOURCE:情愛 = 0
	SOURCE:達成 /= 3
	CFLAG:ブチギレ = 0
	CFLAG:不機嫌 = 0
	BASE:怒り = 0
	BASE:MASTER:体力 = -500
	TFLAG:193 = 1
	IF MARK:反発刻印
		SOURCE:達成 = 0
		MARK:反発刻印 = 0
		TFLAG:193 = 2
		BASE:MASTER:体力 = -2500
	ENDIF
ENDIF
TFLAG:194 = MIN(TFLAG:194, 6)
TIME += TFLAG:194  * 60
RETURN 1

