;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K64_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;名乗り口上
		IF !CFLAG:64:1002 && !CFLAG:64:弾幕勝負勝利
			PRINTFORMW 「勝負の前に改めて名乗らせて欲しい」
			PRINTFORMW 「ちょいと長いが、まあ我慢しておくれ」
			PRINTFORMDW %CALLNAME:TARGET%は深呼吸すると、じっと%CALLNAME:MASTER%を見据えた
			PRINTFORMW 「私の名は星熊勇儀。見ての通り鬼だよ」
			PRINTFORMW 「山の四天王として名が通っていたのも今は昔。今じゃ旧地獄温泉街の元締めだ」
			PRINTFORMW 「まあ、だからって鬼の本能が失われたってわけじゃあない」
			PRINTFORMW 「強い奴と闘いたい。生死をかけた闘争をしたい」
			PRINTFORMW 「――あんたの噂はかねがね聞いてる。強いんだってね？」
			PRINTFORMW 「だからさぁ、私と勝負しちゃくれないか？」
			PRINTFORMW 「あんたの強さをこの目で確かめたい。あわよくば……」
			PRINTFORMW 「――ふふ、あれこれ口上を言うのはもうやめだ」
			PRINTFORMW 「さっきからウズウズしてしょうがないんだよ」
			PRINTFORMW 「あんたのその目つき！私なんてどうとでもなるってその目！」
			PRINTFORMW 「そんな目で私を見ないでおくれよ」
			PRINTFORMW 
			PRINTFORMW 「――ダメになるまでやってしまいそうだッッ！！！」
			CFLAG:64:1002 = 1
		;通常
		ELSE
			SELECTCASE RAND:3
				CASE 0
					PRINTFORML 「勝負かい？ いいねぇ！」
					PRINTFORMW 「ちょうど運動したかったところだ！」
				CASE 1
					PRINTFORML 「手加減なんざ必要ないだろう？」
					PRINTFORMW 「なぁ？ %MASTERNAME:64%よ」
				CASE 2
					PRINTFORMDL %CALLNAME:TARGET%が盃に酒を注ぎ……それを全て飲み干した！
					PRINTFORML 「一滴でも零したら勝ち……なんてつまらないよなぁ」
					PRINTFORMW 「やるからには本気でいかせてもらう。文句ないだろ？」
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				PRINTFORML 「っとぉ！ やるじゃないか！」
				PRINTFORMW 「おかげで目が覚めた！ 感謝するよ！」
			CASE 1
				PRINTFORML 「こいつで終わりにしよう！」
				PRINTFORMW 「四天王奥義――「三歩必殺」ッッ！！！」
			CASE 0
				PRINTFORMW 「お見事！ 私が見込んだだけのことはある！」
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		PRINTFORML 「――――――ッッ！！！！！！」
		PRINTFORMDL 鼓膜が破けそうなほどの鬼の咆哮
		PRINTFORMDL %CALLNAME:MASTER%の放った弾幕は、それで全て消し飛んだ
		PRINTFORMW 「っはぁ！ さぁ、仕切り直しといこうか！」
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				PRINTFORML 「もうちょっとやると思ったんだけどねぇ……」
				PRINTFORMW 「もう一戦やるかい？ 今度は盃に酒を注いでやろう」
			CASE 2
				PRINTFORML 「あんた、中々やるね」
				PRINTFORMW 「でも私の勝ちだ。出直してきな」
			CASE 1
				PRINTFORML 「楽しかったよ。こんなにワクワクしたのは久しぶりだ」
				PRINTFORMW 「じゃあ、風呂でも入ってサッパリしよう！ あんたも来るだろ？」
			CASE 0
				PRINTFORML 「あんたの勝ちだ。完敗だよ」
				PRINTFORML 「首をくれてやりたいけど……いらないんだろう？」
				PRINTFORMW 「ふふ、それじゃあほら。あんたの勝利に乾杯だ」
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

