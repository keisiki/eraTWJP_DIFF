;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K112_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW 「……私の前にいないでくれるかしら」
		ELSEIF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
			PRINTFORMW 「わかったわ、%CALLNAME:MASTER%の強さを見せて頂戴！」
		ELSE
			PRINTFORMW 「…手加減はしないわよ」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				;怒り
				
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……」
				ELSEIF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
					PRINTFORMW 「やるじゃないの」
					PRINTFORMW 『殺意の百合』！
				ELSE
					PRINTFORMW 「……」
					PRINTFORMW 『殺意の百合』
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……」
				ELSEIF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
					PRINTFORMW 「ちょっとまずいかしら…？」
					PRINTFORMW 『純粋なる狂気』！
				ELSE
					PRINTFORMW 「……」
					PRINTFORMW 『純粋なる狂気』
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……っ！」
				ELSEIF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
					PRINTFORMW 「そんな…」
				ELSE
					PRINTFORMW 「……何故…」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		IF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
			PRINTFORMW 「ボーっとしてちゃ駄目よ？」
		ELSE
			PRINTFORMW 「……まだまだ…」
		ENDIF
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		IF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
			PRINTFORMW 「そのくらいじゃあ、まだまだね」
		ELSE
			PRINTFORMW 「……」
		ENDIF
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「さっさといなくなってくれる？」
				ELSEIF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
					PRINTFORMW 「まだまだね、一緒に特訓する？」
				ELSE
					PRINTFORMW 「……」
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「さっさといなくなってくれる？」
				ELSEIF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
					PRINTFORMW 「思ってたより強かったわよ」
					PRINTFORMW 「でも、もうちょっと特訓しましょうか」
				ELSE
					PRINTFORMW 「……」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「…早くどっか行ってよ」
				ELSEIF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
					PRINTFORMW 「危なかったわ…%CALLNAME:MASTER%って強いのね」
				ELSE
					PRINTFORMW 「……」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……っ！」
				ELSEIF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
					PRINTFORMW 「嘘でしょ…あなたって本当に人間なの…？」
					PRINTFORMW 「次に月に攻め込むときには呼んでもいいかしら…？」
				ELSE
					PRINTFORMW 「……まさか…そんな…」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

