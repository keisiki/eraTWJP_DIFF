;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K96_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW 「お姉さんを怒らせたこと後悔させてあげる%UNICODE(0x2665) *1%」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「さあ！今こそ闘いのビートを刻むのだ！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「さあ！幻想郷に始原のビートを響かせよ！」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「さあ！空前絶後のビートを響かせよ！」
		ELSE
			PRINTFORMW 「さあ！魂のビートで始原の感情を呼び覚ませ！」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「ふん、この程度？」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「純粋に弾幕パワーで押し切ってやるよ！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「その程度では興奮しないわ♪」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「もっと私を昂らせてよ！」
				ELSE
					PRINTFORMW 「浅いわ！」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「神経を苛立たせる音を出すね！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「あら？激しいのね、好きよ、そういうの！」
				ELSEIF RAND:3 == 0
					PRINTFORM 「やるじゃん！
					CALL MASTER_CALLNAME_K96
					PRINTFORMW ！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「まだまだ！本当の勝いはこれからよ！」
				ELSE
					PRINTFORM 「もっと
					CALL MASTER_CALLNAME_K96
					PRINTFORMW の音を私に刻んでよ！」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「…負けたか」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「やーらーれーたー！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「あいたたた…」
				ELSEIF RAND:2 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K96
					PRINTFORMW の音、すごいのね♪」
				ELSE
					PRINTFORMW 「私の音が負けた…！」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
	
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		IF RAND:4 == 0
			PRINTFORMW 「これが乾坤一擲の一撃というやつよ！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「私の音を聴けぇ！」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「たーまやー！」
		ELSE
			PRINTFORMW 「まだ、油断しないことね！」
		ENDIF
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「これに懲りたら二度と怒らせないことね」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「あら？今日は調子が悪かったのかしら？」
				ELSEIF RAND:3 == 0
					PRINTFORM 「意外と
					CALL MASTER_CALLNAME_K96
					PRINTFORMW 、弱いのね」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「圧勝ね、どう？私の音は？」
				ELSE
					PRINTFORMW 「私の音、どうだったかしら？」
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「全く！人を怒らせたらこうなるんだからね！」
				ELSEIF RAND:4 == 0
					PRINTFORM 「まだまだだね、
					CALL MASTER_CALLNAME_K96
					PRINTFORMW %UNICODE(0x2665) *1%」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「もっと激しくしてほしかったな♪」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「あんまり気持ちよくはなかったわね…」
				ELSE
					PRINTFORMW 「まだ余力が残ってる？そんな気がするわ」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「怒りに身を任せてはいけない、か」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「危なかったわ…でもとっても楽しかったわ♪」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K96
					PRINTFORMW の音…とっても激しいのね…♪」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「危うく負けるところだったわ…」
				ELSE
					PRINTFORMW 「今度はみんなも誘ってやろうかしら？」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「…悪いけど納得してないからね」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「あらららら、降参よー」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K96
					PRINTFORMW の音、刻み込まれちゃった…%UNICODE(0x2665) *1%」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「とっても楽しかったわ♪また戦ってね！」
				ELSE
					PRINTFORMW 「魔力の調整に課題があるわね…」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

