;-----------------------------------------------------------
;陥落キャラの素質変更
;-----------------------------------------------------------
@周回特典
PRINTL
PRINTL
PRINTL ＊周回特典＊
PRINTL 以前恋人にしたことのあるキャラの素質を変更することが出来ます
PRINTL 以前恋慕または愛欲を取得したことのあるキャラの一部の素質を変更することが出来ます
PRINTL
PRINTL
CALL 周回特典_キャラ選択
SELECTCASE RESULT
	CASE 999
		RETURN
	;CASE 997
	;	CALL SaveTalentSet
	CASE 998
		CALL LoadTalentSet
	CASEELSE
		IF GETBIT(CFLAG:RESULT:引き継ぎ, 1)
			CALL CUSTOM_TERMINAL(RESULT, 1)
		ELSEIF GETBIT(CFLAG:RESULT:引き継ぎ, 0)
			CALL LIMITED_CUSTOM(RESULT)
		ENDIF
ENDSELECT
RESTART

;-----------------------------------------------------------
;-----------------------------------------------------------
@周回特典_キャラ選択
;生成
LOCAL:1 = 0
FOR LOCAL, 0, CHARANUM
	IF !IS_NAMED(LOCAL)
		CONTINUE
	ENDIF
	SIF SuccSetting:LOCAL
		FONTBOLD
	IF GETBIT(CFLAG:LOCAL:引き継ぎ, 1)
		SETCOLOR C_PINK
		PRINTFORMLC [{LOCAL, 3}] %CALLNAME:LOCAL%
		LOCAL:1 ++
	ELSEIF GETBIT(CFLAG:LOCAL:引き継ぎ, 0)
		SETCOLOR C_YELLOW
		PRINTFORMLC [{LOCAL, 3}] %CALLNAME:LOCAL%
		LOCAL:1 ++
	ENDIF
NEXT
RESETCOLOR
FONTREGULAR
;その他の選択肢
PRINTL
DRAWLINE
;PRINTL [997] 引き継ぎ設定をセーブ
PRINTL [998] 引き継ぎ設定を一括ロード
DRAWLINE
PRINTL [999] 設定完了
PRINTL
;入力受付
DO
	INPUT
	SELECTCASE RESULT
	;CASE 997
	;	RETURN RESULT
	CASE 998
		RETURN RESULT
	CASE 999
		RETURN RESULT
	CASEELSE
		SIF IS_NAMED(RESULT) && (GETBIT(CFLAG:RESULT:引き継ぎ, 1) || GETBIT(CFLAG:RESULT:引き継ぎ, 0))
			RETURN RESULT
	ENDSELECT
	CLEARLINE 1
LOOP 1

