@MAP6_AREANAME(PLACE_ID)
#FUNCTIONS
#LOCALSIZE 1
#LOCALSSIZE 1
#DIM PLACE_ID
IF MAIN_MAP == 6
	SIF INRANGE(PLACE_ID, 610, 619)
		RETURNF "是非曲直庁"
	SIF INRANGE(PLACE_ID, 620, 629)
		RETURNF "白玉楼"
	SIF INRANGE(PLACE_ID, 630, 639)
		RETURNF "八雲家"
	SIF INRANGE(PLACE_ID, 640, 652)
		RETURNF "畜生界"
	RETURNF "三途の川"
ELSE
	LOCAL = PLACE_ID / 10 + 6000
	RETURNF STR:LOCAL
ENDIF
