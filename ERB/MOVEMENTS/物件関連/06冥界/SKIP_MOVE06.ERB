;-----------------------------------------------------------
;遠距離移動の設定
;ARG     目的地
;ARG:1   現在地
;RETURN  次の目的地
;-----------------------------------------------------------
@SKIP_MOVE_6(ARG, ARG:1)
#DIM 現在の位置
;現在位置取得
IF ARG:1
	現在の位置 = ARG:1
ELSE
	現在の位置 = CFLAG:MASTER:現在位置
ENDIF

;目的地に直接移動できる場合そこに移動
SIF CAN_MOVE(現在の位置, ARG) & 1
	RETURN ARG

;袋小路から行ける場所は固定なので、そこを目指す
SELECTCASE 現在の位置
CASE P608潤美の家
	RETURN P602賽の河原
CASE P609瓔花の家
	RETURN P603積石塚
CASE P615映姫の部屋
	RETURN P614是非曲直庁ラウンジ
CASE P616小町の部屋, P617風呂, P618空き部屋
	RETURN P613是非曲直庁廊下
CASE P624妖夢私室, P625空室, P627風呂
	RETURN P622廊下
CASE P636八雲邸風呂, P637八雲邸台所
	RETURN P631八雲邸廊下
CASE P643霊長園の風呂, P644袿姫の部屋, P645磨弓の部屋
	RETURN P642霊長園
CASE P646八千慧宅の風呂, P648八千慧宅の寝室
	RETURN P647八千慧宅のリビング
CASE P651早鬼宅の寝室, P652早鬼宅の風呂
	RETURN P650早鬼宅のリビング
CASE P654尤魔宅の寝室, P655尤魔宅の風呂
	RETURN P653尤魔宅のリビング
ENDSELECT

;直接移動できない場合、1つ近い位置を暫定目的地に設定し直してループ
;地点追加時要フォロー（全ケース修正すること）
SELECTCASE ARG
CASE P601中有の道
	RETURN P602賽の河原
CASE P602賽の河原
	SELECTCASE 現在の位置
	CASE P631八雲邸廊下 TO P639八雲邸居間
		RETURN P630八雲邸玄関
	CASEELSE
		RETURN P604彼岸
	ENDSELECT
CASE P603積石塚
	SELECTCASE 現在の位置
	CASE P601中有の道
		RETURN P602賽の河原
	CASEELSE
		RETURN P604彼岸
	ENDSELECT
CASE P604彼岸
	SELECTCASE 現在の位置
	CASE P612法廷 TO P618空き部屋
		RETURN P610是非曲直庁ホール
	CASE P621庭 TO P629西行妖
		RETURN P620冥界の門
	CASE P641畜生メトロポリス TO P655尤魔宅の風呂
		RETURN P640異界の関所
	CASEELSE
		RETURN P602賽の河原
	ENDSELECT
CASE P608潤美の家
	RETURN P602賽の河原
CASE P609瓔花の家
	RETURN P603積石塚

CASE P610是非曲直庁ホール
	SELECTCASE 現在の位置
	CASE P612法廷 TO P618空き部屋
		RETURN P613是非曲直庁廊下
	CASEELSE
		RETURN P604彼岸
	ENDSELECT
CASE P612法廷
	SELECTCASE 現在の位置
	CASE P610是非曲直庁ホール TO P618空き部屋
		RETURN P613是非曲直庁廊下
	CASEELSE
		RETURN P610是非曲直庁ホール
	ENDSELECT
CASE P613是非曲直庁廊下
	RETURN P610是非曲直庁ホール
CASE P614是非曲直庁ラウンジ, P616小町の部屋, P617風呂, P618空き部屋
	RETURN P613是非曲直庁廊下
CASE P615映姫の部屋
	RETURN P614是非曲直庁ラウンジ

CASE P620冥界の門
	SELECTCASE 現在の位置
	CASE P622廊下 TO P629西行妖
		RETURN P621庭
	CASEELSE
		RETURN P604彼岸
	ENDSELECT
CASE P621庭
	SELECTCASE 現在の位置
	CASE P623幽々子私室 TO P627風呂
		RETURN P622廊下
	CASEELSE
		RETURN P620冥界の門
	ENDSELECT
CASE P622廊下
	RETURN P621庭
CASE P623幽々子私室, P624妖夢私室, P625空室, P626台所, P627風呂
	RETURN P622廊下
CASE P628居間
	SELECTCASE 現在の位置
	CASE P624妖夢私室, P625空室, P627風呂
		RETURN P622廊下
	CASEELSE
		RETURN P621庭
	ENDSELECT
CASE P629西行妖
	RETURN P621庭

CASE P630八雲邸玄関
	SELECTCASE 現在の位置
	CASE P633紫私室 TO P639八雲邸居間
		RETURN P631八雲邸廊下
	CASEELSE
		RETURN P602賽の河原
	ENDSELECT
CASE P631八雲邸廊下, P632八雲邸庭
	RETURN P630八雲邸玄関
CASE P633紫私室, P636八雲邸風呂, P637八雲邸台所, P638藍私室, P639八雲邸居間
	RETURN P631八雲邸廊下
CASE P634空部屋, P635橙私室
	SELECTCASE 現在の位置
	CASE P633紫私室 TO P639八雲邸居間
		RETURN P631八雲邸廊下
	CASEELSE
		RETURN P630八雲邸玄関
	ENDSELECT

CASE P640異界の関所
	SELECTCASE 現在の位置
	CASE P642霊長園 TO P655尤魔宅の風呂
		RETURN P641畜生メトロポリス
	CASEELSE
		RETURN P604彼岸
	ENDSELECT
CASE P641畜生メトロポリス
	SELECTCASE 現在の位置
	CASE P643霊長園の風呂, P644袿姫の部屋, P645磨弓の部屋
		RETURN P642霊長園
	CASE P646八千慧宅の風呂, P648八千慧宅の寝室
		RETURN P647八千慧宅のリビング
	CASE P651早鬼宅の寝室, P652早鬼宅の風呂
		RETURN P650早鬼宅のリビング
	CASE P654尤魔宅の寝室, P655尤魔宅の風呂
		RETURN P653尤魔宅のリビング
	CASEELSE
		RETURN P640異界の関所
	ENDSELECT
CASE P642霊長園, P647八千慧宅のリビング, P650早鬼宅のリビング, P653尤魔宅のリビング
	RETURN P641畜生メトロポリス
CASE P643霊長園の風呂, P644袿姫の部屋, P645磨弓の部屋
	RETURN P642霊長園
CASE P646八千慧宅の風呂, P648八千慧宅の寝室
	RETURN P647八千慧宅のリビング
CASE P651早鬼宅の寝室, P652早鬼宅の風呂
	RETURN P650早鬼宅のリビング
CASE P654尤魔宅の寝室, P655尤魔宅の風呂
	RETURN P653尤魔宅のリビング

CASEELSE
	RETURN P601中有の道
ENDSELECT
