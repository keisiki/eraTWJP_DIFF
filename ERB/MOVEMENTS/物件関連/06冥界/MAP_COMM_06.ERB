@MAP_PLACENAME_6(ARG)
#FUNCTIONS

IF GET_MAPID(ARG) == MAIN_MAP
	SELECTCASE ARG
		CASE 618, 625, 634
			;是非曲直庁空き部屋
			IF CFLAG:MASTER:初期位置 == ARG
				RETURNF "あなた私室"
			ELSE
				RETURNF "空き部屋"
			ENDIF
		CASE 1 TO (MAXROOM - 1)
			RETURNF STR:(ARG + 8000)
		CASE 698
			RETURNF OMANEKI_PLACE()
		CASE 699
			RETURNF "スキマ空間"
		CASE MAXROOM
			RETURNF "道の向こう"
		CASEELSE
			RETURNF "不明"
	ENDSELECT
ELSE
	RETURNF "不明"
ENDIF

@MAP_VIEWING_6(AA,COLOR)
