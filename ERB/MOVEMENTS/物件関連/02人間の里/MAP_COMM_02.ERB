;-----------------------------------------
;拠点専用の情景描写
;WAITはかけないように
;-----------------------------------------
@MAP_UNIQUEMESSAGE_2
IF WITH_MOB()
	RETURN 1
ELSE
	SELECTCASE CFLAG:MASTER:現在位置
		CASE P205北通り
			IF INRANGE(TIME, 540, 1020)
				PRINTFORML 見るからにやる気のなさそうな河童が索道の受付をしている
			ELSE
				PRINTFORML 索道駅は閉まっている
			ENDIF
		CASE P213鈴奈庵
			PRINTFORML 店内にはたくさんの本棚が並んでいる
		CASE P222寺子屋
			IF TIME >= 480 && TIME <= 720 || TIME >= 780 && TIME <= 840 && FLAG:時間停止 != 1
				PRINTDATA
					DATAFORM 寺小屋の子供達は%CALLNAME:TARGET%の授業を受けている…
				ENDDATA
				PRINTL
			ELSEIF TIME >= 720 && TIME <= 780 && FLAG:時間停止 != 1
				PRINTDATA
					DATAFORM 寺子屋の子供達は%CALLNAME:TARGET%と食事している…
				ENDDATA
				PRINTL
			ELSEIF TIME >= 480 && TIME <= 840 && FLAG:時間停止 == 1 && !CFLAG:MASTER:うふふ
				PRINTDATA
					DATAFORM 寺子屋の子供達は停止している…
				ENDDATA
				PRINTL
			ELSEIF TIME >= 480 && TIME <= 840 && FLAG:時間停止 == 1 && CFLAG:MASTER:うふふ
				PRINTDATA
					DATAFORM %CALLNAME:TARGET%は寺子屋の子供達の前で襲われている…
				ENDDATA
				PRINTL
			ENDIF
		CASE P203南通り TO P206西通り
			SIF !RAND:50 && INRANGE(TIME, 540, 1020)
				PRINTFORML 薬袋を持ったひげ面の男が、通行人に何か熱心に語っている
	ENDSELECT
ENDIF
RETURN 1

