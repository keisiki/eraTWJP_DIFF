;--------------------------------------------------
;内部構造がある場所の内部の判定
;TFLAG:マップ切り替え  内部察知が必要なマップ番号
;                P_ID  表示ボタンの場所ID
;                Q_ID  判定する内部の場所ID,必ずP_IDと一致した数値も含める
;--------------------------------------------------
@GETMAP_BUILDING_2(P_ID, Q_ID)
#FUNCTION
#DIM P_ID
#DIM Q_ID
IF TFLAG:マップ切り替え == 1
	SELECTCASE P_ID
		CASE P213鈴奈庵
			SELECTCASE Q_ID
			CASE P213鈴奈庵, P226小鈴私室
				RETURNF 1
			ENDSELECT
		CASE P214長屋前
			SELECTCASE Q_ID
			CASE P214長屋前, P230空き部屋 TO P237共同井戸, P208雷鼓の部屋 TO P210弁々の部屋, P241空き部屋
				RETURNF 1
			ENDSELECT
		CASE P238鯢呑亭
			SELECTCASE Q_ID
			CASE P238鯢呑亭, P239美宵の部屋
				RETURNF 1
			ENDSELECT
	ENDSELECT
ENDIF
RETURNF 0


;--------------------------------------------------
;移動制限設定
;ARG    場所ID
;CHARA  移動するキャラID
;RETURNF 1=移動できる,0=移動できない
;TFLAG:移動不能メッセージ   ↓の@MAP_CANNOT_WORD用の設定
;--------------------------------------------------
@MAP_CAN_MOVE_2(ARG, CHARA)
#FUNCTION
#DIM CHARA
SELECTCASE ARG
	CASE P226小鈴私室
		IF CHARA == MASTER
			IF FLAG:70
				RETURNF 1
			ELSEIF CFLAG:[[小鈴]]:同行 || CFLAG:[[阿求]]:同行
				RETURNF 1
			ELSEIF TALENT:[[小鈴]]:恋慕
				RETURNF 1
			ELSEIF TALENT:[[小鈴]]:思慕 && CFLAG:[[小鈴]]:現在位置 == ARG
				RETURNF 1
			ELSE
				TFLAG:移動不能メッセージ = 1
				RETURNF 0
			ENDIF
		;本人は入れる,阿求も入れる
		ELSEIF CHARA == [[小鈴]] || CHARA == [[阿求]]
			RETURNF 1
		;他は入れない
		ELSE
			RETURNF 0
		ENDIF
	CASE P229阿求私室
		IF CHARA == MASTER
			IF FLAG:70
				RETURNF 1
			ELSEIF CFLAG:[[阿求]]:同行
				RETURNF 1
			ELSEIF TALENT:[[阿求]]:恋慕
				RETURNF 1
			ELSEIF TALENT:[[阿求]]:思慕 && CFLAG:[[阿求]]:現在位置 == ARG
				RETURNF 1
			ELSE
				TFLAG:移動不能メッセージ = 1
				RETURNF 0
			ENDIF
		;本人は入れる,相性の良いキャラも入れる
		ELSEIF CHARA == [[阿求]] || RELATION:[[阿求]]:CHARA >= 100
			RETURNF 1
		;他は入れない
		ELSE
			RETURNF 0
		ENDIF
	CASE P239美宵の部屋
		IF CHARA == MASTER
			IF FLAG:時間停止
				RETURNF 1
			ELSEIF CFLAG:[[美宵]]:同行
				RETURNF 1
			ELSEIF TALENT:[[美宵]]:恋慕
				RETURNF 1
			ELSEIF TALENT:[[美宵]]:思慕 && CFLAG:[[美宵]]:現在位置 == ARG
				RETURNF 1
			ELSE
				TFLAG:移動不能メッセージ = 1
				RETURNF 0
			ENDIF
		;本人は入れる
		ELSEIF CHARA == [[美宵]]
			RETURNF 1
		;他は入れない
		ELSE
			RETURNF 0
		ENDIF
	;あなた以外は入らない
	CASE P220物見櫓, P225連れ込み宿
		SIF CHARA != MASTER
			RETURNF 0
	;あなた以外は入らない,貸し切っていないと入れない
	CASE P228貸切浴場
		IF CHARA != MASTER
			RETURNF 0
		ELSEIF !銭湯貸切(DAY)
			TFLAG:移動不能メッセージ = 2
			RETURNF 0
		ENDIF
	;誰かが住んでないと入れない
	CASE P230空き部屋, P241空き部屋
		IF !PRIVATEROOM:(ARG % 100) && CFLAG:MASTER:初期位置 != ARG
			TFLAG:移動不能メッセージ = 999
			RETURNF 0
		ENDIF
ENDSELECT
RETURNF 1

;--------------------------------------------------
;貸切浴場に入るときの判定
