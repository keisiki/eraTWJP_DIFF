;-----------------------------------------------------------
;遠距離移動の設定
;ARG     目的地
;ARG:1   現在地
;RETURN  次の目的地
;-----------------------------------------------------------
@SKIP_MOVE_2(ARG, ARG:1)
#DIM 現在の位置
;現在位置取得
IF ARG:1
	現在の位置 = ARG:1
ELSE
	現在の位置 = CFLAG:MASTER:現在位置
ENDIF

;目的地に直接移動できる場合そこに移動
SIF CAN_MOVE(現在の位置, ARG) & 1
	RETURN ARG

;袋小路から行ける場所は固定なので、そこを目指す
SELECTCASE 現在の位置
CASE P201人里の門
	RETURN P203南通り
CASE P211酒屋, P212カフェ, P218小料理屋
	RETURN P203南通り
CASE P217甘味所
	RETURN P204東通り
CASE P225連れ込み宿
	RETURN P206西通り
CASE P226小鈴私室
	RETURN P213鈴奈庵
CASE P229阿求私室
	RETURN P221稗田邸
CASE P228貸切浴場
	RETURN P223銭湯
CASE P230空き部屋 TO P237共同井戸, P208雷鼓の部屋 TO P210弁々の部屋, P241空き部屋
	RETURN P214長屋前
CASE P239美宵の部屋
	RETURN P238鯢呑亭
CASE P281小兎姫私室
	RETURN P280警察署
ENDSELECT

;直接移動できない場合、1つ近い位置を暫定目的地に設定し直してループ
;基本的に最短で行けるコースを設定する
;現在地によってコースが変わることも考慮して対応する
SELECTCASE ARG
	CASE P201人里の門, P211酒屋, P212カフェ, P218小料理屋
		RETURN P203南通り
	CASE P202中央広場
		SELECTCASE 現在の位置
		CASE P213鈴奈庵, P217甘味所, P223銭湯
			RETURN P204東通り
		CASE P219集会所, P222寺子屋, P224慧音宅
			RETURN P205北通り
		CASE P214長屋前, P221稗田邸, P229阿求私室, P225連れ込み宿, P238鯢呑亭
			RETURN P206西通り
		CASEELSE
			RETURN P203南通り
		ENDSELECT
	CASE P203南通り
		SELECTCASE 現在の位置
		CASE P219集会所, P222寺子屋, P224慧音宅
			RETURN P204東通り
		CASEELSE
			RETURN P202中央広場
		ENDSELECT
	CASE P204東通り
		SELECTCASE 現在の位置
		CASE P214長屋前
			RETURN P203南通り
		CASE P221稗田邸, P229阿求私室
			RETURN P205北通り
		CASEELSE
			RETURN P202中央広場
		ENDSELECT
	CASE P205北通り
		RETURN P202中央広場
	CASE P206西通り
		SELECTCASE 現在の位置
		CASE P219集会所, P222寺子屋, P224慧音宅
			RETURN P205北通り
		CASEELSE
			RETURN P202中央広場
		ENDSELECT
	CASE P207龍神像
		SELECTCASE 現在の位置
		CASE P219集会所, P221稗田邸, P229阿求私室, P222寺子屋, P224慧音宅
			RETURN P205北通り
		CASEELSE
			RETURN P202中央広場
		ENDSELECT
	CASE P213鈴奈庵, P217甘味所, P223銭湯
		RETURN P204東通り
	CASE P214長屋前
		SELECTCASE 現在の位置
		CASE P204東通り
			RETURN P203南通り
		CASEELSE
			RETURN P206西通り
		ENDSELECT
	CASE P215花屋, P216食料品店, P220物見櫓
		RETURN P202中央広場
	CASE P219集会所, P222寺子屋, P224慧音宅
		SELECTCASE 現在の位置
		CASE P206西通り, P207龍神像, P221稗田邸, P229阿求私室, P280警察署, P281小兎姫私室
			RETURN P205北通り
		CASEELSE
			RETURN P204東通り
		ENDSELECT
	CASE P221稗田邸
		SELECTCASE 現在の位置
		CASE P207龍神像, P219集会所, P222寺子屋, P224慧音宅
			RETURN P205北通り
		CASEELSE
			RETURN P206西通り
		ENDSELECT
	CASE P225連れ込み宿, P238鯢呑亭
		RETURN P206西通り
	CASE P226小鈴私室
		RETURN P213鈴奈庵
	CASE P229阿求私室
		RETURN P221稗田邸
	CASE P227八百屋
		SELECTCASE 現在の位置
		CASE P219集会所, P222寺子屋, P224慧音宅
			RETURN P204東通り
		CASEELSE
			RETURN P202中央広場
		ENDSELECT
	CASE P228貸切浴場
		RETURN P223銭湯
	CASE P230空き部屋 TO P237共同井戸, P208雷鼓の部屋 TO P210弁々の部屋, P241空き部屋
		RETURN P214長屋前
	CASE P239美宵の部屋
		RETURN P238鯢呑亭
	CASE P280警察署
	    SELECTCASE 現在の位置
		CASE P207龍神像, P219集会所, P222寺子屋, P224慧音宅, P221稗田邸, P229阿求私室
			RETURN P205北通り
		CASEELSE
			RETURN P202中央広場
		ENDSELECT
	CASE P281小兎姫私室
	    SELECTCASE 現在の位置
		CASE P214長屋前, P221稗田邸, P229阿求私室, P225連れ込み宿, P238鯢呑亭
			RETURN P206西通り
		CASEELSE
		    RETURN P280警察署
	    ENDSELECT
	CASEELSE 
		RETURN P201人里の門
ENDSELECT
