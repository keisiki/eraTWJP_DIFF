@MAP_SEARCH_REPLACEMENT_8(ARG)
#FUNCTION
SELECTCASE ARG
	CASE 830 TO 850
	;天界
		RETURNF 890
	CASE 801,802,803,806 TO 809
	;滝
		RETURNF 810
	CASE 805
	;丘
		RETURNF 820
	CASE 814
	;湖
		RETURNF 830
	CASE 804,811,813,815
	;境内
		RETURNF 840
	CASEELSE
	;本殿
		RETURNF 850
ENDSELECT
RETURNF 0



@MAP8_AREANAME(PLACE_ID)
#FUNCTIONS
#LOCALSIZE 1
#LOCALSSIZE 1
#DIM PLACE_ID
IF MAIN_MAP == 8
	SIF PLACE_ID == 804 || INRANGE(PLACE_ID, 811, 826)
		RETURNF "守矢神社"
	SIF PLACE_ID == 805 || INRANGE(PLACE_ID, 830, 842)
		RETURNF "天界"
	;SIF INRANGE(PLACE_ID, 801, 810)
	RETURNF "妖怪の山の山頂"
ELSE
	SELECTCASE PLACE_ID
	CASE 890
		RETURNF "天界"
	;山の湖は守矢神社の敷地内に含めちゃいます
	CASE 830, 840, 850
		RETURNF "守矢神社"
	CASEELSE
		RETURNF "妖怪の山の山頂"
	ENDSELECT
ENDIF
