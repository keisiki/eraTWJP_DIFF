;-----------------------------------------------------------
;遠距離移動の設定
;ARG     目的地
;ARG:1   現在地
;RETURN  次の目的地
;-----------------------------------------------------------
@SKIP_MOVE_0(ARG, ARG:1)
#DIM 現在の位置
;現在位置取得
IF ARG:1
	現在の位置 = ARG:1
ELSE
	現在の位置 = CFLAG:MASTER:現在位置
ENDIF

;目的地に直接移動できる場合そこに移動
SIF CAN_MOVE(現在の位置, ARG) & 1
	RETURN ARG

;袋小路から行ける場所は固定なので、そこを目指す
SELECTCASE 現在の位置
	CASE P4本堂
		RETURN P3賽銭箱
	CASE P5手水舎, P21守矢神社分社, P56あうんの棲家
		RETURN P2境内
	CASE P13風呂
		RETURN P12脱衣所
	CASE P14トイレ, P19大きい納戸
		RETURN P10縁側
	CASE P17小さい納戸, P53納戸, P55和室
		RETURN P9居間
	CASE P18押入れ
		RETURN P15霊夢私室
	CASE P24温泉
		RETURN P23温泉・脱衣所
	CASE P29三妖精の家・台所, P30三妖精の家・風呂, P35三妖精の家・地下室
		RETURN P27三妖精の家・広間
	CASE P32サニー私室, P33ルナ私室, P34スター私室
		RETURN P31三妖精の家・二階廊下
	CASE P39夢幻遺跡・浴室, P40夢幻遺跡・トイレ
		RETURN P38夢幻遺跡・洗面所
	CASE P42夢幻遺跡・調理室
		RETURN P41夢幻遺跡・食堂兼談話室
	CASE P43夢美私室, P44ちゆり私室
		RETURN P37夢幻遺跡・一階通路
	CASE P47夢幻遺跡・艦橋, P48夢幻遺跡・第一資料室, P49夢幻遺跡・研究室, P50夢幻遺跡・第二資料室, P51夢幻遺跡・倉庫
		RETURN P46夢幻遺跡・二階通路
	CASE P52離れ
		RETURN P11庭
ENDSELECT

;直接移動できない場合、1つ近い位置を暫定目的地に設定し直してループ
;基本的に最短で行けるコースを設定する
;現在地によってコースが変わることも考慮して対応する
SELECTCASE ARG
	CASE P1鳥居
		SELECTCASE 現在の位置
		CASE P23温泉・脱衣所 TO P51夢幻遺跡・倉庫
			RETURN P22参道
		CASEELSE
			RETURN P2境内
		ENDSELECT
	CASE P2境内
		SELECTCASE 現在の位置
		CASE P22参道 TO P51夢幻遺跡・倉庫
			RETURN P1鳥居
		CASEELSE
			RETURN P20本殿の裏
		ENDSELECT
	CASE P3賽銭箱, P5手水舎, P21守矢神社分社, P56あうんの棲家
		RETURN P2境内
	CASE P4本堂
		RETURN P3賽銭箱
	CASE P6物置, P16ボロ小屋
		SELECTCASE 現在の位置
		CASE P7土間 TO P19大きい納戸, P54小人の虫かご
			RETURN P20本殿の裏
		CASEELSE
			RETURN P2境内
		ENDSELECT
	CASE P7土間
		SELECTCASE 現在の位置
		CASE P10縁側, P12脱衣所 TO P15霊夢私室, P17小さい納戸 TO P19大きい納戸, P54小人の虫かご
			RETURN P9居間
		CASEELSE
			RETURN P20本殿の裏
		ENDSELECT
	CASE P8台所
		SELECTCASE 現在の位置
		CASE P15霊夢私室, P54小人の虫かご
			RETURN P9居間
		CASE P11庭, P12脱衣所
			RETURN P10縁側
		CASEELSE
			RETURN P7土間
		ENDSELECT
	CASE P9居間
		SELECTCASE 現在の位置
		CASE P11庭, P12脱衣所
			RETURN P10縁側
		CASEELSE
			RETURN P7土間
		ENDSELECT
	CASE P10縁側
		SELECTCASE 現在の位置
		CASE P7土間, P15霊夢私室
			RETURN P9居間
		CASEELSE
			RETURN P11庭
		ENDSELECT
	CASE P11庭
		SELECTCASE 現在の位置
		CASE P8台所, P9居間, P12脱衣所, P15霊夢私室, P54小人の虫かご
			RETURN P10縁側
		CASEELSE
			RETURN P9居間
		ENDSELECT
	CASE P12脱衣所, P14トイレ, P19大きい納戸
		RETURN P10縁側
	CASE P13風呂
		RETURN P12脱衣所
	CASE P15霊夢私室, P17小さい納戸, P53納戸, P55和室
		RETURN P9居間
	CASE P18押入れ
		RETURN P15霊夢私室
	CASE P20本殿の裏
		SELECTCASE 現在の位置
		CASE P10縁側, P12脱衣所
			RETURN P11庭
		CASE P7土間 TO P19大きい納戸, P54小人の虫かご
			RETURN P7土間
		CASEELSE
			RETURN P2境内
		ENDSELECT
	CASE P22参道
		SELECTCASE 現在の位置
		CASE P27三妖精の家・広間 TO P35三妖精の家・地下室
			RETURN P25鎮守の森
		CASE P37夢幻遺跡・一階通路 TO P51夢幻遺跡・倉庫
			RETURN P36夢幻遺跡前
		CASEELSE
			RETURN P1鳥居
		ENDSELECT
	CASE P23温泉・脱衣所
		SELECTCASE 現在の位置
		CASE P27三妖精の家・広間 TO P35三妖精の家・地下室
			RETURN P25鎮守の森
		CASEELSE
			RETURN P22参道
		ENDSELECT
	CASE P24温泉
		RETURN P23温泉・脱衣所
	CASE P25鎮守の森
		SELECTCASE 現在の位置
		CASE P29三妖精の家・台所 TO P35三妖精の家・地下室
			RETURN P27三妖精の家・広間
		CASEELSE
			RETURN P22参道
		ENDSELECT

	CASE P27三妖精の家・広間
		RETURN P25鎮守の森
	CASE P29三妖精の家・台所, P30三妖精の家・風呂, P31三妖精の家・二階廊下, P35三妖精の家・地下室
		RETURN P27三妖精の家・広間
	CASE P32サニー私室, P33ルナ私室, P34スター私室
		RETURN P31三妖精の家・二階廊下

	CASE P36夢幻遺跡前
		SELECTCASE 現在の位置
		CASE P38夢幻遺跡・洗面所 TO P51夢幻遺跡・倉庫
			RETURN P37夢幻遺跡・一階通路
		CASEELSE
			RETURN P22参道
		ENDSELECT
	CASE P37夢幻遺跡・一階通路
		RETURN P36夢幻遺跡前
	CASE P38夢幻遺跡・洗面所, P41夢幻遺跡・食堂兼談話室, P43夢美私室, P44ちゆり私室, P46夢幻遺跡・二階通路
		RETURN P37夢幻遺跡・一階通路
	CASE P39夢幻遺跡・浴室, P40夢幻遺跡・トイレ
		RETURN P38夢幻遺跡・洗面所
	CASE P42夢幻遺跡・調理室
		RETURN P41夢幻遺跡・食堂兼談話室
	CASE P47夢幻遺跡・艦橋, P48夢幻遺跡・第一資料室, P49夢幻遺跡・研究室, P50夢幻遺跡・第二資料室, P51夢幻遺跡・倉庫
		RETURN P46夢幻遺跡・二階通路

	CASE P52離れ
		RETURN P11庭
	CASE P54小人の虫かご
		SELECTCASE 現在の位置
		CASE P11庭, P12脱衣所
			RETURN P10縁側
		CASEELSE
			RETURN P9居間
		ENDSELECT
ENDSELECT
