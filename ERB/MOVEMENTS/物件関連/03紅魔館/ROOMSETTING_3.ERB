	SIF ARGS == "座標"
		RETURNF 28
	SIF GROUPMATCH(ARGS, "屋内", "洋室")
		RETURNF 1
CASE 正門
	SIF ARGS == "座標"
		RETURNF 47
	SIF GROUPMATCH(ARGS, "")
		RETURNF 1
CASE 広間
	SIF ARGS == "座標"
		RETURNF 46
	SIF GROUPMATCH(ARGS, "屋内", "洋室", "月見", "広い", "モブ")
		RETURNF 1
CASE 食堂
	SIF ARGS == "座標"
		RETURNF 35
	SIF GROUPMATCH(ARGS, "屋内", "洋室", "月見", "厨房", "広い", "休憩", "モブ")
		RETURNF 1
CASE 大図書館
	SIF ARGS == "座標"
		RETURNF 56
	SIF GROUPMATCH(ARGS, "屋内", "洋室", "休憩", "勉強")
		RETURNF 1
CASE 地下室
	SIF ARGS == "座標"
		RETURNF 75
	SIF GROUPMATCH(ARGS, "屋内", "洋室")
		RETURNF 1
ENDSELECT