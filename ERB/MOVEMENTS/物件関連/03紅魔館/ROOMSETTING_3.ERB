;＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝
;地点の属性設定
;場所_ワンルーム   家主が不在のとき鍵がかかる,布団・屋内・厨房・勉強・休憩・飲食・プライベートが自動で付与
;場所_布団         休憩が自動で付与
;場所_洋室         屋内だけど靴を履いたまま,屋内が自動で付与
;場所_屋内         
;場所_屋根         屋外だけど屋根がある場所,屋内でも屋根でも無い場合は野外判定（旧青天井）
;場所_広い         
;場所_月見         屋内や屋根があっても月が見える場所
;場所_休憩         
;場所_風呂         
;場所_トイレ       
;場所_厨房         つまみ食いが自動で付与
;場所_訓練         
;場所_勉強         
;場所_天の声       
;場所_菜園         
;場所_水汲み       
;場所_身体測定     
;場所_物干し       風景描写用
;場所_飲食         自由行動用
;場所_つまみ食い   自由行動用
;場所_留まらない   あまりキャラが留まらない（移動しやすい）
;場所_過疎         あまりキャラが立ち入らない（移動されにくい）
;場所_プライベート 節度のあるキャラは入ってこない,主に私室と風呂・トイレ
;場所_炬燵         自由行動用
;場所_公共の場     押し倒してこない
;＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝
@ROOMSETTING_3
#DIM ROOM
VARSET ROOMDATA
MAXROOM = 349
ENTRANCE = P301正門
避難先 = P305納屋
SIF GET_MAPID(拠点_酒虫) != MAIN_MAP
	拠点_酒虫 = P313厨房
MAP_PAGES = 4
MAPNAME:1 = 霧の湖
MAPNAME:2 = 紅魔館・一階＆地下
MAPNAME:3 = 紅魔館・二階＆三階
MAPNAME:4 = 廃洋館
SUMIKOMI_ROOM = P321空き部屋

FOR LOCAL, MINROOM(), MAXROOM
	ROOM = LOCAL % 100
	SELECTCASE LOCAL
	;布団・屋内・厨房・勉強・休憩・飲食・プライベートが自動で付与
	CASE P344レティのかまくら, P345チルノのかまくら, P346大妖精の棲家
		ROOMDATA:ROOM |= 場所_ワンルーム
	CASE P301正門
		ROOMDATA:ROOM |= 場所_広い
	CASE P302庭
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_訓練
	CASE P303守衛小屋
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_布団
		ROOMDATA:ROOM |= 場所_プライベート
	;人が入るとワンルームが付与
	CASE P304空き小屋
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_休憩
	;自室になると布団,勉強,プライベートが付与
	CASE P305納屋, P329倉庫
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_過疎
	CASE P306裏庭
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_訓練
		ROOMDATA:ROOM |= 場所_菜園
	CASE P307東テラス, P308西テラス
		ROOMDATA:ROOM |= 場所_屋根
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_月見
		ROOMDATA:ROOM |= 場所_物干し
	CASE P309広間
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_広い
	CASE P310図書館
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_勉強
		ROOMDATA:ROOM |= 場所_休憩
	;自室になると勉強が付与
	CASE P311パチュリー私室, P312小悪魔私室, P320咲夜私室, P326レミリア私室, P330使用人部屋, P321空き部屋
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_布団
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P313厨房
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_厨房
	CASE P314食堂
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_飲食
	CASE P315応接間
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_休憩
	CASE P316一階トイレ, P322二階トイレ
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_トイレ
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P319二階廊下, P328地下廊下
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P324大バルコニー
		ROOMDATA:ROOM |= 場所_屋根
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_月見
	CASE P327小バルコニー
		ROOMDATA:ROOM |= 場所_屋根
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_月見
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P323メイド妖精詰め所
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_過疎
		ROOMDATA:ROOM |= 場所_飲食
	CASE P331地下室
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_布団
		ROOMDATA:ROOM |= 場所_過疎
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P332脱衣所
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_身体測定
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P333大浴場
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_風呂

	CASE P334廃洋館・入り口, P339廃洋館・二階廊下
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P335廃洋館・広間
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_炬燵
	CASE P337廃洋館・キッチン
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_厨房
	CASE P338廃洋館・風呂
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_風呂
		ROOMDATA:ROOM |= 場所_身体測定
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P340ルナサ私室, P341メルラン私室, P342リリカ私室
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_布団
		ROOMDATA:ROOM |= 場所_プライベート

	CASE P343湖畔
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_訓練
	CASE P347霧の湖
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_水汲み
	CASE P348霧の湖・湖底
		ROOMDATA:ROOM |= 場所_屋根
		ROOMDATA:ROOM |= 場所_布団
		ROOMDATA:ROOM |= 場所_プライベート
	ENDSELECT
NEXT

