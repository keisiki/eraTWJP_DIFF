@MAP_SEARCH_REPLACEMENT_3(ARG)
#FUNCTION
SELECTCASE ARG
	CASE 343,346,347,348
		RETURNF 310
	CASE 344,345
		RETURNF 320
	CASE 334 TO 342
		RETURNF 330
	CASE 301 TO 308
		RETURNF 340
	CASE 309,315 TO 330,332,333
		RETURNF 350
	CASE 313,314
		RETURNF 360
	CASE 310 TO 312
		RETURNF 370
	CASE 331
		RETURNF 380
ENDSELECT
RETURNF 0



@MAP3_AREANAME(PLACE_ID)
#FUNCTIONS
#LOCALSIZE 1
#LOCALSSIZE 1
#DIM PLACE_ID
IF MAIN_MAP == 3
	SIF INRANGE(PLACE_ID, 301, 333)
		RETURNF "紅魔館"
	SIF INRANGE(PLACE_ID, 334, 342)
		RETURNF "騒霊の廃洋館"
	;SIF INRANGE(PLACE_ID, 343, 348)
	RETURNF "霧の湖"
ELSE
	SELECTCASE PLACE_ID
	CASE 330
		RETURNF "騒霊の廃洋館"
	CASE 340, 350, 360, 370, 380
		RETURNF "紅魔館"
	CASEELSE
		RETURNF "霧の湖"
	ENDSELECT
ENDIF
