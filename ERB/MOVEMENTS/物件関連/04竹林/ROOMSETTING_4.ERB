;＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝
;地点の属性設定
;場所_ワンルーム   家主が不在のとき鍵がかかる,布団・屋内・厨房・勉強・休憩・飲食・プライベートが自動で付与
;場所_布団         休憩が自動で付与
;場所_洋室         屋内だけど靴を履いたまま,屋内が自動で付与
;場所_屋内         
;場所_屋根         屋外だけど屋根がある場所,屋内でも屋根でも無い場合は野外判定（旧青天井）
;場所_広い         
;場所_月見         屋内や屋根があっても月が見える場所
;場所_休憩         
;場所_風呂         
;場所_トイレ       
;場所_厨房         つまみ食いが自動で付与
;場所_訓練         
;場所_勉強         
;場所_天の声       
;場所_菜園         
;場所_水汲み       
;場所_身体測定     
;場所_物干し       風景描写用
;場所_飲食         自由行動用
;場所_つまみ食い   自由行動用
;場所_留まらない   あまりキャラが留まらない（移動しやすい）
;場所_過疎         あまりキャラが立ち入らない（移動されにくい）
;場所_プライベート 節度のあるキャラは入ってこない,主に私室と風呂・トイレ
;場所_炬燵         自由行動用
;場所_公共の場     押し倒してこない
;＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝
@ROOMSETTING_4
#DIM ROOM
VARSET ROOMDATA
MAXROOM = 467
ENTRANCE = P447竹林入口
SUMIKOMI_ROOM = P440廃屋
避難先 = P446祠
SIF GET_MAPID(拠点_酒虫) != MAIN_MAP
	拠点_酒虫 = P417台所
MAP_PAGES = 3
MAPNAME:1 = 永遠亭
MAPNAME:2 = 夢幻館
MAPNAME:3 = 迷いの竹林

CFLAG:[[依姫]]:(450 + MAIN_MAP) = P421庭
CFLAG:[[豊姫]]:(450 + MAIN_MAP) = P421庭
CFLAG:[[レイセン]]:(450 + MAIN_MAP) = P421庭
CFLAG:[[サグメ]]:(450 + MAIN_MAP) = P421庭

FOR LOCAL, MINROOM(), MAXROOM
	ROOM = LOCAL % 100
	SELECTCASE LOCAL
	;布団・屋内・厨房・勉強・休憩・飲食・プライベートが自動で付与
	CASE P432影狼の家, P439ラルバの家, P443ミスティアの家, P445妹紅の家
		ROOMDATA:ROOM |= 場所_ワンルーム
	CASE P437メディスンの家
		ROOMDATA:ROOM |= 場所_ワンルーム
		ROOMDATA:ROOM |= 場所_洋室
	CASE P401永遠亭入口
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_訓練
		ROOMDATA:ROOM |= 場所_公共の場
	CASE P403待合室, P404診察室
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_身体測定
		ROOMDATA:ROOM |= 場所_公共の場
	CASE P405調剤室
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P406来客用トイレ
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_トイレ
	CASE P407廊下, P408中廊下, P426二階廊下
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P409縁側
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_月見
		ROOMDATA:ROOM |= 場所_物干し
	;永遠亭の空き部屋は最初から整ってる
	CASE P410てゐ私室, P411鈴仙私室, P428二階空き部屋
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_布団
		ROOMDATA:ROOM |= 場所_勉強
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P413永琳私室, P414輝夜私室, P412空き部屋
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_布団
		ROOMDATA:ROOM |= 場所_勉強
		ROOMDATA:ROOM |= 場所_月見
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P415広間
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_飲食
	CASE P416居間
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_勉強
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_炬燵
	CASE P417台所
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_厨房
	CASE P418厠
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_トイレ
	CASE P419脱衣所
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_身体測定
		ROOMDATA:ROOM |= 場所_留まらない
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P420風呂
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_風呂
		ROOMDATA:ROOM |= 場所_月見
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P421庭
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_訓練
		ROOMDATA:ROOM |= 場所_菜園
	CASE P422裏庭
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_訓練
		ROOMDATA:ROOM |= 場所_過疎
	CASE P424物置, P427倉庫
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_過疎
	CASE P430地下室
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_布団
		ROOMDATA:ROOM |= 場所_勉強
		ROOMDATA:ROOM |= 場所_過疎

	CASE P431兎の洞穴
		ROOMDATA:ROOM |= 場所_屋根
		ROOMDATA:ROOM |= 場所_訓練
		ROOMDATA:ROOM |= 場所_月見
	CASE P433斜角の竹林, P434迷いの小道
		ROOMDATA:ROOM |= 場所_訓練
	CASE P435井戸
		ROOMDATA:ROOM |= 場所_水汲み
	CASE P436無名の丘, P438太陽の畑
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_訓練
	;自室になると布団,勉強,プライベートが付与
	CASE P440廃屋
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_飲食
	CASE P441温泉
		ROOMDATA:ROOM |= 場所_風呂
	;人が入るとワンルームが付与
	CASE P442空き小屋
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_厨房
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_飲食
	CASE P444夜雀の屋台
		ROOMDATA:ROOM |= 場所_屋根
		ROOMDATA:ROOM |= 場所_月見
		ROOMDATA:ROOM |= 場所_飲食
	CASE P446祠
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_天の声
		ROOMDATA:ROOM |= 場所_過疎
	CASE P447竹林入口
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_訓練
		ROOMDATA:ROOM |= 場所_留まらない

	CASE P450玄関
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P451くるみ私室, P452エリー私室, P457夢月私室, P459幻月私室, P463幽香私室
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_布団
		ROOMDATA:ROOM |= 場所_勉強
		ROOMDATA:ROOM |= 場所_プライベート

	CASE P453ダイニング
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_厨房
	CASE P454バス
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_風呂
		ROOMDATA:ROOM |= 場所_身体測定
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P455トイレ
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_トイレ
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P456倉庫
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_過疎
	CASE P458廊下
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_留まらない
	;自室になると勉強,プライベートが付与
	CASE P460空き部屋
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_布団
	CASE P461リビング
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_炬燵
	CASE P462テラス, P464バルコニー
		ROOMDATA:ROOM |= 場所_屋根
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_月見
		ROOMDATA:ROOM |= 場所_物干し
	CASE P465ホール
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_飲食
	CASE P466庭
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_訓練
		ROOMDATA:ROOM |= 場所_水汲み
	ENDSELECT
NEXT

