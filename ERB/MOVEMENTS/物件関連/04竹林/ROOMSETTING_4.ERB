SELECTCASE ARG
CASE 竹林入り口
	SIF ARGS == "座標"
		RETURNF 39
	SIF GROUPMATCH(ARGS, "")
		RETURNF 1
CASE 迷いの小道
	SIF ARGS == "座標"
		RETURNF 48
	SIF GROUPMATCH(ARGS, "")
		RETURNF 1
CASE 斜角の竹林
	SIF ARGS == "座標"
		RETURNF 27
	SIF GROUPMATCH(ARGS, "")
		RETURNF 1
CASE 兎の洞穴
	SIF ARGS == "座標"
		RETURNF 17
	SIF GROUPMATCH(ARGS, "屋根")
		RETURNF 1
CASE 永遠亭
	SIF ARGS == "座標"
		RETURNF 34
	SIF GROUPMATCH(ARGS, "身体測定", "屋内", "月見", "休憩", "モブ")
		RETURNF 1
CASE 無名の丘
	SIF ARGS == "座標"
		RETURNF 69
	SIF GROUPMATCH(ARGS, "広い", "お弁当")
		RETURNF 1
CASE 太陽の畑
	SIF ARGS == "座標"
		RETURNF 67
	SIF GROUPMATCH(ARGS, "広い", "お弁当")
		RETURNF 1
CASE 永遠亭奥ノ院
	SIF ARGS == "座標"
		RETURNF 33
	SIF GROUPMATCH(ARGS, "屋内", "月見")
		RETURNF 1
