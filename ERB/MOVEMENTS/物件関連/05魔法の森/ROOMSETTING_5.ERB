;＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝
;地点の属性設定
;場所_ワンルーム   家主が不在のとき鍵がかかる,布団・屋内・厨房・勉強・休憩・飲食・プライベートが自動で付与
;場所_布団         休憩が自動で付与
;場所_洋室         屋内だけど靴を履いたまま,屋内が自動で付与
;場所_屋内         
;場所_屋根         屋外だけど屋根がある場所,屋内でも屋根でも無い場合は野外判定（旧青天井）
;場所_広い         
;場所_月見         屋内や屋根があっても月が見える場所
;場所_休憩         
;場所_風呂         
;場所_トイレ       
;場所_厨房         つまみ食いが自動で付与
;場所_訓練         
;場所_勉強         
;場所_天の声       
;場所_菜園         
;場所_水汲み       
;場所_身体測定     
;場所_物干し       風景描写用
;場所_飲食         自由行動用
;場所_つまみ食い   自由行動用
;場所_留まらない   あまりキャラが留まらない（移動しやすい）
;場所_過疎         あまりキャラが立ち入らない（移動されにくい）
;場所_プライベート 節度のあるキャラは入ってこない,主に私室と風呂・トイレ
;場所_炬燵         自由行動用
;場所_公共の場     押し倒してこない
;＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝
@ROOMSETTING_5
#DIM ROOM
VARSET ROOMDATA
MAXROOM = 546
ENTRANCE = P501魔法の森入り口
避難先 = P506無縁塚

SIF GET_MAPID(拠点_酒虫) != MAIN_MAP
	拠点_酒虫 = P511魔理沙宅・居間
MAP_PAGES = 4
MAPNAME:1 = 魔法の森
MAPNAME:2 = 人形の洋館
MAPNAME:3 = 魔理沙宅
MAPNAME:4 = ふわふわエレンの店

FOR LOCAL, MINROOM(), MAXROOM
	ROOM = LOCAL % 100
	SELECTCASE LOCAL
	;布団・屋内・厨房・勉強・休憩・飲食・プライベートが自動で付与
	CASE P541朱鷺子の棲み処, P542リグルの棲み処, P543ルーミアの棲み処, P544成美の小屋, P545慧ノ子の棲み処
		ROOMDATA:ROOM |= 場所_ワンルーム
	CASE P501魔法の森入り口
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P502香霖堂
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_公共の場
	CASE P503分かれ道
		ROOMDATA:ROOM |= 場所_水汲み
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P506無縁塚
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_過疎
	CASE P507キノコ群生地
	CASE P508魔法の広場
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_訓練
		ROOMDATA:ROOM |= 場所_菜園
	CASE P509再思の道
		ROOMDATA:ROOM |= 場所_過疎
	CASE P510霧雨魔法店
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_公共の場
	CASE P511魔理沙宅・居間
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_厨房
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_炬燵
	CASE P512魔理沙宅・寝室
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_布団
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P513魔理沙宅・研究部屋
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_勉強
	CASE P514魔理沙宅・風呂
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_風呂
		ROOMDATA:ROOM |= 場所_身体測定
		ROOMDATA:ROOM |= 場所_プライベート
	;自室になると布団,勉強,プライベートが付与
	CASE P515魔理沙宅・倉庫
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_過疎

	CASE P520人形の館前
		ROOMDATA:ROOM |= 場所_屋根
		ROOMDATA:ROOM |= 場所_水汲み
	CASE P521人形の館・アリスの部屋, P522人形の館・神綺の部屋, P523人形の館・夢子の部屋
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_布団
		ROOMDATA:ROOM |= 場所_勉強
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P524人形の館・研究室
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_勉強
	CASE P525人形の館・リビング
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_厨房
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_炬燵
	CASE P526人形の館・風呂
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_風呂
		ROOMDATA:ROOM |= 場所_身体測定
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P528人形の館・倉庫
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_過疎
	CASE P529人形の館・バルコニー
		ROOMDATA:ROOM |= 場所_屋根
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_月見
		ROOMDATA:ROOM |= 場所_物干し
	CASE P530人形の館・二階
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_留まらない
	;自室になると勉強,プライベートが付与
	CASE P531人形の館・空き部屋
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_布団

	CASE P534ふわふわエレン魔法の店
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_厨房
		ROOMDATA:ROOM |= 場所_勉強
		ROOMDATA:ROOM |= 場所_水汲み
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_公共の場
	CASE P535エレン宅・寝室
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_布団
		ROOMDATA:ROOM |= 場所_プライベート
	;自室になると勉強,プライベートが付与
	CASE P536エレン宅・倉庫
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_過疎
	CASE P537エレン宅・風呂
		ROOMDATA:ROOM |= 場所_洋室
		ROOMDATA:ROOM |= 場所_風呂
		ROOMDATA:ROOM |= 場所_身体測定
		ROOMDATA:ROOM |= 場所_プライベート

	CASE P540古木の大樹
	ENDSELECT
NEXT

