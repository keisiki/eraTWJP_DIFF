SELECTCASE ARG
CASE 森の入り口
	SIF ARGS == "座標"
		RETURNF 39
	SIF GROUPMATCH(ARGS, "")
		RETURNF 1
CASE 香霖堂
	SIF ARGS == "座標"
		RETURNF 38
	SIF GROUPMATCH(ARGS, "屋内")
		RETURNF 1
CASE 古木の大樹
	SIF ARGS == "座標"
		RETURNF 46
	SIF GROUPMATCH(ARGS, "お弁当")
		RETURNF 1
CASE 霧雨魔法店
	SIF ARGS == "座標"
		RETURNF 36
	SIF GROUPMATCH(ARGS, "屋内", "洋室")
		RETURNF 1
CASE 人形の洋館
	SIF ARGS == "座標"
		RETURNF 57
	SIF GROUPMATCH(ARGS, "屋内", "洋室")
		RETURNF 1
CASE 再思の道
	SIF ARGS == "座標"
		RETURNF 65
	SIF GROUPMATCH(ARGS, "")
		RETURNF 1
CASE 無縁塚
	SIF ARGS == "座標"
		RETURNF 74
	SIF GROUPMATCH(ARGS, "")
		RETURNF 1
ENDSELECT