;--------------------------------------------------
;地点名変更関数
;--------------------------------------------------
@MAP_PLACENAME_5(ARG)
#FUNCTIONS
IF GET_MAPID(ARG) == MAIN_MAP
	SELECTCASE ARG
		CASE P531人形の館・空き部屋
			IF CFLAG:MASTER:初期位置 == ARG
				RETURNF "人形の館・" + CALLNAME:MASTER + "の部屋"
			ELSE
				RETURNF "人形の館・空き部屋"
			ENDIF
		CASE SUMIKOMI_ROOM
			;※このマップでは未実装
			IF FLAG:住み込みキャラ
				RETURNF CALLNAME:(FLAG:住み込みキャラ) + "の部屋"
			ELSE
				RETURNF "空き部屋"
			ENDIF
		CASE MINROOM() TO (MAXROOM - 1)
			RETURNF STR:(ARG + 8000)
		CASE OMANEKIBEYA()
			RETURNF OMANEKI_PLACE()
		CASE SUKIMA()
			RETURNF "スキマ空間"
		CASE MAXROOM
			RETURNF "森の外"
		CASEELSE
			RETURNF "不明"
	ENDSELECT
ELSE
	RETURNF "森の外"
ENDIF

;--------------------------------------------------
;場所ARGがどのエリアにあるか
;表示するマップの番号と連動（TFLAG:マップ切り替え）
;ARG     場所ID
;--------------------------------------------------
@MAP_AREASELECT_5(ARG)
#FUNCTION
SELECTCASE ARG
	;魔理沙宅
	CASE P510霧雨魔法店 TO P515魔理沙宅・倉庫
		RETURNF 3
	;人形の洋館
	CASE P521人形の館・アリスの部屋 TO P531人形の館・空き部屋
		RETURNF 2
	;ふわふわエレンの店
	CASE P534ふわふわエレン魔法の店 TO P537エレン宅・風呂
		RETURNF 4
	;魔法の森
	CASEELSE
		RETURNF 1
ENDSELECT

;--------------------------------------------------
;内部構造がある場所の内部の判定
;TFLAG:マップ切り替え  内部察知が必要なマップ番号
;                P_ID  表示ボタンの場所ID
;                Q_ID  判定する内部の場所ID,必ずP_IDと一致した数値も含める
;--------------------------------------------------
@GETMAP_BUILDING_5(P_ID, Q_ID)
#FUNCTION
#DIM P_ID
#DIM Q_ID
IF TFLAG:マップ切り替え == 1
	SELECTCASE P_ID
		;魔理沙宅
		CASE P510霧雨魔法店
			SELECTCASE Q_ID
			CASE P510霧雨魔法店 TO P514魔理沙宅・風呂
				RETURNF 1
			ENDSELECT
		;人形の館
		CASE P525人形の館・リビング
			SELECTCASE Q_ID
			CASE P521人形の館・アリスの部屋 TO P531人形の館・空き部屋
				RETURNF 1
			ENDSELECT
		;エレン宅
		CASE P534ふわふわエレン魔法の店
			SELECTCASE Q_ID
			CASE P534ふわふわエレン魔法の店 TO P537エレン宅・風呂
				RETURNF 1
			ENDSELECT
	ENDSELECT
ENDIF
RETURNF 0

;--------------------------------------------------
;移動制限設定
;ARG    場所ID
;CHARA  移動するキャラID
;RETURNF 1=移動できる,0=移動できない
;TFLAG:移動不能メッセージ   ↓の@MAP_CANNOT_WORD用の設定
;--------------------------------------------------
@MAP_CAN_MOVE_5(ARG, CHARA)
#FUNCTION
#DIM CHARA
SELECTCASE ARG
	;香霖堂,10時～18時
	CASE P502香霖堂
		IF !INRANGE(TIME, 600, 1080)
			TFLAG:移動不能メッセージ = 1
			RETURNF 0
		ENDIF
ENDSELECT
RETURNF 1

;--------------------------------------------------
;移動不能時に表示されるメッセージ
;--------------------------------------------------
@MAP_CANNOT_WORD_5(ARG)
SELECTCASE TFLAG:移動不能メッセージ
	CASE 1
		PRINTFORMW 営業時間外だ
		CLEARLINE 2
ENDSELECT
REUSELASTLINE

