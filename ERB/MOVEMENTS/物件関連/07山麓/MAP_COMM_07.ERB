;--------------------------------------------------
;地点名変更関数
;--------------------------------------------------
@MAP_PLACENAME_7(ARG)
#FUNCTIONS
IF GET_MAPID(ARG) == MAIN_MAP
	SELECTCASE ARG
		CASE P734小屋
			IF CFLAG:MASTER:初期位置 == ARG
				RETURNF CALLNAME:MASTER + "の小屋"
			ELSE
				RETURNF "空き小屋"
			ENDIF
		CASE SUMIKOMI_ROOM
			;※このマップでは未実装
			IF FLAG:住み込みキャラ
				RETURNF CALLNAME:(FLAG:住み込みキャラ) + "の部屋"
			ELSE
				RETURNF "空き部屋"
			ENDIF
		CASE MINROOM() TO (MAXROOM - 1)
			RETURNF STR:(ARG + 8000)
		CASE OMANEKIBEYA()
			RETURNF OMANEKI_PLACE()
		CASE SUKIMA()
			RETURNF "スキマ空間"
		CASE MAXROOM
			RETURNF "道の向こう"
		CASEELSE
			RETURNF "不明"
	ENDSELECT
ELSE
	RETURNF "山麓の外"
ENDIF

;--------------------------------------------------
;場所ARGがどのエリアにあるか
;表示するマップの番号と連動（TFLAG:マップ切り替え）
;ARG     場所ID
;--------------------------------------------------
@MAP_AREASELECT_7(ARG)
#FUNCTION
SELECTCASE ARG
	;秋姉妹の家
	CASE P715秋姉妹の家・畑 TO P719秋姉妹の家・座敷
		RETURNF 2
	;仙人の屋敷・１階～２階
	CASE P720仙人の屋敷・台所 TO P725仙人の屋敷・大鷲の部屋, P729仙人の屋敷・玄関, P730仙人の屋敷・庭
		RETURNF 3
	;仙人の屋敷・２階～３階
	CASE P726仙人の屋敷・居間, P727仙人の屋敷・華扇私室, P728仙人の屋敷・空き部屋
		RETURNF 4
	;妖怪の山・山麓
	CASEELSE
		RETURNF 1
ENDSELECT

;--------------------------------------------------
;内部構造がある場所の内部の判定
;TFLAG:マップ切り替え  内部察知が必要なマップ番号
;                P_ID  表示ボタンの場所ID
;                Q_ID  判定する内部の場所ID,必ずP_IDと一致した数値も含める
;--------------------------------------------------
@GETMAP_BUILDING_7(P_ID, Q_ID)
#FUNCTION
#DIM P_ID
#DIM Q_ID
IF TFLAG:マップ切り替え == 1
	SELECTCASE P_ID
		;秋姉妹の家
		CASE P716秋姉妹の家・土間
			SELECTCASE Q_ID
			CASE P716秋姉妹の家・土間 TO P719秋姉妹の家・座敷
				RETURNF 1
			ENDSELECT
		;仙人の屋敷
		CASE P729仙人の屋敷・玄関
			SELECTCASE Q_ID
			CASE P720仙人の屋敷・台所 TO P729仙人の屋敷・玄関
				RETURNF 1
			ENDSELECT
	ENDSELECT
ENDIF
RETURNF 0

;--------------------------------------------------
;移動制限設定
;ARG    場所ID
;CHARA  移動するキャラID
;RETURNF 1=移動できる,0=移動できない
;TFLAG:移動不能メッセージ   ↓の@MAP_CANNOT_WORD用の設定
;--------------------------------------------------
@MAP_CAN_MOVE_7(ARG, CHARA)
#FUNCTION
#DIM CHARA
SELECTCASE ARG
	;華扇ハウス
	CASE P720仙人の屋敷・台所 TO P730仙人の屋敷・庭
		;本人は除外
		SIF CHARA == [[華扇]]
			RETURNF 1
		;中からは動ける
		SIF INRANGE(CFLAG:CHARA:現在位置, P720仙人の屋敷・台所, P730仙人の屋敷・庭)
			RETURNF 1
		;恋慕か住み込み
		IF CHARA == MASTER && (INRANGE(CFLAG:MASTER:初期位置, P720仙人の屋敷・台所, P730仙人の屋敷・庭) || TALENT:[[華扇]]:恋慕)
			RETURNF 1
		;デート相手が天子か自分が天子
		ELSEIF FLAG:デート相手 == [[天子]] || CHARA == [[天子]]
			RETURNF 1
		;教養が足りないとたどり着けない
		ELSEIF ABL:CHARA:教養 < 3
			TFLAG:移動不能メッセージ = 1
			RETURNF 0
			;戦闘力3以上必要
		ELSEIF ABL:CHARA:戦闘能力 < 3 && !FLAG:時間停止
			TFLAG:移動不能メッセージ = 2
			RETURNF 0
		ENDIF
	CASE P733正邪の隠れ家
		;あなたは恋慕があれば入れてもらえる
		IF TALENT:[[正邪]]:恋慕 && CHARA == MASTER
			RETURNF 1
		;本人は入れる
		ELSEIF CHARA == [[正邪]]
			RETURNF 1
		ELSE
			TFLAG:移動不能メッセージ = 3
			RETURNF 0
		ENDIF
ENDSELECT
RETURNF 1

