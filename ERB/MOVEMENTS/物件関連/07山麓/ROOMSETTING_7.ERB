;＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝
;地点の属性設定
;場所_ワンルーム   家主が不在のとき鍵がかかる,布団・屋内・厨房・勉強・休憩・飲食・プライベートが自動で付与
;場所_布団         休憩が自動で付与
;場所_洋室         屋内だけど靴を履いたまま,屋内が自動で付与
;場所_屋内         
;場所_屋根         屋外だけど屋根がある場所,屋内でも屋根でも無い場合は野外判定（旧青天井）
;場所_広い         
;場所_月見         屋内や屋根があっても月が見える場所
;場所_休憩         
;場所_風呂         
;場所_トイレ       
;場所_厨房         つまみ食いが自動で付与
;場所_訓練         
;場所_勉強         
;場所_天の声       
;場所_菜園         
;場所_水汲み       
;場所_身体測定     
;場所_物干し       風景描写用
;場所_飲食         自由行動用
;場所_つまみ食い   自由行動用
;場所_留まらない   あまりキャラが留まらない（移動しやすい）
;場所_過疎         あまりキャラが立ち入らない（移動されにくい）
;場所_プライベート 節度のあるキャラは入ってこない,主に私室と風呂・トイレ
;場所_炬燵         自由行動用
;場所_公共の場     押し倒してこない
;＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝
@ROOMSETTING_7
#DIM ROOM
VARSET ROOMDATA
MAXROOM = 742
ENTRANCE = P701樹海道入り口
避難先 = P712間欠泉地下センター
SIF GET_MAPID(拠点_酒虫) != MAIN_MAP
	拠点_酒虫 = P734小屋
MAP_PAGES = 4
MAPNAME:1 = 妖怪の山・山麓
MAPNAME:2 = 秋姉妹の家
MAPNAME:3 = 仙人の屋敷　1-2F
MAPNAME:4 = 仙人の屋敷　2-3F

;山頂と月の住民は山頂側から来る
FOR LOCAL, 1, CHARANUM
	SIF GROUPMATCH(GET_MAPID(CFLAG:LOCAL:自宅位置), 8, 10)
		CFLAG:LOCAL:(450 + MAIN_MAP) = P732山頂への道
NEXT

FOR LOCAL, MINROOM(), MAXROOM
	ROOM = LOCAL % 100
	SELECTCASE LOCAL
	;布団・屋内・厨房・勉強・休憩・飲食・プライベートが自動で付与
	CASE P704河童のアジト, P706厄神の家, P709リリーたちの家, P733正邪の隠れ家, P736山姥の家, P737招き猫の家, P740山童のアジト, P741美天の棲み処
		ROOMDATA:ROOM |= 場所_ワンルーム
	;自室になると布団,勉強,プライベートが付与
	CASE P734小屋
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_厨房
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_飲食

	CASE P701樹海道入り口
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P702山道・沢へ続く道, P705山道・中腹, P707山道・分岐点, P732山頂への道
		ROOMDATA:ROOM |= 場所_広い
	CASE P703玄武の沢
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_訓練
		ROOMDATA:ROOM |= 場所_水汲み
	CASE P708大蝦蟇の池
		ROOMDATA:ROOM |= 場所_水汲み
		ROOMDATA:ROOM |= 場所_過疎
	CASE P710猫の里
	CASE P731帚木
	CASE P711休憩所
		ROOMDATA:ROOM |= 場所_屋根
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_公共の場
	CASE P712間欠泉地下センター
		ROOMDATA:ROOM |= 場所_屋根
		ROOMDATA:ROOM |= 場所_過疎
	CASE P738森の深奥
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_訓練
	CASE P739秘天崖
		ROOMDATA:ROOM |= 場所_過疎
	CASE P735水浴び場
		ROOMDATA:ROOM |= 場所_水汲み
		ROOMDATA:ROOM |= 場所_風呂

	CASE P715秋姉妹の家・畑
		ROOMDATA:ROOM |= 場所_菜園
		ROOMDATA:ROOM |= 場所_つまみ食い
	CASE P716秋姉妹の家・土間
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_厨房
	CASE P717秋姉妹の家・寝室
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_布団
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P718秋姉妹の家・居間
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_勉強
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_炬燵
	CASE P719秋姉妹の家・座敷
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_月見
		ROOMDATA:ROOM |= 場所_物干し

	CASE P720仙人の屋敷・台所
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_厨房
	CASE P721仙人の屋敷・風呂
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_風呂
		ROOMDATA:ROOM |= 場所_身体測定
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P722仙人の屋敷・道場
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_訓練
	CASE P723仙人の屋敷・二階客間, P726仙人の屋敷・居間
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_炬燵
	CASE P724仙人の屋敷・書斎
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_勉強
	CASE P725仙人の屋敷・大鷲の部屋
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_過疎
		ROOMDATA:ROOM |= 場所_月見
	CASE P727仙人の屋敷・華扇私室, 
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_布団
		ROOMDATA:ROOM |= 場所_勉強
		ROOMDATA:ROOM |= 場所_プライベート
	;自室になると勉強,プライベートが付与
	CASE P728仙人の屋敷・空き部屋
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_布団
	CASE P729仙人の屋敷・玄関
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P730仙人の屋敷・庭
		ROOMDATA:ROOM |= 場所_訓練
		ROOMDATA:ROOM |= 場所_菜園
		ROOMDATA:ROOM |= 場所_水汲み
		ROOMDATA:ROOM |= 場所_物干し
	ENDSELECT
NEXT

