;-------------------------------------------------
;MASTERが在宅中かつモブと同じ位置にいるならMAIN_MAPを返す
;-------------------------------------------------
@WITH_MOB()
#FUNCTION
SIF AT_HOME(MASTER) && ROOMDATA:(CFLAG:MASTER:現在位置 % 100) & 場所_モブ
	RETURNF MAIN_MAP

;-------------------------------------------------
;モブの与える汚れ値（掃除値）
;ARG=MAPID
;-------------------------------------------------
@MOB_YOGORE(ARG)
#FUNCTION
SELECTCASE ARG
	CASE 3
		RETURNF -3
	CASE 4
		SIF !GROUPMATCH(TIME:2,1,6,7)
			RETURNF 1
	CASE 9
		SIF !GROUPMATCH(TIME:2,1,6,7)
			RETURNF 2
	CASE 10
		;玉兎はプラスマイナスゼロ
ENDSELECT

;-------------------------------------------------
;モブの基本名
