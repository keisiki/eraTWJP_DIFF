;-------------------------------------------------
;お出かけ時のモブ判定
;ARG=場所ID
;-------------------------------------------------
@DATE_HITOGOMI(ARG)
#FUNCTION
SIF !ARG
	ARG = CFLAG:MASTER:現在位置
IF IN_HOME(ARG)
	RETURNF 0
ELSE
	SIF ODEKAKEMAP_SETTING(ARG, "モブ")
		RETURNF 1
ENDIF
