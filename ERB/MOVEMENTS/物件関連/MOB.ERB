;-------------------------------------------------
;お出かけ中のモブ名
;ARG=場所ID
;-------------------------------------------------
@DATE_HITOGOMI_SYUBETU(ARG)
#FUNCTIONS
VARSET LOCALS
SIF !ARG
	ARG = CFLAG:PLAYER:現在位置
SELECTCASE GET_MAPID(ARG)
	;モブの種類
	;月
	CASE 10
		IF ARG == 月の都
			LOCALS += "月人"
		ELSE
			LOCALS += "玉兎"
		ENDIF
	;地底（街道と温泉では鬼も出てくる）
	CASE 9
		IF ARG != 地霊殿 && !RAND:3
			LOCALS += "鬼"
		ELSE
			LOCALS += "妖怪"
		ENDIF
	;妖怪の山山頂（守矢神社境内のみ希に人間）
	CASE 8
		IF ARG == 守矢神社境内 && !RAND:5
			LOCALS += "人間"
		ELSE
			LOCALS += "妖怪"
		ENDIF
	;妖怪の山山麓
	CASE 7
	;三途の川～冥界（死神、妖怪、希に人間）
	CASE 6
		IF !RAND:5
			LOCALS += "人間"
		ELSEIF !RAND:3
			LOCALS += "妖怪"
		ELSE
			LOCALS += "死神"
		ENDIF
	;魔法の森
	CASE 5
	;迷いの竹林（妖怪ウサギ、希に人間(患者)）
	CASE 4
		IF RAND:5
			LOCALS += "妖怪兎"
		ELSE
			LOCALS += "人間"
		ENDIF
	;紅魔館（お出かけ中のモブは全員少女なのでホフさんはお休み）
	CASE 3
		LOCALS += "妖精メイド"
	;人間の里（基本人間、希に妖怪）
	CASE 2
		IF RAND:5
			LOCALS += "人間"
		ELSE
			LOCALS += "妖怪"
		ENDIF
	;命蓮寺（人間と妖怪）
	CASE 1
		IF !RAND:2
			LOCALS += "人間"
		ELSE
			LOCALS += "妖怪"
		ENDIF
	;博麗神社
	CASE 0
ENDSELECT
LOCALS += "の少女"
RETURNF LOCALS

;-------------------------------------------------
;まかないイベント処理
;-------------------------------------------------
@MAKANAI
#DIM 気力回復量
#DIM 体力回復量
VARSET LOCAL
IF DISH_NAME == "" && !TFLAG:まかない && TIME:2 == 3
	;食事できない人がいるかをチェック
	FOR LOCAL, 0, CHARANUM
		SIF TCVAR:LOCAL:空腹時刻 - TIME:1 > 0 && CFLAG:LOCAL:現在位置 == CFLAG:MASTER:現在位置
			LOCAL:1 ++
	NEXT
	IF !LOCAL:1 && !RAND:5
		TFLAG:まかない = 1
		PRINTFORML %MOB_NAME()%からまかないを勧められた
		PRINTFORML 頂きますか？
		CALL ASK_YN
		IF RESULT
			PRINTFORML %CALLNAME:MASTER%は丁重に断った
		ELSE
			SELECTCASE RAND:5
				CASE 0, 1
					PRINTFORML まあまあの味だ
					体力回復量 = 100
					気力回復量 = 300
				CASE 2, 3
					PRINTFORML 結構イケる
					体力回復量 = 150
					気力回復量 = 400
				CASE 4
					PRINTFORML これは旨い！
					体力回復量 = 300
					気力回復量 = 500
			ENDSELECT
			PRINTFORMW %CALLNAME:MASTER%\@GET_TARGETNUM() ? たち# \@は小腹を満たした
			TIME += 15
			FOR LOCAL, 0, CHARANUM
				IF CFLAG:LOCAL:現在位置 == CFLAG:MASTER:現在位置
					CALL RECOVER(LOCAL, 体力回復量, "体力")
					CALL RECOVER(LOCAL, 気力回復量, "気力")
					CALL 満腹度上昇(LOCAL, "軽食")
				ENDIF
			NEXT
		ENDIF
	ENDIF
ENDIF

