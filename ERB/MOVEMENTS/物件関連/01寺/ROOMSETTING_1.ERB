		ROOMDATA:ROOM |= 場所_風呂
		ROOMDATA:ROOM |= 場所_身体測定
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P134蔵
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_過疎
	CASE P135廊下
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P137マミゾウの棲家
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_布団
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P138鐘楼
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_過疎
	CASE P139邪仙楼
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_布団
		ROOMDATA:ROOM |= 場所_勉強
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P140お地蔵通り
		ROOMDATA:ROOM |= 場所_広い
		ROOMDATA:ROOM |= 場所_留まらない
	ENDSELECT
NEXT

