;--------------------------------------------------
;地点名変更関数
;--------------------------------------------------
@MAP_PLACENAME_10(ARG)
#FUNCTIONS
IF GET_MAPID(ARG) == MAIN_MAP
	SELECTCASE ARG
		CASE P1033綿月亭・空き部屋, P1063純狐邸・空き部屋
			IF CFLAG:MASTER:初期位置 == ARG
				RETURNF CALLNAME:(FLAG:住み込みキャラ) + "私室"
			ELSE
				RETURNF "空き部屋"
			ENDIF
		CASE P1007空き家
			IF CFLAG:MASTER:初期位置 == ARG
				RETURNF "あなたの家"
			ELSE
				RETURNF "空き家"
			ENDIF
		CASE SUMIKOMI_ROOM
			;※このマップでは未実装
			IF FLAG:住み込みキャラ
				RETURNF CALLNAME:(FLAG:住み込みキャラ) + "の部屋"
			ELSE
				RETURNF "空き部屋"
			ENDIF
		CASE MINROOM() TO (MAXROOM - 1)
			RETURNF STR:(ARG + 8000)
		CASE OMANEKIBEYA()
			RETURNF OMANEKI_PLACE()
		CASE SUKIMA()
			RETURNF "スキマ空間"
		CASE MAXROOM
			RETURNF "夢の向こう"
		CASEELSE
			RETURNF "不明"
	ENDSELECT
ELSE
	RETURNF "月の外"
ENDIF

