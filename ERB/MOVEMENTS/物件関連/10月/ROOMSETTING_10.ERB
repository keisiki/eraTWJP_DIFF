;お出かけマップの設定
;ARG   対象の地点
;ARGS  判定文字引数
;-----------------------------------------
@ODEKAKEMAP_SETTING_10(ARG, ARGS)
#FUNCTION
;＼1 2 3 4 5 6 7 8 9 
;01　　　　　　　　　
;02　　　　　　　　　
;03　　　　　　　　　
;04６　　　　　　　　
;05５　７　　８　　　
;06　　　　　　　　９
;07　　　　　　　　　
;08　　　　　　　　　
;09１　　　　　　　　
SELECTCASE ARG
CASE 槐安通路
	SIF ARGS == "座標"
		RETURNF 19
	SIF GROUPMATCH(ARGS, "屋根")
		RETURNF 1
CASE 月の都
	SIF ARGS == "座標"
		RETURNF 15
	SIF GROUPMATCH(ARGS, "屋根", "広い", "モブ")
		RETURNF 1
CASE 綿月亭
	SIF ARGS == "座標"
		RETURNF 14
	SIF GROUPMATCH(ARGS, "屋内", "勉強")
		RETURNF 1
CASE 玉兎の街
	SIF ARGS == "座標"
		RETURNF 35
	SIF GROUPMATCH(ARGS, "屋根", "広い", "モブ")
		RETURNF 1
CASE 桃林～砂浜
	SIF ARGS == "座標"
		RETURNF 65
	SIF GROUPMATCH(ARGS, "広い", "訓練", "お弁当")
		RETURNF 1
CASE 静かの海
	SIF ARGS == "座標"
		RETURNF 96
	SIF GROUPMATCH(ARGS, "広い", "訓練")
		RETURNF 1
ENDSELECT
