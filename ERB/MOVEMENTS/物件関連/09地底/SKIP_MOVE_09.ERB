;-----------------------------------------------------------
;遠距離移動の設定
;ARG     目的地
;ARG:1   現在地
;RETURN  次の目的地
;-----------------------------------------------------------
@SKIP_MOVE_9(ARG, ARG:1)
#DIM 現在の位置
;現在位置取得
IF ARG:1
	現在の位置 = ARG:1
ELSE
	現在の位置 = CFLAG:MASTER:現在位置
ENDIF

;目的地に直接移動できる場合そこに移動
SIF CAN_MOVE(現在の位置, ARG) & 1
	RETURN ARG
;袋小路から行ける場所は固定なので、そこを目指す
SELECTCASE 現在の位置
	CASE P904大広間, P906一階トイレ, P911お空私室, P912お燐私室
		RETURN P905一階廊下
	CASE P910食料庫
		RETURN P909厨房
	CASE P915バルコニー, P916物置, P917二階トイレ, P918こいし私室
		RETURN P914二階廊下
	CASE P921風呂
		RETURN P922脱衣所
	CASE P930旧血の池地獄
		RETURN P929地獄の人工太陽
	CASE P934温泉, P935ラブホ, P936勇儀の家, P938鬼の溜まり場, P939路地裏
		RETURN P932裏通り
	CASE P937空き屋
		RETURN P931大通り
	CASE P940パルスィの家, P941ヤマメの家, P942キスメの家
		RETURN P945川岸
	CASE P943あばら屋
		RETURN P944通り
	CASE P948縦穴の底
		RETURN P946橋
ENDSELECT

;直接移動できない場合、1つ近い位置を暫定目的地に設定し直してループ
;基本的に最短で行けるコースを設定する
;現在地によってコースが変わることも考慮して対応する
SELECTCASE ARG
	CASE P901地霊殿前
		SELECTCASE 現在の位置
		CASE P906一階トイレ TO P930旧血の池地獄
			RETURN P905一階廊下
		CASEELSE
			RETURN P931大通り
		ENDSELECT
	CASE P904大広間, P906一階トイレ, P911お空私室, P912お燐私室
		RETURN P905一階廊下
	CASE P905一階廊下
		SELECTCASE 現在の位置
		CASE P915バルコニー TO P922脱衣所
			RETURN P914二階廊下
		CASE P925バラ園
			RETURN P923裏庭
		CASE P928灼熱地獄跡 TO P930旧血の池地獄
			RETURN P926中庭
		CASEELSE
			RETURN P901地霊殿前
		ENDSELECT
	CASE P909厨房
		SELECTCASE 現在の位置
		CASE P923裏庭
			RETURN P925バラ園
		CASEELSE
			RETURN P905一階廊下
		ENDSELECT
	CASE P910食料庫
		RETURN P909厨房
	CASE P913食堂
		SELECTCASE 現在の位置
		CASE P925バラ園
			RETURN P923裏庭
		CASEELSE
			RETURN P905一階廊下
		ENDSELECT
	CASE P914二階廊下
		RETURN P905一階廊下
	CASE P915バルコニー, P916物置, P917二階トイレ, P918こいし私室, P919さとり私室, P920書斎, P922脱衣所
		RETURN P914二階廊下
	CASE P921風呂
		RETURN P922脱衣所
	CASE P923裏庭
		SELECTCASE 現在の位置
		CASE P909厨房
			RETURN P925バラ園
		CASEELSE
			RETURN P905一階廊下
		ENDSELECT
	CASE P925バラ園
		RETURN P923裏庭
	CASE P926中庭
		SELECTCASE 現在の位置
		CASE P929地獄の人工太陽
			RETURN P928灼熱地獄跡
		CASEELSE
			RETURN P905一階廊下
		ENDSELECT
	CASE P928灼熱地獄跡
		RETURN P926中庭
	CASE P929地獄の人工太陽
		RETURN P928灼熱地獄跡
	CASE P930旧血の池地獄
		RETURN P929地獄の人工太陽
	CASE P931大通り
		SELECTCASE 現在の位置
		CASE P904大広間 TO P930旧血の池地獄
			RETURN P901地霊殿前
		CASE P940パルスィの家 TO P948縦穴の底
			RETURN P944通り
		CASEELSE
			RETURN P932裏通り
		ENDSELECT
	CASE P932裏通り, P933酒場, P937空き屋
		RETURN P931大通り
	CASE P934温泉, P935ラブホ, P936勇儀の家, P938鬼の溜まり場, P939路地裏
		RETURN P932裏通り
	CASE P940パルスィの家, P941ヤマメの家, P942キスメの家
		RETURN P945川岸
	CASE P943あばら屋, P945川岸, P946橋
		RETURN P944通り
	CASE P944通り
		RETURN P931大通り
	CASE P948縦穴の底
		RETURN P946橋
ENDSELECT
