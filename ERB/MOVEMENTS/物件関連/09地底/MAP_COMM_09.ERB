@MAP_CAN_MOVE_9(ARG, ARG:1)
#FUNCTION
#DIM 在宅
SELECTCASE ARG
	;旧西階段、東階段、噴水、地蔵
	CASE 907, 908, 924, 947
		RETURNF 0
	;ラブホ,あなた以外は入らない
	CASE 935
		SIF ARG:1 != MASTER
			RETURNF 0
	CASEELSE
		RETURNF 1
ENDSELECT
RETURNF 1

