@CHANGE_MONTH
#DIM おみくじ代
;日付が月を跨いだら月変更
IF DAY:3 > 31
	DAY:3 = 1
	DAY:2 ++
	;冬の次は春
	IF DAY:2 > 4
		DAY:2 = 1
		FLAG:年始貸付金 = FLAG:地主貸付金
		;(天候パッチ)長期予報を行う
		CALL WEATHER_FORECAST_1YEAR
	ENDIF
	;夏になったらバレンタインフラグリセット
	SIF DAY:2 == 2
		CVARSET CFLAG, 383
	;徴収発生
	SIF FLAG:地主
		FLAG:年貢 = 1
	IF FLAG:水やり代行
		FLAG:水やり代行 = 0
		PRINTFORMW 水やり代行の期限が切れました。
	ENDIF
	IF FLAG:新聞購読
		IF MONEY < 3000 && MONEY:2 < 10
			PRINTFORML 金欠なので文々。新聞の購読を停止します。
		ELSE
			PRINTL
			PRINTFORML ★文々。新聞の購読を続けますか？（月額￥3000 or 10カリスマ）
			CALL ASK_M("解約",1,"更新（￥3000）",MONEY >= 3000,"更新（10カリスマ）",MONEY:2 >= 10)
			SELECTCASE RESULT
				CASE 0
					PRINTFORML 購読を停止します。
					FLAG:新聞購読 = 0
				CASE 1
					MONEY -= 3000
					PRINTFORML 今月も購読します。
				CASE 2
					MONEY:2 -= 10
					PRINTFORML 今月も購読します。
			ENDSELECT
		ENDIF
	ENDIF
	IF FLAG:おみくじ契約
		おみくじ代 = 50
		SIF !MAIN_MAP
			おみくじ代 = 30
		IF MONEY:2 < おみくじ代
			PRINTFORML カリスマが足りないので、おみくじ契約が打ち切られました
			FLAG:おみくじ契約 = 0
		ELSE
			PRINTFORML おみくじ契約を続けますか？
			CALL ASK_YN
			IF !RESULT
				PRINTFORML 契約を更新しました
				MONEY:2 -= おみくじ代
			ELSE
				FLAG:おみくじ契約 = 0
				PRINTFORML 契約を終了します
			ENDIF
		ENDIF
	ENDIF
ENDIF
