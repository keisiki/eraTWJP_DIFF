@CHARAMOVE_DATA_97(ARG,ARG:2)
LOCAL = 97
SELECTCASE ARG
	;移動対象メンバーチェック
	CASE 1
	;移動確率
	CASE 2
	;起床時間帯
	CASE 3
		RETURN 睡眠時間(LOCAL)
	;移動傾向
	CASE 4
		SELECTCASE ARG:2
			;アジト,厄家,百合家,秋家,華扇家,隠れ家,小屋
			CASE 704, 706, 709, 715 TO 719, 720 TO 730, 733, 734
				RETURN -100
		ENDSELECT
	;仕事時間帯
	CASE 5
	;行く地域(0=博1=寺2=里3=湖4=竹5=森6=冥7=山8=守9=地10=月）
	CASE 6
		SELECTCASE ARG:2
			CASE 3, 4, 5, 6, 7
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 31,32,33,34, 41,42,43,44,46,47, 51,53,56,57, 61,62, 71,72,73
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

@EXIST_キャラデータ97
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ97(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "呼び名"
	CALLF MAKE_STR(V_NAME, "正邪")
;こっから衣装設定
CASE "今日のパジャマ"
	CALLF MAKE_STR(V_NAME, "パジャマ（ズボン）セット")

CASE "普段着：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "普段着：ワンピース"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("ワンピース", "ワンピース"))
CASE "普段着：その他１"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("その他１", "ブレスレット"))

CASE "固有下着形容詞"
	CALLF MAKE_STR(V_NAME, "苦楽を共にした")
CASE "固有下半身下着名"
	CALLF MAKE_STR(V_NAME, "擦り切れパンツ")
CASE "固有上半身下着"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身下着名"
	CALLF MAKE_STR(V_NAME, "汚れたサラシ")
CASE "固有下着着用条件"
	SIF !RAND:(1 + (2 * 勝負下着判定([[正邪]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有下着透ける(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有下着透ける(後)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有下着生地厚さ"
	CALLF MAKE_INT(V_NAME, 3)

;料理関連
CASE "料理：好きな味"
	CALLF MAKE_STR(V_NAME, "肉料理/麺類/濃厚/豪華/豪快/謎料理/とろとろ/霊障/小人族秘伝の味/玉兎流/辛い/辛い/しょっぱい/しょっぱい/ジャンキー/ジャンキー/ジャンキー/")
CASE "料理：嫌いな味"
	CALLF MAKE_STR(V_NAME, "野菜/和食/淡白/質素/家庭的/上品/すっぱい/すっぱい/" + "ミルク/ヘルシー/メイド流/天狗流/" * 3)
CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "逆転/")
;贈り物関連
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "赤/混沌/怖い/奇妙/派手/壮大/" + "妖術/道具/" * 3 + "鬼の/鏡の国の/機力の/裏切りの/逆転する/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "シンプル/レトロ/シック/" + "秩序/光/神霊/護符/書物/首輪/ネクタイ/" * 3 + "女王の/王者の/平和の/正義の/魔法少女の/ヒーローの/憑坐の/" * 5)
ENDSELECT

