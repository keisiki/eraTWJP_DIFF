	CALLF MAKE_INT(V_NAME, CLOTHES_ID("その他１", "リボンチョーカー"))
CASE "普段着：その他２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("その他２", "ひよこ"))

CASE "固有下着形容詞"
	CALLF MAKE_STR(V_NAME, "ピヨピヨ音の出る")
CASE "固有下半身下着名"
	CALLF MAKE_STR(V_NAME, "ひよこパンツ")
CASE "固有上半身下着"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身下着名"
	CALLF MAKE_STR(V_NAME, "ひよこブラ")
CASE "固有下着着用条件"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有下着透ける(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有下着透ける(後)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有下着生地厚さ"
