@CHARAMOVE_DATA_118(ARG, ARG:2)
LOCAL = 118
SELECTCASE ARG
	;連動設定（RETURN=依存するキャラ, RESULT:1～3=対等に連動するキャラ）
	CASE 1
		;まれに連動
		SIF CFLAG:LOCAL:今日の運勢 % 16 == 0
			RETURN [[サニー]]
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;三妖精宅内に行きやすい
			CASE P27三妖精の家・広間 TO P34スター私室
				RETURN 5
			;夢幻館には行かない
			CASE P450玄関 TO P465ホール
				RETURN -100
			;永遠亭の奥には行かない
			CASE P405調剤室, P407廊下 TO P430地下室
				RETURN -100
			;他人の家には入らない
			CASE P432影狼の家, P437メディスンの家, P443ミスティアの家, P445妹紅の家
				RETURN -100
			;自宅,無名の丘,太陽の畑,夢幻館庭によく居る
			CASE P439ラルバの家, P436無名の丘, P438太陽の畑, P466庭
				RETURN 5
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 霧の湖, 氷のかまくら, 正門
				;冬は行かない
				SIF DAY:2 != 4
					RETURN 1
			CASE 森の入り口, 古木の大樹, 再思の道, 無縁塚
				RETURN 1
			CASE 無名の丘, 太陽の畑
				RETURN 1
			CASE 妖精の大樹
				;冬は行かない
				SIF DAY:2 != 4
					RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

