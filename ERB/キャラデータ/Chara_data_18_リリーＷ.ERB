@CHARAMOVE_DATA_18(ARG, ARG:2)
LOCAL = 18
SELECTCASE ARG
	;連動設定（RETURN=依存するキャラ, RESULT:1～3=対等に連動するキャラ）
	CASE 1
		;たまに連動
		IF FLAG:日替わりイベント % 8 == 0
			RESULT:1 = [[リリーＷ]]
			RESULT:2 = [[リリーＢ]]
		ENDIF
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;三妖精宅内に行きやすい
			CASE P27三妖精の家・広間 TO P34スター私室
				RETURN 5
			;私室には入らない
			CASE P704河童のアジト, P706厄神の家, P716秋姉妹の家・土間 TO P730仙人の屋敷・庭
				RETURN -100
			CASE P733正邪の隠れ家, P736山姥の家, P737招き猫の家, P740山童のアジト
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 広場, 商家町, 呑屋小道
				RETURN 1
			CASE 霧の湖, 氷のかまくら, 廃洋館, 正門
				RETURN 1
			CASE 森の入り口, 香霖堂, 古木の大樹
				RETURN 1
			CASE 麓の樹海, 玄武の沢, 大蝦蟇の池, 森の深奥
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

