@CHARAMOVE_DATA_107(ARG, ARG:2)
LOCAL = 107
SELECTCASE ARG
	;連動設定（RETURN=依存するキャラ, RESULT:1～3=対等に連動するキャラ）
	CASE 1
		;たまに連動
		IF FLAG:日替わりイベント % 10 == 0
			RESULT:1 = [[清蘭]]
			RESULT:2 = [[鈴瑚]]
		ENDIF
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;静かの海の方へは行かない
			CASE P1016入り江, P1060純狐邸・玄関 TO P1072ヘカーティア私室
				RETURN -100
			;ドレミー宅には行かない
			CASE P1050ドレミー宅・居間 TO P1055ドレミー宅・トイレ
				RETURN -100
			;門番詰め所は行かない
			CASE P1023門番詰め所
				RETURN -100
			;二階はあまり行かない
			CASE P1040二階回廊 TO P1044応接間
				RETURN -5
			;玉兎街方面,玉兎食堂,玉兎詰め所によく居る
			CASE P1003玉兎街, P1004広場, P1010食事処 TO P1013八百屋, P1024玉兎食堂, P1025玉兎詰め所
				RETURN 5
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 竹林入り口, 迷いの小道, 斜角の竹林, 兎の洞穴, 永遠亭
				RETURN 1
			CASE 広場, 商家町, 呑屋小道
				RETURN 1
			CASE 月の都, 綿月亭, 玉兎の街, 桃林～砂浜
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

