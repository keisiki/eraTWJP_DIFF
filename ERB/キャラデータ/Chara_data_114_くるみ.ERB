@CHARAMOVE_DATA_114(ARG, ARG:2)
LOCAL = 114
SELECTCASE ARG
	;連動設定（RETURN=依存するキャラ, RESULT:1～3=対等に連動するキャラ）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;永遠亭の奥には行かない
			CASE P405調剤室, P407廊下 TO P430地下室
				RETURN -100
			;他人の家には入らない
			CASE P432影狼の家, P437メディスンの家, P439ラルバの家, P443ミスティアの家, P445妹紅の家
				RETURN -100
			;太陽の畑,ダイニング,リビングによく居る
			CASE P438太陽の畑, P453ダイニング, P461リビング
				RETURN 5
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 竹林入り口, 迷いの小道, 斜角の竹林, 無名の丘, 太陽の畑, 夢幻館
				RETURN 1
			CASE 霧の湖, 正門, 食堂
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

@EXIST_キャラデータ114
