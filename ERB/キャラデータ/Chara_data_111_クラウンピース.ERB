@CHARAMOVE_DATA_111(ARG, ARG:2)
LOCAL = 111
SELECTCASE ARG
	;連動設定（RETURN=依存するキャラ, RESULT:1～3=対等に連動するキャラ）
	CASE 1
		;たまに連動
		SIF CFLAG:LOCAL:今日の運勢 % 12 == 0
			RETURN [[サニー]]
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;三妖精宅内に行きやすい
			CASE P27三妖精の家・広間 TO P34スター私室
				RETURN 5
			;綿月亭には行かない
			CASE P1020綿月亭・門 TO P1044応接間
				RETURN -100
			;静かの海は渡らない
			CASE P1001槐安通路 TO P1015砂浜
				RETURN -100
			;二階はあまり行かない
			CASE P1070屋上, P1071純狐私室, P1072ヘカーティア私室
				RETURN -5
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 桜並木の鳥居, 神社境内, 神社縁側, 妖精の大樹
				RETURN 1
			CASE 広場, 商家町, 呑屋小道
				RETURN 1
			CASE 中有の道, 三途の川, 彼岸, 地獄
				RETURN 1
			CASE 静かの海
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

