@CHARAMOVE_DATA_127(ARG, ARG:2)
LOCAL = 127
SELECTCASE ARG
	;連動設定（参照する側＞RETURN=参照先, 参照される側＞RESULT:1～3=連動対象）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向
	CASE 4
		SELECTCASE ARG:2
			;八雲邸と彼岸から先は行かない（入り口部分は出る時用）
			CASE P604彼岸, P610是非曲直庁ホール TO P655尤魔宅の風呂
				RETURN -100
			;潤美の家には行かない
			CASE P608潤美の家
				RETURN -100
			;積石塚に引きこもる
			CASE P603積石塚
				RETURN 10
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 中有の道, 三途の川
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

