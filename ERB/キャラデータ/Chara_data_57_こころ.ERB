@CHARAMOVE_DATA_57(ARG,ARG:2)
LOCAL = 57
SELECTCASE ARG
	;移動対象メンバーチェック
	CASE 1
	;移動確率
	CASE 2
	;起床時間帯
	CASE 3
		RETURN 睡眠時間(LOCAL)
	;移動傾向
	CASE 4
		SELECTCASE ARG:2
			;主に境内,縁側に居る
			CASE 2, 10
				RETURN 5
		ENDSELECT
	;仕事時間帯
	CASE 5
	;行く地域(0=博1=寺2=里3=湖4=竹5=森6=冥7=山8=守9=地10=月）
	CASE 6
		SELECTCASE ARG:2
			CASE 0, 1, 2
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 1,2,4, 11,12,13,16, 21,22,23
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

@EXIST_キャラデータ57
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ57(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "呼び名"
	CALLF MAKE_STR(V_NAME, "こころ")
;こっから衣装設定
CASE "今日のパジャマ"
	CALLF MAKE_STR(V_NAME, "パジャマ（ズボン＋フード）セット")

CASE "普段着：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "面"))
CASE "普段着：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "普段着：靴下"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴下", "靴下"))
CASE "普段着：スカート"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("スカート", "ロングスカート"))
CASE "普段着：上半身上着２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上半身上着２", "ブラウス"))

;けしてオープンショーツではない
CASE "固有下着形容詞"
	CALLF MAKE_STR(V_NAME, "スリットが笑顔を象る")
CASE "固有下半身下着名"
	CALLF MAKE_STR(V_NAME, "穴開きパンツ")
CASE "固有上半身下着"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有下着着用条件"
	SIF !RAND:(1 + (2 * 勝負下着判定([[こころ]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有下着透ける(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有下着透ける(後)"
	CALLF MAKE_INT(V_NAME, 1)

;料理関連
CASE "料理：好きな味"
	CALLF MAKE_STR(V_NAME, "米/果物/和食/煮物/ジャンキー/淡白/豪華/芸術的/鮮やか/もちもち/辛い/辛い/しょっぱい/しょっぱい/")
CASE "料理：嫌いな味"
	CALLF MAKE_STR(V_NAME, "濃厚/すっぱい/すっぱい/" + "カエル/虫肉/謎料理/" * 3)
CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "彩り/")
;贈り物関連
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "ピンク/美しい/芸術的/和風/派手/不思議/" + "精神/音楽/面/蜃気楼の/" * 3 + "心の/希望の/舞踊の/感情の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "シック/洋風/" + "生体品/小手/" * 3)
ENDSELECT

