	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上半身上着２", "Ｔシャツ"))
CASE "普段着：ズボン"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("ズボン", "かぼちゃズボン"))

