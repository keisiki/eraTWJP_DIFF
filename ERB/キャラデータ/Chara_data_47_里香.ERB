CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "化学的/")
;贈り物関連
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "銀/技術/混沌/かわいい/奇妙/パワフル/知的/マニアック/" + "金属/付喪神/妖術/" * 3 + "変形型/アーティファクト/機械/" * 5)
