@CHARAMOVE_DATA_101(ARG, ARG:2)
LOCAL = 101
SELECTCASE ARG
	;連動設定（RETURN=依存するキャラ, RESULT:1～3=対等に連動するキャラ）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;自宅によく居る
			CASE P541朱鷺子の棲み処
				RETURN 5
			;魔理沙家,アリス家,エレン家,妖怪の棲み処
			CASE P510霧雨魔法店 TO P515魔理沙宅・倉庫, P521人形の館・アリスの部屋 TO P531人形の館・空き部屋
				RETURN -100
			CASE P535エレン宅・寝室 TO P537エレン宅・風呂, P542リグルの棲み処, P543ルーミアの棲み処, P544成美の小屋
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 霧の湖, 正門, 大図書館
				RETURN 1
			CASE 森の入り口, 香霖堂, 古木の大樹
				RETURN 1
			CASE 麓の樹海, 玄武の沢, 大蝦蟇の池
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

@EXIST_キャラデータ101
#LOCALSIZE 1
#LOCALSSIZE 1

