@CHARAMOVE_DATA_99(ARG, ARG:2)
LOCAL = 99
SELECTCASE ARG
	;連動設定（RETURN=依存するキャラ, RESULT:1～3=対等に連動するキャラ）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;夢幻館には行かない
			CASE P450玄関 TO P466庭
				RETURN -100
			;他人の家には入らない
			CASE P432影狼の家, P437メディスンの家, P439ラルバの家, P443ミスティアの家, P445妹紅の家
				RETURN -100
			;縁側,居間によく居る
			CASE P409縁側, P416居間
				RETURN 5

			;静かの海の方へは行かない
			CASE P1016入り江, P1060純狐邸・玄関 TO P1072ヘカーティア私室
				RETURN -100
			;ドレミー宅には行かない
			CASE P1050ドレミー宅・居間 TO P1055ドレミー宅・トイレ
				RETURN -100
			;詰め所は行かない
			CASE P1023門番詰め所 TO P1025玉兎詰め所
				RETURN -100
			;書斎、食堂によく居る
			CASE P1043書斎, P1026食堂
				RETURN 5
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 月の都, 綿月亭, 玉兎の街, 桃林～砂浜
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

