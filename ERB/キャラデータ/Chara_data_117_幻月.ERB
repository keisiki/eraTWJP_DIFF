@CHARAMOVE_DATA_117(ARG, ARG:2)
LOCAL = 117
SELECTCASE ARG
	;連動設定（RETURN=依存するキャラ, RESULT:1～3=対等に連動するキャラ）
	CASE 1
		;たまに連動
		IF FLAG:日替わりイベント % 10 == 0
			RESULT:1 = [[夢月]]
			RESULT:2 = [[幻月]]
		ENDIF
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;永遠亭の奥には行かない
			CASE P405調剤室, P407廊下 TO P430地下室
				RETURN -100
			;他人の家には入らない
			CASE P432影狼の家, P437メディスンの家, P439ラルバの家, P443ミスティアの家, P445妹紅の家
				RETURN -100
			;ダイニング,リビング,自室によく居る
			CASE P453ダイニング, P461リビング, P459幻月私室
				RETURN 5
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 竹林入り口, 迷いの小道, 斜角の竹林, 無名の丘, 太陽の畑, 夢幻館
				RETURN 1
			CASE 森の入り口, 古木の大樹, 人形の洋館, 再思の道, 無縁塚
				RETURN 1
			CASE 広場, 商家町, 呑屋小道
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

@EXIST_キャラデータ117
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ117(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "呼び名"
	CALLF MAKE_STR(V_NAME, "幻月")
;こっから衣装設定
CASE "今日のパジャマ"
	CALLF MAKE_STR(V_NAME, "パジャマ（ズボン）セット")

CASE "普段着：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "リボン"))
CASE "普段着：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "普段着：靴下"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴下", "靴下"))
CASE "普段着：スカート"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("スカート", "ロングスカート"))
CASE "普段着：上半身上着２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上半身上着２", "ブラウス"))

CASE "固有下着形容詞"
	CALLF MAKE_STR(V_NAME, "緩やかに表面の柄が変わる")
CASE "固有下半身下着名"
	CALLF MAKE_STR(V_NAME, "夢幻パンツ")
CASE "固有上半身下着"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身下着名"
	CALLF MAKE_STR(V_NAME, "夢幻ブラ")
CASE "固有下着着用条件"
	SIF !RAND:3
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有下着透ける(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有下着透ける(後)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有下着生地厚さ"
	CALLF MAKE_INT(V_NAME, 2)

;料理関連
CASE "料理：好きな味"
	CALLF MAKE_STR(V_NAME, "チーズ/スパイス/洋食/鍋物/ケーキ/あっさり/淡白/豪華/上品/家庭的/ふわふわ/夢幻風/甘い/甘い/すっぱい/すっぱい/")
CASE "料理：嫌いな味"
	CALLF MAKE_STR(V_NAME, "野趣/しょっぱい/しょっぱい/カエル/カエル/カエル/虫肉/虫肉/虫肉/謎料理/謎料理/謎料理/謎料理/謎料理/")
CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "夢幻風/")
;贈り物関連
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "白/高級/混沌/かわいい/パワフル/威厳/壮大/" + "妖術/禁断の/" * 3 + "夢幻の/悪魔の/天使の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "秩序/繊細/" + "安物/神霊/" * 3)
ENDSELECT

