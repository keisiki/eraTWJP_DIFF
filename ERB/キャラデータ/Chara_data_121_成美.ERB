@CHARAMOVE_DATA_121(ARG,ARG:2)
LOCAL = 121
SELECTCASE ARG
	;移動対象メンバーチェック
	CASE 1
	;移動確率
	CASE 2
	;起床時間帯
	CASE 3
		RETURN 睡眠時間(LOCAL)
	;移動傾向
	CASE 4
		SELECTCASE ARG:2
			;魔理沙寝室,魔理沙風呂,魔理沙倉庫
			CASE 512, 514, 515
				RETURN -100
			;アリス私室,神綺私室,夢子私室,アリス風呂,アリス倉庫
			CASE 521, 522, 523, 526, 28
				RETURN -100
			;エレン私室,エレン倉庫,エレン風呂
			CASE 535, 536, 537
				RETURN -100
			;各棲み処
			CASE 541, 542, 543
				RETURN -100
			;とくになし
			CASEELSE
				RETURN 0
		ENDSELECT
	;仕事時間帯
	CASE 5
	;行く地域(0=博1=寺2=里3=湖4=竹5=森6=冥7=山8=守9=地10=月）
	CASE 6
		SELECTCASE ARG:2
			CASE 5
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 51, 52, 53, 54, 56, 57
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

@EXIST_キャラデータ121
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ121(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "呼び名"
	CALLF MAKE_STR(V_NAME, "成美")
;こっから衣装設定
CASE "今日のパジャマ"
	CALLF MAKE_STR(V_NAME, "パジャマ（ズボン）セット")

CASE "普段着：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "笠"))
CASE "普段着：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "雪駄"))
CASE "普段着：靴下"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴下", "足袋"))
CASE "普段着：ワンピース"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("ワンピース", "法衣"))

CASE "固有下着形容詞"
	CALLF MAKE_STR(V_NAME, "ありがたい御言葉が書かれた")
CASE "固有下半身下着名"
	CALLF MAKE_STR(V_NAME, "朱布ふんどし")
CASE "固有上半身下着"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身下着名"
	CALLF MAKE_STR(V_NAME, "経文さらし")
CASE "固有下着着用条件"
	SIF !RAND:(1 + (2 * 勝負下着判定([[成美]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有下着透ける(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有下着透ける(後)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有下着生地厚さ"
	CALLF MAKE_INT(V_NAME, 3)

;料理関連
CASE "料理：好きな味"
	CALLF MAKE_STR(V_NAME, "米/卵/和食/麺類/あっさり/淡白/冬物/質素/上品/謎料理/サクサク/神力/冥界風/甘い/甘い/辛い/辛い/")
CASE "料理：嫌いな味"
	CALLF MAKE_STR(V_NAME, "すっぱい/すっぱい/カエル/カエル/カエル/虫肉/虫肉/虫肉/")
CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "薄味/得意料理＊冬物＊/")
;贈り物関連
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "灰/かわいい/シック/" + "土/魔法/護符/法具/" * 3 + "石の/救世の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "混沌/怖い/" + "刃物/弾/小手/" * 3 + "孤独の/" * 10)
ENDSELECT

