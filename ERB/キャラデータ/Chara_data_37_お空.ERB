	CALLF MAKE_STR(V_NAME, "卵/スパイス/鍋物/ガッツリ/濃厚/温かい/野趣/家庭的/豪快/サクサク/地底風/甘い/甘い/辛い/辛い/ゆでたまご/ゆでたまご/ゆでたまご/")
CASE "料理：嫌いな味"
	CALLF MAKE_STR(V_NAME, "淡白/冷たい/すっぱい/すっぱい/鳥肉/鳥肉/鳥肉/")
CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "地獄風/地底風/大火力/")
