CASE "農民：場所ID"
	CALLF MAKE_INT(V_NAME, 927)
CASE "農民：報酬"
	CALLF MAKE_INT(V_NAME, 400)
CASE "農民：金利"
	CALLF MAKE_INT(V_NAME, 3)
ENDSELECT

