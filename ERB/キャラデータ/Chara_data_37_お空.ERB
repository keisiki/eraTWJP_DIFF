@CHARAMOVE_DATA_37(ARG,ARG:2)
LOCAL = 37
SELECTCASE ARG
	;移動対象メンバーチェック
	CASE 1
	;移動確率
	CASE 2
	;起床時間帯
	CASE 3
		RETURN 睡眠時間(LOCAL)
	;移動傾向
	CASE 4
		SELECTCASE ARG:2
			;お燐以外の私室や使わない部屋
			CASE 903, 904, 910, 916, 918, 919, 920, 925, 935, 936, 937, 938, 940, 941, 942, 943
				RETURN -100
		ENDSELECT
	;仕事時間帯
	CASE 5
	;行く地域(0=博1=寺2=里3=湖4=竹5=森6=冥7=山8=守9=地10=月）
	CASE 6
		SELECTCASE ARG:2
			CASE 7, 9
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 76, 91,92,93,96,97
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

