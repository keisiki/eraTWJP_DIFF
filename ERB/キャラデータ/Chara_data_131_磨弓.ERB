@CHARAMOVE_DATA_131(ARG, ARG:2)
LOCAL = 131
SELECTCASE ARG
	;連動設定（RETURN=依存するキャラ, RESULT:1～3=対等に連動するキャラ）
	CASE 1
		;休日は連動
		SIF YOUBI_MATCH(DAY, "土日")
			RETURN [[袿姫]]
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;是非曲直庁、冥界、八雲邸には行かない（入り口部分は出る時用）
			CASE P612法廷 TO P639八雲邸居間
				RETURN -100
			;他人の家には入らない
			CASE P608潤美の家, P609瓔花の家
				RETURN -100
			;組長宅には行かない
			CASE P646八千慧宅の風呂 TO P655尤魔宅の風呂
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 広場, 商家町, 呑屋小道, 長屋街
				RETURN 1
			CASE 中有の道, 三途の川, 彼岸, 霊長園
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

