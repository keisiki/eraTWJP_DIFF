CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "薄味/得意料理＊ふわふわ＊/")
;贈り物関連
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "青/白/秩序/美しい/パワフル/" + "風/法具/" * 3 + "雲の/天輪の/法輪/" * 5)
