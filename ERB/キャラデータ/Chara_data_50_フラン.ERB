@CHARAMOVE_DATA_50(ARG,ARG:2)
LOCAL = 50
SELECTCASE ARG
	;移動対象メンバーチェック
	CASE 1
	;移動確率
	CASE 2
	;起床時間帯
	CASE 3
		IF DAY:2 == 4
			CFLAG:50:就寝時間 = 420
			CFLAG:50:起床時間 = 1020
		ELSE
			CFLAG:50:就寝時間 = 360
			CFLAG:50:起床時間 = 1080
		ENDIF
		RETURN 睡眠時間(LOCAL)
	;移動傾向
	CASE 4
		SELECTCASE ARG:2
			;ひとんちの風呂とかトイレにはいかない
			CASE 12, 13, 14, 18, 30, 35, 39, 40, 51
				RETURN -100
			;納屋と屋敷外には出ないし、空き部屋にも行かない
			CASE 304, 305, 321, 329, 330, 334 TO 348
				RETURN -100
		ENDSELECT
	;仕事時間帯
	CASE 5
	;行く地域(0=博1=寺2=里3=湖4=竹5=森6=冥7=山8=守9=地10=月）
	CASE 6
		SELECTCASE ARG:2
			CASE 3
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 34 TO 38
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT
