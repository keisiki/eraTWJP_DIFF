@CHARAMOVE_DATA_128(ARG,ARG:2)
LOCAL = 128
SELECTCASE ARG
	;移動対象メンバーチェック
	CASE 1
	;移動確率
	CASE 2
	;起床時間帯
	CASE 3
		RETURN 睡眠時間(LOCAL)
	;移動傾向
	CASE 4
		SELECTCASE ARG:2
			;八雲邸と彼岸から先は行かない（入り口部分は出る時用）
			CASE 604, 610, 613, 620, 621, 630, 631, 640, 641
				RETURN -10
			CASE 610 TO 652
				RETURN -100
			;瓔花の家には行かない
			CASE 609
				RETURN -100
			;此岸によくいる
			CASE 601, 602, 603, 608
				RETURN 10
			;とくになし
			CASEELSE
				RETURN 0
		ENDSELECT
	;仕事時間帯
	CASE 5
	;行く地域(0=博1=寺2=里3=湖4=竹5=森6=冥7=山8=守9=地10=月）
	CASE 6
		SELECTCASE ARG:2
			CASE 2, 6
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 21, 22, 23, 61, 62
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

@EXIST_キャラデータ128
