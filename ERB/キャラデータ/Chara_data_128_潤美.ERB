CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "冥界風/得意料理＊魚＊/")
;贈り物関連
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "茶/かわいい/シンプル/シック/" + "魚/人形/鬼の/" * 3 + "石の/深海魚の/古代魚の/" * 5)
