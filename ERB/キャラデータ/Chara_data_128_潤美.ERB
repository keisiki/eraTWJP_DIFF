	CALLF MAKE_INT(V_NAME, CLOTHES_ID("外衣", "羽織"))
CASE "普段着：ズボン"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("ズボン", "ショートズボン"))
CASE "普段着：その他１"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("その他１", "石像"))

CASE "固有下着形容詞"
	CALLF MAKE_STR(V_NAME, "牧歌的")
