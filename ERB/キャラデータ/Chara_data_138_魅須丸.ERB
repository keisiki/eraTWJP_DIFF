@CHARAMOVE_DATA_138(ARG, ARG:2)
LOCAL = 138
SELECTCASE ARG
	;連動設定（RETURN=依存するキャラ, RESULT:1～3=対等に連動するキャラ）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;天界には行かない
			CASE P830玄雲海 TO P842比那名居邸物置
				RETURN -100
			;私室やお風呂は入らない
			CASE P817神奈子私室, P818諏訪子私室, P820早苗私室
				RETURN -100
			CASE P807椛宅, P808文宅, P809はたて宅, P854龍宅
				RETURN -100
			CASE P851久侘歌の小屋, P852駒草の小屋, P824トイレ, P825風呂
				RETURN -100
			;虹龍洞によく居る
			CASE P855虹龍洞
				RETURN 5
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 桜並木の鳥居, 神社境内, 神社本堂, 神社縁側
				RETURN 1
			CASE 広場, 商家町, 呑屋小道
				RETURN 1
			CASE 九天の滝, 絶景の丘, 山の湖, 守矢神社境内, 虹龍洞
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

@EXIST_キャラデータ138
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ138(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "呼び名"
	CALLF MAKE_STR(V_NAME, "魅須丸")
;こっから衣装設定
CASE "今日のパジャマ"
	CALLF MAKE_STR(V_NAME, "パジャマ（襦袢）セット")

CASE "普段着：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "帽子"))
CASE "普段着：外衣"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("外衣", "羽織"))
CASE "普段着：上半身上着１"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上半身上着１", "袖無し上着"))
CASE "普段着：上半身上着２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上半身上着２", "ブラウス"))
CASE "普段着：スカート"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("スカート", "スカート"))
CASE "普段着：その他"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("その他", "勾玉"))
	
CASE "固有下着形容詞"
	CALLF MAKE_STR(V_NAME, "自家製の")
CASE "固有下半身下着名"
	CALLF MAKE_STR(V_NAME, "勾玉柄パンツ")
CASE "固有上半身下着"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身下着名"
	CALLF MAKE_STR(V_NAME, "勾玉ブラ")
CASE "固有下着着用条件"
	SIF !RAND:(3 - (2 * 勝負下着判定([[魅須丸]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有下着透ける(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有下着透ける(後)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有下着生地厚さ"
	CALLF MAKE_INT(V_NAME, 2)

;料理関連
CASE "料理：好きな味"
	CALLF MAKE_STR(V_NAME, "野菜/和食/汁物/甘い/甘い/すっぱい/すっぱい/あっさり/淡白/質素/芸術的/家庭的/サクサク/")
CASE "料理：嫌いな味"
	CALLF MAKE_STR(V_NAME, "しょっぱい/しょっぱい/ガッツリ/濃厚/謎料理/謎料理/謎料理/")
CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "得意料理＊和食＊/")
;贈り物関連
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "鉱物/朱/秩序/美しい/芸術的/和風/繊細/壮大/" + "土/巫術/装飾/" * 3 + "龍珠の/勾玉/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "混沌/洋風/パワフル/" + "生体品/" * 3 + "機械/" * 10)
ENDSELECT

