	CALLF MAKE_STR(V_NAME, "かわいい/オシャレ/大陸風/シック/マニアック/" + "赤/" * 3 + "騎士の/マント/マスク/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "派手/知的/ロリータ/" + "書物/" * 3)

;農民関連
;首が落ちる＋赤色
