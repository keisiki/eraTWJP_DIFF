CASE "農民：マップID"
	CALLF MAKE_INT(V_NAME, 2)
CASE "農民：場所ID"
	CALLF MAKE_INT(V_NAME, 206)
CASE "農民：報酬"
	CALLF MAKE_INT(V_NAME, 350)
CASE "農民：金利"
	CALLF MAKE_INT(V_NAME, 6)
ENDSELECT

