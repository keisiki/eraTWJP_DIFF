@CHARAMOVE_DATA_109(ARG,ARG:2)
LOCAL = 109
SELECTCASE ARG
	;移動対象メンバーチェック
	CASE 1
	;移動確率
	CASE 2
	;起床時間帯
	CASE 3
		RETURN 睡眠時間(LOCAL)
	;移動傾向
	CASE 4
		SELECTCASE ARG:2
			;純狐邸には行かない
			CASE 1061 TO 1072
				RETURN -100
			;出るとき用
			CASE 1060
				RETURN -10
			;綿月亭には行かない
			CASE 1022 TO 1049
				RETURN -100
			;出るとき用
			CASE 1020, 1021
				RETURN -10
			;他人の家には行かない
			CASE 1005 TO 1009
				RETURN -100
		ENDSELECT
	;仕事時間帯
	CASE 5
	;行く地域(0=博1=寺2=里3=湖4=竹5=森6=冥7=山8=守9=地10=月）
	CASE 6
		SELECTCASE ARG:2
			CASE 10
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 101
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT
