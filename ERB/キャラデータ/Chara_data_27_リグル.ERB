@CHARAMOVE_DATA_27(ARG, ARG:2)
LOCAL = 27
SELECTCASE ARG
	;連動設定（RETURN=依存するキャラ, RESULT:1～3=対等に連動するキャラ）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;魔理沙家,アリス家,エレン家,妖怪の棲み処
			CASE P510霧雨魔法店 TO P515魔理沙宅・倉庫, P521人形の館・アリスの部屋 TO P531人形の館・空き部屋
				RETURN -100
			CASE P535エレン宅・寝室 TO P537エレン宅・風呂, P541朱鷺子の棲み処, P543ルーミアの棲み処, P544成美の小屋
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 竹林入り口, 迷いの小道, 斜角の竹林, 兎の洞穴, 無名の丘, 太陽の畑
				RETURN 1
			CASE 森の入り口, 古木の大樹, 再思の道, 無縁塚
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

