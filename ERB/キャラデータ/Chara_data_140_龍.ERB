@CHARAMOVE_DATA_140(ARG, ARG:2)
LOCAL = 140
SELECTCASE ARG
	;連動設定（RETURN=依存するキャラ, RESULT:1～3=対等に連動するキャラ）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;天界には行かない
			CASE P830玄雲海 TO P842比那名居邸物置
				RETURN -100
			;私室やお風呂は入らない
			CASE P817神奈子私室, P818諏訪子私室, P820早苗私室
				RETURN -100
			CASE P851久侘歌の小屋, P852駒草の小屋, P853魅須丸の小屋, P824トイレ, P825風呂
				RETURN -100
			;頂上によく居る
			CASE P805頂上
				RETURN 5
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 広場, 商家町, 呑屋小道
				RETURN 1
			CASE 麓の樹海, 玄武の沢, 大蝦蟇の池, 間欠泉地下センター, 森の深奥
				RETURN 1
			CASE 九天の滝, 絶景の丘, 山の湖, 守矢神社境内, 虹龍洞
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

@EXIST_キャラデータ140
#LOCALSIZE 1
