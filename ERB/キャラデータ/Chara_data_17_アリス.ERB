@CHARAMOVE_DATA_17(ARG,ARG:2)
LOCAL = 17
SELECTCASE ARG
	;移動対象メンバーチェック
	CASE 1
	;移動確率
	CASE 2
	;起床時間帯
	CASE 3
		RETURN 睡眠時間(LOCAL)
	;移動傾向
	CASE 4
		SELECTCASE ARG:2
			;ひとんちの風呂とかトイレにはいかない
			CASE 12, 13, 14, 18, 30, 35, 39, 40, 51
				RETURN -100
			;魔理沙寝室,神綺の部屋,夢子の部屋
			CASE 512, 522, 523
				RETURN -10
			;自室
			CASE 521
				;10～24時は避ける,寝起きと寝る前は行きやすく
				IF BETWEENTIME(600,1440)
					RETURN -10
				ELSE
					RETURN 10
				ENDIF
			;研究室に行きやすい
			CASE 524
				RETURN 5
			;リビング
			CASE 525
				;10～17時外は行きやすい
				IF BETWEENTIME(600,1020)
					RETURN 0
				ELSE
					RETURN 5
				ENDIF
			;空き部屋と倉庫
			CASE 528, 531
				RETURN -5
			;魔理沙家の風呂,魔理沙の倉庫,エレン家,妖怪の棲み処
			CASE 514, 515, 535, 536, 537, 541, 542, 543, 544
				RETURN -100
		ENDSELECT
	;仕事時間帯
	CASE 5
	;行く地域(0=博1=寺2=里3=湖4=竹5=森6=冥7=山8=守9=地10=月）
	CASE 6
		SELECTCASE ARG:2
			CASE 0, 2, 3, 5
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 1,2,4, 21,22,23, 35,36,37, 51 TO 57
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

