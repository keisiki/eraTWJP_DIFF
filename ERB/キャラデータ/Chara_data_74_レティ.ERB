@CHARAMOVE_DATA_74(ARG,ARG:2)
LOCAL = 74
SELECTCASE ARG
	;移動対象メンバーチェック
	CASE 1
	;移動確率
	CASE 2
	;起床時間帯
	CASE 3
		RETURN 睡眠時間(LOCAL)
	;移動傾向
	CASE 4
		SELECTCASE ARG:2
			;湖畔、レティ、チルノ、霧の湖に行きやすい
			CASE 343, 344, 345, 347
				RETURN 5
			;納屋と屋敷の三階と地下、及び各私室には入らない
			CASE 303, 304, 305, 311, 312, 318, 320, 321, 323, 325, 340, 341, 342, 348
				RETURN -100
		ENDSELECT
	;仕事時間帯
	CASE 5
	;行く地域(0=博1=寺2=里3=湖4=竹5=森6=冥7=山8=守9=地10=月）
	CASE 6
		SELECTCASE ARG:2
			CASE 3, 5
				RETURN 1
			CASE 2
				SIF DAY:2 == 4
					RETURN 1
				RETURN 0
			CASEELSE
				RETURN 0
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 21,22,23, 31,32,34, 51,53,56,57
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

