@CHARAMOVE_DATA_74(ARG, ARG:2)
LOCAL = 74
SELECTCASE ARG
	;連動設定（RETURN=依存するキャラ, RESULT:1～3=対等に連動するキャラ）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;よく居る
			CASE P343湖畔, P345チルノのかまくら, P347霧の湖
				RETURN 5
			;紅魔館内部、廃洋館には行かない
			CASE P303守衛小屋 TO P342リリカ私室
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 広場, 商家町, 呑屋小道
				;冬の間だけ
				SIF DAY:2 == 4
					RETURN 1
			CASE 霧の湖, 氷のかまくら, 正門
				RETURN 1
			CASE 森の入り口, 古木の大樹, 再思の道, 無縁塚
				;冬の間だけ
				SIF DAY:2 == 4
					RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

