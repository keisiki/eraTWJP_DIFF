		パンツ文字列 '= @"%条件,22,LEFT%" + " " + "　" * 3
	ELSEIF STRLENS(条件)
		パンツ文字列 '= @"%条件,22,LEFT%" + " " + "　" * 3
	ELSE
		パンツ文字列 '= @"%PANTSNAME(種類,対象),22,LEFT%" + " " + "　" * 3
	ENDIF
ENDIF
